@model IEnumerable<HealthWellbeing.Models.Food>

@{
    ViewData["Title"] = "Foods";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-primary" asp-action="Create">Create New Food</a>

    <form method="get" asp-action="Index" class="d-flex">
        <input type="text"
               name="search"
               value="@ViewBag.Search"
               class="form-control me-2"
               placeholder="Search by Name or Category..." />
        <button class="btn btn-primary me-2" type="submit">Search</button>
        <a class="btn btn-secondary" asp-action="Index">Clear</a>
    </form>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No foods found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var food in Model)
            {
                <tr>
                    <td>@food.Name</td>
                    <td>@food.FoodCategory?.Name</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@food.FoodId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@food.FoodId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@food.FoodId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Paginação -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                   asp-route-search="@ViewBag.Search">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-search="@ViewBag.Search">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                   asp-route-search="@ViewBag.Search">Next</a>
            </li>
        </ul>
    </nav>
}
