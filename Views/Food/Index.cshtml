@model IEnumerable<HealthWellbeing.Models.Food>
@{
    ViewData["Title"] = "Foods";
}

<h1>Foods</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">There are no foods yet.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                <th>@Html.DisplayName("Category")</th>
                <th>@Html.DisplayNameFor(m => m.First().KcalPer100g)</th>
                <th>@Html.DisplayNameFor(m => m.First().ProteinPer100g)</th>
                <th>@Html.DisplayNameFor(m => m.First().CarbsPer100g)</th>
                <th>@Html.DisplayNameFor(m => m.First().FatPer100g)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category?.Name</td>
                    <td>@item.KcalPer100g</td>
                    <td>@item.ProteinPer100g</td>
                    <td>@item.CarbsPer100g</td>
                    <td>@item.FatPer100g</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.FoodId" class="btn btn-sm btn-outline-secondary">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.FoodId" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.FoodId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
