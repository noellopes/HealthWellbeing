@model IEnumerable<HealthWellbeing.Models.Food>
@{
    ViewData["Title"] = "Foods";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input name="search" class="form-control" placeholder="Search by name..." value="@Context.Request.Query["search"]" />
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-primary" type="submit">Search</button>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">There are no foods yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model)
            {
                <tr>
                    <td>@f.Name</td>
                    <td>@f.FoodCategory?.Name</td>
                    <td>@f.Description</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@f.FoodId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@f.FoodId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@f.FoodId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
