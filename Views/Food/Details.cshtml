@model HealthWellbeing.Models.Food

@{
    ViewData["Title"] = "Food Details";
    bool isAdmin = ViewBag.IsAdmin is bool b && b;
}

<div class="container my-4">
    <div class="fh-wrapper">

        <div class="fh-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-eye-fill" style="color: var(--fi-cyan); font-size:1.15rem;"></i>
                    <h1 class="h5 fh-title mb-0">Food Details</h1>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-secondary" style="border-radius:12px;">
                        <i class="bi bi-arrow-left-circle me-1"></i>Back
                    </a>

                    @if (isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.FoodId" class="btn btn-warning text-white" style="border-radius:12px;">
                            <i class="bi bi-pencil-square me-1"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.FoodId" class="btn btn-danger" style="border-radius:12px;">
                            <i class="bi bi-trash-fill me-1"></i>Delete
                        </a>
                    }
                </div>
            </div>

            <div class="mt-2 fh-badge">
                <i class="bi bi-basket3-fill" style="color: var(--fi-cyan);"></i>
                <span>@Model.Name</span>
            </div>
        </div>

        <div class="fh-panel">
            <div class="fh-card p-3">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9 fw-bold">@Model.Name</dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@((Model.Category?.Category) ?? "-")</dd>
                </dl>
            </div>
        </div>

    </div>
</div>
