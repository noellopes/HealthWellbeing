@model HealthWellbeing.Models.Food
@{
    ViewData["Title"] = "Edit Food";
}

<h1><i class="bi bi-pencil-square"></i> Edit Food</h1>

<form asp-action="Edit" method="post" novalidate>
    <input type="hidden" asp-for="FoodId" />
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FoodCategoryId" class="form-label"></label>
        <select asp-for="FoodCategoryId" asp-items="ViewBag.FoodCategoryId" class="form-select">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="FoodCategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i> Save</button>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
