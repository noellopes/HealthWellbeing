@model HealthWellbeing.Models.Food
@{
    ViewData["Title"] = "Delete Food";
}

<h1><i class="bi bi-trash"></i> Delete Food</h1>

<h5>Are you sure you want to delete this food?</h5>

<div class="mb-3">
    <strong>@Model.Name</strong><br />
    <span class="text-muted">@Model.Description</span><br />
    <span>Category: @Model.FoodCategory?.Name</span>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="FoodId" />
    <button type="submit" class="btn btn-danger" onclick="return confirm('This action cannot be undone. Proceed?');">
        <i class="bi bi-trash"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
</form>
