@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<div class="row g-3 mt-3">

    <div class="col-md-4">
        <div class="card text-bg-primary shadow">
            <div class="card-body">
                <h5 class="card-title">Total de Utentes</h5>
                <h2>@ViewBag.TotalUtentes</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-bg-success shadow">
            <div class="card-body">
                <h5 class="card-title">Utentes Ativos</h5>
                <h2>@ViewBag.UtentesAtivos</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-bg-secondary shadow">
            <div class="card-body">
                <h5 class="card-title">Utentes Inativos</h5>
                <h2>@ViewBag.UtentesInativos</h2>
            </div>
        </div>
    </div>

</div>

<hr />

<div class="row g-3">

    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <h6>Total de Terapeutas</h6>
                <strong>@ViewBag.TotalTerapeutas</strong>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <h6>Total de Serviços</h6>
                <strong>@ViewBag.TotalServicos</strong>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <h6>Total de Agendamentos</h6>
                <strong>@ViewBag.TotalAgendamentos</strong>
            </div>
        </div>
    </div>

</div>
