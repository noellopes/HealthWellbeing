@model HealthWellbeing.Models.ZonaArmazenamento

<h2>Detalhes da Zona</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Localização</dt>
        <dd class="col-sm-10">@Model.Localizacao</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Capacidade Máxima</dt>
        <dd class="col-sm-10">@Model.CapacidadeMaxima</dd>

        <dt class="col-sm-2">Ativa</dt>
        <dd class="col-sm-10">@Model.Ativa</dd>
    </dl>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>
