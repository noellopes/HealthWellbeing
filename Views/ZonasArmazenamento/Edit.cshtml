@model HealthWellbeing.Models.ZonaArmazenamento

<h2>Editar Zona</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Localizacao"></label>
        <input asp-for="Localizacao" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CapacidadeMaxima"></label>
        <input asp-for="CapacidadeMaxima" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="Ativa" class="form-check-input" />
        <label asp-for="Ativa" class="form-check-label"></label>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
