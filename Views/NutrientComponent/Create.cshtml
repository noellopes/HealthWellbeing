@model HealthWellbeing.Models.NutrientComponent
@{
    ViewData["Title"] = "Create Nutrient";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-warning"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DefaultUnit" class="form-label"></label>
        <input asp-for="DefaultUnit" class="form-control" />
        <span asp-validation-for="DefaultUnit" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsMacro" class="form-check-input" />
        <label asp-for="IsMacro" class="form-check-label"></label>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
