@model HealthWellbeing.Models.NutrientComponent
@{
    ViewData["Title"] = "Delete Nutrient";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<div class="alert alert-danger">Are you sure you want to delete <strong>@Model.Name</strong>?</div>

<dl class="row">
    <dt class="col-sm-3">Default Unit</dt>
    <dd class="col-sm-9">@Model.DefaultUnit</dd>
    <dt class="col-sm-3">Is Macro</dt>
    <dd class="col-sm-9">@(Model.IsMacro ? "Yes" : "No")</dd>
    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">@Model.Description</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="NutrientComponentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>
