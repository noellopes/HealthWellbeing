@{
    ViewData["Title"] = "Create Material Location";
}

<h1>Create Material Location</h1>

@model HealthWellbeing.Models.LocationMaterial
@{
    ViewData["Title"] = "Create Material Location";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <form asp-action="CreateLocationMaterial" method="post" class="border rounded shadow p-4 bg-light">

        <div class="mb-3">
            <label asp-for="Sector" class="form-label"></label>
            <input asp-for="Sector" class="form-control" placeholder="E.g., Warehouse, Laboratory, Surgical Block" />
            <span asp-validation-for="Sector" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Room" class="form-label"></label>
            <input asp-for="Room" class="form-control" placeholder="E.g., Room 101, Laboratory 2, Equipment Room" />
            <span asp-validation-for="Room" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Cabinet" class="form-label"></label>
            <input asp-for="Cabinet" class="form-control" placeholder="E.g., Cabinet A, Main Cabinet" />
            <span asp-validation-for="Cabinet" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Drawer" class="form-label"></label>
            <input asp-for="Drawer" class="form-control" placeholder="E.g., Drawer 1, Bottom Drawer" />
            <span asp-validation-for="Drawer" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Shelf" class="form-label"></label>
            <input asp-for="Shelf" class="form-control" placeholder="E.g., Shelf 2, Upper Shelf" />
            <span asp-validation-for="Shelf" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IdentificationCode" class="form-label"></label>
            <input asp-for="IdentificationCode" class="form-control" placeholder="E.g., ML-001, CODE-12345" />
            <span asp-validation-for="IdentificationCode" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Observation" class="form-label"></label>
            <textarea asp-for="Observation" class="form-control" rows="3" placeholder="Additional notes about the location..."></textarea>
            <span asp-validation-for="Observation" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="ReadLocationMaterial" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
