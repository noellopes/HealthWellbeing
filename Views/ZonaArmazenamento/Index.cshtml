@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.ZonaArmazenamento>

@{
    ViewData["Title"] = "Zonas de Armazenamento";
}

<style>
    .btn-acao {
        display: inline-flex;
        align-items: center;
        font-weight: 500;
        padding: 4px 10px;
    }

    .badge {
        font-size: 0.85rem;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .alert-arrival {
        border-left: 5px solid #0d6efd;
        background-color: #f0f7ff;
    }
</style>

<div class="container mt-4">

    @if (Model.Items != null && Model.Items.Any())
    {
        @foreach (var item in Model.Items.Select(i => i.Consumivel).DistinctBy(c => c?.ConsumivelId))
        {
            @if (item != null && TempData.ContainsKey($"Pendente_{item.ConsumivelId}"))
            {
                <div class="alert alert-arrival alert-dismissible fade show shadow mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-truck text-primary fs-4 me-3"></i>
                        <span class="fw-bold text-dark">A mercadoria de "@item.Nome" já chegou?</span>
                    </div>
                    <form asp-action="ConfirmarRececao" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="consumivelId" value="@item.ConsumivelId" />
                        <button type="submit" class="btn btn-primary btn-sm">Confirmar Receção</button>
                    </form>
                </div>
                TempData.Keep($"Pendente_{item.ConsumivelId}");
            }
        }
    }
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">🏭 Zonas de Armazenamento</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm btn-acao">
            <i class="bi bi-plus-lg me-1"></i> Nova Zona
        </a>
    </div>

    @* ... código dos filtros e da table ... *@

    <form asp-action="Index" method="get" class="mb-4 bg-light p-3 rounded shadow-sm border">
        <div class="row g-2 align-items-end">

            <div class="col-md-3">
                <label class="form-label fw-bold small text-secondary">Nome</label>
                <input type="text" name="searchNome" value="@ViewBag.SearchNome"
                       class="form-control shadow-sm"
                       placeholder="🔍 Zona..." />
            </div>

            <div class="col-md-2">
                <label class="form-label fw-bold small text-secondary">Sala</label>
                <input type="text" name="searchLocalizacao" value="@ViewBag.SearchLocalizacao"
                       class="form-control shadow-sm"
                       placeholder="📍 Sala..." />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-bold small text-secondary">Consumível</label>
                <select name="searchConsumivel" class="form-select shadow-sm" asp-items="ViewBag.ConsumiveisList">
                    <option value="">-- Todos --</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label fw-bold small text-secondary">Estado</label>
                <select name="estado" class="form-select shadow-sm">
                    <option value="todas" selected="@(ViewBag.Estado == "todas")">Todas</option>
                    <option value="ativas" selected="@(ViewBag.Estado == "ativas")">Ativas</option>
                    <option value="inativas" selected="@(ViewBag.Estado == "inativas")">Inativas</option>
                </select>
            </div>

            <div class="col-md-2 d-flex">
                <button type="submit" class="btn btn-primary w-100 me-1 shadow-sm" title="Pesquisar">
                    <i class="bi bi-search"></i>
                </button>
                <a asp-action="Index" class="btn btn-secondary w-100 shadow-sm" title="Limpar Filtros">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>

        </div>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            @TempData["SuccessMessage"]
            <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            @TempData["ErrorMessage"]
            <button class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Items == null || !Model.Items.Any())
    {
        <div class="alert alert-warning text-center shadow-sm p-4"
             role="alert"
             style="font-size: 1.15rem; border-left: 6px solid #d39e00;">
            ⚠️ <strong>Nenhuma zona encontrada!</strong>
            <br />
            Verifique os filtros e tente novamente.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Nome da Zona</th>
                        <th>Sala</th>
                        <th>Consumível</th>
                        <th>Stock</th>
                        <th>Estado</th>
                        <th class="text-center" style="width: 250px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="fw-semibold">@item.NomeZona</td>
                            <td>@item.Room?.Name</td>
                            <td>
                                <i class="bi bi-box-seam text-muted me-1"></i>
                                @item.Consumivel?.Nome
                            </td>
                            <td>
                                @{
                                    var percentagem = item.CapacidadeMaxima > 0
                                    ? (item.QuantidadeAtual * 100) / item.CapacidadeMaxima
                                    : 0;
                                    string corBarra = percentagem > 90 ? "bg-danger" : (percentagem > 50 ? "bg-primary" : "bg-success");
                                }
                                <div class="d-flex align-items-center">
                                    <span class="me-2">@item.QuantidadeAtual / @item.CapacidadeMaxima</span>
                                    <div class="progress flex-grow-1" style="height: 5px; width: 50px;">
                                        <div class="progress-bar @corBarra" role="progressbar" style="width: @percentagem%"></div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (item.Ativa)
                                {
                                    <span class="badge bg-success">Ativa</span>
                                }
                                else
                                {

                                    <span class="badge bg-secondary">Inativa</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.ZonaId" class="btn btn-sm btn-info text-white me-1 btn-acao" title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ZonaId" class="btn btn-sm btn-warning text-white me-1 btn-acao" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ZonaId" class="btn btn-sm btn-danger btn-acao" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-searchNome="@ViewBag.SearchNome" asp-route-searchLocalizacao="@ViewBag.SearchLocalizacao"
                       asp-route-estado="@ViewBag.Estado" asp-route-searchConsumivel="@ViewBag.SearchConsumivel">Anterior</a>
                </li>

                @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i"
                           asp-route-searchNome="@ViewBag.SearchNome" asp-route-searchLocalizacao="@ViewBag.SearchLocalizacao"
                           asp-route-estado="@ViewBag.Estado" asp-route-searchConsumivel="@ViewBag.SearchConsumivel">@i</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-searchNome="@ViewBag.SearchNome" asp-route-searchLocalizacao="@ViewBag.SearchLocalizacao"
                       asp-route-estado="@ViewBag.Estado" asp-route-searchConsumivel="@ViewBag.SearchConsumivel">Seguinte</a>
                </li>
            </ul>
        </nav>
    }
</div>

<script>
    setTimeout(() => {
        document.querySelectorAll('.alert:not(.alert-arrival)').forEach(a => new bootstrap.Alert(a).close());
    }, 4000);
</script>