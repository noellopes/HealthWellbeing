@model IEnumerable<HealthWellbeing.Models.ZonaArmazenamento>

@{
    ViewData["Title"] = "Zonas de Armazenamento";
}

<style>
    .btn-acao {
        display: inline-flex;
        align-items: center;
        font-weight: 500;
        padding: 4px 10px;
    }

    .badge {
        font-size: 0.85rem;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">
            🏭 Zonas de Armazenamento
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm btn-acao">
            Nova Zona
        </a>
    </div>

    <!-- Barra de Pesquisa -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group shadow-sm">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control"
                   placeholder="🔍 Procurar por nome ou localização..." />
            <button type="submit" class="btn btn-primary">Pesquisar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
        </div>
    </form>

    <!-- Mensagens de Sucesso/Erro -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Tabela ou Mensagem -->
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            @if (string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
            {
                <span>Nenhuma zona de armazenamento registada.</span>
            }
            else
            {
                <span>Nenhuma zona encontrada com o termo <strong>@ViewData["CurrentFilter"]</strong>.</span>
            }
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Localizacao)</th>
                        <th>@Html.DisplayNameFor(model => model.CapacidadeMaxima)</th>
                        <th>@Html.DisplayNameFor(model => model.Ativa)</th>
                        <th class="text-center" style="width: 230px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Nome</td>
                            <td>@item.Localizacao</td>
                            <td>@item.CapacidadeMaxima</td>
                            <td>
                                @if (item.Ativa)
                                {
                                    <span class="badge bg-success">Ativa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inativa</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1 btn-acao">
                                    Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white me-1 btn-acao">
                                    Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger btn-acao">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Fechar alertas automaticamente -->
<script>
    setTimeout(() => {
        document.querySelectorAll('.alert').forEach(alert => {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 4000);
</script>
