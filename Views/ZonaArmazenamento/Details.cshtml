@model HealthWellbeing.Models.ZonaArmazenamento

@{
    ViewData["Title"] = "Detalhes da Zona de Armazenamento";
}

<style>
    .details-container {
        max-width: 650px;
        margin: 40px auto;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background-color: #0d6efd;
        color: white;
        font-weight: 600;
        font-size: 1.25rem;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .details-label {
        font-weight: 600;
        color: #555;
    }

    .details-value {
        color: #222;
        font-size: 1.05rem;
    }

    .badge {
        font-size: 0.9rem;
        padding: 6px 10px;
    }
</style>

<div class="details-container">
    <div class="card">
        <div class="card-header">
            📄 Detalhes da Zona de Armazenamento
        </div>

        <div class="card-body">
            <dl class="row mb-4">

                <dt class="col-sm-4 details-label">Nome da Zona</dt>
                <dd class="col-sm-8 details-value">@Model.NomeZona</dd>

                <dt class="col-sm-4 details-label">Consumível</dt>
                <dd class="col-sm-8 details-value">@Model.Consumivel?.Nome</dd>

                <dt class="col-sm-4 details-label">Sala</dt>
                <dd class="col-sm-8 details-value">@Model.Room?.Name</dd>

                <dt class="col-sm-4 details-label">Capacidade Máxima</dt>
                <dd class="col-sm-8 details-value">@Model.CapacidadeMaxima</dd>

                <dt class="col-sm-4 details-label">Quantidade Nesta Zona</dt>
                <dd class="col-sm-8 details-value">@Model.QuantidadeAtual</dd>

                <dt class="col-sm-4 details-label text-primary">Total Global 🏥</dt>
                <dd class="col-sm-8 details-value text-primary fw-bold">
                    @ViewBag.TotalConsumivel Unidades
                </dd>
                <dt class="col-sm-4 details-label">Estado</dt>
                <dd class="col-sm-8 details-value">
                    @if (Model.Ativa)
                    {
                        <span class="badge bg-success">Ativa</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inativa</span>
                    }
                </dd>

            </dl>

            <div class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model?.ZonaId" class="btn btn-warning text-white me-2">
                    ✏️ Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    ⬅️ Voltar
                </a>
            </div>
        </div>
    </div>
</div>