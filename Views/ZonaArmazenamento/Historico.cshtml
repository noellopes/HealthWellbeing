@model IEnumerable<HealthWellbeing.Models.HistoricoTransferencia>

@{
    ViewData["Title"] = "Histórico de Transferências";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0"><i class="bi bi-clock-history me-2"></i>Histórico de Transferências</h2>
            <p class="text-muted">Registo de todas as movimentações de stock entre zonas.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Voltar às Zonas
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                    <p class="lead">Ainda não existem registos de transferências.</p>
                </div>
            }
            else
            {
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-dark text-white">
                        <tr>
                            <th>Data / Hora</th>
                            <th>Utilizador</th>
                            <th>Produto</th>
                            <th class="text-center">Origem</th>
                            <th class="text-center"><i class="bi bi-arrow-right"></i></th>
                            <th class="text-center">Destino</th>
                            <th class="text-end pe-4">Qtd.</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-nowrap text-secondary">
                                    @item.DataTransferencia.ToString("dd/MM/yyyy HH:mm")
                                </td>

                                <td>
                                    <span class="badge bg-light text-dark border">
                                        <i class="bi bi-person-fill me-1"></i>@item.Utilizador
                                    </span>
                                </td>

                                <td class="fw-bold text-primary">
                                    @item.Consumivel?.Nome
                                </td>

                                <td class="text-center text-danger small">
                                    @item.ZonaOrigem?.NomeZona
                                </td>

                                <td class="text-center text-muted">
                                    <i class="bi bi-arrow-right-short fs-5"></i>
                                </td>

                                <td class="text-center text-success small">
                                    @item.ZonaDestino?.NomeZona
                                </td>

                                <td class="text-end pe-4 fw-bold">
                                    @item.Quantidade
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>