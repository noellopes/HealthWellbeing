@model HealthWellbeing.Models.ActivityType

@{
    ViewData["Title"] = "Activity Type Details";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-7">

            @* --- CARD CONTAINER --- *@
            <div class="card border-0 shadow-lg rounded-4 animate__animated animate__fadeInUp">

                @* --- HEADER --- *@
                <div class="card-header bg-primary text-white p-4 rounded-top-4">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-white bg-opacity-25 p-2 rounded-3">
                            <i class="bi bi-grid-1x2-fill fs-4 text-white"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Activity Type Details</h5>
                            <p class="mb-0 small text-white opacity-75">View complete type information</p>
                        </div>
                    </div>
                </div>

                @* --- BODY --- *@
                <div class="card-body p-4">

                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark mb-1">Type Name</label>
                        <div class="p-3 border rounded-3 bg-light text-dark fs-5">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>

                    @* --- SECTION 2: DESCRIPTION --- *@
                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark mb-1">Description</label>
                        <div class="p-3 border rounded-3 bg-light text-secondary" style="min-height: 80px;">
                            @if (!string.IsNullOrEmpty(Model.Description)) {
                                @Model.Description
                            }
                            else {
                                <span class="fst-italic opacity-50">No description provided.</span>
                            }
                        </div>
                    </div>

                    <hr class="my-4 opacity-10" />

                    @* --- SECTION 3: SYSTEM USAGE --- *@
                    <h6 class="fw-bold text-uppercase text-muted small mb-3">System Usage</h6>

                    <div class="row g-3 mb-4">
                        @* Linked Activities Count *@
                        <div class="col-12">
                            <div class="d-flex align-items-center p-3 border rounded-3">
                                <div class="p-2 bg-info bg-opacity-10 text-info rounded-circle me-3">
                                    <i class="bi bi-activity fs-5"></i>
                                </div>
                                <div>
                                    <div class="small text-muted text-uppercase fw-bold">Contains</div>
                                    <div class="fw-bold text-dark">
                                        @(Model.Activities?.Count ?? 0) <span class="fw-normal small text-muted">activities linked to this type</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* --- ACTION BUTTONS --- *@
                    <div class="d-flex justify-content-end gap-2 pt-2">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                            Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.ActivityTypeId" class="btn btn-warning px-4 shadow-sm fw-bold">
                            <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>

                        <a asp-action="Delete" asp-route-id="@Model.ActivityTypeId" class="btn btn-danger px-4 shadow-sm">
                            <i class="bi bi-trash me-1"></i> Delete
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>