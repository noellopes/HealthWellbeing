@model HealthWellbeing.Models.ActivityType

@{
    ViewData["Title"] = "Delete Activity Type";

    // Verifica se existe erro vindo do Controller
    bool hasError = ViewBag.ErrorMessage != null;
    int linkedCount = Model.Activities?.Count ?? 0;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-7">

            @* --- CARD CONTAINER --- *@
            <div class="card border-0 shadow-lg rounded-4 animate__animated animate__fadeInUp">

                @* --- HEADER --- *@
                <div class="card-header bg-danger text-white p-4 rounded-top-4">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-white bg-opacity-25 p-2 rounded-3">
                            <i class="bi bi-trash3-fill fs-4 text-white"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Delete Activity Type</h5>
                        </div>
                    </div>
                </div>

                @* --- BODY --- *@
                <div class="card-body p-4">

                    @* --- ALERT MESSAGE --- *@
                    @if (hasError) {
                        @* CASO: ERRO (BLOQUEADO) *@
                        <div class="alert alert-danger bg-danger bg-opacity-10 border-0 mb-4 d-flex align-items-center rounded-3" role="alert">
                            <i class="bi bi-exclamation-triangle-fill text-danger me-3 fs-4"></i>
                            <div>
                                <span class="fw-bold text-danger">Action Blocked</span>
                                <span class="text-danger opacity-75 d-block small">
                                    @ViewBag.ErrorMessage
                                </span>
                            </div>
                        </div>
                    }
                    else {
                        @* CASO: CONFIRMAÇÃO NORMAL *@
                        <div class="alert alert-danger bg-danger bg-opacity-10 border-0 mb-4 d-flex align-items-center rounded-3" role="alert">
                            <i class="bi bi-exclamation-triangle-fill text-danger me-3 fs-4"></i>
                            <div>
                                <span class="fw-bold text-danger">Are you sure?</span>
                                <span class="text-danger opacity-75 d-block small">This action cannot be undone.</span>
                            </div>
                        </div>
                    }

                    @* --- INFO FIELDS --- *@

                    @* Name *@
                    <div class="mb-3">
                        <label class="form-label fw-bold text-dark mb-1">Name</label>
                        <div class="p-2 border rounded-3 bg-light text-dark">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>

                    @* Description *@
                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark mb-1">Description</label>
                        <div class="p-3 border rounded-3 bg-light text-secondary" style="min-height: 80px;">
                            @if (!string.IsNullOrEmpty(Model.Description)) {
                                @Model.Description
                            }
                            else {
                                <span class="fst-italic opacity-50">No description provided.</span>
                            }
                        </div>
                    </div>

                    <hr class="my-4 opacity-10" />

                    @* --- USAGE STATUS / DEPENDENCY CHECK --- *@

                    @if (linkedCount > 0) {
                        @* AVISO DE USO *@
                        <div class="d-flex align-items-center p-3 border border-danger border-opacity-25 bg-danger bg-opacity-10 rounded-3 mb-4">
                            <i class="bi bi-grid-1x2-fill fs-4 text-danger me-3"></i>
                            <div>
                                <div class="small text-danger text-uppercase fw-bold">Associated Items</div>
                                <div class="text-dark small">
                                    This type is currently linked to @linkedCount activities.
                                </div>
                            </div>
                        </div>
                    }
                    else {
                        @* SEGURO *@
                        <div class="d-flex align-items-center p-3 border border-success border-opacity-25 bg-success bg-opacity-10 rounded-3 mb-4">
                            <i class="bi bi-check-circle-fill fs-4 text-success me-3"></i>
                            <div>
                                <div class="small text-success text-uppercase fw-bold">Safe to Delete</div>
                                <div class="text-dark small">
                                    No activities linked to this type.
                                </div>
                            </div>
                        </div>
                    }

                    @* --- ACTION BUTTONS --- *@
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ActivityTypeId" />

                        <div class="d-flex justify-content-end gap-2 pt-2 border-top">
                            @* Back to List (Sempre visível) *@
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                                Back to List
                            </a>

                            @* Confirm Delete (SÓ aparece se NÃO houver erro) *@
                            @if (!hasError) {
                                <button type="submit" class="btn btn-danger px-4 shadow-sm">
                                    Confirm Delete
                                </button>
                            }
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>