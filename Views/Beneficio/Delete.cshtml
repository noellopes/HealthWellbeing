@model HealthWellbeing.Models.Beneficio

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger shadow-sm mb-4" role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i> @ViewData["ErrorMessage"]
                </div>
            }

            <div class="card border-0 shadow-sm">
                <div class="card-body p-5 text-center">

                    <div class="mb-4 text-danger">
                        <i class="bi bi-trash3 display-1"></i>
                    </div>

                    <h2 class="h3 mb-3 fw-bold text-danger">Eliminar Benefício?</h2>
                    <p class="text-muted mb-4">
                        Tem a certeza que deseja eliminar o benefício
                        <strong class="text-dark">@Model.NomeBeneficio</strong>?
                        <br>Esta ação pode ser irreversível.
                    </p>

                    <div class="bg-light p-3 rounded mb-4 text-start small border">
                        <div class="row">
                            <div class="col-4 text-muted">Descrição:</div>
                            <div class="col-8 text-dark">
                                @(string.IsNullOrEmpty(Model.DescricaoBeneficio) ? "-" : Model.DescricaoBeneficio)
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="BeneficioId" />

                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            Cancelar
                        </a>

                        @if (ViewData["DisableDelete"] == null)
                        {
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash-fill me-1"></i> Eliminar
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger px-4 opacity-50" disabled title="Não é possível apagar pois está associado a Tipos de Exercício.">
                                <i class="bi bi-lock-fill me-1"></i> Bloqueado
                            </button>
                        }
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>