@model HealthWellbeing.Models.Beneficio

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (ViewData["ErrorMessage"] != null)
{
    // Exibe a mensagem de aviso (para concorrência ou associação)
    <div class="alert alert-danger" role="alert">
        <strong>Aviso:</strong> @ViewData["ErrorMessage"]
    </div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Beneficio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeBeneficio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeBeneficio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoBeneficio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescricaoBeneficio)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BeneficioId" />

       
        @if (ViewData["DisableDelete"] == null)
        {
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        else
        {
            <input type="submit" value="Delete" class="btn btn-danger" disabled title="Não é possível apagar pois está associado a Tipos de Exercício." />
        }

        |
        <a asp-action="Index">Back to List</a>
    </form>
</div>