@model HealthWellbeing.Models.Beneficio

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar Novo Benefício</h1>

<h4>Detalhes do Benefício</h4>

@if (TempData["StatusMessage"] is string statusMessage)
{
    
    string alertClass = "alert-info"; 

    
    if (statusMessage.StartsWith("Sucesso:", StringComparison.OrdinalIgnoreCase))
    {
        alertClass = "alert-success";
    }
    else if (statusMessage.StartsWith("Aviso:", StringComparison.OrdinalIgnoreCase))
    {
        alertClass = "alert-warning";
    }
    else if (statusMessage.StartsWith("Erro:", StringComparison.OrdinalIgnoreCase))
    {
        alertClass = "alert-danger"; 
    }

    
    <div class="alert @alertClass alert-dismissible fade show" role="alert">
        @statusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="NomeBeneficio" class="control-label">Nome do Benefício</label>
                <input asp-for="NomeBeneficio" class="form-control" />
                <span asp-validation-for="NomeBeneficio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DescricaoBeneficio" class="control-label">Descrição</label>
                <textarea asp-for="DescricaoBeneficio" class="form-control" rows="3"></textarea>
                <span asp-validation-for="DescricaoBeneficio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}