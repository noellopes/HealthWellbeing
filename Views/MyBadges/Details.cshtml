@model HealthWellbeing.ViewModels.MyBadge

@{
    ViewData["Title"] = "Badge Details";

    // ==========================================
    // VIEW LOGIC: UI State Configuration
    // ==========================================
    // Determines colors, icons, and text based on 'IsEarned' status
    // to keep the HTML markup clean and readable.

    var isEarned = Model.IsEarned;
    var themeColor = isEarned ? "success" : "primary";
    var cardBorder = isEarned ? "border-success" : "border-0";
    var shadowClass = isEarned ? "shadow" : "shadow-sm";

    var iconClass = isEarned ? "bi-trophy-fill" : "bi-award";
    var iconColor = isEarned ? "text-success" : "text-secondary";

    var statusLabel = isEarned ? "Earned" : "In Progress";
    var statusBadgeClass = isEarned ? "bg-success" : "bg-light text-secondary border";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">

    <div class="row justify-content-center mb-4">
        <div class="col-lg-8">
            <a asp-action="Index" class="text-decoration-none text-muted">
                <i class="bi bi-arrow-left me-1"></i> Back to My Badges
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card @cardBorder @shadowClass mb-4 text-center">
                <div class="card-body p-5">

                    <div class="mb-3">
                        <i class="bi @iconClass display-1 @iconColor"></i>
                    </div>

                    <h1 class="fw-bold mb-1">@Model.Badge.BadgeName</h1>
                    <p class="text-muted text-uppercase small fw-bold tracking-wide">
                        @Model.Badge.BadgeType?.BadgeTypeName
                    </p>

                    <div class="mb-4">
                        <span class="badge rounded-pill @statusBadgeClass px-3 py-2 fs-6">
                            @statusLabel
                        </span>
                    </div>

                    <p class="card-text lead px-md-5">
                        @Model.Badge.BadgeDescription
                    </p>

                    @if (isEarned && Model.DateAwarded.HasValue) {
                        <div class="mt-4 p-3 bg-light rounded-3 d-inline-block border border-success border-opacity-25">
                            <div class="d-flex align-items-center gap-3">
                                <div class="text-start">
                                    <small class="text-muted d-block">Awarded On</small>
                                    <span class="fw-bold text-dark">@Model.DateAwarded.Value.ToString("MMMM dd, yyyy")</span>
                                </div>
                                <div class="vr"></div> <div class="text-start">
                                    <small class="text-muted d-block">Reward</small>
                                    <span class="fw-bold text-success">+@Model.Badge.RewardPoints pts</span>
                                </div>
                            </div>
                        </div>
                    }
                    else {
                        <div class="mt-4">
                            <small class="text-muted">
                                Complete the requirements below to earn <strong class="text-primary">@Model.Badge.RewardPoints points</strong>.
                            </small>
                        </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-list-check me-2 text-primary"></i>Requirements
                    </h5>
                </div>

                <div class="list-group list-group-flush">
                    @if (Model.Badge.BadgeRequirements != null && Model.Badge.BadgeRequirements.Any()) {

                        // Loop through each requirement to render progress bars
                        foreach (var req in Model.Badge.BadgeRequirements) {

                            // --- LOGIC: Calculate Progress % and Visuals ---
                            int current = 0;
                            int target = req.TargetValue;

                            // Safely retrieve progress from the Dictionary
                            if (Model.RequirementsProgress.ContainsKey(req.BadgeRequirementId)) {
                                current = Model.RequirementsProgress[req.BadgeRequirementId];
                            }

                            // Cap visual progress at 100% (e.g., show 5/5 even if user did 10)
                            int visualCurrent = (current > target) ? target : current;

                            // Calculate percentage for Bootstrap bar
                            double percent = target > 0 ? (double)visualCurrent / target * 100 : 0;
                            bool isComplete = visualCurrent >= target;

                            // Dynamic Styling (Green if complete, Blue if in progress)
                            string barColor = isComplete ? "bg-success" : "bg-primary";
                            string checkIcon = isComplete ? "bi-check-circle-fill text-success" : "bi-circle text-muted";
                            string textColor = isComplete ? "text-success" : "text-primary";
                            string opacityClass = isEarned ? "" : "";

                            <div class="list-group-item p-4">
                                <div class="row align-items-center">

                                    <div class="col-md-7 mb-3 mb-md-0">
                                        <div class="d-flex align-items-start">
                                            <i class="bi @checkIcon me-3 fs-4 mt-1"></i>
                                            <div>
                                                <h6 class="fw-bold mb-1">@req.BadgeRequirementName</h6>
                                                <small class="text-muted">@req.RequirementDescription</small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-5">
                                        <div class="d-flex justify-content-between mb-1">
                                            <small class="fw-bold text-uppercase" style="font-size: 0.7rem;">Progress</small>
                                            <span class="fw-bold @textColor">
                                                @visualCurrent / @target
                                            </span>
                                        </div>

                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar @barColor"
                                                 role="progressbar"
                                                 style="width: @percent.ToString("0")%"
                                                 aria-valuenow="@visualCurrent"
                                                 aria-valuemin="0"
                                                 aria-valuemax="@target">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else {
                        <div class="p-5 text-center text-muted">
                            <i class="bi bi-info-circle mb-2 fs-4 d-block"></i>
                            No specific requirements configured for this badge.
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>