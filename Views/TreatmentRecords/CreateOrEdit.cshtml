@model HealthWellbeing.Models.TreatmentRecord

@{
    var isNew = Model == null || (Model?.Id == null || Model.Id == 0);
    var formAction = isNew ? "Create" : "Edit";
}

<h1 class="mb-4 text-primary font-weight-bold">@ViewData["Title"]</h1>
<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="@formAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (!isNew)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div class="form-group">
                <label asp-for="NurseId" class="control-label"></label>
                <select asp-for="NurseId" class="form-control" asp-items="ViewBag.NurseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentId" class="control-label"></label>
                <select asp-for="TreatmentId" class="form-control" asp-items="ViewBag.TreatmentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PathologyId" class="control-label"></label>
                <select asp-for="PathologyId" class="form-control" asp-items="ViewBag.PathologyId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentDate" class="control-label"></label>
                <input asp-for="TreatmentDate" class="form-control" />
                <span asp-validation-for="TreatmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompletedDuration" class="control-label"></label>
                <input asp-for="CompletedDuration" class="form-control" />
                <span asp-validation-for="CompletedDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observations" class="control-label"></label>
                <textarea asp-for="Observations" class="form-control" ></textarea>
                <span asp-validation-for="Observations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalNotes" class="control-label"></label>
                <textarea asp-for="AdditionalNotes" class="form-control" ></textarea>
                <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control"
                        asp-items="Html.GetEnumSelectList<HealthWellbeing.Models.TreatmentStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="border-top mt-4 form-group text-right">
                <button type="submit" class="btn btn-sm btn-outline-primary mt-4 mr-2">
                    <i class="bi bi-check-circle me-1"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary mt-4"><i class="bi bi-arrow-left-circle me-1"></i> Cancelar</a>
            </div>
            @if (!isNew)
            {
                <div class="d-flex justify-content-end border-top mt-4 form-group">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger rounded-2 mt-4"><i class="bi bi-trash"></i> Remover</a>
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
