@model HealthWellbeing.Models.TherapySession

@{
    ViewData["Title"] = "Delete Session";
}

<div class="container py-4">
    <div class="page-header mb-4">
        <h1 class="text-danger"><i class="bi bi-trash"></i> Delete Therapy Session</h1>
        <p class="text-muted">Are you sure you want to delete this session?</p>
    </div>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
        <p>This action cannot be undone. Deleting this therapy session will permanently remove it from the system.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Session Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Session ID</dt>
                        <dd class="col-sm-7">@Model.SessionId</dd>

                        <dt class="col-sm-5">Scheduled Date & Time</dt>
                        <dd class="col-sm-7">
                            <strong>@Model.ScheduledDateTime.ToString("MMMM dd, yyyy")</strong><br>
                            <small>@Model.ScheduledDateTime.ToString("hh:mm tt")</small>
                        </dd>

                        <dt class="col-sm-5">Duration</dt>
                        <dd class="col-sm-7">@Model.DurationMinutes minutes</dd>

                        <dt class="col-sm-5">Session Type</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-primary">@Model.Type.ToString()</span>
                        </dd>

                        <dt class="col-sm-5">Status</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-info">@Model.Status.ToString()</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Patient & Professional</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Patient</dt>
                        <dd class="col-sm-7">
                            <strong>@Model.Patient?.FullName</strong><br>
                            <small class="text-muted">@Model.Patient?.Email</small>
                        </dd>

                        <dt class="col-sm-5">Professional</dt>
                        <dd class="col-sm-7">
                            <strong>@Model.Professional?.FirstName @Model.Professional?.LastName</strong><br>
                            <small class="text-muted">@Model.Professional?.Type.ToString()</small>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="row mt-3">
            <div class="col-12">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Session Notes</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Notes</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="SessionId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-action="Details" asp-route-id="@Model.SessionId" class="btn btn-info">
            <i class="bi bi-eye"></i> View Details
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}