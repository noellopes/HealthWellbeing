@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellBeing.Models.Exame>

@{
    ViewData["Title"] = "Lista de Exames";
    string? sucessoMensagem = TempData["SuccessMessage"] as string;

    var dataVal = ViewBag.PesquisaData as DateTime?;
    string dataFormatada = dataVal.HasValue ? dataVal.Value.ToString("yyyy-MM-dd") : "";
}

<div class="container mt-4">
    @* --- Mensagem de Sucesso --- *@
    @if (sucessoMensagem != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @sucessoMensagem
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* --- Cabeçalho --- *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-secondary">Exames Marcados</h1>
            <p class="text-muted small mb-0">Gerencie todas as marcações da clínica</p>
        </div>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Nova Marcação
        </a>
    </div>

    @* --- Filtros (AJUSTADO PARA CABEREM OS BOTÕES) --- *@
    <div class="card shadow-sm border-0 mb-4 bg-light">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">
                @* 1. Diminuí a largura do Utente para col-md-4 *@
                <div class="col-md-4">
                    <label for="pesquisaUtente" class="form-label fw-bold text-muted small">Pesquisar Utente</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                        <input id="pesquisaUtente" name="pesquisaUtente" value="@ViewBag.PesquisaUtente" class="form-control border-start-0 ps-0" placeholder="Nome..." type="search" />
                    </div>
                </div>

                @* 2. Diminuí a largura da Data para col-md-3 *@
                <div class="col-md-3">
                    <label for="pesquisaData" class="form-label fw-bold text-muted small">Data</label>
                    <input id="pesquisaData" name="pesquisaData" type="date" class="form-control" value="@dataFormatada" />
                </div>

                @* 3. Aumentei o espaço dos botões para col-md-5 para caberem bem *@
                <div class="col-md-5 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1 fw-bold">
                        <i class="bi bi-funnel me-1"></i> Filtrar
                    </button>
                    @* Botão Limpar claro e visível *@
                    <a asp-action="Index" class="btn btn-outline-secondary px-3" title="Limpar Filtros">
                        <i class="bi bi-x-lg me-1"></i> Limpar
                    </a>
                </div>
            </form>
        </div>
    </div>

    @* --- Tabela --- *@
    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        @if (!Model.Items?.Any() ?? true)
        {
            <div class="card-body text-center py-5">
                <div class="text-muted mb-3"><i class="bi bi-calendar-x display-4"></i></div>
                <h5 class="text-muted">Nenhum exame encontrado</h5>
                <p class="small text-muted">Tente ajustar os filtros ou crie uma nova marcação.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4 py-3">Data e Hora</th>
                            <th>Utente</th>
                            <th>Tipo de Exame</th>
                            <th>Sala</th>
                            <th>Estado</th>
                            @* Largura fixa para garantir que os botões não partem *@
                            <th class="text-end pe-4" style="min-width: 280px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exame in Model.Items!)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    @exame.DataHoraMarcacao.ToString("dd/MM/yyyy")
                                    <small class="text-muted fw-normal ms-1">@exame.DataHoraMarcacao.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-1 me-2 text-center" style="width: 32px; height: 32px;">
                                            <i class="bi bi-person text-secondary"></i>
                                        </div>
                                        @Html.DisplayFor(modelItem => exame.Utente!.Nome)
                                    </div>
                                </td>
                                <td>@Html.DisplayFor(modelItem => exame.ExameTipo!.Nome)</td>
                                <td><span class="small text-muted">@Html.DisplayFor(modelItem => exame.SalaDeExame!.TipoSala)</span></td>
                                <td>
                                    @{
                                        var badgeClass = exame.Estado switch
                                        {
                                            "Realizado" => "bg-success",
                                            "Marcado" => "bg-primary",
                                            "Cancelado" => "bg-danger",
                                            "Pendente" => "bg-warning text-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass rounded-pill px-3">@exame.Estado</span>
                                </td>
                                @* Célula de Ações com text-nowrap para não quebrar linha *@
                                <td class="text-end pe-4 text-nowrap">
                                    <a asp-action="Edit" asp-route-id="@exame.ExameId" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@exame.ExameId" class="btn btn-sm btn-outline-info me-1" title="Detalhes">
                                        <i class="bi bi-eye"></i> Detalhes
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@exame.ExameId" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* --- Paginação --- *@
            <div class="card-footer bg-white py-3">
                <nav aria-label="Páginas de Exames">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link border-0" asp-action="Index" asp-route-pagina="1" asp-route-pesquisaUtente="@ViewBag.PesquisaUtente" asp-route-pesquisaData="@dataFormatada">«</a>
                        </li>
                        @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                        {
                            <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                <a class="page-link border-0 rounded-circle mx-1 @(p == Model.CurrentPage ? "bg-primary text-white" : "text-secondary")"
                                   asp-action="Index" asp-route-pagina="@p" asp-route-pesquisaUtente="@ViewBag.PesquisaUtente" asp-route-pesquisaData="@dataFormatada">@p</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link border-0" asp-action="Index" asp-route-pagina="@Model.TotalPages" asp-route-pesquisaUtente="@ViewBag.PesquisaUtente" asp-route-pesquisaData="@dataFormatada">»</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>