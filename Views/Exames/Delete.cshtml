@model HealthWellBeing.Models.Exame

@{
    ViewData["Title"] = "Apagar Exame";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow border-0 rounded-3 text-center">
                <div class="card-body p-5">
                    <div class="mb-4 text-danger">
                        <i class="bi bi-trash3-fill display-1"></i>
                    </div>

                    <h2 class="h4 fw-bold text-danger mb-3">Eliminar Marcação?</h2>
                    <p class="text-muted mb-4">Esta ação é irreversível. Por favor, confirme os dados abaixo antes de continuar.</p>

                    <div class="bg-light p-3 rounded-3 text-start mb-4">
                        <div class="row mb-2">
                            <div class="col-4 text-muted small text-uppercase fw-bold">Data:</div>
                            <div class="col-8 fw-bold">@Model.DataHoraMarcacao.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 text-muted small text-uppercase fw-bold">Utente:</div>
                            <div class="col-8">@Model.Utente?.Nome</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4 text-muted small text-uppercase fw-bold">Exame:</div>
                            <div class="col-8">@Model.ExameTipo?.Nome</div>
                        </div>
                        <div class="row">
                            <div class="col-4 text-muted small text-uppercase fw-bold">Estado:</div>
                            <div class="col-8">
                                <span class="badge bg-secondary rounded-pill">@Model.Estado</span>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="d-flex justify-content-center gap-3">
                        <input type="hidden" asp-for="ExameId" />
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
                        <button type="submit" class="btn btn-danger px-4">Sim, Eliminar</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>