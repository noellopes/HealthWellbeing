@model HealthWellBeing.Models.Exame

@{
    ViewData["Title"] = "Editar Exame";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-secondary">Editar Exame <span class="fs-6 text-muted">#@Model.ExameId</span></h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i> Voltar à Lista
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white py-3 rounded-top-3">
            <h5 class="card-title mb-0"><i class="bi bi-pencil-square me-2"></i> Atualizar Dados</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="ExameId" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-4">
                    @* --- COLUNA DA ESQUERDA --- *@
                    <div class="col-md-6 border-end-md">
                        <h6 class="text-muted text-uppercase small mb-3">Informação Base</h6>

                        <div class="mb-3">
                            <label asp-for="UtenteId" class="form-label fw-bold">Utente</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                                <select asp-for="UtenteId" class="form-select" asp-items="@(ViewData["UtenteId"] as SelectList)"></select>
                            </div>
                            <span asp-validation-for="UtenteId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataHoraMarcacao" class="form-label fw-bold">Data e Hora</label>
                            <input asp-for="DataHoraMarcacao" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DataHoraMarcacao" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                            <select asp-for="Estado" class="form-select">
                                <option value="">-- Selecionar Estado --</option>
                                @foreach (var opcao in HealthWellBeing.Models.Exame.OpcoesEstado)
                                {
                                    <option value="@opcao">@opcao</option>
                                }
                            </select>
                            <span asp-validation-for="Estado" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notas" class="form-label fw-bold">Notas</label>
                            <textarea asp-for="Notas" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Notas" class="text-danger small"></span>
                        </div>
                    </div>

                    @* --- COLUNA DA DIREITA --- *@
                    <div class="col-md-6">
                        <h6 class="text-muted text-uppercase small mb-3">Recursos Clínicos</h6>

                        <div class="mb-3">
                            <label asp-for="ExameTipoId" class="form-label fw-bold">Tipo de Exame</label>
                            <select asp-for="ExameTipoId" class="form-select" asp-items="@(ViewData["ExameTipoId"] as SelectList)"></select>
                            <span asp-validation-for="ExameTipoId" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MedicoSolicitanteId" class="form-label fw-bold">Médico</label>
                                <select asp-for="MedicoSolicitanteId" class="form-select" asp-items="@(ViewData["MedicoSolicitanteId"] as SelectList)"></select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProfissionalExecutanteId" class="form-label fw-bold">Profissional</label>
                                <select asp-for="ProfissionalExecutanteId" class="form-select" asp-items="@(ViewData["ProfissionalExecutanteId"] as SelectList)"></select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SalaDeExameId" class="form-label fw-bold">Sala</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-door-open"></i></span>
                                <select asp-for="SalaDeExameId" class="form-select" asp-items="@(ViewData["SalaDeExameId"] as SelectList)"></select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaterialEquipamentoAssociadoId" class="form-label fw-bold">Equipamento</label>
                            <select asp-for="MaterialEquipamentoAssociadoId" class="form-select" asp-items="@(ViewData["MaterialEquipamentoAssociadoId"] as SelectList)"></select>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2">
                        <i class="bi bi-save me-1"></i> Guardar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}