@model HealthWellBeing.Models.Exame

@{
    ViewData["Title"] = "Detalhes do Exame";
}

<h1>@ViewData["Title"]</h1>
<hr />

@* Exibe Mensagem de Sucesso (Do PDF de Success Messages) *@
@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        Detalhes da Marcação #@Model.ExameId
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataHoraMarcacao)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DataHoraMarcacao)</dd>

            <dt class="col-sm-4">Utente</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Utente!.Nome)</dd>

            <dt class="col-sm-4">Tipo de Exame</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ExameTipo!.Nome)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

            <dt class="col-sm-4">Médico Solicitante</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MedicoSolicitante!.Nome)</dd>

            <dt class="col-sm-4">Profissional Executante</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ProfissionalExecutante!.Nome)</dd>

            <dt class="col-sm-4">Sala</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.SalaDeExame!.Laboratorio)</dd>

            <dt class="col-sm-4">Equipamento</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MaterialEquipamentoAssociado!.NomeEquipamento)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Notas)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Notas)</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.ExameId" class="btn btn-primary"><i class="bi bi-pencil me-1"></i> Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.ExameId" class="btn btn-danger"><i class="bi bi-trash me-1"></i> Eliminar</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista</a>
</div>
