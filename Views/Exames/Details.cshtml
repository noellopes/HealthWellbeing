@model HealthWellBeing.Models.Exame

@{
    // Título da página
    ViewData["Title"] = "Detalhes do Exame";

    // Variáveis para compor o cabeçalho azul
    var dataHora = Model.DataHoraMarcacao.ToString("dd/MM/yyyy HH:mm:ss");
    var sala = Model.SalaDeExame?.TipoSala ?? "N/A"; // Obtém o TipoSala ou "N/A" se for nulo
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Detalhes do Exame</h1>

    <a asp-action="Index" class="btn btn-secondary"
       style="background-color: #6c757d; color: white; margin-top: 1.5rem;">
        Voltar para a Lista
    </a>
</div>

<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm rounded-lg">

            <div class="card-header text-white bg-primary">
                <h5 class="my-0">Data: @dataHora | Sala: @sala</h5>
            </div>

            <div class="card-body">

                <dl class="row">

                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Estado)</dd>

                    <dt class="col-sm-4">Notas</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Notas)</dd>

                    <dt class="col-sm-4">Utente</dt>
                    <dd class="col-sm-8">@(Model.Utente != null ? Model.Utente.Nif : "Não Associado")</dd>

                    <dt class="col-sm-4">Tipo de Exame</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ExameTipo.Especialidade)</dd>

                    <dt class="col-sm-4">Médico (ID)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MedicoId)</dd>

                    <dt class="col-sm-4">Profissional Executante</dt>
                    <dd class="col-sm-8">@(Model.ProfissionalExecutante != null ? Model.ProfissionalExecutante.Email : "N/A")</dd>

                    <dt class="col-sm-4">Material Associado</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MaterialEquipamentoAssociado.EstadoComponente)</dd>
                </dl>

                <hr />

                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.ExameId" class="btn btn-sm"
                       style="background-color: orange; color: white;">
                        Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm"
                       style="background-color: #6c757d; color: white;">
                        Voltar para a Lista
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>