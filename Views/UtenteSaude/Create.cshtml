@using HealthWellbeing.Models
@model UtenteSaude

@{
    ViewData["Title"] = "Criar Utente";
}

<style>
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .utente-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .utente-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .utente-btn:hover {
            filter: brightness(1.05);
        }

    .utente-body {
        background: #e6f3fb;
        min-height: 260px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    .form-card {
        background: #ffffff;
        border-radius: 12px;
        padding: 16px;
        border: 1px solid rgba(97,166,199,.45);
        box-shadow: 0 2px 10px rgba(0,0,0,.08);
    }

    .form-title {
        margin: 0 0 10px 0;
        color: #1f4f6a;
        font-weight: 900;
    }

    .form-sub {
        margin: 0 0 14px 0;
        color: #2b546c;
        font-weight: 600;
    }
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <!-- TOPO: Logo + Voltar -->
            <div class="utente-header">
                <div class="utente-header-content">
                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing"
                             class="logo-img" />
                    </div>

                    <div class="utente-actions">
                        <a asp-action="Index" class="utente-btn">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </div>
            </div>

            <!-- CORPO -->
            <div class="utente-body">
                <div class="form-card">
                    <h2 class="form-title">
                        <i class="bi bi-plus-circle me-2"></i>Criar Utente
                    </h2>
                    <p class="form-sub">Preenche os dados do novo utente e guarda.</p>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                        @{ ViewData["Mode"] = "Create";}
                        @Html.Partial("_FormUtenteSaude", Model)

                        <div class="d-flex gap-2 flex-wrap mt-3">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="utente-footer-bar"></div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Vem do controller (ViewBag.ClientsJson)
        const clients = @Html.Raw(ViewBag.ClientsJson ?? "[]");

        const byId = (id) => clients.find(c => String(c.clientId) === String(id));

        const setVal = (id, val) => {
            const el = document.getElementById(id);
            if (!el) return;
            if (el.tagName === "TEXTAREA") el.value = val ?? "";
            else el.value = val ?? "";
        };

        const calcAge = (birthStr) => {
            if (!birthStr) return "";
            const d = new Date(birthStr);
            if (isNaN(d.getTime())) return "";
            const today = new Date();
            let age = today.getFullYear() - d.getFullYear();
            const m = today.getMonth() - d.getMonth();
            if (m < 0 || (m === 0 && today.getDate() < d.getDate())) age--;
            return age < 0 ? 0 : age;
        };

        function fillClient(id) {
            const c = byId(id);
            if (!c) {
                setVal("NomeCompletoRO", "");
                setVal("EmailRO", "");
                setVal("TelefoneRO", "");
                setVal("MoradaRO", "");
                setVal("DataNascimentoRO", "");
                setVal("IdadeRO", "");
                return;
            }

            setVal("NomeCompletoRO", c.name ?? "");
            setVal("EmailRO", c.email ?? "");
            setVal("TelefoneRO", c.phone ?? "");
            setVal("MoradaRO", c.address ?? "");

            // BirthDate pode vir como "2026-01-05T00:00:00"
            const b = (c.birthDate ?? "");
            const dateOnly = b ? String(b).substring(0, 10) : "";
            setVal("DataNascimentoRO", dateOnly);
            setVal("IdadeRO", calcAge(b));
        }

        document.addEventListener("DOMContentLoaded", () => {
            const sel = document.getElementById("clientSelect");
            if (!sel) return;

            sel.addEventListener("change", (e) => fillClient(e.target.value));

            // caso volte do POST com ModelState inválido e já tenha ClientId
            if (sel.value) fillClient(sel.value);
        });
    </script>
}

