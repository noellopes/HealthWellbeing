@using HealthWellbeing.ViewModel
@model UtenteSaudeFormVM

@{
    ViewData["Title"] = "Criar Utente";
}

<style>
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .utente-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .utente-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .utente-btn:hover {
            filter: brightness(1.05);
        }

    .utente-body {
        background: #e6f3fb;
        min-height: 260px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    .form-card {
        background: #fff;
        border-radius: 12px;
        padding: 16px;
        border: 1px solid rgba(97,166,199,.45);
        box-shadow: 0 2px 10px rgba(0,0,0,.08);
    }

    .form-title {
        margin: 0 0 10px 0;
        color: #1f4f6a;
        font-weight: 900;
    }

    .form-sub {
        margin: 0 0 14px 0;
        color: #2b546c;
        font-weight: 600;
    }

    .section-card {
        background: #f7fbfe;
        border: 1px solid rgba(97,166,199,.35);
        border-radius: 12px;
        padding: 12px;
    }

    .section-head {
        margin-bottom: 8px;
    }

    .section-title {
        color: #1f4f6a;
        font-weight: 900;
        font-size: 1.05rem;
    }

    .section-subtitle {
        color: #2b546c;
        font-size: .9rem;
        opacity: .9;
    }
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <!-- Header -->
            <div class="utente-header">
                <div class="utente-header-content">
                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing"
                             class="logo-img" />
                    </div>

                    <div class="utente-actions">
                        <a asp-controller="UtenteSaude" asp-action="Index" class="utente-btn">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Body -->
            <div class="utente-body">
                <div class="form-card">
                    <h2 class="form-title"><i class="bi bi-plus-circle me-2"></i>Criar Utente</h2>
                    <p class="form-sub">Podes selecionar um cliente existente pelo nome, ou criar um novo.</p>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="IsEdit" value="false" />
                        <input type="hidden" asp-for="ClientId" />

                        <div asp-validation-summary="All" class="text-danger mb-2"></div>

                        <partial name="_FormUtenteSaudeForm" model="Model" />

                        <div class="d-flex gap-2 flex-wrap mt-3">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Guardar
                            </button>
                            <a asp-controller="UtenteSaude" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="utente-footer-bar"></div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const clients = @Html.Raw(ViewBag.ClientsJson ?? "[]");

        const nameId = "@Html.IdFor(m => m.Name)";
        const clientIdId = "@Html.IdFor(m => m.ClientId)";
        const emailId = "@Html.IdFor(m => m.Email)";
        const phoneId = "@Html.IdFor(m => m.Phone)";
        const addressId = "@Html.IdFor(m => m.Address)";
        const birthId = "@Html.IdFor(m => m.BirthDate)";
        const genderId = "@Html.IdFor(m => m.Gender)";

        const nameInput = document.getElementById(nameId);
        const clientIdInput = document.getElementById(clientIdId);
        const emailInput = document.getElementById(emailId);
        const phoneInput = document.getElementById(phoneId);
        const addressInput = document.getElementById(addressId);
        const birthInput = document.getElementById(birthId);
        const genderInput = document.getElementById(genderId);

        const box = document.getElementById("clientSuggestions");
        const clientFields = [emailInput, phoneInput, addressInput, genderInput];

        function lockClientFields(locked) {
            clientFields.forEach(i => i.readOnly = locked);
            if (birthInput) birthInput.disabled = locked;
        }

        function clearClientSelectionButKeepTypedName() {
            clientIdInput.value = "";
            lockClientFields(false);
        }

        function fillClientFields(c) {
            clientIdInput.value = c.clientId;
            emailInput.value = c.email ?? "";
            phoneInput.value = c.phone ?? "";
            addressInput.value = c.address ?? "";
            birthInput.value = c.birthDate ?? "";
            genderInput.value = c.gender ?? "";
            lockClientFields(true);
        }

        function hideBox() {
            box.style.display = "none";
            box.innerHTML = "";
        }

        function showSuggestions(term) {
            const t = (term || "").trim().toLowerCase();
            box.innerHTML = "";
            if (t.length < 1) { hideBox(); return; }

            const matches = clients
                .filter(c => (c.name || "").toLowerCase().includes(t))
                .slice(0, 8);

            if (matches.length === 0) { hideBox(); return; }

            matches.forEach(c => {
                const a = document.createElement("button");
                a.type = "button";
                a.className = "list-group-item list-group-item-action";
                a.innerHTML = `<strong>${c.name}</strong><br/><small class="text-muted">${c.email ?? ""}</small>`;
                a.onclick = () => {
                    nameInput.value = c.name;
                    fillClientFields(c);
                    hideBox();
                };
                box.appendChild(a);
            });

            box.style.display = "block";
        }

        nameInput.addEventListener("input", () => {
            showSuggestions(nameInput.value || "");

            if (parseInt(clientIdInput.value || "0") > 0) {
                clearClientSelectionButKeepTypedName();
                emailInput.value = "";
                phoneInput.value = "";
                addressInput.value = "";
                if (birthInput) birthInput.value = "";
                genderInput.value = "";
            }
        });

        document.addEventListener("click", (e) => {
            if (!box.contains(e.target) && e.target !== nameInput) hideBox();
        });

        window.addEventListener("load", () => {
            const cid = parseInt(clientIdInput.value || "0");
            if (cid > 0) {
                const c = clients.find(x => x.clientId === cid);
                if (c) fillClientFields(c);
            } else {
                lockClientFields(false);
            }
        });
    </script>
}
