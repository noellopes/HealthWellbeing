@using HealthWellbeing.Models
@model PaginationInfo<Client>

@{
    ViewData["Title"] = "Diretor Clínico - Clientes/Utentes";

    string searchNome = ViewBag.SearchNome as string ?? "";
    string searchNif = ViewBag.SearchNif as string ?? "";
    bool onlyUtentes = ViewBag.OnlyUtentes is bool b && b;

    bool isFirst = Model.CurrentPage <= 1;
    bool isLast = Model.CurrentPage >= Model.TotalPages;
}

<style>
    /* Container principal */
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    /* ---------- CABEÇALHO ---------- */
    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 12px;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .top-nav {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .top-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .top-btn:hover {
            filter: brightness(1.05);
        }

        .top-btn.active {
            background: #256b8f;
            cursor: default;
            pointer-events: none;
            opacity: .95;
            box-shadow: inset 0 0 0 2px rgba(255,255,255,.25);
        }

    /* ---------- CORPO ---------- */
    .utente-body {
        background: #e6f3fb;
        min-height: 360px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    .welcome-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 14px;
    }

    .welcome-title {
        margin: 0;
        color: #1f4f6a;
        font-weight: 800;
    }

    .agenda-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
    }

        .agenda-btn:hover {
            filter: brightness(1.05);
        }
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <!-- ---------- TOPO ---------- -->
            <div class="utente-header">
                <div class="utente-header-content">

                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing"
                             class="logo-img" />
                    </div>
                    @if (User.IsInRole("DiretorClinico"))
                    {
                        <div class="top-nav">

                            <a class="top-btn" asp-controller="Doctor" asp-action="Index">
                                <i class="bi bi-heart-pulse"></i> Médicos
                            </a>

                            <a class="top-btn" asp-controller="Specialities" asp-action="Index">
                                <i class="bi bi-diagram-3"></i> Especialidades
                            </a>

                            <a class="top-btn active" href="#" aria-disabled="true" tabindex="-1">
                                <i class="bi bi-people"></i> Utentes
                            </a>
                        </div>
                    }
                    

                </div>
            </div>

            <!-- ---------- CORPO ---------- -->
            <div class="utente-body">

                <!-- Bem-vindo + Agenda -->
                <div class="welcome-row">
                    <h2 class="welcome-title">Bem-vindo</h2>

                    <a class="agenda-btn" asp-controller="AgendaMedicas" asp-action="Index">
                        <i class="bi bi-calendar2-week"></i> Agenda Médica
                    </a>
                </div>

                <!-- Cabeçalho lista + botões -->
                <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                    <h2 class="h4 m-0">Lista de Clientes</h2>

                    <div class="d-flex justify-content-end gap-2 flex-wrap">
                        <a class="btn @(onlyUtentes ? "btn-outline-primary" : "btn-primary")"
                           asp-controller="UtenteSaude"
                           asp-action="Index"
                           asp-route-page="1"
                           asp-route-searchNome="@searchNome"
                           asp-route-searchNif="@searchNif"
                           asp-route-onlyUtentes="false">
                            Mostrar todos
                        </a>

                        <a class="btn @(onlyUtentes ? "btn-primary" : "btn-outline-primary")"
                           asp-controller="UtenteSaude"
                           asp-action="Index"
                           asp-route-page="1"
                           asp-route-searchNome="@searchNome"
                           asp-route-searchNif="@searchNif"
                           asp-route-onlyUtentes="true">
                            Só utentes
                        </a>

                        <a class="btn btn-secondary"
                           data-bs-toggle="collapse"
                           data-bs-target="#utenteSearch"
                           aria-expanded="false"
                           aria-controls="utenteSearch">
                            <i class="bi bi-search me-1"></i> Pesquisar
                        </a>

                        <a asp-action="Create" class="btn btn-success">
                            <i class="bi bi-plus-circle me-1"></i> Criar Novo
                        </a>
                    </div>
                </div>

                <!-- Pesquisa -->
                <div class="collapse mt-2 mb-2" id="utenteSearch">
                    <div class="card card-body">
                        <form asp-controller="UtenteSaude" asp-action="Index" method="get" class="row g-2 align-items-end">
                            <input type="hidden" name="onlyUtentes" value="@onlyUtentes.ToString().ToLower()" />

                            <div >
                                <label for="searchNome" class="form-label">Nome</label>
                                <input id="searchNome" name="searchNome"
                                       value="@searchNome"
                                       class="form-control"
                                       placeholder="Pesquisar por nome"
                                       type="search" />
                            </div>

                          

                            <div class="col-12 mt-2 d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search me-1"></i> Pesquisar
                                </button>

                                <a asp-controller="UtenteSaude" asp-action="Index"
                                   asp-route-onlyUtentes="@onlyUtentes.ToString().ToLower()"
                                   class="btn btn-secondary">
                                    Limpar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Mensagem -->
                @if (TempData["Msg"] != null)
                {
                    <div class="alert alert-success mt-3">
                        @TempData["Msg"]
                    </div>
                }

                <!-- Tabela (sem coluna NIF) -->
                <div class="table-responsive mt-4">
                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th style="width:260px;">Email</th>
                                <th style="width:110px;">Estado</th>
                                <th style="width:360px;">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Items == null || !Model.Items.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">
                                        Não existem registos para apresentar.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var c in Model.Items)
                                {
                                    var isUtente = c.UtenteSaude != null;
                                    var email = string.IsNullOrWhiteSpace(c.Email) ? "—" : c.Email;

                                    <tr>
                                        <td>@c.Name</td>
                                        <td>@email</td>
                                        <td>
                                            @if (isUtente)
                                            {
                                                <span class="badge bg-success">Utente</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Cliente</span>
                                            }
                                        </td>
                                        <td>
                                            @if (isUtente)
                                            {
                                                <a class="btn btn-sm btn-primary"
                                                   asp-action="Details"
                                                   asp-route-id="@c.UtenteSaude!.UtenteSaudeId">
                                                    <i class="bi bi-eye me-1"></i> Detalhes
                                                </a>

                                                <a class="btn btn-sm btn-warning text-white"
                                                   asp-action="Edit"
                                                   asp-route-id="@c.UtenteSaude!.UtenteSaudeId">
                                                    <i class="bi bi-pencil-square me-1"></i> Editar
                                                </a>

                                                <a class="btn btn-sm btn-danger"
                                                   asp-action="Delete"
                                                   asp-route-id="@c.UtenteSaude!.UtenteSaudeId">
                                                    <i class="bi bi-trash me-1"></i> Apagar
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-sm btn-success"
                                                   asp-action="Create"
                                                   asp-route-clientId="@c.ClientId">
                                                    <i class="bi bi-person-plus me-1"></i> Adicionar
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Paginação (mantém pesquisa + filtro) -->
                <nav aria-label="Paginação de clientes">
                    <ul class="pagination justify-content-center">

                        <li class="page-item @(isFirst ? "disabled" : "")">
                            <a class="page-link"
                               href="@(isFirst ? "#" : Url.Action("Index", "UtenteSaude",
                                                                  new { page = Model.CurrentPage - 1, searchNome, searchNif, onlyUtentes }))">
                                «
                            </a>
                        </li>

                        @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   href="@(i == Model.CurrentPage ? "#" : Url.Action("Index", "UtenteSaude",
                                                                          new { page = i, searchNome, searchNif, onlyUtentes }))">
                                @i
                            </a>
                        </li>
                                                }

                        <li class="page-item @(isLast ? "disabled" : "")">
                            <a class="page-link"
                               href="@(isLast ? "#" : Url.Action("Index", "UtenteSaude",
                                                                  new { page = Model.CurrentPage + 1, searchNome, searchNif, onlyUtentes }))">
                                »
                            </a>
                        </li>

                    </ul>
                </nav>

            </div>

            <div class="utente-footer-bar"></div>
        </div>
    </div>
</div>
