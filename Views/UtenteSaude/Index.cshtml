@model IEnumerable<HealthWellbeing.Models.UtenteSaude>
@{
    ViewData["Title"] = "Área do Utente";
    var nome = ViewBag.Nome as string ?? "Utente";
}

<style>
    /* Container principal */
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    /* ---------- CABEÇALHO ---------- */
    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .utente-actions {
        display: flex;
        gap: 8px;
    }

    .utente-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 600;
        text-decoration: none;
    }

        .utente-btn.alt {
            background: #3f8fb7;
        }

        .utente-btn:hover {
            filter: brightness(1.05);
        }



    /* ---------- CORPO ---------- */
    .utente-body {
        background: #e6f3fb;
        min-height: 360px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    /*media (max-width: 640px) {
                .utente-header-content

            {
                flex-direction: column;
                align-items: center;
                gap: 8px;
            }

            .utente-body {
                min-height: 240px;
            }

            }*/
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <!-- ---------- CABEÇALHO ---------- -->
            <div class="utente-header">
                <div class="utente-header-content">
                    <!-- LOGO À ESQUERDA -->
                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing"
                             class="logo-img" />
                    </div>

                    <!-- BOTÕES À DIREITA -->
                    <div class="utente-actions">
                        <a asp-controller="Consultas" asp-action="Create" class="utente-btn">Marcar Consulta</a>

                    </div>
                </div>
            </div>


            <!-- ---------- CORPO PRINCIPAL ---------- -->

            <div class="utente-body">
                <h2 style="margin-top:0;color:#1f4f6a;">Bem-vindo, @nome</h2>
                <p style="margin-bottom:12px;color:#2b546c;">
                    Esta é a sua área pessoal. Use os atalhos para gerir as suas consultas e perfil.
                </p>

                <!-- ---------- ATALHOS ---------- -->

                <a class="utente-btn" asp-controller="Consultas" asp-action="Index" role="button">As minhas Consultas</a>




                <!-- ---------- MENSAGEM DE SUCESSO ---------- -->
                @if (TempData["Msg"] != null)
                {
                    <div class="alert alert-success mt-3">
                        @TempData["Msg"]
                    </div>
                }


                <!-- ---------- TABELA DE UTENTES ---------- -->
                <div class="table-responsive mt-4">
                    <table class="table table-striped table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>NIF</th>
                                <th>NUS</th>
                                <th>Idade</th>
                                <th style="width: 210px;">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var u in Model)
                                {
                                    <tr>
                                        <td>@u.NomeCompleto</td>
                                        <td>@u.Nif</td>
                                        <td>@u.Nus</td>
                                        <td>@u.Idade</td>
                                        <td>
                                            <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@u.UtenteSaudeId">Detalhes</a>
                                            <a class="btn btn-sm btn-warning text-white" asp-action="Edit" asp-route-id="@u.UtenteSaudeId">Editar</a>
                                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@u.UtenteSaudeId">Apagar</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        Ainda não existem utentes. Clique em <strong>Novo Utente</strong> para adicionar o primeiro.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- ---------- BOTÃO NOVO UTENTE ---------- -->
                <div class="mt-3">
                    <a class="btn btn-success" asp-action="Create">Novo Utente</a>
                </div>
            </div>


        </div>
    </div>
</div>
