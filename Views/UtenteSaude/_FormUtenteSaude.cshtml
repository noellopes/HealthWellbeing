@model HealthWellbeing.Models.UtenteSaude

<div class="row g-2">

    <div class="col-12">
        <div class="mb-3">
            <label asp-for="NomeCompleto" class="form-label fw-semibold"></label>
            <input asp-for="NomeCompleto" class="form-control" />
            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-md-6">
        <div class="mb-3">
            <label asp-for="DataNascimento" class="form-label fw-semibold"></label>
            <input asp-for="DataNascimento" type="date" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-md-6"></div>

    <div class="col-12 col-md-4">
        <div class="mb-3">
            <label asp-for="Nif" class="form-label fw-semibold"></label>
            <input asp-for="Nif" class="form-control" placeholder="9 dígitos" />
            <span asp-validation-for="Nif" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-md-4">
        <div class="mb-3">
            <label asp-for="Niss" class="form-label fw-semibold"></label>
            <input asp-for="Niss" class="form-control" placeholder="11 dígitos" />
            <span asp-validation-for="Niss" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-md-4">
        <div class="mb-3">
            <label asp-for="Nus" class="form-label fw-semibold"></label>
            <input asp-for="Nus" class="form-control" placeholder="9 dígitos" />
            <span asp-validation-for="Nus" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-md-6">
        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-semibold"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12 col-md-6">
        <div class="mb-3">
            <label asp-for="Telefone" class="form-label fw-semibold"></label>
            <input asp-for="Telefone" class="form-control" placeholder="9 dígitos" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
    </div>

    <div class="col-12">
        <div class="mb-3">
            <label asp-for="Morada" class="form-label fw-semibold"></label>
            <textarea asp-for="Morada" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Morada" class="text-danger"></span>
        </div>
    </div>

</div>
