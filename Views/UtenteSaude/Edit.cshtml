@using HealthWellbeing.ViewModel
@model UtenteSaudeFormVM

@{
    ViewData["Title"] = "Editar Utente";
}

<style>
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .utente-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .utente-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .utente-btn:hover {
            filter: brightness(1.05);
        }

    .utente-body {
        background: #e6f3fb;
        min-height: 260px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    .form-card {
        background: #fff;
        border-radius: 12px;
        padding: 16px;
        border: 1px solid rgba(97,166,199,.45);
        box-shadow: 0 2px 10px rgba(0,0,0,.08);
    }

    .form-title {
        margin: 0 0 10px 0;
        color: #1f4f6a;
        font-weight: 900;
    }

    .form-sub {
        margin: 0 0 14px 0;
        color: #2b546c;
        font-weight: 600;
    }

    /* Mini-cards das secções do formulário */
    .section-card {
        background: #f7fbfe;
        border: 1px solid rgba(97,166,199,.35);
        border-radius: 12px;
        padding: 12px;
    }

    .section-head {
        margin-bottom: 8px;
    }

    .section-title {
        color: #1f4f6a;
        font-weight: 900;
        font-size: 1.05rem;
    }

    .section-subtitle {
        color: #2b546c;
        font-size: .9rem;
        opacity: .9;
    }
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <!-- Header -->
            <div class="utente-header">
                <div class="utente-header-content">
                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing"
                             class="logo-img" />
                    </div>

                    <div class="utente-actions">
                        <a asp-controller="UtenteSaude" asp-action="Index" class="utente-btn">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Body -->
            <div class="utente-body">
                <div class="form-card">
                    <h2 class="form-title"><i class="bi bi-pencil-square me-2"></i>Editar Utente</h2>
                    <p class="form-sub">Atualiza os dados e guarda as alterações.</p>

                    <form asp-action="Edit" asp-route-id="@Model.UtenteSaudeId" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="IsEdit" />
                        <input type="hidden" asp-for="UtenteSaudeId" />
                        <input type="hidden" asp-for="ClientId" />

                        <div asp-validation-summary="All" class="text-danger mb-2"></div>

                        <partial name="_FormUtenteSaudeForm" model="Model" />

                        <div class="d-flex gap-2 flex-wrap mt-3">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Guardar
                            </button>
                            <a asp-controller="UtenteSaude" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="utente-footer-bar"></div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
