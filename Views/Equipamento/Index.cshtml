@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Equipamento>

@{
    ViewData["Title"] = "Equipamentos";
    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];
    bool isStaff = User.IsInRole("Administrador") || User.IsInRole("ProfissionalSaude");
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary"><i class="bi bi-tools"></i> Equipamentos</h2>

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-end align-items-center mb-3">
        <div>
            <a class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#searchForm">
                <i class="bi bi-search me-1"></i> Pesquisa
            </a>

            @if (isStaff)
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Criar Novo
                </a>
            }

            <a href="/" class="btn btn-secondary">
                <i class="fas fa-home me-1"></i> Início
            </a>
        </div>
    </div>

    <div class="collapse mb-3" id="searchForm">
        <div class="card card-body bg-light">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">
                <div class="col-md-4">
                    <label for="searchNomeEquipamento" class="form-label">Nome do Equipamento</label>
                    <input id="searchNomeEquipamento" name="searchNomeEquipamento" value="@ViewBag.SearchNomeEquipamento" class="form-control" placeholder="Procurar..." />
                </div>
                <div class="col-12 mt-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Pesquisar</button>
                    <a asp-action="Index" class="btn btn-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    @if (Model?.Items?.Any() == true)
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome do Equipamento</th>
                        <th class="text-center" style="width: 220px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @item.NomeEquipamento
                                @if (item.RequerPeso)
                                {
                                    <span class="badge bg-secondary ms-2" title="Requer Carga"><i class="bi bi-box-seam"></i> Requer Carga</span>
                                }
                            </td>
                            <td class="text-nowrap text-center">
                                <a asp-action="Details" asp-route-id="@item.EquipamentoId" class="btn btn-primary btn-sm me-1" title="Ver Detalhes">
                                    <i class="fas fa-eye"></i> Ver
                                </a>

                                @if (isStaff)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.EquipamentoId" class="btn btn-warning btn-sm me-1" title="Editar">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.EquipamentoId" class="btn btn-danger btn-sm" title="Apagar">
                                        <i class="fas fa-trash-alt"></i> Apagar
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <nav class="mt-3" aria-label="Equipamentos page">
                <ul class="pagination justify-content-center">
                    @{
                        var routeParams = new Dictionary<string, string>
                                {
                                { "searchNomeEquipamento", ViewBag.SearchNomeEquipamento }
                                };
                    }
                    @* Botão INÍCIO *@
                    @if (Model.CurrentPage == 1)
                    {
                        <li class="page-item disabled"><a class="page-link">Início</a></li>
                    }
                    else
                       {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-all-route-data="routeParams" asp-route-page="1">Início</a>
                        </li>
                    }

                    @* Botões NUMERADOS *@
                    @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                    {
                    if (p == Model.CurrentPage)
                    {
                        <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-all-route-data="routeParams" asp-route-page="@p">@p</a>
                        </li>
}
                    }

                    @* Botão FIM *@
                    @if (Model.CurrentPage == Model.TotalPages)
                    {
                        <li class="page-item disabled"><a class="page-link">Fim</a></li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-all-route-data="routeParams" asp-route-page="@Model.TotalPages">Fim</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">Nenhum equipamento encontrado.</div>
    }
</div>