@model HealthWellbeing.Models.Equipamento

@{
    ViewData["Title"] = "Detalhes do Equipamento";
    string? successMessage = Context.Request.Query["SuccessMessage"];
    bool isStaff = User.IsInRole("Administrador") || User.IsInRole("ProfissionalSaude");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>

            @if (isStaff)
            {
                <a asp-action="Edit" asp-route-id="@Model.EquipamentoId" class="btn btn-warning me-2">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Delete" asp-route-id="@Model.EquipamentoId" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Apagar
                </a>
            }
        </div>
    </div>

    @if (successMessage != null)
    {
        <div class="container py-4">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @successMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.NomeEquipamento</h3>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-secondary">Nome:</dt>
                <dd class="col-sm-9 fw-bold">@Model.NomeEquipamento</dd>

                <dt class="col-sm-3 text-secondary">Requer Carga/Peso:</dt>
                <dd class="col-sm-9">
                    @if (Model.RequerPeso)
                    {
                        <span class="badge bg-warning text-dark"><i class="bi bi-check-circle-fill"></i> Sim (Obrigatório)</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Não</span>
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>