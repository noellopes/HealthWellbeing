@model HealthWellbeing.Models.Equipamento

@{
    ViewData["Title"] = "Eliminar Equipamento";
    // Recupera os dados enviados pelo Controller para saber se pode apagar
    bool podeEliminar = ViewBag.PodeEliminar ?? true;
    int numExercicios = ViewBag.NumExercicios ?? 0;
}

<div class="container mt-4">
    <h1 class="text-danger mb-3"><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h1>

    @if (!podeEliminar)
    {
        <div class="alert alert-warning shadow-sm border-warning" role="alert">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Atenção!</h4>
            <p>
                Não é possível eliminar o equipamento <strong>@Model.NomeEquipamento</strong> porque ele está associado a
                <strong>@numExercicios</strong> exercício(s).
            </p>
            <hr>
            <p class="mb-0">Tens de desassociar este equipamento dos exercícios antes de o poderes apagar.</p>
        </div>
    }
    else
    {
        <p class="lead">Tem a certeza que deseja eliminar o seguinte equipamento? Esta ação <strong>não pode ser desfeita</strong>.</p>
    }

    <div class="card mb-4 shadow-sm border-danger">
        <div class="card-header bg-danger text-white fw-bold">
            Dados do Equipamento
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Nome do Equipamento</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NomeEquipamento)</dd>

                <dt class="col-sm-3">Exercícios Associados</dt>
                <dd class="col-sm-9">
                    @if (numExercicios > 0)
                    {
                        <span class="badge bg-warning text-dark">@numExercicios</span>
                    }
                    else
                    {
                        <span class="badge bg-success">0 (Livre para eliminar)</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="EquipamentoId" />

        <div class="d-flex">
            @if (podeEliminar)
            {
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </button>
            }
            else
            {
                <button type="button" class="btn btn-secondary me-2" disabled title="Existem exercícios associados">
                    <i class="fas fa-trash-alt"></i> Eliminar (Bloqueado)
                </button>
            }

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
        </div>
    </form>
</div>