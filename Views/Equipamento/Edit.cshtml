@model HealthWellbeing.Models.Equipamento

@{
    ViewData["Title"] = "Editar Equipamento";
}

<div class="container mt-4">
    <h2 class="mb-4 text-warning"><i class="fas fa-edit"></i> Editar Equipamento</h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="EquipamentoId" />

        <div asp-validation-summary="All" class="text-danger small"></div>

        <div class="mb-3">
            <label asp-for="NomeEquipamento" class="form-label fw-bold">Nome do Equipamento *</label>
            <input asp-for="NomeEquipamento" class="form-control" />
            <span asp-validation-for="NomeEquipamento" class="text-danger small"></span>
        </div>

        <div class="mb-3 form-check p-3 border rounded bg-light">
            <input class="form-check-input" type="checkbox" asp-for="RequerPeso" id="checkPeso">
            <label class="form-check-label fw-bold" for="checkPeso">
                Requer registo de carga/peso?
            </label>
            <div class="form-text text-muted">
                Marque se este equipamento implica o uso de pesos que devem ser registados.
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-warning">
                <i class="fas fa-save"></i> Guardar Alterações
            </button>
            <a asp-action="Index" class="btn btn-success ms-2">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}