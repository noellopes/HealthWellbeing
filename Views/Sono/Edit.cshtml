@model HealthWellbeing.Models.Sono

@{
    ViewData["Title"] = "Editar Registo de Sono";
    bool isStaff = User.IsInRole("Administrador") || User.IsInRole("Profissional");
    string maxDate = DateTime.Now.ToString("yyyy-MM-dd");
}

<div class="container mt-4">
    <h2 class="mb-4 text-warning"><i class="fas fa-edit"></i> Editar Registo de Sono</h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="SonoId" />

        <div asp-validation-summary="All" class="text-danger small"></div>

        <div class="mb-3">
            <label asp-for="Data" class="form-label">Data do Registo *</label>
            <input asp-for="Data" class="form-control" type="date" max="@maxDate">
            <span asp-validation-for="Data" class="text-danger small"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="HoraDeitar" class="form-label">Hora de Deitar *</label>
                <input asp-for="HoraDeitar" class="form-control" type="time">
                <span asp-validation-for="HoraDeitar" class="text-danger small"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="HoraLevantar" class="form-label">Hora de Levantar *</label>
                <input asp-for="HoraLevantar" class="form-control" type="time">
                <span asp-validation-for="HoraLevantar" class="text-danger small"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="HorasSono" class="form-label">Total de Horas (Calculado automaticamente)</label>
            <input asp-for="HorasSono" class="form-control bg-light" readonly>
        </div>

        @if (isStaff)
        {
        <div class="mb-3">
            <label class="form-label">Utente Associado</label>

            // Se for Staff, mostra a dropdown para poder mudar
            <select asp-for="UtenteGrupo7Id" class="form-select" asp-items="ViewBag.UtenteGrupo7Id"></select>
            <span asp-validation-for="UtenteGrupo7Id" class="text-danger small"></span>
        </div>
        }
        

        <div class="mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Guardar Alterações
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}