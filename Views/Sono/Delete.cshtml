@model HealthWellbeing.Models.Sono

@{
    ViewData["Title"] = "Eliminar Registo de Sono";
}

<div class="container mt-4">
    <h1 class="text-danger mb-3"><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h1>

    <div class="alert alert-danger shadow-sm border-danger" role="alert">
        <h4 class="alert-heading"><i class="fas fa-exclamation-circle"></i> Tem a certeza?</h4>
        <p>
            Esta ação irá apagar permanentemente o registo de sono do dia <strong>@Model.Data.ToString("dd/MM/yyyy")</strong>.
            <br />
            Esta ação <strong>não pode ser desfeita</strong>.
        </p>
    </div>

    <div class="card mb-4 shadow-sm border-danger">
        <div class="card-header bg-danger text-white fw-bold">
            Dados do Registo a Eliminar
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-secondary">Data</dt>
                <dd class="col-sm-9 fw-bold">@Model.Data.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 text-secondary">Utente (ID)</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-secondary">#@Model.UtenteGrupo7Id</span>
                </dd>

                <dt class="col-sm-3 text-secondary">Horário</dt>
                <dd class="col-sm-9">
                    Deitar: @Model.HoraDeitar.ToString(@"hh\:mm") | Levantar: @Model.HoraLevantar.ToString(@"hh\:mm")
                </dd>

                <dt class="col-sm-3 text-secondary">Total de Sono</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info text-dark">@Model.HorasSono.ToString(@"hh\:mm") horas</span>
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="SonoId" />

        <div class="d-flex">
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash-alt"></i> Eliminar Definitivamente
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancelar e Voltar
            </a>
        </div>
    </form>
</div>