@model HealthWellbeing.Models.Sono

@{
    ViewData["Title"] = "Detalhes do Registo de Sono";
    string? successMessage = Context.Request.Query["SuccessMessage"];
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
            <a asp-action="Edit" asp-route-id="@Model.SonoId" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Delete" asp-route-id="@Model.SonoId" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Apagar
            </a>
        </div>
    </div>

    @if (successMessage != null)
    {
        <div class="container py-4">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @successMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Registo de @Model.Data.ToString("dd/MM/yyyy")</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3 border-end">
                    <h5 class="fw-bold text-primary border-bottom pb-2">Informações Gerais</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-secondary" style="width: 35%;">Data do Registo:</th>
                            <td class="fw-bold">@Model.Data.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Utente :</th>
                            <td>
                                <span class="badge bg-secondary">@ViewData["NomeUtente"]</span>
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-6 mb-3">
                    <h5 class="fw-bold text-primary border-bottom pb-2">Horários</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-secondary" style="width: 35%;">Hora de Deitar:</th>
                            <td>@Model.HoraDeitar.ToString(@"hh\:mm")</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Hora de Levantar:</th>
                            <td>@Model.HoraLevantar.ToString(@"hh\:mm")</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Total de Sono:</th>
                            <td>
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-clock me-1"></i>
                                    @Model.HorasSono.ToString(@"hh\:mm") horas
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>