@model HealthWellbeing.Models.Sono

@{
    ViewData["Title"] = "Registo de Sono Não Encontrado";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="alert alert-warning d-flex align-items-center p-4 border border-warning rounded shadow-sm" role="alert">
    <i class="bi bi-exclamation-triangle-fill flex-shrink-0 text-warning" style="font-size: 4rem;"></i>
    <div class="ps-4">
        <h4 class="alert-heading mb-2">O registo não existe</h4>
        <p class="mb-0">
            O registo de sono que tentou editar já não existe na base de dados.
            Provavelmente foi eliminado por outro utilizador recentemente.
        </p>
    </div>
</div>

@if (Model != null)
{
    <div class="card border-info mb-4 shadow-sm">
        <div class="card-header bg-info text-white">
            <i class="bi bi-arrow-repeat me-2"></i>Recuperação de Dados
        </div>
        <div class="card-body">
            <h5 class="card-title">Deseja salvar os dados como um novo registo?</h5>
            <p class="card-text">
                Ainda temos os dados que acabou de editar para o dia <strong>@Model.Data.ToString("dd/MM/yyyy")</strong>.
                <br />
                <small class="text-muted">
                    (Deitar: @Model.HoraDeitar.ToString(@"hh\:mm") | Levantar: @Model.HoraLevantar.ToString(@"hh\:mm"))
                </small>
            </p>
            <p class="card-text">
                Pode clicar abaixo para o adicionar novamente à base de dados como um novo registo.
            </p>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Data" />
                <input type="hidden" asp-for="HoraDeitar" />
                <input type="hidden" asp-for="HoraLevantar" />
                <input type="hidden" asp-for="UtenteGrupo7Id" />

                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1"></i> Adicionar Novamente
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Cancelar e Voltar à Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="mt-4 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista
        </a>
    </div>
}