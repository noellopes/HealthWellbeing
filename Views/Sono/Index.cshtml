@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Sono>

@{
    ViewData["Title"] = "Registos de Sono";
    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];

    bool isAdmin = User.IsInRole("Administrador");
    bool isProf = User.IsInRole("ProfissionalSaude");
    bool isStaff = isAdmin || isProf;
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary"><i class="bi bi-moon-stars-fill"></i> Registos de Sono</h2>

    <p class="text-muted">
        @if (isAdmin)
        {
            <span>Modo Administrador: A ver todos os registos.</span>
        }
        else if (isProf)
        {

            <span>A ver registos dos seus utentes atribuídos.</span>
        }
        else
        {

            <span>O meu histórico de sono:</span>
        }
    </p>

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-end align-items-center mb-3">
        <div>
            <a class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#searchForm">
                <i class="bi bi-search me-1"></i> Pesquisa
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Novo Registo
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-home me-1"></i> Início
            </a>
        </div>
    </div>

    <div class="collapse mb-3 @(ViewBag.SearchData != null || ViewBag.CurrentUtenteFilter != null ? "show" : "")" id="searchForm">
        <div class="card card-body bg-light">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">

                @* 1. DROPDOWN DE UTENTES (Aparece para Admin e Profissional) *@
                @if (isStaff)
                {
                    <div class="col-md-4">
                        <label for="searchUtenteId" class="form-label fw-bold">Filtrar por Utente</label>
                        @* A ViewBag.ListaUtentes agora já vem filtrada pelo Controller se for Profissional *@
                        <select name="searchUtenteId" id="searchUtenteId" class="form-select" asp-items="ViewBag.ListaUtentes">
                            <option value="">-- Todos os Meus Utentes --</option>
                        </select>
                    </div>
                }

                <div class="col-md-4">
                    <label for="searchData" class="form-label fw-bold">Filtrar por Data</label>
                    <input type="date" id="searchData" name="searchData" value="@ViewBag.SearchData" class="form-control" />
                </div>

                <div class="col-md-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Pesquisar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    @* --- TABELA DE DADOS --- *@
    @if (Model?.Items?.Any() == true)
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        @if (isStaff)
                        {
                            <th>Utente</th>
                        }
                        <th>Data</th>
                        <th>Hora Deitar</th>
                        <th>Hora Levantar</th>
                        <th>Total Horas</th>
                        <th class="text-center" style="width: 220px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            @if (isStaff)
                            {
                                <td>
                                    <i class="bi bi-person-circle me-1"></i>
                                    <span class="fw-bold">@item.UtenteGrupo7?.Nome</span>
                                </td>
                            }

                            <td>@item.Data.ToString("dd/MM/yyyy")</td>
                            <td>@item.HoraDeitar.ToString(@"hh\:mm")</td>
                            <td>@item.HoraLevantar.ToString(@"hh\:mm")</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @item.HorasSono.ToString(@"hh\:mm")
                                </span>
                            </td>
                            <td class="text-nowrap">
                                <a asp-action="Details" asp-route-id="@item.SonoId" class="btn btn-primary btn-sm me-1" title="Ver"><i class="fas fa-eye"></i>Detalhes</a>
                                <a asp-action="Edit" asp-route-id="@item.SonoId" class="btn btn-warning btn-sm me-1" title="Editar"><i class="fas fa-edit"></i>Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.SonoId" class="btn btn-danger btn-sm" title="Apagar"><i class="fas fa-trash-alt"></i>Apagar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @* PAGINAÇÃO *@
            <nav aria-label="Navegação de páginas">
                <ul class="pagination justify-content-center my-3">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchData="@ViewBag.SearchData" asp-route-searchUtenteId="@ViewBag.CurrentUtenteFilter">Anterior</a></li>
                    }
                    else
                    {
                        <li class="page-item disabled"><span class="page-link">Anterior</span></li>
                    }

                    <li class="page-item disabled"><span class="page-link">@Model.CurrentPage</span></li>

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchData="@ViewBag.SearchData" asp-route-searchUtenteId="@ViewBag.CurrentUtenteFilter">Próximo</a></li>
                    }
                    else
                    {
                        <li class="page-item disabled"><span class="page-link">Próximo</span></li>
                    }
                </ul>
            </nav>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">
            <i class="bi bi-info-circle-fill me-2"></i> Nenhum registo encontrado.
        </div>
    }
</div>