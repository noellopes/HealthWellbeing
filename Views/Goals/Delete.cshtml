@model HealthWellbeing.Models.Goal

@{
    ViewData["Title"] = "Delete Goal";
}

<div class="container py-4">
    <div class="page-header mb-4">
        <h1 class="text-danger"><i class="bi bi-trash"></i> Delete Goal</h1>
        <p class="text-muted">Are you sure you want to delete this goal?</p>
    </div>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
        <p>This action cannot be undone. Deleting this goal will permanently remove it from the patient's treatment plan.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Goal Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Goal ID</dt>
                        <dd class="col-sm-7">@Model.GoalId</dd>

                        <dt class="col-sm-5">Title</dt>
                        <dd class="col-sm-7"><strong>@Model.Title</strong></dd>

                        <dt class="col-sm-5">Start Date</dt>
                        <dd class="col-sm-7">@Model.StartDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-5">Target Date</dt>
                        <dd class="col-sm-7">
                            @if (Model.TargetDate.HasValue)
                            {
                                @Model.TargetDate.Value.ToString("MMMM dd, yyyy")
                            }
                            else
                            {
                                <span class="text-muted">Not set</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Progress</dt>
                        <dd class="col-sm-7">
                            <div class="progress" style="height: 20px;">
                                <div class="progress-bar @(Model.ProgressPercentage >= 75 ? "bg-success" : Model.ProgressPercentage >= 50 ? "bg-info" : Model.ProgressPercentage >= 25 ? "bg-warning" : "bg-danger")"
                                     style="width: @Model.ProgressPercentage%;">
                                    @Model.ProgressPercentage%
                                </div>
                            </div>
                        </dd>

                        <dt class="col-sm-5">Status</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-info">@Model.Status.ToString()</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Patient Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Patient</dt>
                        <dd class="col-sm-7">
                            <strong>@Model.Patient?.FullName</strong><br>
                            <small class="text-muted">@Model.Patient?.Email</small>
                        </dd>

                        <dt class="col-sm-5">Age</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-info">@Model.Patient?.Age years</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="row mt-3">
            <div class="col-12">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Description</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="GoalId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-action="Details" asp-route-id="@Model.GoalId" class="btn btn-info">
            <i class="bi bi-eye"></i> View Details
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}