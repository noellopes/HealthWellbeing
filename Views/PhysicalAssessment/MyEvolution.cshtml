@model IEnumerable<HealthWellbeing.Models.PhysicalAssessment>

@{
    ViewData["Title"] = "O Meu Progresso";
    // Dados para o Gráfico (JSON)
    var datas = Model.Select(a => a.AssessmentDate.ToString("dd/MM")).ToList();
    var pesos = Model.Select(a => a.Weight.ToString().Replace(",", ".")).ToList();
}

<div class="container mt-4">
    <div class="card shadow border-0 mb-4">
        <div class="card-body">
            <h2 class="text-primary fw-bold mb-4"><i class="bi bi-graph-up me-2"></i>A Minha Evolução</h2>

            @if (!Model.Any())
            {
                <p class="text-muted">Ainda não tens avaliações registadas. Fala com o teu treinador!</p>
            }
            else
            {
                <div class="row">
                    <div class="col-md-8">
                        <canvas id="evolutionChart" style="max-height: 400px;"></canvas>
                    </div>
                    <div class="col-md-4">
                        <div class="alert alert-primary">
                            <h5 class="fw-bold">Último Peso</h5>
                            <h2 class="display-5 fw-bold">@Model.Last().Weight kg</h2>
                            <hr />
                            <p class="mb-1"><strong>Gordura Corporal:</strong> @Model.Last().BodyFatPercentage%</p>
                            <p class="mb-0"><strong>Massa Muscular:</strong> @Model.Last().MuscleMass kg</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('evolutionChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(datas)),
                datasets: [{
                    label: 'Peso (kg)',
                    data: [@string.Join(",", pesos)],
                    borderColor: '#0d6efd',
                    tension: 0.3,
                    fill: true,
                    backgroundColor: 'rgba(13, 110, 253, 0.1)'
                }]
            }
        });
    </script>
}