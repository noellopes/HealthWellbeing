@model HealthWellbeing.Models.TrainingExercise

@{
    ViewData["Title"] = "Add Exercise";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold">Add New Exercise</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="TrainingId" value="@ViewBag.TrainingId" />

                        <div class="mb-3">
                            <label asp-for="ExerciseId" class="form-label fw-bold">Select Exercise</label>
                            <select asp-for="ExerciseId" class="form-select" asp-items="ViewBag.ExerciseId"></select>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Sets" class="form-label fw-bold">Sets</label>
                                <input asp-for="Sets" class="form-control" placeholder="e.g. 3" />
                                <span asp-validation-for="Sets" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Reps" class="form-label fw-bold">Reps</label>
                                <input asp-for="Reps" class="form-control" placeholder="e.g. 12" />
                                <span asp-validation-for="Reps" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="RestTime" class="form-label fw-bold">Rest</label>
                                <input asp-for="RestTime" class="form-control" placeholder="e.g. 60s" />
                                <span asp-validation-for="RestTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Add to Plan</button>
                            <a asp-action="Index" asp-route-trainingId="@ViewBag.TrainingId" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>