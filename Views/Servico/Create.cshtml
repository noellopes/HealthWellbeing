@model HealthWellbeing.Models.Servico

@{
    ViewData["Title"] = "Criar Serviço";
}

<h1>Criar Novo Serviço</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DuracaoMinutos" class="control-label"></label>
                <input asp-for="DuracaoMinutos" class="form-control" type="number" />
                <span asp-validation-for="DuracaoMinutos" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoServicoId" class="control-label">Tipo de Serviço</label>
                <select asp-for="TipoServicoId" class="form-control"
                        asp-items="@(ViewData["TipoServicoId"] as SelectList)">
                    <option value="">-- Selecione o Tipo de Serviço --</option>
                </select>
                <span asp-validation-for="TipoServicoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Criar Serviço</button>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}