@model HealthWellbeing.Models.Servico

@{
    ViewData["Title"] = "Delete";
    string? successMessage = Context.Request.Query["successMessage"];
}

@if (successMessage != null)
{
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<h3>Tem certeza de que deseja eliminar este serviço?</h3>
<hr />

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">
            <i class="bi bi-trash3-fill me-2"></i> Eliminar Serviço
        </h4>
    </div>

    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold text-muted">@Html.DisplayNameFor(m => m.Nome)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Nome)</dd>

            <dt class="col-sm-3 fw-bold text-muted">@Html.DisplayNameFor(m => m.Descricao)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Descricao)</dd>

            <dt class="col-sm-3 fw-bold text-muted">@Html.DisplayNameFor(m => m.Preco)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Preco)</dd>

            <dt class="col-sm-3 fw-bold text-muted">@Html.DisplayNameFor(m => m.DuracaoMinutos)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.DuracaoMinutos)</dd>

            <dt class="col-sm-3 fw-bold text-muted">Tipo de Serviço</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.TipoServico.Nome)</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="ServicoId" />

            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
