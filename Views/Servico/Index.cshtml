@model HealthWellbeing.ViewModel.ServicoViewModel

@{
    ViewData["Title"] = "Serviços";
    string? successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show mb-4 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<!-- BOTÕES -->
<div class="d-flex align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success me-2">
        <i class="bi bi-plus-circle me-1"></i> Criar Novo Serviço
    </a>

    <button type="button"
            class="btn btn-secondary me-2"
            data-bs-toggle="modal"
            data-bs-target="#searchModal">
        <i class="bi bi-search me-1"></i> Pesquisar
    </button>

    @if (!string.IsNullOrEmpty(Model.PesquisarNome))
    {
        <a asp-action="Index" class="btn btn-outline-danger">Limpar busca</a>
    }
</div>

<!-- MODAL DE PESQUISA -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Pesquisar Serviço</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form asp-action="Index" method="get">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Nome do Serviço</label>
                        <input type="text"
                               name="pesquisarNome"
                               class="form-control"
                               placeholder="Digite o nome..."
                               value="@Model.PesquisarNome" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i> Pesquisar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- TABELA -->
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço (€)</th>
                <th>Duração (min)</th>
                <th>Tipo de Serviço</th>
                <th style="width:25%">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.ListaServicos.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">
                        Nenhum serviço encontrado.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- PAGINAÇÃO -->
<nav aria-label="Navegação de páginas" class="mt-4">
    <ul class="pagination justify-content-start">

        <li class="page-item @(Model.paginacao.PaginaCorrente == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pagina="1"
               asp-route-pesquisarNome="@Model.PesquisarNome">
                Primeira
            </a>
        </li>

        @for (int p = Model.paginacao.PrimeiraPaginaVer; p <= Model.paginacao.UltimaPaginaVer; p++)
        {
            <li class="page-item @(p == Model.paginacao.PaginaCorrente ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pagina="@p"
                   asp-route-pesquisarNome="@Model.PesquisarNome">
                    @p
                </a>
            </li>
        }

        <li class="page-item @(Model.paginacao.PaginaCorrente == Model.paginacao.PaginaTotal ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pagina="@Model.paginacao.PaginaTotal"
               asp-route-pesquisarNome="@Model.PesquisarNome">
                Última
            </a>
        </li>

    </ul>
</nav>
