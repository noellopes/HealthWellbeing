@model HealthWellbeing.Models.ScoringStrategy

@{
    ViewData["Title"] = "Scoring Strategy Details";
}

<div class="container py-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-info-circle me-2"></i>Scoring Strategy Details
            </h5>
        </div>
        <div class="card-body">
            <dl class="row gy-3 mb-0">

                <dt class="col-sm-3 text-muted d-flex align-items-center">
                    @Html.DisplayNameFor(model => model.ScoringStrategyName)
                </dt>
                <dd class="col-sm-9 fs-5 fw-bold text-dark mb-0">
                    @Html.DisplayFor(model => model.ScoringStrategyName)
                </dd>

                <dt class="col-sm-3 text-muted d-flex align-items-center">
                    @Html.DisplayNameFor(model => model.ScoringStrategyDescription)
                </dt>
                <dd class="col-sm-9 mb-0">
                    @if (string.IsNullOrEmpty(Model.ScoringStrategyDescription)) {
                        <span class="text-muted fst-italic">-</span>
                    }
                    else {
                        @Html.DisplayFor(model => model.ScoringStrategyDescription)
                    }
                </dd>

                <dt class="col-sm-3 text-muted d-flex align-items-center">
                    @Html.DisplayNameFor(model => model.ScoringStrategyCode)
                </dt>
                <dd class="col-sm-9 mb-0">
                    @{
                        string styleStrategy;
                        string iconClass;

                        switch (Model.ScoringStrategyCode) {
                            case "FIXED":
                                styleStrategy = "background-color: #f1f5f9; color: #475569; border: 1px solid #cbd5e1;";
                                iconClass = "bi-pin-angle-fill";
                                break;
                            case "PROGRESSIVE":
                                styleStrategy = "background-color: #ccfbf1; color: #0f766e; border: 1px solid #99f6e4;";
                                iconClass = "bi-graph-up-arrow";
                                break;
                            case "TIME_BASED":
                                styleStrategy = "background-color: #e0f2fe; color: #0369a1; border: 1px solid #bae6fd;";
                                iconClass = "bi-stopwatch";
                                break;
                            case "COMPLETION":
                                styleStrategy = "background-color: #dcfce7; color: #15803d; border: 1px solid #bbf7d0;";
                                iconClass = "bi-check-circle";
                                break;
                            case "BINARY":
                                styleStrategy = "background-color: #e0e7ff; color: #4338ca; border: 1px solid #c7d2fe;";
                                iconClass = "bi-toggle-on";
                                break;
                            default:
                                styleStrategy = "background-color: #f8f9fa; color: #212529; border: 1px solid #dee2e6;";
                                iconClass = "bi-tag";
                                break;
                        }
                    }
                    <span class="badge rounded-pill d-inline-flex align-items-center justify-content-center"
                          style="@styleStrategy font-weight: 500; width: 150px; padding: 0.5em 0;">
                        <i class="bi @iconClass me-2"></i> @Html.DisplayFor(model => model.ScoringStrategyCode)
                    </span>
                </dd>

            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-end gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.ScoringStrategyId" class="btn btn-warning">
            <i class="bi bi-pencil-square me-1"></i> Edit
        </a>

        <a asp-action="Delete" asp-route-id="@Model?.ScoringStrategyId" class="btn btn-danger">
            <i class="bi bi-trash-fill me-1"></i> Delete
        </a>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
        </a>
    </div>
</div>