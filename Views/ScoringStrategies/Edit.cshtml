@model HealthWellbeing.Models.ScoringStrategy

@{
    ViewData["Title"] = "Edit Scoring Strategy";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (ViewBag.ScoringStrategyWasDeleted != null) {
    <div class="alert alert-warning d-flex align-items-center p-4 border border-warning rounded shadow-sm mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-3 fs-2"></i>
        <div>
            <h4 class="alert-heading h5">Concurrent change detected</h4>
            <p class="mb-0">
                The scoring strategy you were editing was deleted by another user.
                Your current changes cannot be saved in the original scoring strategy.
                However, you can create a <strong>new scoring strategy</strong> with the information below.
            </p>
        </div>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">
            <i class="bi bi-pencil-square me-2"></i> Edit Scoring Strategy
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            @if (ViewBag.ScoringStrategyWasDeleted == null) {
                <input type="hidden" asp-for="ScoringStrategyId" />
            }

            <div class="mb-3">
                <label asp-for="ScoringStrategyName" class="form-label fw-bold"></label>
                <input asp-for="ScoringStrategyName" class="form-control" placeholder="E.g., Fixed Score, Time Based..." />
                <span asp-validation-for="ScoringStrategyName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ScoringStrategyDescription" class="form-label fw-bold"></label>
                <textarea asp-for="ScoringStrategyDescription" class="form-control" rows="3" placeholder="Briefly describe how points are calculated..."></textarea>
                <span asp-validation-for="ScoringStrategyDescription" class="text-danger small"></span>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="ScoringStrategyCode" class="form-label fw-bold"></label>
                    <input asp-for="ScoringStrategyCode" class="form-control" placeholder="E.g., FIXED, TIME_BASED..." />
                    <span asp-validation-for="ScoringStrategyCode" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                @if (ViewBag.ScoringStrategyWasDeleted != null) {
                    <button type="submit" asp-action="Create" class="btn btn-success">
                        <i class="bi bi-save me-1"></i> Create as New
                    </button>
                    <a asp-action="Index" class="btn btn-danger">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                }
                else {
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}