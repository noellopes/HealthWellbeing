@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.ScoringStrategy>

@{
    ViewData["Title"] = "Scoring Strategies";
    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (successMessage != null) {
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}
@if (errorMessage != null) {
    <div class="container py-4">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

@if (!Model.Items.Any() && string.IsNullOrEmpty(ViewBag.SearchName) && string.IsNullOrEmpty(ViewBag.SearchCode)) {
    <div class="alert alert-warning d-flex align-items-center border-2 p-3 rounded" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">No Scoring Strategies Found</h4>
            <p>No scoring strategies are currently available.</p>
        </div>
    </div>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Create New Strategy
    </a>
}
else {
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 text-secondary">Overview</h2>
        <div class="d-flex justify-content-end">
            <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#strategySearch" aria-expanded="false" aria-controls="strategySearch">
                <i class="bi bi-search me-1"></i> Search
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
        </div>
    </div>

    <div class="collapse mt-2 mb-3" id="strategySearch">
        <div class="card card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label for="searchName" class="form-label">Strategy Name</label>
                    <input id="searchName" name="searchName" value="@ViewBag.SearchName" class="form-control" placeholder="Search by name" type="search" />
                </div>
                <div class="col-md-6">
                    <label for="searchCode" class="form-label">Technical Code</label>
                    <input id="searchCode" name="searchCode" value="@ViewBag.SearchCode" class="form-control" placeholder="Search by code (e.g. FIXED)" type="search" />
                </div>
                <div class="col-12 mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Items.Any()) {
        <div class="alert alert-info d-flex align-items-center p-3 rounded" role="alert">
            <i class="bi bi-info-circle-fill" style="font-size: 2rem;"></i>
            <div class="ps-3">
                <h5 class="alert-heading">No results found for your search criteria.</h5>
            </div>
        </div>
    }
    else {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Technical Code</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items) {
                        <tr>
                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.ScoringStrategyName)</td>

                            <td>
                                @if (!string.IsNullOrEmpty(item.ScoringStrategyDescription) && item.ScoringStrategyDescription.Length > 50) {
                                    <span title="@item.ScoringStrategyDescription">@item.ScoringStrategyDescription.Substring(0, 50)...</span>
                                }
                                else {
                                    @(string.IsNullOrEmpty(item.ScoringStrategyDescription) ? "-" : item.ScoringStrategyDescription)
                                }
                            </td>

                            <td>
                                @{
                                    string styleStrategy;
                                    string iconClass;

                                    switch (item.ScoringStrategyCode) {
                                        case "FIXED":
                                            styleStrategy = "background-color: #f1f5f9; color: #475569; border: 1px solid #cbd5e1;";
                                            iconClass = "bi-pin-angle-fill";
                                            break;
                                        case "PROGRESSIVE":
                                            styleStrategy = "background-color: #ccfbf1; color: #0f766e; border: 1px solid #99f6e4;";
                                            iconClass = "bi-graph-up-arrow";
                                            break;
                                        case "TIME_BASED":
                                            styleStrategy = "background-color: #e0f2fe; color: #0369a1; border: 1px solid #bae6fd;";
                                            iconClass = "bi-stopwatch";
                                            break;
                                        case "COMPLETION":
                                            styleStrategy = "background-color: #dcfce7; color: #15803d; border: 1px solid #bbf7d0;";
                                            iconClass = "bi-check-circle";
                                            break;
                                        case "BINARY":
                                            styleStrategy = "background-color: #e0e7ff; color: #4338ca; border: 1px solid #c7d2fe;";
                                            iconClass = "bi-toggle-on";
                                            break;
                                        default:
                                            styleStrategy = "background-color: #f8f9fa; color: #212529; border: 1px solid #dee2e6;";
                                            iconClass = "bi-tag";
                                            break;
                                    }
                                }
                                <span class="badge rounded-pill d-inline-flex align-items-center justify-content-center"
                                      style="@styleStrategy font-weight: 500; width: 140px; padding: 0.5em 0;">
                                    <i class="bi @iconClass me-2"></i> @item.ScoringStrategyCode
                                </span>
                            </td>

                            <td class="text-end text-nowrap">
                                <a asp-action="Edit" asp-route-id="@item.ScoringStrategyId" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ScoringStrategyId" class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ScoringStrategyId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <nav aria-label="Scoring Strategies page">
                <ul class="pagination">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="1"
                           asp-route-searchName="@ViewBag.SearchName"
                           asp-route-searchCode="@ViewBag.SearchCode">First</a>
                    </li>

                    @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++) {
                        <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@p"
                               asp-route-searchName="@ViewBag.SearchName"
                               asp-route-searchCode="@ViewBag.SearchCode">@p</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@Model.TotalPages"
                           asp-route-searchName="@ViewBag.SearchName"
                           asp-route-searchCode="@ViewBag.SearchCode">Last</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
}