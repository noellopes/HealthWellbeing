@model HealthWellbeing.Models.ComponenteReceita

@{
    ViewData["Title"] = "Details";
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-@(TempData["AlertType"] ?? "info") alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Detalhes do Componente</h1>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>

<hr />

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title mb-3">Informações</h5>

        <dl class="row">
            <dt class="col-sm-4">Alimento</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Alimento.Name)</dd>

            <dt class="col-sm-4">Receita</dt>
            <dd class="col-sm-8">@(Model.Receita?.Nome ?? "-")</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UnidadeMedida)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.UnidadeMedida)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantidade)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantidade)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IsOpcional)</dt>
            <dd class="col-sm-8">@(Model.IsOpcional ? "Sim" : "Não")</dd>
        </dl>

        <div class="d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model?.ComponenteReceitaId" class="btn btn-warning me-2">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model?.ComponenteReceitaId" class="btn btn-danger me-2">Apagar</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
        </div>
    </div>
</div>
