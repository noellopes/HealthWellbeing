@model IEnumerable<HealthWellbeing.Models.ComponenteReceita>

@{
    ViewData["Title"] = "Index";
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var totalCount = (int)(ViewBag.TotalCount ?? 0);
    var startItem = totalCount == 0 ? 0 : ((currentPage - 1) * pageSize) + 1;
    var endItem = startItem == 0 ? 0 : startItem + Model.Count() - 1;

    var searchAlimento = (string)ViewBag.SearchAlimentoName ?? string.Empty;
    var searchOpcional = (string)ViewBag.SearchOpcional ?? string.Empty;
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-@(TempData["AlertType"] ?? "info") alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Componentes da Receita</h1>
    <div class="d-flex">
        <a class="btn btn-outline-secondary me-2" data-bs-toggle="collapse" href="#searchPanel" role="button"
            aria-expanded="false" aria-controls="searchPanel">
            Pesquisar
        </a>
        <a class="btn btn-primary" asp-action="Create">Novo</a>
    </div>
</div>

<div class="collapse mt-2 mb-3" id="searchPanel">
    <div class="card card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label for="alimentoName" class="form-label">Alimento</label>
                <input type="search" id="alimentoName" name="alimentoName" class="form-control"
                    value="@(searchAlimento)" placeholder="Nome do alimento" />
            </div>

            <div class="col-md-3">
                <label for="opcional" class="form-label">É opcional?</label>
                <select id="opcional" name="opcional" class="form-select">
                    @* Substitui expressões inline por blocos @if para evitar RZ1031 *@
                    @if (string.IsNullOrEmpty(searchOpcional))
                    {
                        <option value="" selected>Todos</option>
                    }
                    else
                    {
                        <option value="">Todos</option>
                    }

                    @if (searchOpcional == "true")
                    {
                        <option value="true" selected>Sim</option>
                    }
                    else
                    {
                        <option value="true">Sim</option>
                    }

                    @if (searchOpcional == "false")
                    {
                        <option value="false" selected>Não</option>
                    }
                    else
                    {
                        <option value="false">Não</option>
                    }
                </select>
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Pesquisar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>

<div class="mb-2 text-muted">
    <small>Mostrando <strong>@startItem</strong> a <strong>@endItem</strong> de <strong>@totalCount</strong>
        itens</small>
</div>

<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Alimento</th>
            <th>Receita</th>
            <th>@Html.DisplayNameFor(model => model.UnidadeMedida)</th>
            <th>@Html.DisplayNameFor(model => model.Quantidade)</th>
            <th>@Html.DisplayNameFor(model => model.IsOpcional)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>@(item.Alimento?.Name ?? "-")</td>
                <td>@(item.Receita?.Nome ?? "-")</td>
                <td>@Html.DisplayFor(modelItem => item.UnidadeMedida)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
                <td>@(item.IsOpcional ? "Sim" : "Não")</td>
            <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.ComponenteReceitaId"
                            class="btn btn-sm btn-secondary ms-1">Ver</a>
                        <a asp-action="Edit" asp-route-id="@item.ComponenteReceitaId"
                            class="btn btn-sm btn-warning ms-1">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.ComponenteReceitaId"
                            class="btn btn-sm btn-danger ms-1">Apagar</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)"
                    asp-route-alimentoName="@(searchAlimento)" asp-route-opcional="@(searchOpcional)">« Anterior</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")" aria-current="@(i == currentPage ? "page" : null)">
                    <a class="page-link" asp-action="Index" asp-route-page="@(i)" asp-route-alimentoName="@(searchAlimento)"
                        asp-route-opcional="@(searchOpcional)">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)"
                    asp-route-alimentoName="@(searchAlimento)" asp-route-opcional="@(searchOpcional)">Próximo »</a>
            </li>
        </ul>
    </nav>
}