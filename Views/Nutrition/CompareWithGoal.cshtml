@model HealthWellbeing.Models.CompareWithGoalViewModel

@{
    ViewData["Title"] = "Comparação com Meta";
}

<div class="container mt-4">
    <h2>Comparação: Necessidades vs Meta - @Model.Client.Name</h2>
    <p class="text-muted">@Model.Meta.MetaDescription</p>

    <!-- Resumo Geral -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Calorias</h6>
                    <h3 class="@GetComplianceClass(Model.CaloriesCompliance)">
                        @Model.CaloriesCompliance%
                    </h3>
                    <small>Meta: @Model.Meta.DailyCalories kcal</small><br>
                    <small>Calculado: @Model.CalculatedNeeds.DailyCalories kcal</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Proteínas</h6>
                    <h3 class="@GetComplianceClass(Model.ProteinCompliance)">
                        @Model.ProteinCompliance%
                    </h3>
                    <small>Meta: @Model.Meta.DailyProtein g</small><br>
                    <small>Calculado: @Model.CalculatedNeeds.ProteinGrams g</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Carboidratos</h6>
                    <h3 class="@GetComplianceClass(Model.CarbsCompliance)">
                        @Model.CarbsCompliance%
                    </h3>
                    <small>Meta: @Model.Meta.DailyHydrates g</small><br>
                    <small>Calculado: @Model.CalculatedNeeds.CarbohydratesGrams g</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Gorduras</h6>
                    <h3 class="@GetComplianceClass(Model.FatsCompliance)">
                        @Model.FatsCompliance%
                    </h3>
                    <small>Meta: @Model.Meta.DailyFat g</small><br>
                    <small>Calculado: @Model.CalculatedNeeds.FatsGrams g</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Diferenças -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Diferenças (Meta - Calculado)</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <h6>Calorias</h6>
                            <h4 class="@GetDifferenceClass(Model.CaloriesDifference)">
                                @Model.CaloriesDifference.ToString("+#;-#;0") kcal
                            </h4>
                        </div>
                        <div class="col-md-3">
                            <h6>Proteínas</h6>
                            <h4 class="@GetDifferenceClass(Model.ProteinDifference)">
                                @Model.ProteinDifference.ToString("+#;-#;0") g
                            </h4>
                        </div>
                        <div class="col-md-3">
                            <h6>Carboidratos</h6>
                            <h4 class="@GetDifferenceClass(Model.CarbsDifference)">
                                @Model.CarbsDifference.ToString("+#;-#;0") g
                            </h4>
                        </div>
                        <div class="col-md-3">
                            <h6>Gorduras</h6>
                            <h4 class="@GetDifferenceClass(Model.FatsDifference)">
                                @Model.FatsDifference.ToString("+#;-#;0") g
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráfico Comparativo -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Comparação Visual</h5>
                </div>
                <div class="card-body">
                    <canvas id="comparisonChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Botões -->
    <div class="row mt-4 mb-5">
        <div class="col-md-12 text-center">
            <a asp-action="ListAll" class="btn btn-secondary">Voltar à Lista</a>
            <a asp-action="Calculate" asp-route-id="@Model.Client.ClientId" class="btn btn-primary">Ver Cálculo Detalhado</a>
        </div>
    </div>
</div>

@functions {
    string GetComplianceClass(decimal compliance)
    {
        if (compliance >= 90 && compliance <= 110) return "text-success";
        if (compliance >= 80 && compliance <= 120) return "text-warning";
        return "text-danger";
    }

    string GetDifferenceClass(decimal difference)
    {
        if (Math.Abs(difference) <= 50) return "text-success";
        if (Math.Abs(difference) <= 100) return "text-warning";
        return "text-danger";
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('comparisonChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Calorias (kcal)', 'Proteínas (g)', 'Carboidratos (g)', 'Gorduras (g)'],
                datasets: [
                    {
                        label: 'Meta',
                        data: [@Model.Meta.DailyCalories, @Model.Meta.DailyProtein,
                               @Model.Meta.DailyHydrates, @Model.Meta.DailyFat],
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 2
                    },
                    {
                        label: 'Calculado',
                        data: [@Model.CalculatedNeeds.DailyCalories, @Model.CalculatedNeeds.ProteinGrams,
                               @Model.CalculatedNeeds.CarbohydratesGrams, @Model.CalculatedNeeds.FatsGrams],
                        backgroundColor: 'rgba(255, 99, 132, 0.5)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 2
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                },
                plugins: {
                    legend: { position: 'top' },
                    title: {
                        display: true,
                        text: 'Meta vs Necessidades Calculadas'
                    }
                }
            }
        });
    </script>
}