@model HealthWellbeing.Models.Stock

@{
    ViewData["Title"] = "Detalhes do Stock";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-box-seam"></i> Detalhes do Stock
    </h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Consumível</dt>
                <dd class="col-sm-9">@Model.Consumivel?.Nome ?? "Desconhecido"</dd>

                <dt class="col-sm-3">Zona</dt>
                <dd class="col-sm-9">@Model.Zona?.Nome ?? "Desconhecido"</dd>

                <dt class="col-sm-3">Quantidade Atual</dt>
                <dd class="col-sm-9">
                    @Model.QuantidadeAtual
                    @if (Model.QuantidadeAtual < Model.QuantidadeMinima)
                    {
                        <span class="badge bg-danger ms-2">Baixo</span>
                    }
                </dd>

                <dt class="col-sm-3">Quantidade Mínima</dt>
                <dd class="col-sm-9">@Model.QuantidadeMinima</dd>

                <dt class="col-sm-3">Última Atualização</dt>
                <dd class="col-sm-9">@Model.DataUltimaAtualizacao.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.StockId" class="btn btn-warning text-white px-3">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary px-3">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>


