@model HealthWellbeing.Models.Stock

@{
    ViewData["Title"] = "Eliminar Stock";
}

<div class="container mt-4">

    <h2 class="fw-bold text-danger mb-4">
        <i class="bi bi-trash"></i> Eliminar Stock
    </h2>

    <div class="alert alert-warning">
        <strong>Tem a certeza que deseja eliminar este registo?</strong>
        Esta ação é irreversível.
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">

            <dl class="row">

                <dt class="col-sm-3 fw-bold">Consumível</dt>
                <dd class="col-sm-9">
                    @Model.Consumivel?.Nome
                </dd>

                <dt class="col-sm-3 fw-bold">Zona</dt>
                <dd class="col-sm-9">
                    @Model.Zona?.Nome
                </dd>

                <dt class="col-sm-3 fw-bold">Quantidade Atual</dt>
                <dd class="col-sm-9">
                    @Model.QuantidadeAtual
                </dd>

                <dt class="col-sm-3 fw-bold">Quantidade Mínima</dt>
                <dd class="col-sm-9">
                    @Model.QuantidadeMinima
                </dd>

                <dt class="col-sm-3 fw-bold">Última Atualização</dt>
                <dd class="col-sm-9">
                    @Model.DataUltimaAtualizacao.ToString("dd/MM/yyyy HH:mm")
                </dd>

            </dl>

        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StockId" />

        <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-trash-fill"></i> Eliminar
        </button>

        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </form>

</div>
