@model HealthWellbeing.Models.Stock

@{
    ViewData["Title"] = "Editar Stock";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-box-seam"></i> Editar Stock
    </h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="StockId" />

        <!-- CAMPOS IMPORTANTES QUE ESTAVAM A FALTAR -->
        <input type="hidden" asp-for="ConsumivelID" />
        <input type="hidden" asp-for="ZonaID" />

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <dl class="row mb-0">

                    <dt class="col-sm-3">Consumível</dt>
                    <dd class="col-sm-9">
                        <input value="@Model.Consumivel?.Nome" class="form-control" disabled />
                    </dd>

                    <dt class="col-sm-3">Zona</dt>
                    <dd class="col-sm-9">
                        <input value="@Model.Zona?.Nome" class="form-control" disabled />
                    </dd>

                    <dt class="col-sm-3">Quantidade Atual</dt>
                    <dd class="col-sm-9">
                        <input asp-for="QuantidadeAtual" class="form-control" />
                        @if (Model.QuantidadeAtual < Model.QuantidadeMinima)
                        {
                            <span class="badge bg-danger ms-2">Baixo</span>
                        }
                        <span asp-validation-for="QuantidadeAtual" class="text-danger"></span>
                    </dd>

                    <dt class="col-sm-3">Quantidade Mínima</dt>
                    <dd class="col-sm-9">
                        <input asp-for="QuantidadeMinima" class="form-control" />
                        <span asp-validation-for="QuantidadeMinima" class="text-danger"></span>
                    </dd>

                    <dt class="col-sm-3">Última Atualização</dt>
                    <dd class="col-sm-9">
                        <input asp-for="DataUltimaAtualizacao" class="form-control" type="date" />
                    </dd>

                </dl>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-warning text-white px-3">
                <i class="bi bi-pencil-square"></i> Salvar
            </button>
            <a asp-action="Index" class="btn btn-secondary px-3">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
