@model IEnumerable<HealthWellbeing.Models.Stock>

@{
    ViewData["Title"] = "Gestão de Stock";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-box-seam"></i> Gestão de Stock
        </h2>
    </div>

    <table class="table table-striped table-bordered align-middle shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>Consumível</th>
                <th>Zona</th>
                <th>Quantidade Atual</th>
                <th>Quantidade Mínima</th>
                <th>Quantidade Máxima</th>
                <th>Última Atualização</th>
                <th style="width:280px;">Ações</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    var stockBaixo = item.QuantidadeAtual < item.QuantidadeMinima;

                    <tr class="text-center @(stockBaixo ? "table-danger" : "")">

                        <td>@item.Consumivel?.Nome</td>

                        <td>@item.Zona?.Nome</td>

                        <td>
                            @item.QuantidadeAtual
                            @if (stockBaixo)
                            {
                                <span class="badge bg-danger ms-1">Baixo</span>
                            }
                        </td>

                        <td>@item.QuantidadeMinima</td>

                        <td>@item.QuantidadeMaxima</td>

                        <td>@item.DataUltimaAtualizacao.ToString("dd/MM/yyyy HH:mm")</td>

                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Details" asp-route-id="@item.StockId"
                                   class="btn btn-info text-white px-3" title="Ver detalhes">
                                    <i class="bi bi-eye"></i> Ver
                                </a>

                                <a asp-action="Edit" asp-route-id="@item.StockId"
                                   class="btn btn-warning text-white px-3" title="Editar stock">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.StockId"
                                   class="btn btn-danger text-white px-3" title="Eliminar stock">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">
                        Nenhum registo de stock encontrado.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
