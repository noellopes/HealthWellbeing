@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Stock>

@{
    ViewData["Title"] = "Gestão de Stock";
}

<div class="container mt-4">

    <!-- TÍTULO + AÇÕES -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            📦 Gestão de Stock
        </h2>

        <div class="d-flex gap-2">
            <a asp-controller="Compra" asp-action="Index" class="btn btn-success px-4">
                🛒 Fazer Compra
            </a>

            <a asp-controller="HistoricoCompras" asp-action="Index" class="btn btn-outline-primary px-4">
                📑 Histórico de Compras
            </a>
        </div>
    </div>

    <!-- FILTROS -->
    <form method="get"
          asp-action="Index"
          class="card shadow-sm mb-4"
          id="filtroStockForm">

        <div class="card-body">
            <div class="row g-3 align-items-center">

                <!-- 🔍Pesquisa por consumível -->
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text text-muted">🔍</span>
                        <input type="text"
                               name="searchNome"
                               value="@ViewBag.SearchNome"
                               class="form-control"
                               placeholder="Procurar por consumível..." />
                    </div>
                </div>

                <div class="col-md-2"></div>

                <!-- ⚠️ Stock crítico -->
                <div class="col-md-5 d-flex justify-content-end align-items-center gap-3">

                    <div class="form-check d-flex align-items-center gap-1">
                        <input class="form-check-input"
                               type="checkbox"
                               name="stockCritico"
                               value="true"
                               id="chkStockCritico"
                               @(ViewBag.StockCritico == true ? "checked" : "") />
                        <label class="form-check-label text-muted" for="chkStockCritico">
                            ⚠️ Só stock crítico
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary px-4">
                        Filtrar
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        Limpar
                    </a>

                </div>

            </div>
        </div>
    </form>

    <!-- TABELA -->
    <div class="table-responsive">
        <table class="table table-bordered align-middle shadow-sm">
            <thead class="text-center fw-semibold" style="background-color:#d7e9ff;">
                <tr>
                    <th>Consumível</th>
                    <th>Zona</th>
                    <th style="width:220px;">Quantidade Atual</th>
                    <th>Quantidade mínima</th>
                    <th>Quantidade máxima</th>
                    <th>Última atualização</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.Items == null || !Model.Items.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            Nenhum registo de stock encontrado.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.Items)
                    {
                        var min = item.Consumivel.QuantidadeMinima;
                        var max = item.Consumivel.QuantidadeMaxima;
                        var atual = item.QuantidadeAtual;

                        var percentagem = max > 0
                        ? (int)((double)atual / max * 100)
                        : 0;

                        string barraClasse =
                        atual <= min ? "bg-danger" :
                        atual <= min + 40 ? "bg-warning" :
                        "bg-success";

                        <tr>
                            <td>
                                <span class="text-muted me-1">📦</span>
                                @item.Consumivel.Nome
                            </td>

                            <td class="text-center">
                                <a asp-controller="ZonaArmazenamento"
                                   asp-action="Index"
                                   asp-route-searchConsumivel="@item.ConsumivelID"
                                   class="btn btn-sm btn-outline-primary">
                                    Ver zonas
                                </a>
                            </td>

                            <td class="text-center">
                                <div class="fw-bold mb-1">@atual</div>
                                <div class="progress" style="height:6px;">
                                    <div class="progress-bar @barraClasse"
                                         style="width:@percentagem%">
                                    </div>
                                </div>
                            </td>

                            <td class="text-center">@min</td>
                            <td class="text-center">@max</td>

                            <td class="text-center text-muted">
                                @item.DataUltimaAtualizacao.ToString("dd/MM/yyyy HH:mm")
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- PAGINAÇÃO -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route-page="@(Model.CurrentPage - 1)">
                        «
                    </a>
                </li>
            }

            @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-route-page="@i">
                        @i
                    </a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route-page="@(Model.CurrentPage + 1)">
                        »
                    </a>
                </li>
            }

        </ul>
    </nav>

</div>

<!-- 🔑 AUTO-FILTRO DA CHECKBOX -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const chk = document.getElementById("chkStockCritico");
        const form = document.getElementById("filtroStockForm");

        if (chk && form) {
            chk.addEventListener("change", function () {
                form.submit();
            });
        }
    });
</script>
