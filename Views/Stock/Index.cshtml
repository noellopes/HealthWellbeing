@model IEnumerable<HealthWellbeing.Models.Stock>

@{
    ViewData["Title"] = "Gestão de Stock";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            🏭 Gestão de Stock
        </h2>

        <a asp-action="Create" class="btn btn-success px-4">
            ➕ Adicionar Stock
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped shadow-sm">
            <thead style="background-color: #d7e9ff;" class="fw-bold text-center">
                <tr>
                    <th>Consumível</th>
                    <th>Zona</th>
                    <th>Quantidade Atual</th>
                    <th>Quantidade Mínima</th>
                    <th>Quantidade Máxima</th>
                    <th>Última Atualização</th>
                    <th style="width:170px;">Ações</th>
                </tr>
            </thead>

            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            Nenhum registo de stock encontrado.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.Consumivel?.Nome</td>
                            <td>@item.Zona?.Nome</td>
                            <td>@item.QuantidadeAtual</td>
                            <td>@item.QuantidadeMinima</td>
                            <td>@item.QuantidadeMaxima</td>
                            <td>@item.DataUltimaAtualizacao.ToString("dd/MM/yyyy HH:mm")</td>

                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@item.StockId" class="btn btn-info btn-sm text-white px-3">
                                        Ver
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.StockId" class="btn btn-warning btn-sm px-3">
                                        Editar
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.StockId" class="btn btn-danger btn-sm px-3">
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>
