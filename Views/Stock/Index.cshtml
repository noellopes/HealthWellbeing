@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Stock>

@{
    ViewData["Title"] = "Gestão de Stock";
}
@{
    var totalCriticos = Model.Items
        .Count(s => s.QuantidadeAtual <= s.Consumivel.QuantidadeMinima + 10);
}

<div class="d-flex align-items-baseline mb-3">


    <div class="d-flex align-items-baseline mb-3">
        @if (totalCriticos > 0)
        {
            @if (ViewBag.StockCritico == true)
            {
                <!-- ESTÁS NO STOCK CRÍTICO → voltar ao normal -->
                <a asp-action="Index"
                   class="text-decoration-none d-inline-flex align-items-baseline gap-1"
                   style="color:#000000; font-size:1rem; margin-left:15px;">
                    <span style="font-size:14px; line-height:1;">▲</span>
                    <span class="fw-semibold">
                        Voltar a Gestao de Stock
                    </span>
                </a>
            }
            else
            {
                <!-- ESTÁS NO STOCK NORMAL → ir para crítico -->
                <a asp-action="Index"
                   asp-route-stockCritico="true"
                   class="text-decoration-none d-inline-flex align-items-baseline gap-1"
                   style="color:#d17b00; font-size:1rem; margin-left:15px;">
                    <span style="font-size:14px; line-height:1;">▲</span>
                    <span class="fw-semibold">
                        Atenção: @totalCriticos consumíveis em stock crítico, clique para ver
                    </span>

                </a>
            }


        }
    </div>

</div>


<div class="container mt-4">

    <!-- =============================== -->
    <!-- TOPO: TÍTULO + BOTÕES -->
    <!-- =============================== -->
    <div class="d-flex justify-content-between align-items-center mb-4">

        <h2 class="fw-bold text-primary mb-0">
            🏭 Gestão de Stock
        </h2>

        <div class="d-flex gap-2">
            <a asp-controller="Compra"
               asp-action="Index"
               class="btn btn-success px-4">
                📥 Fazer Compra
            </a>

            <a asp-controller="HistoricoCompras" asp-action="Index"
               class="btn btn-success px-4">
                📑 Histórico de Compras
            </a>


        </div>

    </div>

    <!-- =============================== -->
    <!-- MENSAGENS DE ESTADO -->
    <!-- =============================== -->
    @if (ViewBag.StockCritico == true)
    {
        <div class="alert alert-warning shadow-sm mb-3">
            ⚠️ A mostrar consumíveis em que a quantidade atual está próxima da quantidade mínima 

        </div>
    }

    @if (!string.IsNullOrWhiteSpace(ViewBag.SearchNome))
    {
        <div class="alert alert-info shadow-sm mb-2">
            🔍 Pesquisa por consumível: <strong>@ViewBag.SearchNome</strong>
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(ViewBag.SearchZona))
    {
        <div class="alert alert-info shadow-sm mb-3">
            📍 Pesquisa por zona: <strong>@ViewBag.SearchZona</strong>
        </div>
    }

    <!-- =============================== -->
    <!-- FILTROS -->
    <!-- =============================== -->
    <form method="get" asp-action="Index" class="mb-4">
        <div class="row g-3">

            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text">🔍</span>
                    <input type="text"
                           name="searchNome"
                           value="@ViewBag.SearchNome"
                           class="form-control"
                           placeholder="Procurar por consumível..." />
                </div>
            </div>

            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text">📍</span>
                    <input type="text"
                           name="searchZona"
                           value="@ViewBag.SearchZona"
                           class="form-control"
                           placeholder="Procurar por zona..." />
                </div>
            </div>

            <div class="col-md-2 d-flex align-items-center">
                <input class="form-check-input me-2"
                       type="checkbox"
                       name="stockCritico"
                       value="true"
                       @(ViewBag.StockCritico == true ? "checked" : "")
                       onchange="this.form.submit()" />
                <label class="form-check-label">⚠️ Só stock crítico</label>
            </div>

            <div class="col-md-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-100">
                    Pesquisar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                    Limpar
                </a>
            </div>

        </div>
    </form>

    <!-- =============================== -->
    <!-- TABELA DE STOCK -->
    <!-- =============================== -->
    <div class="table-responsive">

       

        <table class="table table-bordered table-striped shadow-sm">
            <thead class="text-center fw-bold" style="background-color:#d7e9ff;">
                <tr>
                    <th>Consumível</th>
                    <th>Zona</th>
                    <th>Quantidade Atual</th>
                    <th>Quantidade Mínima</th>
                    <th>Quantidade Máxima</th>
                    <th>Última Atualização</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.Items == null || !Model.Items.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <strong>Nenhum registo de stock encontrado.</strong>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.Items)
                    {
                        var min = item.UsaValoresDoConsumivel
                        ? item.Consumivel?.QuantidadeMinima ?? 0
                        : item.QuantidadeMinima;

                        var max = item.UsaValoresDoConsumivel
                        ? item.Consumivel?.QuantidadeMaxima ?? 0
                        : item.QuantidadeMaxima;

                        string classe = "";
                        string icon = "";

                        var atual = item.Consumivel?.QuantidadeAtual ?? 0;

                        if (atual <= min)
                        {
                            classe = "text-danger";
                            icon = "⚠️";
                        }
                        else if (atual <= min + 10)
                        {
                            classe = "text-warning";
                            icon = "⚠️";
                        }


                        <tr class="text-center">
                            <td>@item.Consumivel?.Nome</td>
                            <td>@item.Zona?.Nome</td>

                            <td class="fw-bold @classe">
                                @item.Consumivel?.QuantidadeAtual @icon
                            </td>


                            <td>@min</td>
                            <td>@max</td>

                            <td>
                                @item.DataUltimaAtualizacao.ToString("dd/MM/yyyy HH:mm")
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>

    <!-- =============================== -->
    <!-- PAGINAÇÃO -->
    <!-- =============================== -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)">«</a>
                </li>
            }

            @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-route-page="@i">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)">»</a>
                </li>
            }

        </ul>
    </nav>

</div>
