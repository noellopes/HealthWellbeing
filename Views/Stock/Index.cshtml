@model IEnumerable<HealthWellbeing.Models.Stock>

@{
    ViewData["Title"] = "Gestão de Stock";
}

<div class="container mt-4">

    <!-- TÍTULO + BOTÕES -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            🏭 Gestão de Stock
        </h2>

        <div class="d-flex gap-2">
            <a asp-controller="StockMovimento" asp-action="CreateEntrada" class="btn btn-success px-4">
                📥 Fazer Compra
            </a>

            <a asp-action="Create" class="btn btn-success px-4">
                ➕ Adicionar Stock
            </a>
        </div>
    </div>


    <!-- BARRA DE PESQUISA -->
    <form method="get" asp-action="Index" class="mb-4">
        <div class="row g-3">

            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text">🔍</span>
                    <input type="text" name="searchNome" value="@ViewBag.SearchNome"
                           class="form-control" placeholder="Procurar por consumível..." />
                </div>
            </div>

            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text">📍</span>
                    <input type="text" name="searchZona" value="@ViewBag.SearchZona"
                           class="form-control" placeholder="Procurar por zona..." />
                </div>
            </div>

            <div class="col-md-2 d-flex align-items-center">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="stockCritico" value="true"
                           @(ViewBag.StockCritico == true ? "checked" : "") />

                    <label class="form-check-label"> ⚠️ Só stock crítico </label>
                </div>
            </div>

            <div class="col-md-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-100">Pesquisar</button>
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Limpar</a>
            </div>
        </div>
    </form>

    <!-- ======================= -->
    <!-- TABELA DE STOCK AJUSTADA -->
    <!-- ======================= -->

    <div class="table-responsive">
        <table class="table table-bordered table-striped shadow-sm">
            <thead style="background-color: #d7e9ff;" class="fw-bold text-center">
                <tr>
                    <th>Consumível</th>
                    <th>Zona</th>
                    <th>Quantidade Atual</th>
                    <th>Quantidade Mínima Total</th>
                    <th>Quantidade Máxima</th>
                    <th>Última Atualização</th>
                    <th style="width:170px;">Ações</th>
                </tr>
            </thead>

            <tbody>

                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            <h5 class="fw-bold">Nenhum registo de stock encontrado.</h5>
                            <p>Adicione consumíveis ou configure zonas para começar.</p>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <!-- SOMA DAS QUANTIDADES MÍNIMAS EM TODAS AS ZONAS -->
                        var minimaTotal = Model
                        .Where(s => s.ConsumivelID == item.ConsumivelID)
                        .Sum(s => s.QuantidadeMinima);

                        <tr class="text-center">

                            <td>@item.Consumivel?.Nome</td>
                            <td>@item.Zona?.Nome</td>

                            <!-- STOCK CRÍTICO BASEADO NA SOMA DAS ZONAS -->
                            <td class="fw-bold @(item.QuantidadeAtual < minimaTotal ? "text-danger" : "")">
                                @item.QuantidadeAtual
                                @(item.QuantidadeAtual < minimaTotal ? " ⚠️" : "")
                            </td>

                            <!-- QUANTIDADE MÍNIMA TOTAL -->
                            <td>@minimaTotal</td>

                            <td>@item.QuantidadeMaxima</td>
                            <td>@item.DataUltimaAtualizacao.ToString("dd/MM/yyyy HH:mm")</td>

                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@item.StockId"
                                       class="btn btn-info btn-sm text-white px-3">
                                        Ver
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.StockId"
                                       class="btn btn-warning btn-sm px-3">
                                        Editar
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.StockId"
                                       class="btn btn-danger btn-sm px-3">
                                        Eliminar
                                    </a>
                                </div>
                            </td>

                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>

</div>
