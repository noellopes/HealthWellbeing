@model HealthWellbeing.Models.Room

@{
    ViewData["Title"] = "Eliminar Sala";
}

<h1 class="mb-4 text-danger"><i class="bi bi-trash-fill"></i> Eliminar Sala</h1>

<div class="card border-danger shadow-sm">
    <div class="card-body">
        <h5 class="mb-3">Tem certeza que deseja eliminar esta sala?</h5>

        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold text-secondary">Id</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FormattedRoomId)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Tipo de Sala</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.RoomsType)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Especialidade</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Specialty)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Nome</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Capacidade</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Capacity)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Localização</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Horário de Funcionamento</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.OperatingHours)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Estado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

            <dt class="col-sm-3 fw-bold text-secondary">Observações</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>
        </dl>
    </div>
</div>

<div class="mt-4 d-flex gap-2">
    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill"></i> Confirmar Eliminação
        </button>
    </form>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle"></i> Cancelar
    </a>
</div>