@model IEnumerable<HealthWellbeingRoom.Models.RoomHistory>

@{
    ViewData["Title"] = "Histórico da Sala";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Início</th>
            <th>Fim</th>
            <th>Responsável</th>
            <th>Nota</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StarDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.EndDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Responsible</td>
                <td>@item.Note</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4 d-flex justify-content-end gap-2">
    <a asp-action="Details" asp-route-id="@ViewBag.RoomId" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Sala
    </a>

    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-list-ul me-1"></i> Voltar à Lista
    </a>
</div>
