@model HealthWellbeing.ViewModels.RPaginationInfo<HealthWellbeingRoom.Models.RoomHistory>

<h2 class="text-primary mb-4">
    <i class="bi bi-clock-history me-2"></i> @ViewData["Title"] "@ViewBag.RoomName"
</h2>

<!-- Botão de pesquisa -->
<div class="d-flex justify-content-end mb-3">
    <button class="btn btn-outline-primary"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#historySearch"
            aria-expanded="false"
            aria-controls="historySearch">
        <i class="bi bi-search me-1"></i> Pesquisa
    </button>
</div>


<!-- FORMULÁRIO DE PESQUISA (collapse) -->
<div class="collapse mb-3" id="historySearch">
    <div class="card card-body">
        <form asp-action="History" method="get" class="row g-2 align-items-end">
            <input type="hidden" name="id" value="@ViewBag.RoomId" />

            <!-- Primeira linha: Responsável e Id do Responsável -->
            <div class="col-md-6">
                <label for="searchHistoryId" class="form-label">Id do Histórico</label>
                <input id="searchHistoryId"
                       name="searchHistoryId"
                       value="@ViewBag.SearchHistoryId"
                       class="form-control"
                       placeholder="Pesquisar pelo Id do histórico"
                       type="number"
                       min="1" />
            </div>


            <div class="col-md-6">
                <label for="searchResponsibleId" class="form-label">Id do Responsável</label>
                <input id="searchResponsibleId"
                       name="searchResponsibleId"
                       value="@ViewBag.SearchResponsibleId"
                       class="form-control"
                       placeholder="Pesquisar pelo Id do responsável"
                       type="number"
                       min="1" />
            </div>

            <!-- Segunda linha: Intervalo de datas -->
            <div class="col-md-6">
                <label for="searchStartDate" class="form-label">Data Início</label>
                <input id="searchStartDate"
                       name="searchStartDate"
                       value="@ViewBag.SearchStartDate"
                       class="form-control"
                       type="date" />
            </div>

            <div class="col-md-6">
                <label for="searchEndDate" class="form-label">Data Fim</label>
                <input id="searchEndDate"
                       name="searchEndDate"
                       value="@ViewBag.SearchEndDate"
                       class="form-control"
                       type="date" />
            </div>

            <!-- Botões -->
            <div class="col-12 mt-2 d-flex gap-2">
                <input type="hidden" name="page" value="1" />
                <button type="submit" class="btn btn-primary flex-fill">
                    <i class="bi bi-search me-1"></i> Pesquisar
                </button>
                <a asp-action="History" asp-route-id="@ViewBag.RoomId" class="btn btn-secondary flex-fill">
                    <i class="bi bi-x-circle me-1"></i> Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Início</th>
                <th>Fim</th>
                <th>Responsável</th>
                <th>Id do Responsável</th>
                <th>Observação</th>
                <th class="text-center">Ações</th> <!-- nova coluna -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.RoomHistoryId.ToString("D3")</td>
                    <td>@item.StartDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.EndDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.Responsible</td>
                    <td>@item.ResponsibleId.ToString("D4")</td>
                    <td>@item.Note</td>
                    <td class="text-center align-middle">
                        <a asp-action="HistoryDetails"
                           asp-route-id="@item.RoomHistoryId"
                           asp-route-roomId="@ViewBag.RoomId"
                           class="btn btn-info px-4">
                            <i class="bi bi-info-circle me-1"></i> Detalhes
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Botões de navegação -->
<div class="mt-4 d-flex justify-content-end gap-2">
    <a asp-action="Details" asp-route-id="@ViewBag.RoomId" class="btn btn-primary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Sala
    </a>

    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-list-ul me-1"></i> Voltar à Lista
    </a>
</div>

<!-- PAGINAÇÃO AO FINAL -->
<nav aria-label="RoomHistory page" class="d-flex justify-content-between align-items-center mt-4">
    @if (Model.TotalItems > 0)
    {
        <span class="text-muted">
            Mostrando
            <strong>@((Model.CurrentPage - 1) * Model.ItemsPerPage + 1)</strong>
            -
            <strong>@(Math.Min(Model.CurrentPage * Model.ItemsPerPage, Model.TotalItems))</strong>
            de <strong>@Model.TotalItems</strong>
        </span>
    }
    else
    {
        <span class="text-muted">0 itens</span>
    }

    <ul class="pagination mb-0">
        <!-- Primeira página -->
        @if (Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link"><i class="bi bi-chevron-double-left"></i> Primeira</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="History"
                   asp-route-id="@ViewBag.RoomId"
                   asp-route-page="1">
                    <i class="bi bi-chevron-double-left"></i> Primeira
                </a>
            </li>
        }

        <!-- Números de página -->
        @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
        {
            if (p == Model.CurrentPage)
            {
                <li class="page-item active">
                    <a class="page-link" href="#">@p</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="History"
                       asp-route-id="@ViewBag.RoomId"
                       asp-route-page="@p">
                        @p
                    </a>
                </li>
            }
        }

        <!-- Última página -->
        @if (Model.CurrentPage == Model.TotalPages)
        {
            <li class="page-item disabled">
                <a class="page-link">Última <i class="bi bi-chevron-double-right"></i></a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="History"
                   asp-route-id="@ViewBag.RoomId"
                   asp-route-page="@Model.TotalPages">
                    Última <i class="bi bi-chevron-double-right"></i>
                </a>
            </li>
        }
    </ul>
</nav>