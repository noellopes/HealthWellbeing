@model HealthWellbeing.ViewModels.RPaginationInfo<HealthWellbeingRoom.Models.MedicalDevice>

@{
    ViewData["Title"] = "Dispositivos Médicos Associados";
    string? successMessage = Context.Request.Query["SuccessMessage"];
}

@if (successMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2 class="text-success mb-4">
    <i class="bi bi-heart-pulse me-2"></i> Dispositivos Médicos Associados à sala "@ViewData["RoomName"]"
</h2>

<!-- Botão de pesquisa -->
<div class="d-flex justify-content-end mb-3">
    <button class="btn btn-outline-primary"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#deviceSearch"
            aria-expanded="false"
            aria-controls="deviceSearch">
        <i class="bi bi-search me-1"></i> Pesquisa
    </button>
</div>

<!-- FORMULÁRIO DE PESQUISA -->
<div class="collapse mb-3" id="deviceSearch">
    <div class="card card-body">
        <form asp-action="MedicalDevices" method="get" class="row g-2 align-items-end">
            <input type="hidden" name="id" value="@ViewBag.RoomId" />

            <div class="col-md-6">
                <label for="searchName" class="form-label">Nome</label>
                <input id="searchName"
                       name="searchName"
                       value="@ViewBag.SearchName"
                       class="form-control"
                       placeholder="Pesquisar pelo nome do dispositivo"
                       type="text" />
            </div>

            <div class="col-md-6">
                <label for="searchType" class="form-label">Tipo de Dispositivo</label>
                <input id="searchType"
                       name="searchType"
                       value="@ViewBag.SearchType"
                       class="form-control"
                       placeholder="Pesquisar pelo tipo"
                       type="text" />
            </div>

            <div class="col-md-6">
                <label for="searchStatus" class="form-label">Estado</label>
                <input id="searchStatus"
                       name="searchStatus"
                       value="@ViewBag.SearchStatus"
                       class="form-control"
                       placeholder="Pesquisar pelo estado"
                       type="text" />
            </div>

            <div class="col-12 mt-2 d-flex gap-2">
                <input type="hidden" name="page" value="1" />
                <button type="submit" class="btn btn-primary flex-fill">
                    <i class="bi bi-search me-1"></i> Pesquisar
                </button>
                <a asp-action="Devices" asp-route-id="@ViewBag.RoomId" class="btn btn-secondary flex-fill">
                    <i class="bi bi-x-circle me-1"></i> Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<!-- TABELA -->
<div class="card shadow-sm" style="min-height: 60vh;">
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Tipo de Dispositivo</th>
                        <th>Estado</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center">
                                <span class="alert alert-info d-block mb-0" role="alert">
                                    <i class="bi bi-info-circle-fill me-2"></i>
                                    Nenhum dispositivo médico associado a esta sala.
                                </span>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var dispositivo in Model.Items)
                        {
                            <tr>
                                <td>@dispositivo.Name</td>
                                <td>@dispositivo.TypeMaterial?.Name</td>
                                <td>@dispositivo.CurrentStatus</td>
                                <td class="text-center align-middle">
                                    <a asp-controller="MedicalDevice"
                                       asp-action="Details"
                                       asp-route-id="@dispositivo.MedicalDeviceID"
                                       asp-route-roomId="@ViewBag.RoomId"
                                       asp-route-origem="dispositivosAssociados"
                                       class="btn btn-info px-4">
                                        <i class="bi bi-info-circle me-1"></i> Detalhes
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<!-- Botões fora da card -->
<div class="mt-4 d-flex justify-content-between">

    <!-- Botão Lista de Salas (Home) -->
    <a asp-controller="Rooms"
       asp-action="Index"
       class="btn btn-primary btn-sm">
        <i class="bi bi-house-door-fill me-1"></i> Lista de Salas
    </a>

    <div class="d-flex gap-2">

        <!-- Botão Voltar à Sala -->
        <a asp-action="Details"
           asp-route-id="@ViewBag.RoomId"
           class="btn btn-primary btn-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Sala
        </a>

        <!-- Botão Buscar Dispositivo (ícone atualizado) -->
        <a asp-controller="LocationMedDevice"
           asp-action="Index"
           class="btn btn-primary btn-sm">
            <i class="bi bi-search me-1"></i> Buscar Dispositivo
        </a>

    </div>

</div>

<!-- PAGINAÇÃO -->
<nav aria-label="MedicalDevice page" class="d-flex justify-content-between align-items-center mt-4">
    @if (Model.TotalItems > 0)
    {
        <span class="text-muted">
            Mostrando
            <strong>@((Model.CurrentPage - 1) * Model.ItemsPerPage + 1)</strong>
            -
            <strong>@(Math.Min(Model.CurrentPage * Model.ItemsPerPage, Model.TotalItems))</strong>
            de <strong>@Model.TotalItems</strong>
        </span>
    }
    else
    {
        <span class="text-muted">0 itens</span>
    }

    <ul class="pagination mb-0">
        @if (Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link"><i class="bi bi-chevron-double-left"></i> Primeira</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Devices"
                   asp-route-id="@ViewBag.RoomId"
                   asp-route-page="1">
                    <i class="bi bi-chevron-double-left"></i> Primeira
                </a>
            </li>
        }

        @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
        {
            if (p == Model.CurrentPage)
            {
                <li class="page-item active">
                    <a class="page-link" href="#">@p</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Devices"
                       asp-route-id="@ViewBag.RoomId"
                       asp-route-page="@p">
                        @p
                    </a>
                </li>
            }
        }

        @if (Model.CurrentPage == Model.TotalPages)
        {
            <li class="page-item disabled">
                <a class="page-link">Última <i class="bi bi-chevron-double-right"></i></a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Devices"
                   asp-route-id="@ViewBag.RoomId"
                   asp-route-page="@Model.TotalPages">
                    Última <i class="bi bi-chevron-double-right"></i>
                </a>
            </li>
        }
    </ul>
</nav>