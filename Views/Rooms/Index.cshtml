@using HealthWellbeing.Models
@using HealthWellbeing.ViewModels
@using System.Reflection
@using System.ComponentModel.DataAnnotations

@model RPaginationInfo<Room>

@{
    ViewData["Title"] = "Lista de Salas";

    // Função local para extrair o nome amigável do enum usando o atributo [Display(Name = "...")]
    string GetDisplayName(Enum value)
    {
        var member = value.GetType().GetMember(value.ToString()).FirstOrDefault();
        var attr = member?.GetCustomAttribute<DisplayAttribute>();
        return attr?.Name ?? value.ToString();
    }

    // Função local para definir a cor da bolinha com base no estado da sala
    string GetStatusColor(Room.RoomStatus status) => status switch
    {
        Room.RoomStatus.Disponivel => "bg-success",
        Room.RoomStatus.Criado => "bg-secondary",
        Room.RoomStatus.Indisponivel => "bg-danger",
        Room.RoomStatus.Limpeza => "bg-warning",
        Room.RoomStatus.Manutencao => "bg-info",
        Room.RoomStatus.ForaDeServico => "bg-dark",
        _ => "bg-light"
    };
}

<h1 class="mb-4 text-primary">
    <i class="bi bi-houses-fill"></i> Lista de Salas
</h1>

@* MENSAGENS DE SUCESSO *@
@if (TempData["successMessageEdit"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-pencil-fill me-2"></i>
        @TempData["successMessageEdit"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

@if (TempData["successMessageDelete"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-trash-fill me-2"></i>
        @TempData["successMessageDelete"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<!-- BOTÕES DE AÇÃO -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">Salas Registadas</h2>
    <div>
        <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#postSearch" aria-expanded="false" aria-controls="postSearch">
            <i class="bi bi-search me-1"></i> Pesquisar
        </a>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Criar Nova Sala
        </a>
    </div>
</div>

<!-- FORMULÁRIO DE PESQUISA -->
<div class="collapse mt-2 mb-2" id="postSearch">
    <div class="card card-body">
        <form asp-action="Index" method="get" class="row g-2 align-items-end">

            <!-- Primeira linha: Nome e Estado -->
            <div class="col-md-6">
                <label for="searchName" class="form-label">Nome</label>
                <input id="searchName" name="searchName" value="@ViewBag.SearchName" class="form-control" placeholder="Pesquisar pelo nome" type="search" />
            </div>

            <div class="col-md-6">
                <label for="searchStatus" class="form-label">Estado</label>
                @Html.DropDownList(
                    "searchStatus",
                    new SelectList(ViewBag.Status, "Value", "Text", ViewBag.SearchStatus),
                    "Pesquisar pelo estado",
                    new { @class = "form-select ", @id= "searchStatus" }
                )
            </div>

            <!-- Segunda linha: Especialidade e Localização -->
            <div class="col-md-6">
                <label for="searchSpecialty" class="form-label">Especialidade</label>
                <input id="searchSpecialty" name="searchSpecialty" value="@ViewBag.SearchSpecialty" class="form-control" placeholder="Pesquisar pela especialidade" type="search" />
            </div>

            <div class="col-md-6">
                <label for="searchLocation" class="form-label">Localização</label>
                <input id="searchLocation" name="searchLocation" value="@ViewBag.SearchLocation" class="form-control" placeholder="Pesquisar pela localização" type="search" />
            </div>

            <!-- Terceira linha: Horário de funcionamento alinhado à esquerda -->
            <div class="col-md-6">
                <label for="searchOperatingHours" class="form-label">Horário de funcionamento</label>
                <input id="searchOperatingHours" name="searchOperatingHours" value="@ViewBag.SearchOperatingHours" class="form-control" placeholder="Pesquisar pela hora de funcionamento" type="search" />
            </div>

            <!-- Botões alinhados à esquerda e com mesma largura -->
            <div class="col-12 mt-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-fill">
                    <i class="bi bi-search me-1"></i> Pesquisar
                </button>
                <a asp-action="Index" class="btn btn-secondary flex-fill">Limpar</a>
            </div>
        </form>

        @* Script para alterar dinamica que altera a cor do estado se selecionado para negrito *@
        <script>
            // Aguarda o carregamento completo do DOM
            document.addEventListener("DOMContentLoaded", function () {
                // Seleciona o elemento <select> pelo ID
                const statusSelect = document.getElementById("searchStatus");

                function updateStatusStyle() {
                    if (statusSelect.value === "") {
                        statusSelect.classList.add("text-muted");
                    } else {
                        statusSelect.classList.remove("text-muted");
                    }
                }
                // Atualiza ao carregar e ao mudar
                updateStatusStyle();
                statusSelect.addEventListener("change", updateStatusStyle);
            });
        </script>

    </div>
</div>

<!-- TABELA DE SALAS -->
<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Especialidade</th>
                <th>Nome</th>
                <th>Localização</th>
                <th>Horário F.</th>
                <th>Estado</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                var color = GetStatusColor(item.Status);
                var displayName = GetDisplayName(item.Status);

                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Specialty)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                    <td>@Html.DisplayFor(modelItem => item.OperatingHours)</td>
                    <td>
                        <!-- Bolinha colorida com tooltip + nome amigável -->
                        <span class="rounded-circle d-inline-block me-2 @color" style="width:10px; height:10px;" title="@displayName"></span>
                        @displayName
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square" aria-label="Editar sala"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.RoomId" asp-route-fromCreation="false" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-info-circle-fill" aria-label="Ver detalhes da sala"></i> Detalhes
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash-fill" aria-label="Eliminar sala"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* MENSAGEM QUANDO NÃO HÁ SALAS *@
    @if (!Model.Items.Any())
    {
        <div class="alert alert-warning d-flex align-items-center border-2 mt-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill" style="font-size: 2rem;"></i>
            <div class="ps-3">
                <h5 class="alert-heading">Nenhuma sala encontrada</h5>
                <p>Não foram encontradas salas com os critérios de pesquisa. Tente ajustar os filtros ou criar uma nova sala.</p>
            </div>
        </div>
    }

    <!-- PAGINAÇÃO -->

    <nav aria-label="Room page" class="d-flex justify-content-between align-items-center">
       @* CONDICAO PARA QUE CASO NAO TENHA ITEN MOSTRE MENSAGEM DO ELSE *@
        @if (Model.TotalItems > 0)
        {
            <span>
                Mostrando @((Model.CurrentPage - 1) * Model.ItemsPerPage + 1)
                -
                @(Math.Min(Model.CurrentPage * Model.ItemsPerPage, Model.TotalItems))
                de @Model.TotalItems
            </span>
        }
        else
        {
            <span>0 itens</span>
        }

        <ul class="pagination mb-0">
            @if (Model.CurrentPage == 1)
            {
                <li class="page-item disabled"><a class="page-link">Primeira</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="Index">Primeira</a></li>
            }

            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
            {
                if (p == Model.CurrentPage)
                {
                    <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@p">@p</a></li>
                }
            }

            @if (Model.CurrentPage == Model.TotalPages)
            {
                <li class="page-item disabled"><a class="page-link">Última</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages">Última</a></li>
            }
        </ul>
    </nav>
</div>