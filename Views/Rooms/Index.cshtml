@using HealthWellbeing.Models
@using HealthWellbeing.ViewModels
@using System.Reflection
@using System.ComponentModel.DataAnnotations

@model RPaginationInfo<Room>

@{
    ViewData["Title"] = "Lista de Salas";

    // Função local para definir a cor da bolinha com base no estado da sala
    string GetStatusColor(string statusName) => statusName.ToLower() switch
    {
        "disponível" => "bg-success",
        "criado" => "bg-secondary",
        "indisponível" => "bg-danger",
        "em limpeza" => "bg-warning",
        "em manutenção" => "bg-info",
        "fora de serviço" => "bg-dark",
        _ => "bg-light"
    };
}

<h1 class="mb-4 text-primary">
    <i class="bi bi-hospital"></i> Listas de Salas
</h1>

@* MENSAGENS DE SUCESSO *@
@if (TempData["successMessageEdit"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-pencil-fill me-2"></i>
        @TempData["successMessageEdit"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

@if (TempData["successMessageDelete"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-trash-fill me-2"></i>
        @TempData["successMessageDelete"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<!-- BOTÕES DE AÇÃO -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">Salas Registadas</h2>
    <div>
        <a class="btn btn-secondary me-2"
           data-bs-toggle="collapse"
           data-bs-target="#postSearch"
           aria-expanded="false"
           aria-controls="postSearch">
            <i class="bi bi-search me-1"></i> Pesquisar
        </a>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Criar Nova Sala
        </a>
    </div>
</div>

<!-- FORMULÁRIO DE PESQUISA -->
<div class="collapse mt-2 mb-2" id="postSearch">
    <div class="card card-body">
        <form asp-action="Index" method="get" class="row g-2 align-items-end">

            <!-- Primeira linha: Nome e Estado -->
            <div class="col-md-6">
                <label for="searchName" class="form-label">Nome</label>
                <input id="searchName"
                       name="searchName"
                       value="@ViewBag.SearchName"
                       class="form-control"
                       placeholder="Pesquisar pelo nome"
                       type="search" />
            </div>

            <div class="col-md-6">
                <label for="searchStatus" class="form-label">Estado</label>
                @Html.DropDownList(
                "searchStatus",
                                ViewBag.Status as SelectList,
                                "Pesquisar pelo estado",
                                new { @class = "form-select", @id = "searchStatus" }
                                )
            </div>

            <!-- Segunda linha: Especialidade e Localização -->
            <div class="col-md-6">
                <label for="searchSpecialty" class="form-label">Especialidade</label>
                @Html.DropDownList(
                                "searchSpecialty",
                                ViewBag.RoomSpecialty as SelectList,
                                "Pesquisar pela especialidade",
                                new { @class = "form-select", @id = "searchSpecialty" }
                                )
            </div>

            <div class="col-md-6">
                <label for="searchLocation" class="form-label">Localização</label>
                <input id="searchLocation"
                       name="searchLocation"
                       value="@ViewBag.SearchLocation"
                       class="form-control"
                       placeholder="Pesquisar pela localização"
                       type="search" />
            </div>

            <!-- Terceira linha: Tipo de Sala e Horário de Funcionamento -->
            <div class="row g-3 align-items-start mt-1">
                <!-- Tipo de Sala -->
                <div class="col-md-6">
                    <label for="searchRoomType" class="form-label">Tipo de Sala</label>
                    @Html.DropDownList(
                                        "searchRoomType",
                                        ViewBag.RoomTypes as SelectList,
                                        "Pesquisar tipo de sala",
                                        new { @class = "form-select", @id = "searchRoomType" }
                                        )
                </div>

                <!-- Horário de Funcionamento -->
                <div class="col-md-6">
                    <div class="border rounded p-3">
                        <h6 class="text-center mb-3">Horário de Funcionamento</h6>
                        <div class="row justify-content-center align-items-center g-2">
                            <!-- Abertura -->
                            <div class="col-auto d-flex align-items-center">
                                <label for="searchOpeningTime"
                                       class="form-label mb-0 me-2 fw-semibold">
                                    Abertura
                                </label>
                                <input id="searchOpeningTime"
                                       name="searchOpeningTime"
                                       value="@ViewBag.SearchOpeningTime"
                                       class="form-control form-control-sm text-center"
                                       type="time"
                                       style="width: 100px;" />
                            </div>

                            <!-- Encerramento -->
                            <div class="col-auto d-flex align-items-center">
                                <label for="searchClosingTime"
                                       class="form-label mb-0 me-2 fw-semibold">
                                    Encerramento    
                                </label>
                                <input id="searchClosingTime"
                                       name="searchClosingTime"
                                       value="@ViewBag.SearchClosingTime"
                                       class="form-control form-control-sm text-center"
                                       type="time"
                                       style="width: 100px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botões -->
            <div class="col-12 mt-2 d-flex gap-2">
                <!-- Força page=1 ao pesquisar -->
                <input type="hidden" name="page" value="1" />
                <button type="submit" class="btn btn-primary flex-fill">
                    <i class="bi bi-search me-1"></i> Pesquisar
                </button>
                <a asp-action="Index" class="btn btn-secondary flex-fill">
                    Limpar
                </a>
            </div>
        </form>

        @* Script para retirar o aspeto text-muted quando um estado for selecionado *@
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const statusSelect = document.getElementById("searchStatus");

                function updateStatusStyle() {
                    if (statusSelect.value === "") {
                        statusSelect.classList.add("text-muted");
                    } else {
                        statusSelect.classList.remove("text-muted");
                    }
                }

                updateStatusStyle();
                statusSelect.addEventListener("change", updateStatusStyle);
            });
        </script>
    </div>
</div>

<!-- TABELA DE SALAS -->
<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Especialidade(Opcional)</th>
                <th>Nome</th>
                <th>Localização</th>
                <th>Horário</th>
                <th>Estado</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                var color = GetStatusColor(item.RoomStatus?.Name ?? "");
                var displayName = item.RoomStatus?.Name;

                <tr>
                    <td>@item.RoomType?.Name</td>
                    <td>@(!string.IsNullOrWhiteSpace(item.Specialty?.Name) ? item.Specialty.Name : "--sem especialidade--")</td>
                    <td>@item.Name</td>
                    <td>@item.RoomLocation?.Name</td>
                    <td>
                        @item.OpeningTime.ToString(@"hh\:mm")
                        -
                        @item.ClosingTime.ToString(@"hh\:mm")
                    </td>
                    <td>
                        <span class="rounded-circle d-inline-block me-2 @color"
                              style="width:10px; height:10px;"
                              title="@displayName">
                        </span>
                        @displayName
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit"
                           asp-route-id="@item.RoomId"
                           class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square" aria-label="Editar sala"></i> Editar
                        </a>
                        <a asp-action="Details"
                           asp-route-id="@item.RoomId"
                           asp-route-fromCreation="false"
                           class="btn btn-sm btn-info me-1">
                            <i class="bi bi-info-circle-fill" aria-label="Ver detalhes da sala"></i> Detalhes
                        </a>
                        <a asp-action="Delete"
                           asp-route-id="@item.RoomId"
                           class="btn btn-sm btn-danger">
                            <i class="bi bi-trash-fill" aria-label="Eliminar sala"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning text-center">
            @ViewBag.ErrorMessage
        </div>
    }
</div>

<!-- PAGINAÇÃO AO FINAL -->
<nav aria-label="Room page" class="d-flex justify-content-between align-items-center mt-4">
    @if (Model.TotalItems > 0)
    {
        <span>
            Mostrando
            @((Model.CurrentPage - 1) * Model.ItemsPerPage + 1)
            -
            @(Math.Min(Model.CurrentPage * Model.ItemsPerPage, Model.TotalItems))
            de @Model.TotalItems
        </span>
    }
    else
    {
        <span>0 itens</span>
    }

    <ul class="pagination mb-0">
        <!-- Primeira página -->
        @if (Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link">Primeira</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="1"
                   asp-route-searchName="@ViewBag.SearchName"
                   asp-route-searchStatus="@ViewBag.SearchStatus"
                   asp-route-searchSpecialty="@ViewBag.SearchSpecialty"
                   asp-route-searchLocation="@ViewBag.SearchLocation"
                   asp-route-searchRoomType="@ViewBag.SearchRoomType"
                   asp-route-searchOpeningTime="@ViewBag.SearchOpeningTime"
                   asp-route-searchClosingTime="@ViewBag.SearchClosingTime">
                    Primeira
                </a>
            </li>
        }

        <!-- Números de página -->
        @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
        {
            if (p == Model.CurrentPage)
            {
                <li class="page-item active">
                    <a class="page-link" href="#">@p</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@p"
                       asp-route-searchName="@ViewBag.SearchName"
                       asp-route-searchStatus="@ViewBag.SearchStatus"
                       asp-route-searchSpecialty="@ViewBag.SearchSpecialty"
                       asp-route-searchLocation="@ViewBag.SearchLocation"
                       asp-route-searchRoomType="@ViewBag.SearchRoomType"
                       asp-route-searchOpeningTime="@ViewBag.SearchOpeningTime"
                       asp-route-searchClosingTime="@ViewBag.SearchClosingTime">
                        @p
                    </a>
                </li>
            }
        }

        <!-- Última página -->
        @if (Model.CurrentPage == Model.TotalPages)
        {
            <li class="page-item disabled">
                <a class="page-link">Última</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@Model.TotalPages"
                   asp-route-searchName="@ViewBag.SearchName"
                   asp-route-searchStatus="@ViewBag.SearchStatus"
                   asp-route-searchSpecialty="@ViewBag.SearchSpecialty"
                   asp-route-searchLocation="@ViewBag.SearchLocation"
                   asp-route-searchRoomType="@ViewBag.SearchRoomType"
                   asp-route-searchOpeningTime="@ViewBag.SearchOpeningTime"
                   asp-route-searchClosingTime="@ViewBag.SearchClosingTime">
                    Última
                </a>
            </li>
        }
    </ul>
</nav>