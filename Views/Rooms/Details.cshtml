@model HealthWellbeing.Models.Room
@using Microsoft.AspNetCore.Authorization

@{
    ViewData["Title"] = "Detalhes da Sala";
    bool fromCreation = Context.Request.Query["fromCreation"] == "true";
}

<!-- Título principal da página -->
<h1 class="mb-4 text-info">
    <i class="bi bi-info-circle-fill me-2"></i>
    @ViewData["Title"]
</h1>

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">
            <i class="bi bi-door-open me-2"></i>
            Informações da Sala "@Model.Name"
        </h4>
    </div>

    <div class="card-body row">
        <!-- Coluna com os detalhes -->
        <div class="col-md-8">
            <dl class="row mb-0 mt-4">
                @if (User.IsInRole("Administrator"))
                {
                    <dt class="col-sm-3 fw-bold text-muted">Id</dt>
                    <dd class="col-sm-9">@Model.FormattedRoomId</dd>
                }

                <dt class="col-sm-3 fw-bold text-muted">Tipo</dt>
                <dd class="col-sm-9">@Model.RoomType?.Name</dd>

                <dt class="col-sm-3 fw-bold text-muted">Especialidade (Opcional)</dt>
                <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Specialty?.Name) ? Model.Specialty.Name : "--sem especialidade--")</dd>

                <dt class="col-sm-3 fw-bold text-muted">Localização</dt>
                <dd class="col-sm-9">@Model.RoomLocation?.Name</dd>

                <dt class="col-sm-3 fw-bold text-muted">Horário de Funcionamento</dt>
                <dd class="col-sm-9">@Model.OpeningTime.ToString(@"hh\:mm") - @Model.ClosingTime.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-3 fw-bold text-muted">Estado</dt>
                <dd class="col-sm-9">@Model.RoomStatus?.Name</dd>

                <dt class="col-sm-3 fw-bold text-muted">Observações</dt>
                <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Notes) ? Model.Notes : "--sem observações--")</dd>
            </dl>
        </div>

        <!-- Coluna com os botões à direita -->
        <div class="col-md-4 d-flex flex-column align-items-start gap-2 mt-4">
            <a asp-action="History" asp-route-id="@Model.RoomId" class="btn btn-outline-primary w-100">
                <i class="bi bi-clock-history me-1"></i> Ver Histórico
            </a>

            <a asp-action="Equipments" asp-route-id="@Model.RoomId" class="btn btn-outline-secondary w-100">
                <i class="bi bi-hospital me-1"></i> Ver Equipamentos Associados
            </a>

            <a asp-action="MedicalDevices" asp-route-id="@Model.RoomId" class="btn btn-outline-success w-100">
                <i class="bi bi-heart-pulse me-1"></i> Ver Dispositivos Médicos Associados
            </a>
        </div>
    </div>

    <div class="card-footer d-flex justify-content-end gap-2">
        <a asp-action="Edit" asp-route-id="@Model.RoomId" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>

        <a asp-action="Delete" asp-route-id="@Model.RoomId" class="btn btn-danger me-2">
            <i class="bi bi-trash me-1"></i> Eliminar
        </a>

        @if (fromCreation)
        {
            <a asp-action="Index" class="btn btn-success">
                <i class="bi bi-arrow-right-circle me-1"></i> Ir à Lista
            </a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista
            </a>
        }
    </div>
</div>