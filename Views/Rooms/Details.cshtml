@model HealthWellbeing.Models.Room
@using Microsoft.AspNetCore.Authorization

@{
    ViewData["Title"] = "Detalhes da Sala";

    bool fromCreation = bool.TryParse(Context.Request.Query["fromCreation"], out var result) && result;

    bool isAdmin = User.IsInRole("Administrator");
    bool isLogTech = User.IsInRole("logisticsTechnician");
}

<h1 class="mb-4 text-info">
    <i class="bi bi-info-circle-fill me-2"></i>
    @ViewData["Title"]
</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">
            <i class="bi bi-door-open me-2"></i>
            Informações da Sala "@Model.Name"
        </h4>
    </div>

    <div class="card-body row">

        <div class="col-md-8">
            <dl class="row mb-0 mt-4">

                @if (User.IsInRole("Administrator"))
                {
                    <dt class="col-sm-3 fw-bold text-muted">Id</dt>
                    <dd class="col-sm-9">@Model.FormattedRoomId</dd>
                }

                <dt class="col-sm-3 fw-bold text-muted">Tipo</dt>
                <dd class="col-sm-9">@Model.RoomType?.Name</dd>

                <dt class="col-sm-3 fw-bold text-muted">Especialidade (Opcional)</dt>
                <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Specialty?.Name) ? Model.Specialty.Name : "--sem especialidade--")</dd>

                <dt class="col-sm-3 fw-bold text-muted">Localização</dt>
                <dd class="col-sm-9">@Model.RoomLocation?.Name</dd>

                <dt class="col-sm-3 fw-bold text-muted">H.Funcionamento</dt>
                <dd class="col-sm-9">@Model.OpeningTime.ToString(@"hh\:mm") - @Model.ClosingTime.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-3 fw-bold text-muted">Estado</dt>
                <dd class="col-sm-9">@Model.RoomStatus?.Name</dd>

                <dt class="col-sm-3 fw-bold text-muted">Observações</dt>
                <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Notes) ? Model.Notes : "--sem observações--")</dd>

            </dl>
        </div>

        @if (!fromCreation)
        {
            <div class="col-md-4 d-flex flex-column align-items-start gap-2 mt-4">

                <a asp-controller="RoomReservations" asp-action="History" asp-route-roomId="@Model.RoomId"
                   class="btn btn-outline-success w-100">
                    <i class="bi bi-clock-history me-1"></i> Ver histórico de utilização
                </a>

                <a asp-controller="RoomReservations" asp-action="RoomReservationList" asp-route-id="@Model.RoomId"
                   class="btn btn-outline-success w-100">
                    <i class="bi bi-calendar-check me-1"></i> Ver reservas
                </a>

                <a asp-action="Equipments" asp-route-id="@Model.RoomId"
                   class="btn btn-outline-success w-100">
                    <i class="bi bi-gear me-1"></i> Ver equipamentos associados
                </a>

                <a asp-action="MedicalDevices" asp-route-id="@Model.RoomId"
                   class="btn btn-outline-success w-100">
                    <i class="bi bi-heart-pulse me-1"></i> Ver Dispositivos médicos associados
                </a>

                <a asp-action="Consumables" asp-route-id="@Model.RoomId"
                   class="btn btn-outline-success w-100">
                    <i class="bi bi-droplet me-1"></i> Ver consumíveis associados
                </a>

            </div>
        }

        @if (fromCreation)
        {
            <div class="col-md-4 d-flex flex-column align-items-stretch mt-4">
                <div class="alert alert-info d-flex flex-column justify-content-center align-items-center flex-grow-1 shadow-sm">
                    <i class="bi bi-info-circle display-6 mb-3"></i>
                    <h5 class="mb-2">Sala vazia</h5>
                    <p class="mb-0">Ainda não existem reservas, equipamentos, dispositivos médicos, nem consumíveis associados.</p>
                </div>
            </div>
        }

    </div>

    <div class="btn-group" role="group">
        @if (ViewBag.PreviousRoomId != null)
        {
            <a class="btn btn-outline-primary"
               href="@Url.Action("Details", new { id = ViewBag.PreviousRoomId, fromCreation = ViewBag.FromCreation })">
                ← Sala Anterior
            </a>
        }
        @if (ViewBag.NextRoomId != null)
        {
            <a class="btn btn-outline-primary"
               href="@Url.Action("Details", new { id = ViewBag.NextRoomId, fromCreation = ViewBag.FromCreation })">
                Próxima Sala →
            </a>
        }
    </div>
</div>

<div class="card-footer d-flex justify-content-end gap-2">
    @if (isAdmin)
    {
        <a asp-action="Edit" asp-route-id="@Model.RoomId" class="btn btn-warning btn-sm me-2">
            <i class="bi bi-pencil-square me-1"></i> Editar
        </a>

        <a asp-action="Delete" asp-route-id="@Model.RoomId" class="btn btn-danger btn-sm me-2">
            <i class="bi bi-trash me-1"></i> Eliminar
        </a>
    }
</div>

<div class="mt-4">
    @if (fromCreation)
    {
        <a asp-controller="Rooms"
           asp-action="Index"
           class="btn btn-primary btn-sm">
            <i class="bi bi-house-door-fill me-1"></i> Ir à Lista de Salas
        </a>
    }
    else
    {
        <a asp-controller="Rooms"
           asp-action="Index"
           class="btn btn-primary btn-sm">
            <i class="bi bi-house-door-fill me-1"></i> Voltar à Lista de Salas
        </a>
    }
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            var alert = document.querySelector('.alert-success');
            if (alert) {
                alert.classList.remove('show');
                alert.classList.add('fade');
            }
        }, 4000);
    </script>
}