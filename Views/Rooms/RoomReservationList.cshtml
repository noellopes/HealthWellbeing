@model IEnumerable<HealthWellbeingRoom.Models.RoomReservation>

@{
    ViewData["Title"] = "Reservas da Sala";
}

<h1 class="mb-4 text-primary">
    <i class="bi bi-calendar-check"></i> Reservas — @ViewBag.RoomName
</h1>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <div>
        <a asp-controller="Room" asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    <div>
        <a asp-controller="RoomReservations"
           asp-action="Create"
           class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle me-1"></i> Nova Reserva
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info mb-0">Não existem reservas para esta sala.</div>
        }
        else
        {
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nome do responsável</th>
                        <th>Sala</th>
                        <th>Início</th>
                        <th>Fim</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoomReservationId</td>

                            <td>@(string.IsNullOrWhiteSpace(item.ResponsibleName) ? "—" : item.ResponsibleName)</td>

                            <td>@(item.Room?.Name ?? "—")</td>

                            <td>@(item.StartTime != default ? item.StartTime.ToString("dd/MM/yyyy HH:mm") : "—")</td>

                            <td>@(item.EndTime != default ? item.EndTime.ToString("dd/MM/yyyy HH:mm") : "—")</td>

                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.RoomReservationId" class="btn btn-primary btn-sm me-1" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.RoomReservationId" class="btn btn-info btn-sm me-1" title="Detalhes">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.RoomReservationId" class="btn btn-danger btn-sm" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}