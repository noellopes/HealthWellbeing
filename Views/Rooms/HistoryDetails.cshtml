@model HealthWellbeingRoom.Models.RoomHistory

<h2 class="text-primary mb-4">
    <i class="bi bi-info-circle me-2"></i> Detalhes do Histórico da sala "@ViewData["RoomName"]"
</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Id:</strong> @Model.RoomHistoryId</p>
        <p><strong>Sala:</strong> @ViewData["RoomName"]</p>
        <p><strong>Início:</strong> @Model.StartDate.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Fim:</strong> @Model.EndDate.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Responsável:</strong> @Model.Responsible (@Model.ResponsibleId)</p>
        <p><strong>Observação:</strong> @Model.Note</p>
    </div>

    <div class="btn-group" role="group">
        @if (ViewBag.PreviousHistoryId != null)
        {
            <a asp-action="HistoryDetails"
               asp-route-id="@ViewBag.PreviousHistoryId"
               asp-route-roomId="@ViewBag.RoomId"
               class="btn btn-outline-primary">
                ← Histórico Anterior
            </a>
        }

        @if (ViewBag.NextHistoryId != null)
        {
            <a asp-action="HistoryDetails"
               asp-route-id="@ViewBag.NextHistoryId"
               asp-route-roomId="@ViewBag.RoomId"
               class="btn btn-outline-primary">
                Próximo Histórico →
            </a>
        }
    </div>

    <div class="mt-4 text-end">
        <a asp-action="History" asp-route-id="@ViewBag.RoomId" class="btn btn-primary me-2">
            <i class="bi bi-arrow-left-circle me-1"></i> Voltar lista dos históricos
        </a>

        <a asp-action="Details" asp-route-id="@ViewBag.RoomId" class="btn btn-primary me-2">
            <i class="bi bi-door-open me-1"></i> Voltar ao detalhe da Sala
        </a>

        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-list me-1"></i> Voltar à lista de Salas
        </a>
    </div>
</div>