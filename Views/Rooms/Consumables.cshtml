@model HealthWellbeing.ViewModels.RPaginationInfo<HealthWellbeingRoom.Models.RoomConsumable>
@{
    ViewData["Title"] = "Consumíveis Associados";
    string? successMessage = Context.Request.Query["SuccessMessage"];
}

@if (successMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2 class="text-primary mb-4">
    <i class="bi bi-box-seam me-2"></i> Consumíveis Associados à sala "@ViewData["RoomName"]"
</h2>

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Quantidade</th>
                <th>Nota</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Items.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">
                        <span class="alert alert-info d-block mb-0" role="alert">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            Nenhum consumível associado a esta sala.
                        </span>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var consumivel in Model.Items)
                {
                    <tr>
                        <td>@consumivel.Name</td>
                        <td>@consumivel.Category</td>
                        <td>@consumivel.Quantity</td>
                        <td>@consumivel.Note</td>
                        <td class="text-center align-middle">
                            <a asp-controller="RoomConsumable"
                               asp-action="Details"
                               asp-route-id="@consumivel.RoomConsumableId"
                               class="btn btn-info px-4">
                                <i class="bi bi-info-circle me-1"></i> Detalhes
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Botões de navegação -->
<div class="mt-4 d-flex justify-content-end gap-2">
    <a asp-action="Details" asp-route-id="@ViewBag.RoomId" class="btn btn-primary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Sala
    </a>

    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-list-ul me-1"></i> Voltar à Lista
    </a>
</div>