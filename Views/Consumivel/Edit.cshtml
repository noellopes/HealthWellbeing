@model HealthWellbeing.Models.Consumivel

@{
    ViewData["Title"] = "Editar Consumível";
}

<style>
    .edit-container {
        max-width: 600px;
        margin: 40px auto;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

    .card-header {
        background-color: #0d6efd;
        color: white;
        font-weight: 600;
        font-size: 1.25rem;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-spacing {
        margin-right: 10px;
    }
</style>

<div class="edit-container">
    <div class="card">
        <div class="card-header">✏️ Editar Consumível</div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ConsumivelId" />

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoriaId" class="form-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

@*                 <div class="mb-3">
                    <label asp-for="QuantidadeMaxima" class="form-label"></label>
                    <input asp-for="QuantidadeMaxima" class="form-control" />
                    <span asp-validation-for="QuantidadeMaxima" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="QuantidadeAtual" class="form-label"></label>
                    <input asp-for="QuantidadeAtual" class="form-control" />
                    <span asp-validation-for="QuantidadeAtual" class="text-danger"></span>
                </div> *@

                <div class="mb-3">
                    <label asp-for="QuantidadeMinima" class="form-label"></label>
                    <input asp-for="QuantidadeMinima" class="form-control" />
                    <span asp-validation-for="QuantidadeMinima" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary btn-spacing">💾 Guardar alterações</button>
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
