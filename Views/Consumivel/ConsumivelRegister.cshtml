@model HealthWellbeing.Models.Consumivel

@{
    ViewData["Title"] = "Registar Consumíveis";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ConsumivelRegister" method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" placeholder="Insere o nome do consumível" />
    </div>

    <div class="mb-3">
        <label asp-for="Categoria" class="form-label"></label>
        <input asp-for="Categoria" class="form-control" placeholder="Ex: Luvas, Seringas, etc." />
    </div>

    <div class="mb-3">
        <label asp-for="ZonaArmazenamento" class="form-label"></label>
        <input asp-for="ZonaArmazenamento" class="form-control" placeholder="Ex: Armazém A, Sala 3..." />
    </div>

    <div class="mb-3">
        <label class="form-label">Fornecedores</label>
        <input type="text" name="FornecedoresTexto" class="form-control" placeholder="Separar fornecedores por vírgula" />
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" type="number" class="form-control" min="0" />
    </div>

    <!-- Dropdown de salas (por agora, valores de exemplo) -->
    <div class="form-floating mb-4">
        <select asp-for="SalaId" class="form-select" id="floatingSelect">
            <option value="">-- Seleciona uma sala --</option>
            <option value="1">Exemplo sala 1</option>
            <option value="2">Exemplo sala 2</option>
            <option value="3">Exemplo sala 3</option>
        </select>
        <label for="floatingSelect">Sala</label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
