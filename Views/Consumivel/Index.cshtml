@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Consumivel>

@{
    ViewData["Title"] = "Gestão de Inventário";
}

<div class="container-fluid px-4 mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div id="area-alertas" class="mb-4">
        @foreach (var item in Model.Items)
        {
            var chaveAviso = $"Aviso_{item.ConsumivelId}";
            if (TempData[chaveAviso] != null)
            {
                <div class="alert alert-warning border-start border-warning border-4 shadow-sm d-flex justify-content-between align-items-center mb-2 animate__animated animate__fadeInDown">
                    <div>
                        <i class="fas fa-exclamation-triangle me-2 text-warning"></i>
                        <strong>Aviso de Stock:</strong> @TempData[chaveAviso]
                    </div>
                    <div class="d-flex gap-2">
                        <form asp-action="AceitarEncomenda" asp-route-id="@item.ConsumivelId" method="post" class="m-0">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success btn-sm fw-bold text-white">
                                <i class="fas fa-check-circle"></i> Aceitar Proposta
                            </button>
                        </form>

                        <form asp-action="NegarEncomenda" asp-route-id="@item.ConsumivelId" method="post" class="m-0">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-secondary btn-sm">
                                Ignorar
                            </button>
                        </form>
                    </div>
                </div>
            }
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchNome" value="@ViewBag.SearchNome" class="form-control" placeholder="Procurar por nome...">
                </div>
                <div class="col-md-3">
                    <input type="text" name="searchCategoria" value="@ViewBag.SearchCategoria" class="form-control" placeholder="Categoria...">
                </div>
                <div class="col-md-5 text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Filtrar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Limpar</a>
                    <a asp-action="Create" class="btn btn-success ms-2">
                        <i class="fas fa-plus"></i> Novo Consumível
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white fw-bold">
            <i class="fas fa-boxes me-2"></i> Lista de Artigos em Armazém
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">Produto</th>
                        <th>Categoria</th>
                        <th class="text-center">Stock Atual</th>
                        <th class="text-center">Mínimo</th>
                        <th class="text-center">Capacidade Máx.</th>
                        <th class="text-end pe-3">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        bool stockBaixo = item.QuantidadeAtual <= item.QuantidadeMinima;
                        <tr class="@(stockBaixo ? "table-danger text-danger" : "")">
                            <td class="ps-3 fw-bold">@item.Nome</td>
                            <td>@item.CategoriaConsumivel?.Nome</td>
                            <td class="text-center">
                                <span class="badge @(stockBaixo ? "bg-danger" : "bg-primary") rounded-pill px-3">
                                    @item.QuantidadeAtual
                                </span>
                            </td>
                            <td class="text-center">@item.QuantidadeMinima</td>
                            <td class="text-center fw-light">@item.QuantidadeMaxima</td>
                            <td class="text-end pe-3">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.ConsumivelId" class="btn btn-sm btn-outline-secondary" title="Editar">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ConsumivelId" class="btn btn-sm btn-outline-info" title="Ver Detalhes">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ConsumivelId" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchNome="@ViewBag.SearchNome"
                       asp-route-searchCategoria="@ViewBag.SearchCategoria">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>