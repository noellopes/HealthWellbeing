@model List<HealthWellbeing.Models.Consumivel>

<h1>Administrar Consumíveis</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Zona Armazenamento</th>
            <th>Stock</th>
            <th>Sala ID</th>
            <th>Fornecedores</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Nome</td>
                <td>@c.Categoria</td>
                <td>@c.ZonaArmazenamento</td>
                <td>@c.Stock</td>
                <td>@c.SalaId</td>
                <td>
                    @if (c.Fornecedores != null && c.Fornecedores.Any())
                    {
                        <ul>
                            @foreach (var f in c.Fornecedores)
                            {
                                <li>@f</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Sem fornecedores</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.ConsumivelId" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@c.ConsumivelId" class="btn btn-danger">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
