@model HealthWellbeing.Models.ConsumivelFornecedor

@{
    ViewData["Title"] = "Eliminar Fornecedor";
}
<style>
    .delete-container {
        max-width: 650px;
        margin: 40px auto;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background-color: #dc3545;
        color: white;
        font-weight: 600;
        font-size: 1.25rem;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .details-label {
        font-weight: 600;
        color: #555;
    }

    .details-value {
        color: #222;
        font-size: 1.05rem;
    }

    .confirm-text {
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
        color: #856404;
        padding: 12px 15px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .badge {
        font-size: 0.9rem;
        padding: 6px 10px;
    }
</style>

<div class="delete-container">
    <div class="card">
        <div class="card-header">
            🗑️ Eliminar Fornecedor
        </div>

        <div class="card-body">
            <div class="confirm-text">
                ⚠️ Tens a certeza que queres eliminar este fornecedor? Esta ação não pode ser desfeita.
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-4 details-label">@Html.DisplayNameFor(model => model.NomeEmpresa)</dt>
                <dd class="col-sm-8 details-value">@Html.DisplayFor(model => model.NomeEmpresa)</dd>

                <dt class="col-sm-4 details-label">@Html.DisplayNameFor(model => model.NIF)</dt>
                <dd class="col-sm-8 details-value">@Html.DisplayFor(model => model.NIF)</dd>

                <dt class="col-sm-4 details-label">@Html.DisplayNameFor(model => model.Morada)</dt>
                <dd class="col-sm-8 details-value">@Html.DisplayFor(model => model.Morada)</dd>

                <dt class="col-sm-4 details-label">@Html.DisplayNameFor(model => model.Telefone)</dt>
                <dd class="col-sm-8 details-value">@Html.DisplayFor(model => model.Telefone)</dd>

                <dt class="col-sm-4 details-label">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-8 details-value">@Html.DisplayFor(model => model.Email)</dd>

            </dl>

            <form asp-action="Delete" class="d-flex justify-content-end mt-3">
                <input type="hidden" asp-for="FornecedorId" />
                <button type="submit" class="btn btn-danger me-2">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
