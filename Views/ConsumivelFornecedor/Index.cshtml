@model IEnumerable<HealthWellbeing.Models.ConsumivelFornecedor>

@{
    ViewData["Title"] = "Index";
}
<h1>Lista de Fornecedores</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Adicionar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Morada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Morada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.FornecedorId" class="btn btn-sm btn-success">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.FornecedorId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.FornecedorId" class="btn btn-sm btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
