@model HealthWellbeing.Models.EventType

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (ViewBag.EventTypeWasDeleted != null) {
    <div class="alert alert-danger d-flex align-items-center p-4 border border-warning rounded shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill flex-shrink-0" style="font-size: 4rem;"></i>
        <div class="ps-4">
            <h4 class="alert-heading mb-2">Concurrent change detected</h4>
            <p class="mb-0">
                The event type you were editing was deleted by another user. Your current changes cannot be saved in the original event type.
                However, you can create a new event type with the information you entered.
            </p>
        </div>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">
            <i class="bi bi-pencil-square me-2"></i> Edit Event Type
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            @if (ViewBag.EventTypeWasDeleted == null) {
                <input type="hidden" asp-for="EventTypeId" />
            }

            <div class="mb-3">
                <label asp-for="EventTypeName" class="form-label fw-bold">Event Type Name</label>
                <input asp-for="EventTypeName" class="form-control" placeholder="Enter event type name" />
                <span asp-validation-for="EventTypeName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EventTypeScoringMode" class="form-label fw-bold">Scoring Mode</label>
                <select asp-for="EventTypeScoringMode" class="form-select" asp-items="ViewBag.ScoringModes"></select>
                <span asp-validation-for="EventTypeScoringMode" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="EventTypeMultiplier" class="form-label fw-bold">Multiplier</label>
                <input asp-for="EventTypeMultiplier" class="form-control" type="number" step="0.1" min="0" placeholder="e.g. 1.1 or 1.2" />
                <span asp-validation-for="EventTypeMultiplier" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end gap-2">
                @if (ViewBag.EventTypeWasDeleted != null) {
                    <button type="submit" asp-action="Create" class="btn btn-success">
                        <i class="bi bi-save me-1"></i> Create a new event type
                    </button>
                    <a asp-action="Index" class="btn btn-danger">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>
                }
                else {
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}