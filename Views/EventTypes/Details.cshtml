@model HealthWellbeing.Models.EventType

@{
    ViewData["Title"] = "Event Type Details";
}

<div class="container py-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-info-circle me-2"></i>Event Type Details
            </h5>
        </div>
        <div class="card-body">
            <dl class="row gy-3 mb-0">

                <dt class="col-sm-3 text-muted d-flex align-items-center">
                    @Html.DisplayNameFor(model => model.EventTypeName)
                </dt>
                <dd class="col-sm-9 fs-5 fw-bold text-dark mb-0">
                    @Html.DisplayFor(model => model.EventTypeName)
                </dd>

                <dt class="col-sm-3 text-muted d-flex align-items-center">
                    @Html.DisplayNameFor(model => model.EventTypeDescription)
                </dt>
                <dd class="col-sm-9 mb-0">
                    @if (string.IsNullOrEmpty(Model.EventTypeDescription)) {
                        <span class="text-muted fst-italic">-</span>
                    }
                    else {
                        @Html.DisplayFor(model => model.EventTypeDescription)
                    }
                </dd>

                @* Scoring Strategy Section Removed *@

                <dt class="col-sm-3 text-muted d-flex align-items-center">
                    @Html.DisplayNameFor(model => model.EventTypeMultiplier)
                </dt>
                <dd class="col-sm-9 mb-0">
                    @{
                        var m = Model.EventTypeMultiplier;
                        string styleMulti;

                        // Visual logic regarding the intensity of the multiplier
                        if (m <= 1.0m) { styleMulti = "background-color: #f8f9fa; color: #6c757d; border: 1px solid #dee2e6;"; }
                        else if (m <= 1.25m) { styleMulti = "background-color: #e7f1ff; color: #0d6efd; border: 1px solid #cce5ff;"; }
                        else if (m <= 1.5m) { styleMulti = "background-color: #cfe2ff; color: #084298; border: 1px solid #b6d4fe;"; }
                        else if (m <= 2.0m) { styleMulti = "background-color: #9ec5fe; color: #052c65; border: 1px solid #8ec0fc;"; }
                        else { styleMulti = "background-color: #0d6efd; color: #fff; border: 1px solid #0d6efd;"; }
                    }
                    <span class="badge rounded-1 d-inline-flex align-items-center justify-content-center"
                          style="@styleMulti font-size: 0.9em; width: 80px; padding: 0.5em 0;">
                        @m.ToString("0.##")x
                    </span>
                </dd>

                <dt class="col-sm-3 text-muted d-flex align-items-center">
                    Usage Count
                </dt>
                <dd class="col-sm-9 mb-0">
                    @{
                        int count = Model.Events?.Count ?? 0;
                        string badgeClass;
                        string badgeText;
                        string icon;

                        // Display usage status
                        if (count > 0) {
                            badgeClass = "bg-info text-dark";
                            badgeText = $"Used by {count} Event" + (count != 1 ? "s" : "");
                            icon = "bi-link-45deg";
                        }
                        else {
                            badgeClass = "bg-secondary text-white";
                            badgeText = "Not currently in use";
                            icon = "bi-slash-circle";
                        }
                    }

                    <span class="badge @badgeClass rounded-pill" style="font-size: 0.9em; padding: 0.5em 1em;">
                        <i class="bi @icon me-1"></i> @badgeText
                    </span>
                </dd>

            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-end gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.EventTypeId" class="btn btn-warning">
            <i class="bi bi-pencil-square me-1"></i> Edit
        </a>

        <a asp-action="Delete" asp-route-id="@Model?.EventTypeId" class="btn btn-danger">
            <i class="bi bi-trash-fill me-1"></i> Delete
        </a>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
        </a>
    </div>
</div>