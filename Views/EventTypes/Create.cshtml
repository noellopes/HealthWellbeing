@model HealthWellbeing.Models.EventType

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">
            <i class="bi bi-plus-circle me-2"></i> New Event Type
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <div class="mb-3">
                <label asp-for="EventTypeName" class="form-label fw-bold">Event Type Name</label>
                <input asp-for="EventTypeName" class="form-control" />
                <span asp-validation-for="EventTypeName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EventTypeScoringMode" class="form-label fw-bold">Scoring Mode</label>
                <select asp-for="EventTypeScoringMode" class="form-select" asp-items="ViewBag.ScoringModes">
                    <option value="">-- Select a Mode --</option>
                </select>
                <span asp-validation-for="EventTypeScoringMode" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="EventTypeMultiplier" class="form-label fw-bold">Multiplier</label>
                <input asp-for="EventTypeMultiplier" class="form-control" type="number" step="0.1" min="0" />
                <span asp-validation-for="EventTypeMultiplier" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}