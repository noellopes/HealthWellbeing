@model HealthWellbeing.Models.EventType

@{
    ViewData["Title"] = "Create Event Type";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">
            <i class="bi bi-plus-circle me-2"></i> New Event Type
        </h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <div class="mb-3">
                <label asp-for="EventTypeName" class="form-label fw-bold"></label>
                <input asp-for="EventTypeName" class="form-control" placeholder="E.g., Morning Yoga, BodyPump..." />
                <span asp-validation-for="EventTypeName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EventTypeDescription" class="form-label fw-bold"></label>
                <textarea asp-for="EventTypeDescription" class="form-control" rows="3" placeholder="Briefly describe this type of event..."></textarea>
                <span asp-validation-for="EventTypeDescription" class="text-danger small"></span>
            </div>

            @* Scoring Strategy Removed. Multiplier layout adjusted *@
            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="EventTypeMultiplier" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">x</span>
                        <input asp-for="EventTypeMultiplier" class="form-control" type="number" step="0.01" min="1" max="3" placeholder="1.00" />
                    </div>
                    <div class="form-text text-muted">
                        Set a value between 1.00 and 3.00.
                    </div>
                    <span asp-validation-for="EventTypeMultiplier" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}