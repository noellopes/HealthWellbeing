@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.EventType>

@{
    ViewData["Title"] = "Event Types";
    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@* Feedback Messages *@
@if (successMessage != null) {
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}
@if (errorMessage != null) {
    <div class="container py-4">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

@* Empty State (No items and no search active) *@
@if (!Model.Items.Any() && string.IsNullOrEmpty(ViewBag.SearchName) && ViewBag.SearchMultiplier == null) {
    <div class="alert alert-warning d-flex align-items-center border-2 p-3 rounded" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">No Event Types Found</h4>
            <p>No event types are currently available.</p>
        </div>
    </div>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Create New Event Type
    </a>
}
else {
    @* Search & Actions Bar *@
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 text-secondary">Overview</h2>
        <div class="d-flex justify-content-end">
            <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#eventTypeSearch" aria-expanded="false" aria-controls="eventTypeSearch">
                <i class="bi bi-search me-1"></i> Search
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
        </div>
    </div>

    @* Search Form Collapse *@
    <div class="collapse mt-2 mb-3" id="eventTypeSearch">
        <div class="card card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">

                @* Filter: Name *@
                <div class="col-md-6">
                    <label for="searchName" class="form-label">Event Type Name</label>
                    <input id="searchName" name="searchName" value="@ViewBag.SearchName" class="form-control" placeholder="Search by name..." type="search" />
                </div>

                @* Filter: Multiplier (CORRIGIDO) *@
                <div class="col-md-6">
                    <label for="searchMultiplier" class="form-label">Multiplier</label>
                    <input id="searchMultiplier"
                           name="searchMultiplier"
                           value="@(ViewBag.SearchMultiplier?.ToString(System.Globalization.CultureInfo.InvariantCulture))"
                           class="form-control"
                           type="number"
                           step="0.01"
                           placeholder="e.g. 1.5" />
                </div>

                <div class="col-12 mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>

    @* Results Table *@
    @if (!Model.Items.Any()) {
        <div class="alert alert-info d-flex align-items-center p-3 rounded" role="alert">
            <i class="bi bi-info-circle-fill" style="font-size: 2rem;"></i>
            <div class="ps-3">
                <h5 class="alert-heading">No results found for your search criteria.</h5>
            </div>
        </div>
    }
    else {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th class="text-center">Multiplier</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items) {
                        <tr>
                            <td class="fw-bold">@Html.DisplayFor(modelItem => item.EventTypeName)</td>

                            <td>
                                @if (!string.IsNullOrEmpty(item.EventTypeDescription) && item.EventTypeDescription.Length > 50) {
                                    <span title="@item.EventTypeDescription">@item.EventTypeDescription.Substring(0, 50)...</span>
                                }
                                else {
                                    @(string.IsNullOrEmpty(item.EventTypeDescription) ? "-" : item.EventTypeDescription)
                                }
                            </td>

                            <td class="text-center">
                                @{
                                    var m = item.EventTypeMultiplier;
                                    string styleMulti;

                                    if (m <= 1.0m) {
                                        styleMulti = "background-color: #f8f9fa; color: #6c757d; border: 1px solid #dee2e6;";
                                    }
                                    else if (m <= 1.25m) {
                                        styleMulti = "background-color: #e7f1ff; color: #0d6efd; border: 1px solid #cce5ff;";
                                    }
                                    else if (m <= 1.5m) {
                                        styleMulti = "background-color: #cfe2ff; color: #084298; border: 1px solid #b6d4fe;";
                                    }
                                    else if (m <= 2.0m) {
                                        styleMulti = "background-color: #9ec5fe; color: #052c65; border: 1px solid #8ec0fc;";
                                    }
                                    else {
                                        styleMulti = "background-color: #0d6efd; color: #fff; border: 1px solid #0d6efd;";
                                    }
                                }
                                <span class="badge rounded-1" style="@styleMulti font-size: 0.9em; min-width: 55px;">
                                    @m.ToString("0.##")x
                                </span>
                            </td>

                            <td class="text-end text-nowrap">
                                <a asp-action="Edit" asp-route-id="@item.EventTypeId" class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.EventTypeId" class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.EventTypeId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @* Pagination *@
            <div class="d-flex justify-content-between align-items-center bg-light p-3 border rounded-bottom">

                <div class="small text-muted">
                    Showing @Model.FirstItemOnPage - @Model.LastItemOnPage of @Model.TotalItems
                </div>

                <nav aria-label="Event Types page">
                    <ul class="pagination mb-0">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="1"
                               asp-route-searchName="@ViewBag.SearchName"
                               asp-route-searchMultiplier="@ViewBag.SearchMultiplier">First</a>
                        </li>

                        @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++) {
                            <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-page="@p"
                                   asp-route-searchName="@ViewBag.SearchName"
                                   asp-route-searchMultiplier="@ViewBag.SearchMultiplier">@p</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@Model.TotalPages"
                               asp-route-searchName="@ViewBag.SearchName"
                               asp-route-searchMultiplier="@ViewBag.SearchMultiplier">Last</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
}