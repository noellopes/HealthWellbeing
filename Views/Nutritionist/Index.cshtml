@model IEnumerable<HealthWellbeing.Models.Nutritionist>
@{
    ViewData["Title"] = "Nutritionists";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<p><a class="btn btn-primary" asp-action="Create"> <i class="bi bi-plus-circle"></i> Create New</a></p>

@if (!Model.Any())
{
    <div class="alert alert-info">No nutritionists yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var n in Model)
            {
                <tr>
                    <td>@n.Name</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@n.NutritionistId"><i class="bi bi-archive"></i> Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@n.NutritionistId"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@n.NutritionistId"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
