@model HealthWellbeing.Models.Nutritionist

@{
    ViewData["Title"] = "Delete Nutritionist";
}

<div class="container my-4">
    <div class="fh-wrapper">
        <div class="fh-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-trash-fill" style="color:#ef4444; font-size:1.15rem;"></i>
                        <h1 class="h5 fh-title mb-0">Delete Nutritionist</h1>
                    </div>
                    <div class="mt-2 fh-badge">
                        <i class="bi bi-exclamation-triangle" style="color:#ef4444;"></i>
                        <span>Confirm</span>
                    </div>
                </div>

                <a asp-action="Index" class="btn btn-secondary" style="border-radius:12px;">
                    <i class="bi bi-arrow-left-circle me-1"></i>Back
                </a>
            </div>
        </div>

        <div class="fh-panel">
            <div class="fh-card p-3">
                <div class="alert alert-warning mb-3" style="border-radius:12px;">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    Are you sure you want to delete this nutritionist?
                </div>

                <dl class="row mb-3">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Gender</dt>
                    <dd class="col-sm-9">@Model.Gender</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="NutritionistId" />

                    <button type="submit" class="btn btn-danger" style="border-radius:12px; font-weight:900;">
                        <i class="bi bi-trash-fill me-1"></i>Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light ms-2" style="border-radius:12px;">
                        Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
