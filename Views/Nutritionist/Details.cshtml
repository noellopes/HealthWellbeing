@model HealthWellbeing.Models.Nutritionist

@{
    ViewData["Title"] = "Nutritionist Details";
}

<div class="container my-4">
    <div class="fh-wrapper">
        <div class="fh-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-eye-fill" style="color: var(--fi-cyan); font-size:1.15rem;"></i>
                        <h1 class="h5 fh-title mb-0">Nutritionist Details</h1>
                    </div>
                    <div class="mt-2 fh-badge">
                        <i class="bi bi-info-circle" style="color: var(--fi-cyan);"></i>
                        <span>Details</span>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-secondary" style="border-radius:12px;">
                        <i class="bi bi-arrow-left-circle me-1"></i>Back
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.NutritionistId" class="btn btn-warning text-white" style="border-radius:12px;">
                        <i class="bi bi-pencil-square me-1"></i>Edit
                    </a>
                </div>
            </div>
        </div>

        <div class="fh-panel">
            <div class="fh-card p-3">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Gender</dt>
                    <dd class="col-sm-9">@Model.Gender</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
