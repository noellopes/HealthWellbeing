@model HealthWellbeing.Models.Nutritionist
@{
    ViewData["Title"] = "Nutritionist Details";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1><i class="bi bi-archive"></i> @ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.NutritionistId"><i class="bi bi-pencil-square"></i> Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-backspace"></i> Back</a>
</div>
