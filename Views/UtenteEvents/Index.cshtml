@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Event>

@{
    ViewData["Title"] = "Training Calendar";
    int currentLevel = ViewBag.CustomerLevel;
    List<int> enrolledIds = ViewBag.MyEnrolledIds as List<int> ?? new List<int>();

    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">

    @* --- Header --- *@
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h1 class="fw-bold text-dark">Training Calendar</h1>
            <p class="text-muted mb-0">Explore events, enroll, and level up your fitness.</p>
        </div>
        <div class="col-md-6">
            <div class="d-flex gap-3 justify-content-md-end mt-3 mt-md-0">
                <div class="bg-white px-4 py-2 rounded-pill shadow-sm border d-flex align-items-center">
                    <span class="text-muted small me-2 text-uppercase fw-bold">Your Level:</span>
                    <span class="fs-4 fw-bold text-primary">@currentLevel</span>
                </div>
            </div>
        </div>
    </div>

    @* --- Feedback Messages --- *@
    @if (successMessage != null)
    {
        <div class="alert alert-success rounded-3 shadow-sm mb-4"><i class="bi bi-check-circle-fill me-2"></i> @successMessage</div>
    }
    @if (errorMessage != null)
    {
        <div class="alert alert-danger rounded-3 shadow-sm mb-4"><i class="bi bi-x-circle-fill me-2"></i> @errorMessage</div>
    }

    @* --- Search Bar --- *@
    <div class="card border-0 shadow-sm rounded-4 mb-5 bg-white">
        <div class="card-body p-4">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="searchName" class="form-label fw-bold small text-muted text-uppercase">Event Name</label>
                    <input id="searchName" name="searchName" value="@ViewBag.SearchName" class="form-control bg-light border-0" placeholder="Search..." />
                </div>
                <div class="col-md-3">
                    <label for="searchType" class="form-label fw-bold small text-muted text-uppercase">Category</label>
                    <select id="searchType" name="searchType" class="form-select bg-light border-0" asp-items="ViewBag.EventTypesList">
                        <option value="">All Categories</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="searchLevel" class="form-label fw-bold small text-muted text-uppercase">Level</label>
                    <input id="searchLevel" name="searchLevel" value="@ViewBag.SearchLevel" class="form-control bg-light border-0" type="number" placeholder="Lvl" min="1" />
                </div>
                <div class="col-md-2">
                    <label for="searchStatus" class="form-label fw-bold small text-muted text-uppercase">Status</label>
                    <select id="searchStatus" name="searchStatus" class="form-select bg-light border-0" asp-items="ViewBag.StatusList"></select>
                </div>
                <div class="col-md-2">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary fw-bold">Filter</button>
                    </div>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(ViewBag.SearchName) || ViewBag.SearchType != null || ViewBag.SearchLevel != null || !string.IsNullOrEmpty(ViewBag.SearchStatus))
            {
                <div class="mt-2 text-end">
                    <a asp-action="Index" class="text-decoration-none text-muted small"><i class="bi bi-x-circle me-1"></i> Clear Filters</a>
                </div>
            }
        </div>
    </div>

    @* --- Events Grid --- *@
    @if (!Model.Items.Any())
    {
        <div class="text-center py-5 bg-light rounded-3 border border-1">
            <div class="text-muted opacity-50 mb-2"><i class="bi bi-calendar-x display-4"></i></div>
            <h5 class="text-muted fw-bold">No events found</h5>
            <p class="text-muted small mb-0">Try adjusting your search filters.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model.Items)
            {
                bool canJoin = currentLevel >= item.MinLevel;
                bool isEnrolled = enrolledIds.Contains(item.EventId);
                bool isHappening = item.EventStart <= DateTime.Now && item.EventEnd >= DateTime.Now;

                string borderClass = isEnrolled ? "border-success" : (canJoin ? "border-primary" : "border-secondary");
                string textClass = isEnrolled ? "text-success" : (canJoin ? "text-primary" : "text-secondary");

                <div class="col">
                    <div class="card h-100 shadow-sm rounded-4 border-0 border-top border-4 @borderClass">

                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <span class="badge bg-light text-dark border">@item.EventType?.EventTypeName</span>

                                <div class="d-flex flex-column align-items-end gap-1">
                                    @if (isHappening)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-record-circle me-1"></i> Live
                                        </span>
                                    }
                                    @if (isEnrolled)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle-fill me-1"></i> Enrolled
                                        </span>
                                    }
                                </div>
                            </div>

                            <h5 class="card-title fw-bold mb-3 text-dark">@item.EventName</h5>

                            <div class="d-flex align-items-center text-muted small mb-2">
                                <i class="bi bi-calendar-event me-2 @textClass"></i>
                                <span class="fw-medium">@item.EventStart.ToString("dd MMM, HH:mm")</span>
                            </div>

                            <div class="d-flex align-items-center text-muted small mb-3">
                                <i class="bi bi-bar-chart-fill me-2 text-secondary"></i>
                                Min Level: <span class="fw-bold ms-1 @(canJoin ? "text-dark" : "text-danger")">@item.MinLevel</span>
                            </div>

                            <p class="card-text text-muted small text-truncate">@item.EventDescription</p>
                        </div>

                        <div class="card-footer bg-white border-0 p-4 pt-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-outline-secondary rounded-pill fw-bold btn-sm py-2">
                                    View Details
                                </a>

                                @if (isEnrolled)
                                {
                                    <button class="btn btn-success rounded-pill btn-sm py-2" disabled>
                                        <i class="bi bi-check2 me-1"></i> Registered
                                    </button>
                                }
                                else if (canJoin)
                                {
                                    <form asp-action="Enroll" method="post" class="d-grid">
                                        <input type="hidden" name="eventId" value="@item.EventId" />
                                        <button type="submit" class="btn btn-primary rounded-pill btn-sm py-2 shadow-sm">
                                            Enroll Now
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-light text-muted border rounded-pill btn-sm py-2" disabled>
                                        <i class="bi bi-lock-fill me-1"></i> Locked
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* --- Pagination --- *@
        <div class="d-flex justify-content-center mt-5">
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-sm shadow-sm">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0 rounded-start" asp-action="Index"
                           asp-route-page="1"
                           asp-route-searchName="@ViewBag.SearchName"
                           asp-route-searchType="@ViewBag.SearchType"
                           asp-route-searchLevel="@ViewBag.SearchLevel"
                           asp-route-searchStatus="@ViewBag.SearchStatus">First</a>
                    </li>
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index"
                           asp-route-page="@(Model.CurrentPage - 1)"
                           asp-route-searchName="@ViewBag.SearchName"
                           asp-route-searchType="@ViewBag.SearchType"
                           asp-route-searchLevel="@ViewBag.SearchLevel"
                           asp-route-searchStatus="@ViewBag.SearchStatus"><i class="bi bi-chevron-left"></i></a>
                    </li>

                    @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                    {
                        <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                            <a class="page-link border-0" asp-action="Index"
                               asp-route-page="@p"
                               asp-route-searchName="@ViewBag.SearchName"
                               asp-route-searchType="@ViewBag.SearchType"
                               asp-route-searchLevel="@ViewBag.SearchLevel"
                               asp-route-searchStatus="@ViewBag.SearchStatus">@p</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index"
                           asp-route-page="@(Model.CurrentPage + 1)"
                           asp-route-searchName="@ViewBag.SearchName"
                           asp-route-searchType="@ViewBag.SearchType"
                           asp-route-searchLevel="@ViewBag.SearchLevel"
                           asp-route-searchStatus="@ViewBag.SearchStatus"><i class="bi bi-chevron-right"></i></a>
                    </li>
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link border-0 rounded-end" asp-action="Index"
                           asp-route-page="@Model.TotalPages"
                           asp-route-searchName="@ViewBag.SearchName"
                           asp-route-searchType="@ViewBag.SearchType"
                           asp-route-searchLevel="@ViewBag.SearchLevel"
                           asp-route-searchStatus="@ViewBag.SearchStatus">Last</a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>