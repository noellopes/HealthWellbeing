@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center mb-5">
    <h1 class="display-4">Bem-vindo ao Health Wellbeing</h1>
    <p class="lead">O seu parceiro de saúde e bem-estar.</p>
</div>

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="alert alert-success shadow-sm">
        Olá, <strong>@User.Identity.Name</strong>! Você entrou como:
        @if (User.IsInRole("Admin"))
        {
            <span class="badge bg-danger">Administrador</span>
        }
        @if (User.IsInRole("Medico"))
        {
            <span class="badge bg-primary">Médico</span>
        }
        @if (User.IsInRole("Tecnico"))
        {
            <span class="badge bg-secondary">Técnico</span>
        }
        @if (User.IsInRole("Supervisor Tecnico"))
        {
            <span class="badge bg-dark">Supervisor Técnico</span>
        }
        @if (User.IsInRole("Rececionista"))
        {
            <span class="badge bg-info text-dark">Rececionista</span>
        }
        @if (User.IsInRole("Utente"))
        {
            <span class="badge bg-success">Utente</span>
        }
    </div>

    <div class="row mt-4">

        @* --- ÁREA DE ADMINISTRAÇÃO (VERMELHO) --- *@
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-danger h-100 shadow-sm">
                    <div class="card-header bg-danger text-white fw-bold">
                        <i class="bi bi-shield-lock me-2"></i>Administração
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Gerir funcionários, criar logins e acessos de segurança.</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Roles" asp-action="Index" class="btn btn-outline-danger">Gerir Contas</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* --- ÁREA DE GESTÃO DE EXAMES (AZUL) --- *@
        @if (User.IsInRole("Admin") || User.IsInRole("Rececionista") ||
            User.IsInRole("Utente") || User.IsInRole("Tecnico") || User.IsInRole("Supervisor Tecnico") ||
            User.IsInRole("Medico"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-primary h-100 shadow-sm">
                    <div class="card-header bg-primary text-white fw-bold">
                        <i class="bi bi-calendar-check me-2"></i>Gestão de Exames
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Consultar agenda diária, filtrar marcações e gerir estados.</p>
                        <div class="d-grid gap-2 mt-4">
                            <a asp-controller="Exames" asp-action="Index" class="btn btn-outline-primary">
                                Aceder aos Exames
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* --- ÁREA DE GESTÃO CLÍNICA (AMARELO) --- *@
        @if (User.IsInRole("Admin") || User.IsInRole("Supervisor Tecnico"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-warning h-100 shadow-sm">
                    <div class="card-header text-dark fw-bold" style="background-color: #ffc107;">
                        <i class="bi bi-clipboard-pulse me-2"></i>Gestão Clínica
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Configurar tipos de exames, especialidades e dados clínicos.</p>
                        <div class="d-grid gap-2 mt-4">
                            <a asp-controller="ExameTipo" asp-action="Index" class="btn btn-outline-dark">Gerir Tipos de Exame</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* --- ÁREA DE PROFISSIONAIS EXECUTANTES (ROXO) --- *@
        @if (User.IsInRole("Admin") || User.IsInRole("Gestor") || User.IsInRole("Supervisor Tecnico"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-secondary h-100 shadow-sm" style="border-color: #6f42c1 !important;">
                    <div class="card-header text-white fw-bold" style="background-color: #6f42c1;">
                        <i class="bi bi-people me-2"></i>Profissionais Executantes
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Consultar e gerir profissionais que executam exames.</p>
                        <div class="d-grid gap-2 mt-4">
                            <a asp-controller="ProfissionalExecutantes" asp-action="Index" class="btn btn-outline-secondary" style="color: #6f42c1; border-color: #6f42c1;">
                                Aceder aos Profissionais
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* --- ÁREA DE MATERIAL E EQUIPAMENTO (VERDE-ESCURO) --- *@
        @if (User.IsInRole("Admin") || User.IsInRole("Gestor") || User.IsInRole("Medico") ||
            User.IsInRole("Tecnico") || User.IsInRole("Supervisor Tecnico"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-success h-100 shadow-sm" style="border-color: #198754 !important;">
                    <div class="card-header text-white fw-bold" style="background-color: #198754;">
                        <i class="bi bi-box-seam me-2"></i>Material e Equipamento
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Consultar materiais e equipamentos associados aos exames.</p>
                        <div class="d-grid gap-2 mt-4">
                            <a asp-controller="MaterialEquipamentoAssociado" asp-action="Index" class="btn btn-outline-success">
                                Aceder aos Materiais
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* --- ÁREA DO UTENTE --- *@
        @if (User.IsInRole("Utente"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-success h-100 shadow-sm">
                    <div class="card-header bg-success text-white fw-bold">
                        <i class="bi bi-person-circle me-2"></i>O Meu Espaço
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Veja o seu histórico e exames marcados.</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Historico" asp-action="Index" class="btn btn-outline-success">Meus Exames</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    // === UTILIZADOR NÃO ESTÁ LOGADO (Público) ===
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 text-center">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <h3 class="fw-bold text-secondary mb-3">Bem-vindo ao Portal de Saúde</h3>
                    <p class="text-muted mb-4">Faça login para aceder à sua área reservada.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a class="btn btn-primary btn-lg px-4" asp-area="Identity" asp-page="/Account/Login">Entrar (Login)</a>
                        <a class="btn btn-outline-secondary btn-lg px-4" asp-controller="Utentes" asp-action="Register">Registar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}