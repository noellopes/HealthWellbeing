@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center mb-5">
    <h1 class="display-4">Bem-vindo ao Health Wellbeing</h1>
    <p class="lead">O seu parceiro de saúde e bem-estar.</p>
</div>

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="alert alert-success shadow-sm">
        Olá, <strong>@User.Identity.Name</strong>! Você entrou como:
        @if (User.IsInRole("Admin"))
        {
            <span class="badge bg-danger">Administrador</span>
        }
        @if (User.IsInRole("Gestor"))
        {
            <span class="badge bg-warning text-dark">Gestor</span>
        }
        @if (User.IsInRole("Medico"))
        {
            <span class="badge bg-primary">Médico</span>
        }
        @if (User.IsInRole("Rececionista"))
        {
            <span class="badge bg-info text-dark">Rececionista</span>
        }
        @if (User.IsInRole("Utente"))
        {
            <span class="badge bg-success">Utente</span>
        }
    </div>

    <div class="row mt-4">

        @* --- ÁREA DE ADMINISTRAÇÃO (VERMELHO) --- *@
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-danger h-100 shadow-sm">
                    <div class="card-header bg-danger text-white fw-bold">
                        <i class="bi bi-shield-lock me-2"></i>Administração
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Gerir funcionários, criar logins e acessos de segurança.</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="ProfissionalExecutantes" asp-action="Index" class="btn btn-outline-danger">Gerir Profissionais</a>
                            <a asp-controller="Roles" asp-action="Index" class="btn btn-outline-danger">Gerir Permissões</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* --- NOVO: ÁREA DE GESTÃO DE EXAMES (AZUL) --- *@
        @if (User.IsInRole("Admin") || User.IsInRole("Gestor"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-primary h-100 shadow-sm">
                    <div class="card-header bg-primary text-white fw-bold">
                        <i class="bi bi-calendar-check me-2"></i>Gestão de Exames
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Consultar agenda diária, filtrar marcações e gerir estados.</p>
                        <div class="d-grid gap-2 mt-4">
                            @* Botão Outline para ficar igual aos outros *@
                            <a asp-controller="Exames" asp-action="Index" class="btn btn-outline-primary">
                                Aceder aos Exames
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* --- ÁREA DE GESTÃO CLÍNICA (AMARELO) --- *@
        @if (User.IsInRole("Gestor") || User.IsInRole("Admin"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-warning h-100 shadow-sm">
                    <div class="card-header text-dark fw-bold" style="background-color: #ffc107;">
                        <i class="bi bi-clipboard-pulse me-2"></i>Gestão Clínica
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Configurar tipos de exames, especialidades e materiais.</p>
                        <div class="d-grid gap-2 mt-4">
                            <a asp-controller="ExameTipo" asp-action="Index" class="btn btn-outline-dark">Gerir Tipos de Exame</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* --- ÁREA MÉDICA --- *@
        @if (User.IsInRole("Medico"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-primary h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">Área Médica</div>
                    <div class="card-body">
                        <p class="card-text">Consultar agenda e realizar exames.</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Consultas" asp-action="Index" class="btn btn-outline-primary">As Minhas Consultas</a>
                            <a asp-controller="Exames" asp-action="Index" class="btn btn-outline-primary">Registar Resultados</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* --- ÁREA DE RECEÇÃO --- *@
        @if (User.IsInRole("Rececionista") || User.IsInRole("Gestor"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-info h-100 shadow-sm">
                    <div class="card-header bg-info text-dark">Receção</div>
                    <div class="card-body">
                        <p class="card-text">Fazer marcações e check-in de utentes.</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Marcacoes" asp-action="Create" class="btn btn-outline-info">Nova Marcação</a>
                            <a asp-controller="Utentes" asp-action="Index" class="btn btn-outline-info">Listar Utentes</a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @* --- ÁREA DO UTENTE --- *@
        @if (User.IsInRole("Utente"))
        {
            <div class="col-md-4 mb-4">
                <div class="card border-success h-100 shadow-sm">
                    <div class="card-header bg-success text-white">O Meu Espaço</div>
                    <div class="card-body">
                        <p class="card-text">Veja o seu histórico e exames marcados.</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Historico" asp-action="Index" class="btn btn-outline-success">Meus Exames</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    // === UTILIZADOR NÃO ESTÁ LOGADO (Público) ===
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 text-center">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <h3 class="fw-bold text-secondary mb-3">Bem-vindo ao Portal de Saúde</h3>
                    <p class="text-muted mb-4">Faça login para aceder à sua área reservada.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a class="btn btn-primary btn-lg px-4" asp-area="Identity" asp-page="/Account/Login">Entrar (Login)</a>
                        <a class="btn btn-outline-secondary btn-lg px-4" asp-controller="Utentes" asp-action="Register">Registar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}