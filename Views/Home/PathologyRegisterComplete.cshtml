@model Pathology

@{
    ViewData["Title"] = "Pathology Register Complete";
}

<div class="alert alert-success" role="alert">
    <h4 class="alert-heading">@ViewBag.Title</h4>
    <p>Thank you for registering the pathology!</p>
    <hr>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title text-success">@ViewBag.Title</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">You registered the following pathology</h6>

        <hr />

        <div class="mb-3">
            <label asp-for="PathologyId" class="text-secondary"></label>
            <input asp-for="PathologyId" readonly class="form-control-plaintext">
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="text-secondary"></label>
            <input asp-for="Name" readonly class="form-control-plaintext">
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="text-secondary"></label>
            <input asp-for="Description" readonly class="form-control-plaintext">
        </div>
        <div class="mb-3">
            <label asp-for="Severity" class="text-secondary"></label>
            <input asp-for="Severity" readonly class="form-control-plaintext">
        </div>

        <hr />

        <a href="Index" class="btn btn-primary">OK</a>

    </div>
</div>
