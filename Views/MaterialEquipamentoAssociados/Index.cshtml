@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.MaterialEquipamentoAssociado>

@{
    ViewData["Title"] = "Stock de Materiais e Equipamentos";
    // Variáveis da ViewBag para serem usadas nos links de paginação
    var searchNome = ViewBag.SearchNome;
    var searchEstado = ViewBag.SearchEstado;
}

<div class="container mt-4">

    @* Esta secção (TempData) deve ser incluída se o Controller enviar mensagens de sucesso/erro. *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Sucesso!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Stock de Materiais e Equipamentos</h1>
        <div class="d-flex justify-content-end">

            @* Botão de Pesquisa (com o colapso igual ao exemplo) *@
            <a class="btn btn-secondary me-2" data-bs-toggle="collapse"
               data-bs-target="#stockSearch" aria-expanded="false"
               aria-controls="stockSearch">
                <i class="bi bi-search me-1"></i> Pesquisar
            </a>

            @* Botão Criar Novo *@
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle"></i> Adicionar Novo
            </a>
        </div>
    </div>

    @* Área de Pesquisa Colapsável (Funcionalidade de Pesquisa Visualmente Adicionada) *@
    <div class="collapse mt-2 mb-4" id="stockSearch">
        <div class="card card-body">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">

                <div class="col-md-4">
                    <label for="searchNome" class="form-label">Nome do Material/Equipamento</label>
                    <input id="searchNome" name="searchNome" value="@searchNome"
                           class="form-control" placeholder="Pesquisar por nome" type="search" />
                </div>

                <div class="col-md-4">
                    <label for="searchEstado" class="form-label">Estado</label>
                    <input id="searchEstado" name="searchEstado" value="@searchEstado"
                           class="form-control" placeholder="Pesquisar por estado" type="search" />
                </div>

                <div class="col-12 mt-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search me-1"></i> Pesquisar</button>
                    <a asp-action="Index" class="btn btn-secondary">Limpar Filtros</a>
                </div>
            </form>
        </div>
    </div>

    @* Tabela Estilizada *@
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>
                        Nome Equipamento
                    </th>
                    <th class="text-center">
                        Quantidade
                    </th>
                    <th class="d-none d-sm-table-cell">
                        Estado
                    </th>
                    <th class="text-center" style="width: 250px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items!)
                { @* Iteração no Model.Items *@
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeEquipamento)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                        <td class="d-none d-sm-table-cell">
                            @* CORRIGIDO: Bloco de código para calcular o badge e exibir o Nome *@
                            @{
                                // Acessa o nome do estado através da propriedade de navegação
                                var estadoNome = item.EstadoMaterial?.Nome ?? "Não Especificado";
                                var badgeClass = estadoNome.ToLower() switch
                                {
                                    "disponível" => "bg-success",
                                    "em uso" => "bg-primary",
                                    "em manutenção" => "bg-warning text-dark",
                                    "danificado" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">
                                @Html.DisplayFor(modelItem => item.EstadoMaterial.Nome)
                            </span>
                        </td>
                        <td class="text-center text-nowrap">
                            <a asp-action="Edit" asp-route-id="@item.MaterialEquipamentoAssociadoId" class="btn btn-warning btn-sm"><i class="bi bi-pencil me-1"></i> Editar</a>
                            <a asp-action="Details" asp-route-id="@item.MaterialEquipamentoAssociadoId" class="btn btn-info btn-sm mx-1"><i class="bi bi-eye me-1"></i> Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.MaterialEquipamentoAssociadoId" class="btn btn-danger btn-sm"><i class="bi bi-trash me-1"></i> Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* BLOCO DE PAGINAÇÃO - ATIVADO PARA O MODELO PaginationInfo *@
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Navegação do Stock" class="mt-4">
            <ul class="pagination justify-content-center">

                @* Link "Primeiro" (First) *@
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-page="1"
                       asp-route-searchNome="@searchNome"
                       asp-route-searchEstado="@searchEstado">Primeiro</a>
                </li>

                @* Links Numéricos *@
                @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                {
                    <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                        @if (p == Model.CurrentPage)
                        {
                            <a class="page-link" href="#">@p</a>
                        }
                        else
                        {
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@p"
                               asp-route-searchNome="@searchNome"
                               asp-route-searchEstado="@searchEstado">@p</a>
                        }
                    </li>
                }

                @* Link "Último" (Last) *@
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@Model.TotalPages"
                       asp-route-searchNome="@searchNome"
                       asp-route-searchEstado="@searchEstado">Último</a>
                </li>

            </ul>
        </nav>
    }

</div>