@using HealthWellbeing.Models
@model FoodCategory

@{
    ViewData["Title"] = "Add Category";

    var isNutritionist = User.IsInRole("Nutricionista") || User.IsInRole("Nutritionist");
    var isAdmin = User.IsInRole("Administrador") || User.IsInRole("Administrator");
    var canManage = isAdmin || isNutritionist;
}

<div class="container my-4">
    <div class="fh-wrapper">

        <div class="fh-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-tags-fill" style="color: var(--fi-cyan); font-size:1.15rem;"></i>
                        <h1 class="h5 fh-title mb-0">Food Categories</h1>
                    </div>
                    <div class="mt-2 fh-badge">
                        <i class="bi bi-plus-circle" style="color: var(--fi-cyan);"></i>
                        <span>Create</span>
                    </div>
                </div>

                <a asp-action="Index" class="btn btn-outline-light" style="border-radius:12px; font-weight:800;">
                    <i class="bi bi-arrow-left me-1"></i>Back
                </a>
            </div>
        </div>

        <div class="fh-panel">
            @if (!canManage)
            {
                <div class="alert alert-danger fh-alert d-flex align-items-center gap-2 mb-0" role="alert">
                    <i class="bi bi-shield-x" style="font-size:1.4rem;"></i>
                    <div>
                        <div class="fw-bold">Access denied</div>
                        <div>You don't have permission to create categories.</div>
                    </div>
                </div>
            }
            else
            {
                <div class="fh-card p-3">
                    <form asp-action="Create" method="post" class="fh-form" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-warning mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">Category</label>
                            <input asp-for="Category" class="form-control" placeholder="e.g., Vegetables" />
                            <span asp-validation-for="Category" class="text-warning small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Optional"></textarea>
                            <span asp-validation-for="Description" class="text-warning small"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn fh-btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Save
                            </button>
                            <a asp-action="Index" class="btn btn-secondary" style="border-radius:12px; font-weight:800;">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            }
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
