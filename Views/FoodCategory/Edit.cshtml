@using HealthWellbeing.Models
@model HealthWellbeing.Models.FoodCategory

@{
    ViewData["Title"] = "Edit Food Category";
}

<div class="container my-4">
    <div class="fi-wrapper">
        <!-- HEADER -->
        <div class="fi-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-pencil-square me-2 text-warning" style="font-size: 1.25rem;"></i>
                        <h1 class="h5 mb-0 fi-titlebar">Edit Food Category</h1>
                    </div>
                </div>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to list
                </a>
            </div>
        </div>

        <hr />

        <!-- CONTENT -->
        <div class="fi-panel">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="CategoryId" />

                <div asp-validation-summary="ModelOnly" class="alert alert-warning" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="bi bi-save-fill me-1"></i> Update
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
