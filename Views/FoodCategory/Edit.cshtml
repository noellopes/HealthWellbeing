@model HealthWellbeing.Models.FoodCategory
@{
    ViewData["Title"] = "Edit Category";
}

<h1>Edit Category</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Edit" method="post" novalidate>
    <input type="hidden" asp-for="FoodCategoryId" />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ParentCategoryId" class="form-label"></label>
        <select asp-for="ParentCategoryId" class="form-select"
                asp-items="ViewBag.ParentCategoryId">
            <option value="">(no parent)</option>
        </select>
        <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
