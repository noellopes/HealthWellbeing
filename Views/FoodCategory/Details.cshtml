@model HealthWellbeing.Models.FoodCategory
@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details</h1>

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
    <dd class="col-sm-9">@Model.Description</dd>

    <dt class="col-sm-3">Parent</dt>
    <dd class="col-sm-9">@Model.ParentCategory?.Name</dd>

    <dt class="col-sm-3">Subcategories</dt>
    <dd class="col-sm-9">
        @if (Model.SubCategory != null && Model.SubCategory.Any())
        {
            <ul class="mb-0">
                @foreach (var s in Model.SubCategory.OrderBy(s => s.Name))
                {
                    <li>@s.Name</li>
                }
            </ul>
        }
        else
        {

            <span>(none)</span>
        }
    </dd>
</dl>

<p>
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.FoodCategoryId">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</p>
