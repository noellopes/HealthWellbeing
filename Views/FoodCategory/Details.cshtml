@model HealthWellbeing.Models.FoodCategory
@{
    ViewData["Title"] = "Category Details";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Parent</dt>
    <dd class="col-sm-9">@Model.ParentCategory?.Name</dd>

    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">@Model.Description</dd>

    <dt class="col-sm-3">Subcategories</dt>
    <dd class="col-sm-9">
        @if (Model.SubCategory != null && Model.SubCategory.Any())
        {
            <ul class="mb-0">
                @foreach (var sc in Model.SubCategory)
                {
                    <li>@sc.Name</li>
                }
            </ul>
        }
        else
        {
            <span class="text-muted">None</span>
        }
    </dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.FoodCategoryId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
