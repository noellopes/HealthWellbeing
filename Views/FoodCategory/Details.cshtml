@model HealthWellbeing.Models.FoodCategory

@{
    ViewData["Title"] = "Food Category Details";
}

<div class="container my-4">
    <div class="fi-wrapper">
        <!-- HEADER -->
        <div class="fi-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-card-list me-2 text-info" style="font-size: 1.25rem;"></i>
                        <h1 class="h5 mb-0 fi-titlebar">Food Category Details</h1>
                    </div>
                </div>

                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to list
                </a>
            </div>
        </div>

        <hr />

        <!-- CONTENT -->
        <div class="fi-panel">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>

                    <div class="mt-3 d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning text-white">
                            <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back to list
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
