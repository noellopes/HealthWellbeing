@model IEnumerable<HealthWellbeing.Models.FoodCategory>

@{
    ViewData["Title"] = "Food Categories";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
    var searchString = ViewBag.SearchString as string ?? "";
    int currentPage = ViewBag.CurrentPage != null ? (int)ViewBag.CurrentPage : 1;
    int totalPages = ViewBag.TotalPages != null ? (int)ViewBag.TotalPages : 1;
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<!-- Linha Add Record + Pesquisa -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-primary" asp-action="Create">Add Category</a>

    <form method="get" asp-action="Index" class="d-flex">
        <input type="text"
               name="searchString"
               value="@searchString"
               class="form-control me-2"
               placeholder="Pesquisar categoria..." />
        <button class="btn btn-primary me-2" type="submit">Pesquisar</button>
        <a class="btn btn-secondary" asp-action="Index">Limpar</a>
    </form>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No categories found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Parent Category</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model
                    .Where(c => string.IsNullOrEmpty(searchString) || c.Name.Contains(searchString, System.StringComparison.OrdinalIgnoreCase)))
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.ParentCategory?.Name</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@category.FoodCategoryId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@category.FoodCategoryId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@category.FoodCategoryId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Paginação simples -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-searchString="@searchString">Previous</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchString="@searchString">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-searchString="@searchString">Next</a>
            </li>
        </ul>
    </nav>
}
