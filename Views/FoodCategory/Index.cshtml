@model IEnumerable<HealthWellbeing.Models.FoodCategory>
@{
    ViewData["Title"] = "Food Categories";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">There are no categories yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Parent</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.ParentCategory?.Name</td>
                    <td>@c.Description</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@c.FoodCategoryId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.FoodCategoryId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.FoodCategoryId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
