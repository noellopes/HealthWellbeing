@model IEnumerable<HealthWellbeing.Models.FoodCategory>
@{
    ViewData["Title"] = "Food Categories";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">There are no categories yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Category</th>
                <th>Parent</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ParentCategory?.Name</td>
                    <td>@item.Description</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.FoodCategoryId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.FoodCategoryId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.FoodCategoryId"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this category?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
