@model HealthWellbeing.Models.FoodCategory
@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h5>Are you sure you want to delete this category?</h5>
<div class="mb-3">
    <strong>@Model.Name</strong>
    <div class="text-muted">@Model.Description</div>
    <div>Parent: @Model.ParentCategory?.Name</div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="FoodCategoryId" />
    <button type="submit" class="btn btn-danger"
            onclick="return confirm('This action cannot be undone. Proceed?');">
        Delete
    </button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
