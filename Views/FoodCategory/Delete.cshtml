@model HealthWellbeing.Models.FoodCategory
@{
    ViewData["Title"] = "Delete Category";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this item? <strong>@Model.Name</strong>?</h4>


<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="FoodCategoryId" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>