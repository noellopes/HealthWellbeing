@using HealthWellbeing.Models
@model FoodCategory

@{
    ViewData["Title"] = "Delete Category";

    var isNutritionist = User.IsInRole("Nutricionista") || User.IsInRole("Nutritionist");
    var isAdmin = User.IsInRole("Administrador") || User.IsInRole("Administrator");
    var canManage = isAdmin || isNutritionist;
}

<div class="container my-4">
    <div class="fh-wrapper">

        <div class="fh-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-tags-fill" style="color: var(--fi-cyan); font-size:1.15rem;"></i>
                        <h1 class="h5 fh-title mb-0">Food Categories</h1>
                    </div>
                    <div class="mt-2 fh-badge">
                        <i class="bi bi-trash-fill" style="color: var(--fi-cyan);"></i>
                        <span>Delete</span>
                    </div>
                </div>

                <div class="d-flex flex-wrap align-items-center gap-2">
                    <a asp-action="Index" class="btn btn-outline-light" style="border-radius:12px; font-weight:800;">
                        <i class="bi bi-arrow-left me-1"></i>Back
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.CategoryId" class="btn btn-outline-info" style="border-radius:12px; font-weight:800;">
                        <i class="bi bi-eye-fill me-1"></i>Details
                    </a>
                </div>
            </div>
        </div>

        <div class="fh-panel">
            @if (!canManage)
            {
                <div class="alert alert-danger fh-alert d-flex align-items-center gap-2 mb-0" role="alert">
                    <i class="bi bi-shield-x" style="font-size:1.4rem;"></i>
                    <div>
                        <div class="fw-bold">Access denied</div>
                        <div>You don't have permission to delete categories.</div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning fh-alert d-flex align-items-center gap-2" role="alert">
                    <i class="bi bi-exclamation-triangle-fill" style="font-size:1.4rem;"></i>
                    <div>
                        <div class="fw-bold">Confirm delete</div>
                        <div>This action cannot be undone.</div>
                    </div>
                </div>

                <div class="fh-card p-3">
                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <div class="text-white-50 small">Category</div>
                            <div class="fw-bold">@Model.Category</div>
                        </div>
                        <div class="col-md-8">
                            <div class="text-white-50 small">Description</div>
                            <div>@(string.IsNullOrWhiteSpace(Model.Description) ? "-" : Model.Description)</div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="fh-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CategoryId" />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger" style="border-radius:12px; font-weight:800;">
                                <i class="bi bi-trash-fill me-1"></i>Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary" style="border-radius:12px; font-weight:800;">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            }
        </div>

    </div>
</div>
