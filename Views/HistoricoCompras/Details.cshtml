@model HealthWellbeing.Models.HistoricoCompras
@{
    ViewData["Title"] = "Detalhes da Compra";
}

<div class="container mt-4">

    <h2 class="fw-bold mb-4">🧾 Detalhes da Compra</h2>

    <!-- Cartão suave e elegante -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light text-dark py-3" style="border-bottom: 2px solid #e6e6e6;">
            <h5 class="mb-0">🛒 Informação da Entrada de Consumível</h5>
        </div>

        <div class="card-body p-4">

            <div class="row mb-3">
                <div class="col-sm-4 fw-semibold">Consumível</div>
                <div class="col-sm-8">
                    @Model.Stock?.Consumivel?.Nome
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 fw-semibold">Zona de Armazenamento</div>
                <div class="col-sm-8">
                    @Model.Stock?.Zona?.Nome
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 fw-semibold">Quantidade Comprada</div>
                <div class="col-sm-8">
                    @Model.Quantidade
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-4 fw-semibold">Data</div>
                <div class="col-sm-8">
                    @Model.Data.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

        </div>
    </div>

    <!-- Botão único -->
    <div class="d-flex justify-content-end mt-3">
        <a asp-action="Index" class="btn btn-secondary px-4">
            ← Voltar à Lista
        </a>
    </div>

</div>
