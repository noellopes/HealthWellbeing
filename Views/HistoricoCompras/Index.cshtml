@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.HistoricoCompras>

@{
    ViewData["Title"] = "Histórico de Compras";
}

<div class="container mt-4">

    <!-- TÍTULO + AÇÕES -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary fs-2">
            📥 Histórico de Compras de Consumíveis
        </h2>

        <div>
            <a asp-controller="Stock"
               asp-action="Index"
               class="btn btn-outline-primary btn-sm me-2 px-3">
                ↩ Voltar ao Stock
            </a>

            <a asp-controller="Compra"
               asp-action="Index"
               class="btn btn-success btn-sm px-3">
                ➕ Nova Compra
            </a>
        </div>

    </div>

    <!-- ESTADO VAZIO -->
    @if (Model.Items == null || !Model.Items.Any())
    {
        <div class="alert alert-warning text-center py-5 shadow-sm">
            <h4 class="fw-bold mb-2">Nenhuma compra registada</h4>
            <p class="mb-3">Ainda não existem entradas de stock provenientes de compras.</p>

            <a asp-controller="Compra"
               asp-action="Index"
               class="btn btn-success btn-lg px-4">
                ➕ Registar Primeira Compra
            </a>
        </div>
    }
    else
    {
        <!-- TABELA -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle shadow-sm">
                <thead class="fw-semibold" style="background-color:#e8f1ff;">
                    <tr>
                        <th>Consumível</th>
                        <th>Fornecedor</th>
                        <th style="width:140px;">Quantidade</th>
                        <th style="width:190px;">Data</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <!-- CONSUMÍVEL -->
                            <td>
                                <span class="me-1" style="font-size:0.85rem;">📦</span>
                                @item.Stock?.Consumivel?.Nome
                            </td>

                            <!-- FORNECEDOR -->
                            <td>
                                <span class="me-1" style="font-size:0.85rem;">🏢</span>
                                @item.Fornecedor?.NomeEmpresa
                            </td>

                            <!-- QUANTIDADE -->
                            <td class="text-center">
                                <span class="fw-semibold text-success">
                                    +@item.Quantidade
                                </span>
                            </td>

                            <!-- DATA -->
                            <td class="text-muted">
                                @item.Data.ToString("dd/MM/yyyy HH:mm")
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }

    <!-- PAGINAÇÃO -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)">«</a>
                </li>
            }

            @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-route-page="@i">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)">»</a>
                </li>
            }

        </ul>
    </nav>

</div>
