@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.HistoricoCompras>

@{
    ViewData["Title"] = "Histórico de Compras";
}

<div class="container mt-4">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4 shadow-sm">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">📥 Histórico de Compras de Consumíveis</h2>

        <div>
            <a asp-controller="Stock" asp-action="Index" class="btn btn-outline-primary me-2 px-4">
                ↩ Voltar ao Stock
            </a>

            <a asp-action="CreateEntrada" class="btn btn-success px-4">
                ➕ Nova Compra
            </a>
        </div>
    </div>


    @if (Model.Items == null || !Model.Items.Any())
    {
        <div class="alert alert-warning text-center py-4 shadow-sm">
            <h4 class="fw-bold">Nenhuma compra registada</h4>
            <p>Ainda não existem entradas de stock registadas.</p>

            <a asp-action="CreateEntrada" class="btn btn-success px-4">
                ➕ Registar Primeira Compra
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped shadow-sm align-middle">
                <thead style="background-color: #e8f1ff;" class="fw-bold text-center">
                    <tr>
                        <th>Consumível</th>
                        <th>Zona</th>
                        <th>Quantidade</th>
                        <th>Data</th>
                        <th style="width:170px;">Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr class="text-center">
                            <td>@item.Stock?.Consumivel?.Nome</td>
                            <td>@item.Stock?.Zona?.Nome</td>
                            <td>@item.Quantidade</td>
                            <td>@item.Data.ToString("dd/MM/yyyy HH:mm")</td>

                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-info btn-sm text-white px-3">Ver</a>

                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-danger btn-sm px-3">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }


    <!-- PAGINAÇÃO -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)">«</a>
                </li>
            }

            @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-route-page="@i">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)">»</a>
                </li>
            }

        </ul>
    </nav>

</div>