@model HealthWellbeingRoom.Models.Equipment

@{
	ViewData["Title"] = "Equipamento";
}

<h3>Editar @ViewBag.Title</h3>

<form asp-action="Edit">
	<div class="card">
		<div class="card-header bg-dark text-white"><i class="bi bi-pc-display"></i> @ViewBag.Title</div>
		<div class="card-body">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="EquipmentId" />

			<div class="row mb-3">
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="Name" class="control-label">Nome</label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="Quantity" class="control-label">Quantidade</label>
						<input asp-for="Quantity" class="form-control" />
						<span asp-validation-for="Quantity" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="row mb-3">
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="Manufacturer" class="control-label">Fabricante</label>
						<input asp-for="Manufacturer" class="form-control" />
						<span asp-validation-for="Manufacturer" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="SerialNumber" class="control-label">Nº Série</label>
						<input asp-for="SerialNumber" class="form-control" />
						<span asp-validation-for="SerialNumber" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="form-group mb-3">
				<label asp-for="Description" class="control-label">Descrição</label>
				<textarea asp-for="Description" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="row mb-3">
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="PurchaseDate" class="control-label">Data compra</label>
						<input asp-for="PurchaseDate" class="form-control" />
						<span asp-validation-for="PurchaseDate" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					@*<div class="form-group">
                        <label asp-for="SalaId" class="control-label"></label>
                        <input asp-for="SalaId" class="form-control" />
                        <span asp-validation-for="SalaId" class="text-danger"></span>
                    </div>*@
				</div>
			</div>
		</div>
	</div>
	<div class="text-end mt-3">
		<button type="submit" class="btn btn-success" >
			<i class="bi bi-floppy"></i> Guardar
		</button>
		<a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar a Lista</a>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
