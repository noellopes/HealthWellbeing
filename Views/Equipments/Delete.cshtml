@model HealthWellbeingRoom.Models.Equipment

@{
    ViewData["Title"] = "Equipamento";
}

<h1>Excluir @ViewBag.Title</h1>

<h5>Tem certeza de que deseja eliminar este @ViewBag.Title?</h5>
<div class="card">
    <div class="card-header bg-danger text-white">@ViewBag.Title</div>
    <div class="card-body">
        <dl class="row">
            <dt class = "col-sm-2">
                Nome
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-2">
                Descrição
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class = "col-sm-2">
                Quantidade
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class = "col-sm-2">
                Fabricante
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Manufacturer)
            </dd>
            <dt class="col-sm-2">
                Nº Série
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SerialNumber)
            </dd>
            <dt class="col-sm-2">
                Data compra
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PurchaseDate)
            </dd>
            <dt class = "col-sm-2">
                Data criação
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="text-end mt-3">
    <input type="hidden" asp-for="EquipmentId" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Eliminar
    </button>
    <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar a Lista</a>
</form>
