@model HealthWellbeingRoom.Models.Equipment

@{
    ViewData["Title"] = "Equipamento";
}

<h3>Detalhes @ViewBag.Title</h3>

<div class="card">
    <div class="card-header bg-info"><i class="bi bi-pc-display"></i> @ViewBag.Title</div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Nome
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Sala
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Room.Name)
            </dd>
            <dt class="col-sm-2">
                Descrição
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                Quantidade
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                Fabricante
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Manufacturer)
            </dd>
            <dt class="col-sm-2">
                Nº Série
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SerialNumber)
            </dd>
            <dt class="col-sm-2">
                Data compra
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PurchaseDate)
            </dd>
            <dt class="col-sm-2">
                Data criação
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
        </dl>
    </div>
    
</div>
<div class="mt-3 text-end">
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.EquipmentId"><i class="bi bi-floppy"></i> Editar</a>
    <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar a Lista</a>
</div>
