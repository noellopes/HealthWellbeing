@model IEnumerable<HealthWellbeingRoom.Models.Equipment>

@{
    ViewData["Title"] = "Equipamentos Registados";
    var successMessage = TempData["SuccessMessage"];
}

<h1 class="mb-4">@ViewData["Title"]</h1>


@if (successMessage != null)
{
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}


@if(!Model.Any())
{
    <div class="text-end mb-4">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Registar Novo
        </a>
    </div>

    <div class="alert alert-warning d-flex align-items-center border-2" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">Nenhum Equipamento Encontrado</h4>
            <p>Não há equipamentos registados, crie novos para poder visualizar.</p>
        </div>
    </div>
} else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Lista de Equipamentos</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Registar Novo
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Sala</th>
                    <th scope="col">Estado</th>
                    <th class="text-end" scope="col">Acções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var equip in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => equip.Name)</td>
                        <td>@Html.DisplayFor(modelItem => equip.EquipmentType.Name)</td>
                        <td>@Html.DisplayFor(modelItem => equip.Room.Name)</td>
                        <td>@Html.DisplayFor(modelItem => equip.EquipmentStatus.Name)</td>

                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@equip.EquipmentId" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <a asp-action="Details" asp-route-id="@equip.EquipmentId" class="btn btn-sm btn-info me-1">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>

                            <a asp-action="Delete" asp-route-id="@equip.EquipmentId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>






