@model HealthWellbeing.Models.Activity

@{
    ViewData["Title"] = "Editar Activity";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="h5 mb-1">@ViewData["Title"]</h1>
                    <h4 class="h6 text-muted mb-3">Activity</h4>
                    <hr />

                    <form asp-action="Edit" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- id escondido -->
                        <input type="hidden" asp-for="ActivityId" />

                        <!-- Nome da atividade -->
                        <div class="mb-3">
                            <label asp-for="ActivityName" class="form-label"></label>
                            <input asp-for="ActivityName" class="form-control" />
                            <span asp-validation-for="ActivityName" class="text-danger"></span>
                        </div>

                        <!-- Tipo da atividade -->
                        <div class="mb-3">
                            <label asp-for="ActivityType" class="form-label"></label>
                            <input asp-for="ActivityType" class="form-control" />
                            <span asp-validation-for="ActivityType" class="text-danger"></span>
                        </div>

                        <!-- Descrição -->
                        <div class="mb-3">
                            <label asp-for="ActivityDescription" class="form-label"></label>
                            <textarea asp-for="ActivityDescription"
                                      class="form-control"
                                      rows="3"></textarea>
                            <span asp-validation-for="ActivityDescription" class="text-danger"></span>
                        </div>

                        <!-- Recompensa -->
                        <div class="mb-3">
                            <label asp-for="ActivityReward" class="form-label"></label>
                            <input asp-for="ActivityReward" class="form-control" />
                            <span asp-validation-for="ActivityReward" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
