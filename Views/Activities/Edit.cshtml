@model HealthWellbeing.Models.Activity

@{
    ViewData["Title"] = "Edit Activity";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-7">

            @* --- CARD CONTAINER --- *@
            <div class="card border-0 shadow-lg rounded-4 animate__animated animate__fadeInUp">

                @* --- HEADER (Yellow to match Badge example) --- *@
                <div class="card-header bg-warning text-dark p-4 rounded-top-4">
                    <div class="d-flex align-items-center gap-3">
                        <div class="p-2 rounded-3 border border-dark border-opacity-25">
                            <i class="bi bi-pencil-square fs-4 text-dark"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Edit Activity</h5>
                            <p class="mb-0 small text-dark opacity-75">Modify activity details</p>
                        </div>
                    </div>
                </div>

                @* --- FORM BODY --- *@
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="ActivityId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert"></div>

                        @* --- ROW 1: NAME --- *@
                        <div class="mb-3">
                            <label asp-for="ActivityName" class="form-label fw-bold text-dark mb-1">Activity Name</label>
                            <input asp-for="ActivityName" class="form-control shadow-sm" placeholder="e.g. Morning Jog" />
                            <span asp-validation-for="ActivityName" class="text-danger small"></span>
                        </div>

                        @* --- ROW 2: TYPE & POINTS --- *@
                        <div class="row g-3 mb-3">
                            @* Type *@
                            <div class="col-md-6">
                                <label asp-for="ActivityTypeId" class="form-label fw-bold text-dark mb-1">Type</label>
                                <select asp-for="ActivityTypeId" class="form-select shadow-sm" asp-items="ViewBag.ActivityTypeId"></select>
                                <span asp-validation-for="ActivityTypeId" class="text-danger small"></span>
                            </div>

                            @* Reward Points *@
                            <div class="col-md-6">
                                <label asp-for="ActivityReward" class="form-label fw-bold text-dark mb-1">Reward Points</label>
                                <div class="input-group shadow-sm">
                                    <input asp-for="ActivityReward" class="form-control" type="number" min="0" />
                                    <span class="input-group-text bg-light text-muted">pts</span>
                                </div>
                                <span asp-validation-for="ActivityReward" class="text-danger small"></span>
                            </div>
                        </div>

                        @* --- ROW 3: DESCRIPTION --- *@
                        <div class="mb-4">
                            <label asp-for="ActivityDescription" class="form-label fw-bold text-dark mb-1">Description</label>
                            <textarea asp-for="ActivityDescription" class="form-control shadow-sm" style="height: 100px" placeholder="Describe the activity..."></textarea>
                            <span asp-validation-for="ActivityDescription" class="text-danger small"></span>
                        </div>

                        @* --- ACTIONS --- *@
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                                Back to List
                            </a>
                            <button type="submit" class="btn btn-warning px-4 shadow-sm">
                                Save Changes
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}