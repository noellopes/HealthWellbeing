@model IEnumerable<HealthWellbeing.Models.Activity>

@{
    ViewData["Title"] = "Atividades";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h1 class="h5 mb-0">@ViewData["Title"]</h1>
            <a asp-action="Create" class="btn btn-primary btn-sm">Criar nova</a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ActivityId)</th>
                            <th>@Html.DisplayNameFor(model => model.ActivityName)</th>
                            <th>@Html.DisplayNameFor(model => model.ActivityType)</th>
                            <th class="text-end">@Html.DisplayNameFor(model => model.ActivityReward)</th>
                            <th class="text-end">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ActivityId)</td>
                                <td>@Html.DisplayFor(modelItem => item.ActivityName)</td>
                                <td>@Html.DisplayFor(modelItem => item.ActivityType)</td>
                                <td class="text-end">@Html.DisplayFor(modelItem => item.ActivityReward)</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group" aria-label="Ações">
                                        <a asp-action="Edit" asp-route-id="@item.ActivityId" class="btn btn-outline-primary">Editar</a>
                                        <a asp-action="Details" asp-route-id="@item.ActivityId" class="btn btn-outline-secondary">Detalhes</a>
                                        <a asp-action="Delete" asp-route-id="@item.ActivityId" class="btn btn-outline-danger">Eliminar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
