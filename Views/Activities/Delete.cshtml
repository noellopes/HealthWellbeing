@model HealthWellbeing.Models.Activity

@{
    ViewData["Title"] = "Delete Activity";

    // Contagem de dependências para lógica visual
    int eventCount = Model.EventActivities?.Count ?? 0;
    int customerCount = Model.CustomerActivities?.Count ?? 0;
    bool isInUse = eventCount > 0 || customerCount > 0;

    // Verifica se veio erro do Controller ou se detetamos uso localmente
    bool hasError = ViewBag.ErrorMessage != null || isInUse;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-7">

            @* --- CARD CONTAINER --- *@
            <div class="card border-0 shadow-lg rounded-4 animate__animated animate__fadeInUp">

                @* --- HEADER --- *@
                <div class="card-header bg-danger text-white p-4 rounded-top-4">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-white bg-opacity-25 p-2 rounded-3">
                            <i class="bi bi-trash3-fill fs-4 text-white"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Delete Activity</h5>
                            <p class="mb-0 small text-white opacity-75">Permanent removal confirmation</p>
                        </div>
                    </div>
                </div>

                @* --- BODY --- *@
                <div class="card-body p-4">

                    @* --- ALERT MESSAGE --- *@
                    @if (hasError) {
                        <div class="alert alert-danger bg-danger bg-opacity-10 border-0 mb-4 d-flex align-items-center rounded-3" role="alert">
                            <i class="bi bi-exclamation-triangle-fill text-danger me-3 fs-4"></i>
                            <div>
                                <span class="fw-bold text-danger">Unable to Delete</span>
                                <span class="text-danger opacity-75 d-block small">
                                    @(ViewBag.ErrorMessage ?? "This activity is currently in use by the system.")
                                </span>
                            </div>
                        </div>
                    }
                    else {
                        <div class="alert alert-warning bg-warning bg-opacity-10 border-0 mb-4 d-flex align-items-center rounded-3" role="alert">
                            <i class="bi bi-exclamation-triangle-fill text-warning me-3 fs-4"></i>
                            <div>
                                <span class="fw-bold text-warning text-dark">Are you sure?</span>
                                <span class="text-dark opacity-75 d-block small">This action cannot be undone.</span>
                            </div>
                        </div>
                    }

                    @* --- INFO FIELDS --- *@

                    @* Row 1: Name & Type *@
                    <div class="row g-3 mb-3">
                        <div class="col-md-8">
                            <label class="form-label fw-bold text-dark mb-1">Name</label>
                            <div class="p-2 border rounded-3 bg-light text-dark">
                                @Html.DisplayFor(model => model.ActivityName)
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-dark mb-1">Type</label>
                            <div class="p-2 border rounded-3 bg-light text-dark">
                                @Html.DisplayFor(model => model.ActivityType.Name)
                            </div>
                        </div>
                    </div>

                    @* Row 2: Points (Full width since we don't have Status) *@
                    <div class="row g-3 mb-3">
                        <div class="col-md-12">
                            <label class="form-label fw-bold text-dark mb-1">Reward Points</label>
                            <div class="p-2 border rounded-3 bg-light text-dark d-flex align-items-center">
                                <span class="fw-bold me-1">@Model.ActivityReward</span>
                                <span class="small text-muted">pts</span>
                            </div>
                        </div>
                    </div>

                    @* Row 3: Description *@
                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark mb-1">Description</label>
                        <div class="p-3 border rounded-3 bg-light text-secondary" style="min-height: 80px;">
                            @if (!string.IsNullOrEmpty(Model.ActivityDescription)) {
                                @Model.ActivityDescription
                            }
                            else {
                                <span class="fst-italic opacity-50">No description provided.</span>
                            }
                        </div>
                    </div>

                    <hr class="my-4 opacity-10" />

                    @* --- USAGE STATUS / DEPENDENCY CHECK --- *@

                    @if (isInUse) {
                        @* CASO: EM USO (PERIGO) *@
                        <div class="d-flex align-items-center p-3 border border-danger border-opacity-25 bg-danger bg-opacity-10 rounded-3 mb-4">
                            <i class="bi bi-shield-lock-fill fs-3 text-danger me-3"></i>
                            <div>
                                <div class="small text-danger text-uppercase fw-bold">Active Dependencies Detected</div>
                                <div class="text-dark small mt-1">
                                    This activity is linked to:
                                    <ul class="mb-0 ps-3 mt-1 fw-bold">
                                        @if (eventCount > 0) {
                                            <li>@eventCount Event(s)</li>
                                        }
                                        @if (customerCount > 0) {
                                            <li>@customerCount Customer Record(s)</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    else {
                        @* CASO: SEGURO *@
                        <div class="d-flex align-items-center p-3 border border-success border-opacity-25 bg-success bg-opacity-10 rounded-3 mb-4">
                            <i class="bi bi-check-circle-fill fs-3 text-success me-3"></i>
                            <div>
                                <div class="small text-success text-uppercase fw-bold">Safe to Delete</div>
                                <div class="fw-bold text-dark small">
                                    No events or customer history found for this activity.
                                </div>
                            </div>
                        </div>
                    }

                    @* --- ACTION BUTTONS --- *@
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ActivityId" />

                        <div class="d-flex justify-content-end gap-2 pt-2 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                                Back to List
                            </a>

                            @* Só mostra o botão de apagar se NÃO houver erro/dependências *@
                            @if (!hasError) {
                                <button type="submit" class="btn btn-danger px-4 shadow-sm">
                                    Confirm Delete
                                </button>
                            }
                            else {
                                <a asp-action="Edit" asp-route-id="@Model.ActivityId" class="btn btn-warning px-4 shadow-sm">
                                    Go to Edit
                                </a>
                            }
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>