@model HealthWellbeing.Models.PlanoExercicios

@{
    ViewData["Title"] = "Gerar Plano Automático";
    bool isStaff = ViewBag.IsStaff ?? false;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-cpu"></i> Gerador de Planos Inteligente</h3>
                </div>
                <div class="card-body">

                    <div class="alert alert-light border-start border-success border-4">
                        <h5 class="alert-heading text-success">Como funciona?</h5>
                        <p class="mb-0">
                            O nosso algoritmo analisa o seu <strong>Objetivo Físico</strong> e os seus <strong>Problemas de Saúde</strong>
                            para selecionar os melhores exercícios. Pode refinar a pesquisa abaixo.
                        </p>
                    </div>

                    <form asp-action="CreateAutomatico" method="post" class="mt-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @* --- SELEÇÃO DE UTENTE (Staff vs Utente) --- *@
                        @if (isStaff)
                        {
                            <div class="form-group mb-4">
                                <label asp-for="UtenteGrupo7Id" class="control-label fw-bold mb-2">Selecione o Utente Destino</label>
                                <select asp-for="UtenteGrupo7Id" class="form-select form-select-lg" asp-items="ViewBag.UtenteGrupo7Id">
                                    <option value="">-- Clique para selecionar --</option>
                                </select>
                                <span asp-validation-for="UtenteGrupo7Id" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <div class="text-center mb-4 p-3 bg-light rounded">
                                <h4 class="text-muted">Plano a ser gerado para:</h4>
                                <h2 class="text-dark fw-bold">@ViewBag.UtenteFixoNome</h2>
                                <input type="hidden" name="UtenteGrupo7Id" value="@ViewBag.UtenteFixoId" />
                            </div>
                        }

                        <div class="mb-4">
                            <label for="quantidadeExercicios" class="form-label fw-bold">Quantos exercícios deseja?</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-list-ol"></i></span>
                                <input type="number" id="quantidadeExercicios" name="quantidadeExercicios" class="form-control form-control-lg" value="5" min="1" max="15" required />
                            </div>
                        </div>

                        @* --- NOVOS FILTROS AVANÇADOS --- *@
                        <div class="accordion mb-4 shadow-sm" id="accordionFiltros">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button collapsed fw-bold text-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFiltros" aria-expanded="false" aria-controls="collapseFiltros">
                                        <i class="bi bi-sliders me-2"></i> Preferências de Treino (Opcional)
                                    </button>
                                </h2>
                                <div id="collapseFiltros" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionFiltros">
                                    <div class="accordion-body bg-light">
                                        <div class="row">
                                            @* 1. TIPOS DE EXERCÍCIO *@
                                            <div class="col-md-4 mb-3">
                                                <label class="fw-bold mb-2 text-secondary">Tipos</label>
                                                <div class="card p-2" style="max-height: 200px; overflow-y: auto;">
                                                    @if (ViewBag.Tipos != null)
                                                    {
                                                        foreach (var item in ViewBag.Tipos)
                                                        {
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="filtroTipos" value="@item.TipoExercicioId" id="tipo_@item.TipoExercicioId">
                                                                <label class="form-check-label" for="tipo_@item.TipoExercicioId">@item.NomeTipoExercicios</label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                            </div>

                                            @* 2. GRUPOS MUSCULARES *@
                                            <div class="col-md-4 mb-3">
                                                <label class="fw-bold mb-2 text-secondary">Músculos</label>
                                                <div class="card p-2" style="max-height: 200px; overflow-y: auto;">
                                                    @if (ViewBag.Grupos != null)
                                                    {
                                                        foreach (var item in ViewBag.Grupos)
                                                        {
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="filtroGrupos" value="@item.GrupoMuscularId" id="grupo_@item.GrupoMuscularId">
                                                                <label class="form-check-label" for="grupo_@item.GrupoMuscularId">@item.GrupoMuscularNome</label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                            </div>

                                            @* 3. EQUIPAMENTOS *@
                                            <div class="col-md-4 mb-3">
                                                <label class="fw-bold mb-2 text-secondary">Equipamento</label>
                                                <div class="card p-2" style="max-height: 200px; overflow-y: auto;">
                                                    @if (ViewBag.Equipamentos != null)
                                                    {
                                                        foreach (var item in ViewBag.Equipamentos)
                                                        {
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="filtroEquipamentos" value="@item.EquipamentoId" id="eq_@item.EquipamentoId">
                                                                <label class="form-check-label" for="eq_@item.EquipamentoId">@item.NomeEquipamento</label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <small class="text-muted"><i class="bi bi-info-circle"></i> Deixe em branco para considerar todos.</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg py-3">
                                <i class="bi bi-magic"></i> Gerar Plano Personalizado
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}