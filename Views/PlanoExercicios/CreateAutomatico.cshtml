@model HealthWellbeing.Models.PlanoExercicios

@{
    ViewData["Title"] = "Gerar Plano Automático";
    bool isStaff = ViewBag.IsStaff ?? false;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-cpu"></i> Gerador de Planos Inteligente</h3>
                </div>
                <div class="card-body">

                    <div class="alert alert-light border-start border-success border-4">
                        <h5 class="alert-heading text-success">Como funciona?</h5>
                        <p class="mb-0">
                            O nosso algoritmo analisa o seu <strong>Objetivo Físico</strong> e os seus <strong>Problemas de Saúde</strong>
                            para selecionar os melhores exercícios para si.
                        </p>
                    </div>

                    <form asp-action="CreateAutomatico" method="post" class="mt-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @if (isStaff)
                        {
                            <div class="form-group mb-4">
                                <label asp-for="UtenteGrupo7Id" class="control-label fw-bold mb-2">Selecione o Utente Destino</label>
                                <select asp-for="UtenteGrupo7Id" class="form-select form-select-lg" asp-items="ViewBag.UtenteGrupo7Id">
                                    <option value="">-- Clique para selecionar --</option>
                                </select>
                                <span asp-validation-for="UtenteGrupo7Id" class="text-danger"></span>
                            </div>
                        }
                        else
                        {
                            <div class="text-center mb-4 p-3 bg-light rounded">
                                <h4 class="text-muted">Plano a ser gerado para:</h4>
                                <h2 class="text-dark fw-bold">@ViewBag.UtenteFixoNome</h2>
                                <input type="hidden" name="UtenteGrupo7Id" value="@ViewBag.UtenteFixoId" />
                            </div>
                        }

                        <div class="mb-4">
                            <label for="quantidadeExercicios" class="form-label fw-bold">Quantos exercícios deseja no plano?</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-list-ol"></i></span>
                                <input type="number"
                                       id="quantidadeExercicios"
                                       name="quantidadeExercicios"
                                       class="form-control form-control-lg"
                                       value="5"
                                       min="1"
                                       max="15"
                                       required />
                            </div>
                            <small class="text-muted">Recomendado: Entre 3 e 8 exercícios.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg py-3">
                                <i class="bi bi-magic"></i> Gerar Plano Personalizado
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}