@model HealthWellbeing.Models.PlanoExercicios

@{
    ViewData["Title"] = "Apagar Plano";
}

<div class="alert alert-danger">
    <h3><i class="bi bi-exclamation-triangle"></i> Tem a certeza?</h3>
    <p>Esta ação irá remover permanentemente o plano de exercícios. O histórico do utente poderá ser afetado.</p>
</div>

<div class="card">
    <div class="card-header">
        Detalhes do Registo a Apagar
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Utente</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UtenteGrupo7.Nome)</dd>

            <dt class="col-sm-3">ID do Plano</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PlanoExerciciosId)</dd>

            <dt class="col-sm-3">Total Exercícios</dt>
            <dd class="col-sm-9">@(Model.Exercicios?.Count ?? 0)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PlanoExerciciosId" />
            <button type="submit" class="btn btn-danger">Confirmar Eliminação</button> |
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</div>