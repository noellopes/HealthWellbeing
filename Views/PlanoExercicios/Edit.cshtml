@model HealthWellbeing.Models.PlanoExercicios

@{
    ViewData["Title"] = "Editar Plano";
    var selecionados = ViewBag.ExerciciosSelecionados as int[] ?? new int[0];
}

<h1>Editar Plano</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlanoExerciciosId" />

            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    Configurações do Plano
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="UtenteGrupo7Id" class="control-label fw-bold"></label>
                        <select asp-for="UtenteGrupo7Id" class="form-select" asp-items="ViewBag.UtenteGrupo7Id"></select>
                        <span asp-validation-for="UtenteGrupo7Id" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    Exercícios do Plano
                </div>
                <div class="card-body">
                    <div class="row" style="max-height: 500px; overflow-y: auto;">
                        @if (ViewBag.TodosExercicios != null)
                        {
                            @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.TodosExercicios)
                            {
                                bool isChecked = selecionados.Contains(int.Parse(item.Value));

                                <div class="col-md-4 mb-2">
                                    <div class="form-check p-2 border rounded @(isChecked ? "bg-light border-primary" : "")">
                                        <input class="form-check-input ms-1" type="checkbox"
                                               name="exerciciosSelecionados"
                                               value="@item.Value"
                                               id="ex_@item.Value"
                                               @(isChecked ? "checked" : "") />

                                        <label class="form-check-label ms-2" for="ex_@item.Value">
                                            @item.Text
                                        </label>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar Alterações" class="btn btn-primary btn-lg" />
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}