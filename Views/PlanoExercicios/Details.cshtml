@model HealthWellbeing.Models.PlanoExercicios

@{
    ViewData["Title"] = "Detalhes do Plano";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-journal-text"></i> Detalhes do Plano</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>

    <div class="card mb-4 shadow-sm border-start border-primary border-4">
        <div class="card-body">
            <h4 class="mb-0">
                <i class="bi bi-person-circle"></i> Utente:
                <span class="fw-bold">@(Model.UtenteGrupo7?.Nome ?? "N/A")</span>
            </h4>
        </div>
    </div>

    <h3 class="mt-4 mb-3 text-primary">Exercícios do Plano</h3>

    @if (Model.Exercicios != null && Model.Exercicios.Any())
    {
        <div class="row">
            @foreach (var ex in Model.Exercicios)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-effect">
                        <div class="card-header bg-light fw-bold text-center border-bottom-0">
                            @ex.ExercicioNome
                        </div>

                        <div class="card-body d-flex flex-column">
                            <ul class="list-group list-group-flush small mb-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span><i class="bi bi-stopwatch"></i> Duração:</span>
                                    <span class="fw-bold">@ex.Duracao min</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span><i class="bi bi-repeat"></i> Séries/Reps:</span>
                                    <span class="fw-bold">@ex.Series x @ex.Repeticoes</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <span><i class="bi bi-lightning-charge"></i> Intensidade:</span>
                                    <span class="badge bg-warning text-dark">@ex.Intencidade/10</span>
                                </li>
                            </ul>

                            <hr class="text-muted my-2">

                            <h6 class="fw-bold text-muted small mb-1">Descrição:</h6>
                            <p class="card-text text-muted small flex-grow-1" style="white-space: pre-wrap;">@ex.Descricao</p>
                        </div>

                        <div class="card-footer bg-white text-center border-top-0 pb-3">
                            <a asp-controller="Exercicios"
                               asp-action="Details"
                               asp-route-id="@ex.ExercicioId"
                               class="btn btn-primary w-100">
                                <i class="bi bi-eye"></i> Ver Instruções Completas
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning d-flex align-items-center">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <div>Este plano ainda não contém exercícios registados.</div>
        </div>
    }

    <div class="mt-3">
        @if (User.IsInRole("Administrador") || User.IsInRole("ProfissionalSaude"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.PlanoExerciciosId" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar Plano
            </a>
        }
    </div>
</div>