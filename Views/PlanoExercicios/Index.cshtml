@model IEnumerable<HealthWellbeing.Models.PlanoExercicios>

@{
    ViewData["Title"] = "Planos de Exercício";
}

<h1>Planos de Exercício</h1>

<p>
    @if (User.IsInRole("Administrador") || User.IsInRole("ProfissionalSaude"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Criar Manual
        </a>
    }
    <a asp-action="CreateAutomatico" class="btn btn-success ms-2">
        <i class="bi bi-magic"></i> Gerar Automático
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Utente</th>
            <th>Qtd. Exercícios</th>
            <th>Progresso</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var qtd = item.PlanoExercicioExercicios?.Count ?? 0;
            var concluidos = item.PlanoExercicioExercicios?.Count(x => x.Concluido) ?? 0;
            var pct = qtd > 0 ? (concluidos * 100) / qtd : 0;

            <tr>
                <td>@item.PlanoExerciciosId</td>
                <td>
                    @Html.DisplayFor(modelItem => item.UtenteGrupo7.Nome)
                </td>
                <td>@qtd Exercícios</td>
                <td style="width: 20%;">
                    <div class="progress" style="height: 20px;">
                        <div class="progress-bar" role="progressbar" style="width: @pct%;" aria-valuenow="@pct" aria-valuemin="0" aria-valuemax="100">
                            @pct%
                        </div>
                    </div>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PlanoExerciciosId" class="btn btn-sm btn-info text-white">Treinar / Ver</a>

                    @if (User.IsInRole("Administrador") || User.IsInRole("ProfissionalSaude"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.PlanoExerciciosId" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.PlanoExerciciosId" class="btn btn-sm btn-danger">Apagar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>