@model HealthWellbeing.Models.Objetivo

@{
    ViewData["Title"] = "Criar Objetivo";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Nome</label>
        <input asp-for="Name" class="form-control" placeholder="Ex.: Perder 5 kg">
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label">Categoria</label>
        <input asp-for="Category" class="form-control" placeholder="Ex.: Perda de Peso">
        <span asp-validation-for="Category" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Details" class="form-label">Detalhes</label>
        <textarea asp-for="Details" class="form-control" rows="4" placeholder="Ex.: Caminhar 30 min/dia, reduzir açúcar..."></textarea>
        <span asp-validation-for="Details" class="text-danger small"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
