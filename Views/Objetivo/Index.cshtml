@model IEnumerable<HealthWellbeing.Models.Objetivo>

@{
    ViewData["Title"] = "Objetivos";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Criar novo</a>
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Ainda não existem objetivos.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Categoria</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ObjetivoId</td>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.ObjetivoId" class="btn btn-outline-secondary btn-sm">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@item.ObjetivoId" class="btn btn-outline-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.ObjetivoId" class="btn btn-outline-danger btn-sm"
                           onclick="return confirm('Tens a certeza que queres apagar?');">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
