@model HealthWellbeing.Models.Objetivo

@{
    ViewData["Title"] = "Editar Objetivo";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

@if (Model == null)
{
    <div class="alert alert-warning">Objetivo não encontrado.</div>
}
else
{
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ObjetivoId" />

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Nome</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label">Categoria</label>
            <input asp-for="Category" class="form-control">
            <span asp-validation-for="Category" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Details" class="form-label">Detalhes</label>
            <textarea asp-for="Details" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Details" class="text-danger small"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
