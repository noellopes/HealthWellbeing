@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.TrainingPlan>

@{
    ViewData["Title"] = "Training Plans";

    var searchPlan = ViewBag.SearchPlan;
    var searchTraining = ViewBag.SearchTraining;
}

<h1 class="display-4 text-primary mb-4">Training Plans</h1>

@if (TempData["Message"] != null)
{
    var message = TempData["Message"].ToString();
    var messageType = TempData["MessageType"]?.ToString() ?? "info";

    <div class="alert alert-@messageType alert-dismissible fade show shadow-sm" role="alert">
        @Html.Raw(message)
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Configured Training Plans</h2>
    <div class="d-flex justify-content-end">

        <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#trainingPlanSearch" aria-expanded="false" aria-controls="trainingPlanSearch">
            <i class="bi bi-search me-1"></i> Search
        </a>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Plan Configuration
        </a>

    </div>
</div>

<div class="collapse mt-2 mb-2" id="trainingPlanSearch">
    <div class="card card-body shadow-sm">
        <form asp-action="Index" method="get" class="row g-2">

            <div class="col-md-6">
                <label for="searchPlan" class="form-label">Plan Name</label>
                <input id="searchPlan" name="searchPlan" value="@searchPlan" class="form-control" placeholder="Search by plan..." type="search" />
            </div>

            <div class="col-md-6">
                <label for="searchTraining" class="form-label">Training Name</label>
                <input id="searchTraining" name="searchTraining" value="@searchTraining" class="form-control" placeholder="Search by training..." type="search" />
            </div>

            <div class="col-12 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Items.Any())
{
    <div class="alert alert-warning mt-4" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> No Training Plans Found</h4>
        <p>There are no training plans matching your criteria.</p>
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Plan</th>
                    <th>Training</th>
                    <th>Days/Week</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="fw-bold">@Html.DisplayFor(modelItem => item.Plan.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Training.Name)</td>
                        <td>
                            <span class="badge bg-info text-dark">@item.DaysPerWeek Days</span>
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.TrainingPlanId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.TrainingPlanId" class="btn btn-sm btn-info">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.TrainingPlanId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="TrainingPlan pages" class="mt-3">
        <ul class="pagination">
            @if (Model.CurrentPage == 1)
            {
                <li class="page-item disabled"><a class="page-link">First</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-searchPlan="@searchPlan" asp-route-searchTraining="@searchTraining">First</a></li>
            }

            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
            {
                if (p == Model.CurrentPage)
                {
                    <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@p" asp-route-searchPlan="@searchPlan" asp-route-searchTraining="@searchTraining">@p</a></li>
                }
            }

            @if (Model.CurrentPage == Model.TotalPages)
            {
                <li class="page-item disabled"><a class="page-link">Last</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-searchPlan="@searchPlan" asp-route-searchTraining="@searchTraining">Last</a></li>
            }
        </ul>
    </nav>
}