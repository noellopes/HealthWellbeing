@model HealthWellbeing.Models.TrainingPlan

@{
    ViewData["Title"] = "Create Training Plan";
}

<h1 class="display-4 text-primary mb-4">Create Training Plan</h1>

<h4 class="mb-3">Configure Plan & Training</h4>
<hr class="mb-4" />

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="PlanId" class="form-label fw-bold">Subscription Plan</label>
                    <select asp-for="PlanId" class="form-select" asp-items="ViewBag.PlanId">
                        <option value="">-- Select Plan --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="TrainingId" class="form-label fw-bold">Training Module</label>
                    <select asp-for="TrainingId" class="form-select" asp-items="ViewBag.TrainingId">
                        <option value="">-- Select Training --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="DaysPerWeek" class="form-label fw-bold"></label>
                    <input asp-for="DaysPerWeek" class="form-control" type="number" min="1" max="7" />
                    <span asp-validation-for="DaysPerWeek" class="text-danger"></span>
                    <small class="text-muted">How many times per week should this training be performed?</small>
                </div>

                <div class="mb-3 d-flex justify-content-between pt-2">
                    <input type="submit" value="Create Configuration" class="btn btn-primary btn-lg shadow" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}