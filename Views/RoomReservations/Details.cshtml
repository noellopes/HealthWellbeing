@model HealthWellbeingRoom.Models.RoomReservation

@{
    ViewData["Title"] = "Detalhes da Reserva";
}

<h1 class="mb-4 text-primary"><i class="bi bi-info-circle-fill"></i> Detalhes da Reserva da Sala</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">ID</dt>
            <dd class="col-sm-9">@Model?.RoomReservationId</dd>

            <dt class="col-sm-3 fw-bold">Responsável</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model?.ResponsibleName) ? Model.ResponsibleName : "—")</dd>

            <dt class="col-sm-3 fw-bold">Sala</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Room.Name)</dd>

            <dt class="col-sm-3 fw-bold">ID da Consulta</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.ConsultationId)</dd>

            <dt class="col-sm-3 fw-bold">Tipo de Consulta</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.ConsultationType)</dd>

            <dt class="col-sm-3 fw-bold">Paciente (ID)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.PatientId)</dd>

            <dt class="col-sm-3 fw-bold">Especialidade</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Specialty.Name)</dd>

            <dt class="col-sm-3 fw-bold">Início</dt>
            <dd class="col-sm-9">
                @(Model?.StartTime == default ? "—" : Model.StartTime.ToString("g"))
            </dd>

            <dt class="col-sm-3 fw-bold">Fim</dt>
            <dd class="col-sm-9">
                @(Model?.EndTime == default ? "—" : Model.EndTime.ToString("g"))
            </dd>

            <dt class="col-sm-3 fw-bold">Estado</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Status)</dd>

            <dt class="col-sm-3 fw-bold">Observações</dt>
            <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model?.Notes) ? Model.Notes : "—")</dd>
        </dl>

        <div class="text-end mt-4 gap-2 border-top pt-3">
            <a asp-action="Edit" asp-route-id="@Model?.RoomReservationId" class="btn btn-primary btn-sm" style="min-width:150px">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-sm" style="min-width:150px">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista
            </a>
        </div>
    </div>
</div>