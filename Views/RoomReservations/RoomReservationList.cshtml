@model IEnumerable<HealthWellbeingRoom.Models.RoomReservation>

@{
    ViewData["Title"] = "Reservas da Sala";

    bool isAdmin = User.IsInRole("Administrator");
    bool isLogTech = User.IsInRole("logisticsTechnician");
}

<h1 class="mb-4 text-success">
    <i class="bi bi-calendar-check"></i> Reservas da sala — @ViewBag.RoomName
</h1>

<div class="mb-3 d-flex justify-content-end">
    @if (isLogTech)
    {
        <a asp-controller="RoomReservations"
           asp-action="Create"
           class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle me-1"></i> Nova Reserva
        </a>
    }
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Nome do responsável</th>
                    <th>Sala</th>
                    <th>Início</th>
                    <th>Fim</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>

            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="bi bi-info-circle"></i> Não existem reservas para esta sala.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoomReservationId.ToString("D3")</td>
                            <td>@(string.IsNullOrWhiteSpace(item.ResponsibleName) ? "—" : item.ResponsibleName)</td>
                            <td>@(item.Room?.Name ?? "—")</td>

                            <!-- INÍCIO -->
                            <td>
                                @($"{item.ConsultationDate:dd/MM/yyyy} {item.StartHour:hh\\:mm}")
                            </td>

                            <!-- FIM -->
                            <td>
                                @($"{item.ConsultationDate:dd/MM/yyyy} {item.EndHour:hh\\:mm}")
                            </td>

                            <td class="text-center">

                                @if (isLogTech)
                                {
                                    <a asp-action="Edit"
                                       asp-route-id="@item.RoomReservationId"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                }

                                <a asp-controller="RoomReservations"
                                   asp-action="Details"
                                   asp-route-id="@item.RoomReservationId"
                                   asp-route-fromCreation="false"
                                   class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-info-circle-fill"></i> Detalhes
                                </a>

                                @if (isLogTech)
                                {
                                    <a asp-action="Delete"
                                       asp-route-id="@item.RoomReservationId"
                                       class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash-fill"></i> Eliminar
                                    </a>
                                }

                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="mt-4 d-flex justify-content-end gap-2">
            <a asp-controller="Rooms" asp-action="Details" asp-route-id="@ViewBag.RoomId" class="btn btn-primary">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Sala
            </a>
            <a asp-controller="Rooms" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-list-ul me-1"></i> Voltar à Lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}