@model IEnumerable<HealthWellbeingRoom.Models.RoomReservation>

@{
    ViewData["Title"] = "Reservas da Sala";


    bool isAdmin = User.IsInRole("Administrator");
    bool isLogTech = User.IsInRole("logisticsTechnician");
}

<h1 class="mb-4 text-primary">
    <i class="bi bi-calendar-check"></i> Reservas da sala — @ViewBag.RoomName
</h1>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <div>
        <a asp-controller="RoomReservations"
           asp-action="Create"
           class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle me-1"></i> Nova Reserva
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info mb-0">Não existem reservas para esta sala.</div>
        }
        else
        {
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Nome do responsável</th>
                        <th>Sala</th>
                        <th>Início</th>
                        <th>Fim</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoomReservationId.ToString("D3")</td>

                            <td>@(string.IsNullOrWhiteSpace(item.ResponsibleName) ? "—" : item.ResponsibleName)</td>

                            <td>@(item.Room?.Name ?? "—")</td>

                            <td>@(item.StartTime != default ? item.StartTime.ToString("dd/MM/yyyy HH:mm") : "—")</td>

                            <td>@(item.EndTime != default ? item.EndTime.ToString("dd/MM/yyyy HH:mm") : "—")</td>

                            <td class="text-center">

                                @if (isLogTech)
                                {
                                    <a asp-action="Edit"
                                       asp-route-id="@item.RoomReservationId"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square" aria-label="Editar sala"></i> Editar
                                    </a>
                                }

                                <a asp-controller="RoomReservations" 
                                   asp-action="Details"
                                   asp-route-id="@item.RoomReservationId"
                                   asp-route-fromCreation="false"
                                   class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-info-circle-fill" aria-label="Ver detalhes da sala"></i> Detalhes
                                </a>

                                @if (isLogTech)
                                {
                                    <a asp-action="Delete"
                                       asp-route-id="@item.RoomReservationId"
                                       class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash-fill" aria-label="Eliminar sala"></i> Eliminar
                                    </a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-3 text-end">
                <a asp-controller="Room"
                   asp-action="Details"
                   asp-route-id="@ViewBag.RoomId"
                   class="btn btn-outline-secondary btn-sm"
                   style="min-width:150px">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}