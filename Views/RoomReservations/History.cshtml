@model IEnumerable<HealthWellbeingRoom.Models.RoomReservationHistory>

@{
    ViewData["Title"] = "History";

    // Obtém o nome da sala do primeiro item, se existir
    var roomName = Model.FirstOrDefault()?.Room?.Name ?? "Sala";
}

<h1>Histórico de reserva da sala - "@roomName"</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Ainda não existem registos de histórico para esta sala.
    </div>
}
else
{
    <style>
        .linha-realizada {
            background-color: #d4edda; /* verde claro */
        }

        .linha-cancelada {
            background-color: #f8d7da; /* vermelho claro */
        }
    </style>

    <table class="table">
        <thead>
            <tr>
                <th>Id da Consulta</th>
                <th>Início</th>
                <th>Fim</th>
                <th>Responsável</th>
                <th>Estado Final</th>
                <th>Registado em</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var cssClass = item.FinalStatus == "Realizada"
                ? "linha-realizada"
                : item.FinalStatus == "Cancelada"
                ? "linha-cancelada"
                : "";

                <tr class="@cssClass">
                    <td>@item.ConsultationId.ToString("D3")</td>
                    <td>@item.StartTime.ToString("g")</td>
                    <td>@item.EndTime.ToString("g")</td>
                    <td>@item.ResponsibleName</td>
                    <td>@item.FinalStatus</td>
                    <td>@item.RecordedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}