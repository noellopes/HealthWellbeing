@model HealthWellbeingRoom.Models.RoomReservation

@{
    ViewData["Title"] = "Editar Reserva";
}

<h1 class="mb-4 text-success">
    <i class="bi bi-pencil-square"></i> Editar Reserva da Sala
</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post" id="edit-form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="RoomReservationId" />
            <input type="hidden" asp-for="ConsultationId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">

                <!-- Data da Consulta (bloqueada) -->
                <div class="col-md-6">
                    <label asp-for="ConsultationDate" class="form-label fw-bold">Data da Consulta</label>
                    <input type="date"
                           class="form-control"
                           value="@Model.ConsultationDate.ToString("yyyy-MM-dd")"
                           readonly />
                    <input type="hidden" asp-for="ConsultationDate" />
                </div>

                <!-- Sala -->
                <div class="col-md-6">
                    <label asp-for="RoomId" class="form-label fw-bold">Sala(*)</label>
                    <select asp-for="RoomId" class="form-select" asp-items="@(ViewBag.Rooms as SelectList)" required>
                        <option value="">Selecione a sala...</option>
                    </select>
                    <span asp-validation-for="RoomId" class="text-danger small"></span>
                </div>

                <!-- Hora de Fim -->
                <div class="col-md-6">
                    <label asp-for="EndHour" class="form-label fw-bold">Hora de Fim(*)</label>
                    <input asp-for="EndHour" type="time" class="form-control" required />
                    <span asp-validation-for="EndHour" class="text-danger small"></span>
                </div>


                <!-- Hora de Início -->
                <div class="col-md-6">
                    <label asp-for="StartHour" class="form-label fw-bold">Hora de Início(*)</label>
                    <input asp-for="StartHour" type="time" class="form-control" required />
                    <span asp-validation-for="StartHour" class="text-danger small"></span>
                </div>

                <!-- Responsável (bloqueado) -->
                <div class="col-md-6">
                    <label asp-for="ResponsibleName" class="form-label fw-bold">Responsável</label>
                    <input asp-for="ResponsibleName" class="form-control" readonly />
                    <input type="hidden" asp-for="ResponsibleName" />
                </div>

                <!-- Observações -->
                <div class="col-md-12">
                    <label asp-for="Notes" class="form-label fw-bold">Observações (Opcional)</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>

            </div>

            <div class="text-end mt-4 gap-2 border-top pt-3">
                <button id="save-btn" type="submit" class="btn btn-primary btn-sm" style="min-width:150px">
                    <i class="bi bi-check-circle me-1"></i> Guardar Alterações
                </button>
                <a asp-action="Details" asp-route-id="@Model.RoomReservationId" class="btn btn-secondary btn-sm" style="min-width:150px">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const form = document.getElementById("edit-form");
            const saveBtn = document.getElementById("save-btn");

            const initial = new FormData(form);

            function checkChanges() {
                const current = new FormData(form);
                let changed = false;

                for (let [key, value] of current.entries()) {
                    if (initial.get(key) !== value) {
                        changed = true;
                        break;
                    }
                }

                saveBtn.disabled = !changed;
            }

            form.addEventListener("input", checkChanges);
            form.addEventListener("change", checkChanges);

            saveBtn.disabled = true;
        });
    </script>
}