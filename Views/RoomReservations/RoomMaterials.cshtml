@model HealthWellbeingRoom.ViewModels.RoomMaterial

@{
    ViewData["Title"] = "Materiais da Sala";
}

<h2 class="mb-4 text-success">
    <i class="bi bi-box-seam"></i> Materiais da Sala "@Model.RoomName"
</h2>

<!-- ===================== DISPOSITIVOS MÉDICOS ===================== -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <i class="bi bi-hospital"></i> Dispositivos Médicos
    </div>

    <div class="card-body">
        @if (Model.MedicalDevices != null && Model.MedicalDevices.Any())
        {
            <p class="text-success fw-bold mb-3">
                <i class="bi bi-check-circle-fill"></i>
                A sala contém dispositivos médicos associados.
            </p>

            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Tipo</th>
                        <th>Número de Série</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dev in Model.MedicalDevices)
                    {
                        var dispositivo = dev.MedicalDevice;

                        <tr>
                            <td>@dispositivo?.Name</td>
                            <td>@dispositivo?.TypeMaterial?.Name</td>
                            <td>@dispositivo?.SerialNumber</td>
                            <td>@dispositivo?.CurrentStatus</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-danger fw-bold">
                <i class="bi bi-x-circle-fill"></i>
                A sala não contém dispositivos médicos associados.
            </p>
        }
    </div>
</div>

<!-- ===================== CONSUMÍVEIS ===================== -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-warning">
        <i class="bi bi-droplet-half"></i> Consumíveis
    </div>

    <div class="card-body">
        @if (Model.Consumables != null && Model.Consumables.Any())
        {
            <p class="text-success fw-bold mb-3">
                <i class="bi bi-check-circle-fill"></i>
                A sala contém consumíveis associados.
            </p>

            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Categoria</th>
                        <th>Quantidade</th>
                        <th>Observação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cons in Model.Consumables)
                    {
                        <tr>
                            <td>@cons.Consumivel?.Nome</td>
                            <td>@cons.Consumivel?.CategoriaConsumivel</td>
                            <td>@cons.Quantity</td>
                            <td>@(string.IsNullOrWhiteSpace(cons.Note) ? "—" : cons.Note)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-danger fw-bold">
                <i class="bi bi-x-circle-fill"></i>
                A sala não contém consumíveis associados.
            </p>
        }
    </div>
</div>

<!-- ===================== BOTÃO VOLTAR ===================== -->
<div class="mt-3 d-flex justify-content-end w-100">
    <a asp-action="Index" class="btn btn-primary btn-sm">
        <i class="bi bi-arrow-left-circle"></i> Voltar à lista de reservas
    </a>
</div>