@model HealthWellbeingRoom.ViewModels.RoomMaterial

@{
    ViewData["Title"] = "Materiais da Sala";
}

<h2 class="mb-4 text-success">
    <i class="bi bi-box-seam"></i> Materiais da Sala "@Model.RoomName"
</h2>

<!-- ===================== DISPOSITIVOS MÉDICOS ===================== -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <i class="bi bi-hospital"></i> Dispositivos Médicos
    </div>

    <div class="card-body">
        @if (Model.DevicesMissing != null && Model.DevicesMissing.Any())
        {
            <p class="text-danger fw-bold">
                <i class="bi bi-x-circle-fill"></i>
                A sala não contém todos os dispositivos médicos obrigatórios para a especialidade!
            </p>

            <button class="btn btn-danger btn-sm mt-2"
                    data-bs-toggle="collapse"
                    data-bs-target="#faltasDispositivos">
                <i class="bi bi-eye"></i> Ver dispositivos em falta
            </button>

            <div id="faltasDispositivos" class="collapse mt-3">
                @if (Model.DevicesMissing.Any())
                {
                    <div class="mb-3">
                        <table class="table table-bordered table-sm mt-3">
                            <thead class="table-light">
                                <tr>
                                    <th>Nome</th>
                                    <th>Tipo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in Model.DevicesMissing)
                                {
                                    <tr>
                                        <td>@d.Name</td>
                                        <td>@d.TypeMaterial?.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-controller="RoomMedDevice"
                           asp-action="Add"
                           asp-route-roomId="@Model.RoomId"
                           asp-route-origin="RoomMaterials"
                           class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle me-1"></i> Adicionar dispositivo
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-2">
                        Nenhum dispositivo obrigatório está em falta.
                    </div>
                }
            </div>

            @* tabela com os que já existem na sala *@
            @if (Model.MedicalDevices != null && Model.MedicalDevices.Any())
            {
                <hr />
                <h6 class="fw-bold">Dispositivos presentes na sala</h6>
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Tipo</th>
                            <th>Número de Série</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dev in Model.MedicalDevices)
                        {
                            var dispositivo = dev.MedicalDevice;
                            <tr>
                                <td>@dispositivo?.Name</td>
                                <td>@dispositivo?.TypeMaterial?.Name</td>
                                <td>@dispositivo?.SerialNumber</td>
                                <td>@dispositivo?.CurrentStatus</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
        else
        {
            <p class="text-success fw-bold mb-3">
                <i class="bi bi-check-circle-fill"></i>
                A sala contém todos os dispositivos médicos obrigatórios para a especialidade.
            </p>

            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Tipo</th>
                        <th>Número de Série</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dev in Model.MedicalDevices)
                    {
                        var dispositivo = dev.MedicalDevice;
                        <tr>
                            <td>@dispositivo?.Name</td>
                            <td>@dispositivo?.TypeMaterial?.Name</td>
                            <td>@dispositivo?.SerialNumber</td>
                            <td>@dispositivo?.CurrentStatus</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-end">
                <button class="btn btn-secondary btn-sm" disabled>
                    <i class="bi bi-eye-slash"></i> Ver dispositivos em falta
                </button>
            </div>
        }
    </div>
</div>

<!-- ===================== CONSUMÍVEIS ===================== -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-warning">
        <i class="bi bi-droplet-half"></i> Consumíveis
    </div>

    <div class="card-body">
        @if (Model.ConsumablesMissing != null && Model.ConsumablesMissing.Any())
        {
            <p class="text-danger fw-bold">
                <i class="bi bi-x-circle-fill"></i>
                A sala não contém todos os consumíveis obrigatórios para a especialidade!
            </p>

            <button class="btn btn-danger btn-sm mt-2"
                    data-bs-toggle="collapse"
                    data-bs-target="#faltasConsumiveis">
                <i class="bi bi-eye"></i> Ver consumíveis em falta
            </button>

            <div id="faltasConsumiveis" class="collapse mt-3">
                <div class="mb-3">
                    <table class="table table-bordered table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>Categoria</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.ConsumablesMissing)
                            {
                                <tr>
                                    <td>@c.Nome</td>
                                    <td>@c.CategoriaConsumivel?.Nome</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-controller="RoomConsumable"
                       asp-action="Add"
                       asp-route-roomId="@Model.RoomId"
                       asp-route-origin="RoomMaterials"
                       class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle me-1"></i> Adicionar consumiveis
                    </a>
                </div>
            </div>

            @if (Model.Consumables != null && Model.Consumables.Any())
            {
                <hr />
                <h6 class="fw-bold">Consumíveis presentes na sala</h6>
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Categoria</th>
                            <th>Stock</th>
                            <th>Quantidade máxima</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cons in Model.Consumables)
                        {
                            <tr>
                                <td>@cons.Consumivel?.Nome</td>
                                <td>@cons.Consumivel?.CategoriaConsumivel?.Nome</td>
                                <td>@cons.Quantity</td>
                                <td>@cons.Consumivel?.QuantidadeMaxima</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
        else
        {
            <p class="text-success fw-bold mb-3">
                <i class="bi bi-check-circle-fill"></i>
                A sala contém todos os consumíveis obrigatórios para a especialidade.
            </p>

            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Categoria</th>
                        <th>Stock</th>
                        <th>Quantidade utilizada</th>
                        <th>Quantidade máxima</th>
                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < Model.Consumables.Count; i++)
                    {
                        <tr>
                            <td>@Model.Consumables[i].Consumivel?.Nome</td>
                            <td>@Model.Consumables[i].Consumivel?.CategoriaConsumivel?.Nome</td>
                            <td>@Model.Consumables[i].Quantity</td>

                            <!-- CAMPO + BOTÃO NA MESMA COLUNA -->
                            <td style="white-space: nowrap;">
                                <input type="number"
                                       id="usedQuantity_@Model.Consumables[i].ConsumivelId"
                                       value="@Model.Consumables[i].usedQuantity"
                                       class="form-control-sm d-inline-block"
                                       disabled
                                       style="width: 80px;" />

                                <button type="button"
                                        class="btn btn-outline-primary btn-sm ms-1"
                                        onclick="toggleUsedQuantity(@Model.Consumables[i].ConsumivelId)">
                                    Editar
                                </button>
                            </td>

                            <td>@Model.Consumables[i].Consumivel?.QuantidadeMaxima</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-end">
                <button class="btn btn-secondary btn-sm" disabled>
                    <i class="bi bi-eye-slash"></i> Ver consumíveis em falta
                </button>
            </div>
        }
    </div>
</div>

<!-- ===================== BOTÃO VOLTAR ===================== -->
<div class="mt-3 d-flex justify-content-end w-100">
    <a asp-action="Index" class="btn btn-primary btn-sm">
        <i class="bi bi-arrow-left-circle"></i> Voltar à lista de reservas
    </a>
</div>

<script>
    function toggleUsedQuantity(id) {
        const input = document.getElementById(`usedQuantity_${id}`);
        const isDisabled = input.disabled;

        if (isDisabled) {
            input.disabled = false;
            input.focus();
        } else {
            input.disabled = true;
            const novaQuantidade = input.value;

            fetch('/RoomConsumable/AtualizarUsado', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ id: id, quantity: novaQuantidade })
            })
            .then(response => {
                if (!response.ok) throw new Error("Erro ao atualizar");
                return response.json();
            })
            .then(data => {
                console.log("Atualizado com sucesso:", data);
            })
            .catch(error => {
                alert("Erro ao atualizar quantidade.");
                console.error(error);
            });
        }
    }
</script>