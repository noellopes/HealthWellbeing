@model HealthWellbeingRoom.Models.RoomReservation

@{
    ViewData["Title"] = "Nova Reserva de Sala";
}

<h1 class="mb-4 text-primary"><i class="bi bi-calendar-plus"></i> Criar Reserva da sala</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="ConsultationId" class="form-label fw-bold">ID da Consulta</label>
                    <input asp-for="ConsultationId" class="form-control" placeholder="Ex: 101" />
                    <span asp-validation-for="ConsultationId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="RoomId" class="form-label fw-bold">Sala(*)</label>
                    <select asp-for="RoomId" class="form-select" asp-items="@(ViewBag.Rooms as SelectList)" required>
                        <option value="">Selecione a sala...</option>
                    </select>
                    <span asp-validation-for="RoomId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="StartTime" class="form-label fw-bold">Início(*)</label>
                    <input asp-for="StartTime" type="datetime-local" class="form-control" value="@(Model?.StartTime.ToString("yyyy-MM-ddTHH:mm"))" required />
                    <span asp-validation-for="StartTime" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="EndTime" class="form-label fw-bold">Fim(*)</label>
                    <input asp-for="EndTime" type="datetime-local" class="form-control" value="@(Model?.EndTime.ToString("yyyy-MM-ddTHH:mm"))" required />
                    <span asp-validation-for="EndTime" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ResponsibleName" class="form-label fw-bold">Responsável(*)</label>
                    <input asp-for="ResponsibleName" class="form-control" placeholder="Ex: Dr. João Silva" required />
                    <span asp-validation-for="ResponsibleName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Notes" class="form-label fw-bold">Observações (Opcional)</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Informações adicionais..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>
            </div>

            <div class="text-end mt-4 gap-2 border-top pt-3">
                <button type="submit" class="btn btn-success btn-sm" style="min-width:150px">
                    <i class="bi bi-check-circle me-1"></i> Criar Reserva
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-sm" style="min-width:150px">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}