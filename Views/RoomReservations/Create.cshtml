@model HealthWellbeingRoom.Models.RoomReservation

@{
    ViewData["Title"] = "Nova Reserva de Sala";
}

<h1 class="mb-4 text-success">
    <i class="bi bi-calendar-plus"></i> Criar Reserva da sala
</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">

                <!-- ===================== LINHA 1 ===================== -->
                <div class="col-md-6">
                    <label asp-for="ConsultationId" class="form-label fw-bold">Id da Consulta</label>
                    <input asp-for="ConsultationId" class="form-control" placeholder="Ex: 001" />
                    <span asp-validation-for="ConsultationId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ConsultationDate" class="form-label fw-bold">Data da Consulta(*)</label>
                    <input asp-for="ConsultationDate" type="date" class="form-control" id="consultation-date" />
                    <span asp-validation-for="ConsultationDate" class="text-danger small"></span>
                </div>

                <!-- ===================== LINHA 2 ===================== -->
                <div class="col-md-6">
                    <label asp-for="StartHour" class="form-label fw-bold">Hora de Início(*)</label>
                    <input asp-for="StartHour" type="time" class="form-control" id="StartHour" />
                    <span asp-validation-for="StartHour" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="EndHour" class="form-label fw-bold">Hora de Fim(*)</label>
                    <input asp-for="EndHour" type="time" class="form-control" id="EndHour" />
                    <span asp-validation-for="EndHour" class="text-danger small"></span>
                </div>

                <!-- ===================== LINHA 3 ===================== -->
                <div class="col-md-6">
                    <label asp-for="RoomId" class="form-label fw-bold">Sala(*)</label>
                    <select asp-for="RoomId" class="form-select" asp-items="@(ViewBag.Rooms as SelectList)" id="room-select" required>
                        <option value="">Selecione a sala...</option>
                    </select>
                    <span asp-validation-for="RoomId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ResponsibleName" class="form-label fw-bold">Responsável(*)</label>
                    <input asp-for="ResponsibleName" class="form-control" placeholder="Ex: Dr. João Silva" required />
                    <span asp-validation-for="ResponsibleName" class="text-danger small"></span>
                </div>

                <!-- ===================== OBSERVAÇÕES ===================== -->
                <div class="col-md-12">
                    <label asp-for="Notes" class="form-label fw-bold">Observações (Opcional)</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Informações adicionais..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>

            </div>

            <div class="text-end mt-4 gap-2 border-top pt-3">
                <button type="submit" class="btn btn-success btn-sm" style="min-width:150px">
                    <i class="bi bi-check-circle me-1"></i> Criar
                </button>
                <a asp-action="Index" class="btn btn-success btn-sm" style="min-width:150px">
                    <i class="bi bi-arrow-left-circle me-1"></i> Lista de reservas
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function loadAvailableRooms() {
            const date = document.getElementById('consultation-date').value;
            const start = document.getElementById('StartHour').value;
            const end = document.getElementById('EndHour').value;

            if (!date || !start || !end)
                return;

            fetch(`/RoomReservations/GetAvailableRooms?date=${date}&start=${start}&end=${end}`)
                .then(response => response.json())
                .then(data => {
                    const roomSelect = document.getElementById('room-select');
                    roomSelect.innerHTML = '<option value="">Selecione a sala...</option>';

                    data.forEach(room => {
                        const option = document.createElement('option');
                        option.value = room.value;
                        option.text = room.text;
                        roomSelect.appendChild(option);
                    });
                })
                .catch(error => console.error('Erro ao carregar salas:', error));
        }

        document.getElementById('consultation-date').addEventListener('change', loadAvailableRooms);
        document.getElementById('StartHour').addEventListener('change', loadAvailableRooms);
        document.getElementById('EndHour').addEventListener('change', loadAvailableRooms);
    </script>
}