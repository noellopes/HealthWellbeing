@model HealthWellbeingRoom.Models.RoomReservation

@{
    ViewData["Title"] = "Nova Reserva de Sala";
}

<h1 class="mb-4 text-success">
    <i class="bi bi-calendar-plus"></i> Criar Reserva da sala
</h1>

<div class="card shadow-sm">
    <div class="card-body">

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @* Id da consulta apenas em hidden *@
            <input asp-for="ConsultationId" type="hidden" />

            <div class="row g-3">

                <!-- ===================== LINHA 1 ===================== -->
                <div class="col-md-6">
                    <label asp-for="ConsultationDate" class="form-label fw-bold">Data da Consulta*</label>
                    <input asp-for="ConsultationDate"
                           type="date"
                           class="form-control"
                           id="consultation-date"
                           min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="ConsultationDate" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SpecialtyId" class="form-label fw-bold">Especialidade</label>

                    @* hidden para o valor ser enviado no POST *@
                    <input asp-for="SpecialtyId" type="hidden" />

                    <select asp-for="SpecialtyId"
                            class="form-select"
                            asp-items="@(ViewBag.Specialties as SelectList)"
                            disabled>
                        <option value="">Selecione a especialidade...</option>
                    </select>

                    <span asp-validation-for="SpecialtyId" class="text-danger small"></span>
                </div>


                <!-- ===================== LINHA 2 ===================== -->
                <div class="col-md-6">
                    <label asp-for="StartHour" class="form-label fw-bold">Hora de Início**</label>
                    <input asp-for="StartHour" type="time" class="form-control" id="StartHour" />
                    <span asp-validation-for="StartHour" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="EndHour" class="form-label fw-bold">Hora de Fim***</label>
                    <input asp-for="EndHour" type="time" class="form-control" id="EndHour" />
                    <span asp-validation-for="EndHour" class="text-danger small"></span>
                </div>

                <!-- ===================== LINHA 3 ===================== -->
                <div class="col-md-6">
                    <label asp-for="RoomId" class="form-label fw-bold">Sala****</label>
                    <select asp-for="RoomId"
                            class="form-select"
                            asp-items="@(ViewBag.Rooms as SelectList)"
                            id="room-select"
                            required>
                        <option value="">Selecione a sala...</option>
                    </select>
                    <span asp-validation-for="RoomId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ResponsibleName" class="form-label fw-bold">Responsável</label>
                    <input asp-for="ResponsibleName"
                           class="form-control"
                           placeholder="Ex: Dr. João Silva"
                           readonly />
                    <span asp-validation-for="ResponsibleName" class="text-danger small"></span>
                </div>

                <!-- ===================== OBSERVAÇÕES ===================== -->
                <div class="col-md-12">
                    <label asp-for="Notes" class="form-label fw-bold">Observações (Opcional)</label>
                    <textarea asp-for="Notes"
                              class="form-control"
                              rows="3"
                              placeholder="Informações adicionais..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>

            </div>

            <div class="text-end mt-4 gap-2 border-top pt-3">
                <button type="submit" class="btn btn-success btn-sm" style="min-width:150px">
                    <i class="bi bi-check-circle me-1"></i> Criar reserva
                </button>
            </div>

        </form>

    </div>
</div>

<div class="mt-4 d-flex justify-content-between">

    <!-- Lista de Salas (ESQUERDA) -->
    <a asp-controller="Rooms"
       asp-action="Index"
       class="btn btn-primary btn-sm">
        <i class="bi bi-house-door-fill me-1"></i> Lista de Salas
    </a>

    <!-- Lista de Reservas (DIREITA) -->
    <div class="text-end">
        <a asp-action="Consultation"
           class="btn btn-success btn-sm me-2">
            <i class="bi bi-list-ul me-1"></i> Lista consultas
        </a>

        <a asp-action="Index"
           class="btn btn-success btn-sm">
            <i class="bi bi-list-ul me-1"></i> Lista de Reservas
        </a>
    </div>

</div>

<!-- ===================== ALERTA INFORMATIVO ===================== -->
<div class="alert alert-info d-flex align-items-start mt-4" role="alert">
    <i class="bi bi-info-circle-fill me-2"></i>
    <div>
        (*) - "Data da consulta não pode ser no passado";<br />
        (**) - "A hora de início deve ser igual ou superior à hora atual (se a data for hoje)";<br />
        (***) - "A hora de fim deve ser sempre maior do que a hora de início";<br />
        (****) - "Introduzir primeiro Data e horas de início e fim para filtrar a sala disponível".
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Bloquear datas anteriores a hoje
        document.getElementById('consultation-date')
            .setAttribute('min', new Date().toISOString().split('T')[0]);

        function updateHourLimits() {
            const dateInput = document.getElementById('consultation-date');
            const startInput = document.getElementById('StartHour');
            const endInput = document.getElementById('EndHour');

            if (!dateInput.value) return;

            const selectedDate = new Date(dateInput.value);
            const today = new Date();
            const nowTime = today.getHours().toString().padStart(2, '0') + ":" +
                today.getMinutes().toString().padStart(2, '0');

            if (selectedDate.toDateString() === today.toDateString()) {
                startInput.min = nowTime;
                endInput.min = nowTime;
            } else {
                startInput.removeAttribute('min');
                endInput.removeAttribute('min');
            }

            if (startInput.value) {
                endInput.min = startInput.value;
            }
        }

        const startInput = document.getElementById('StartHour');
        const endInput = document.getElementById('EndHour');
        const dateInput = document.getElementById('consultation-date');

        dateInput.addEventListener('change', updateHourLimits);
        startInput.addEventListener('focus', updateHourLimits);
        endInput.addEventListener('focus', updateHourLimits);

        function loadAvailableRooms() {
            const date = dateInput.value;
            const start = startInput.value;
            const end = endInput.value;

            if (!date || !start || !end) return;

            fetch(`/RoomReservations/GetAvailableRooms?date=${date}&start=${start}&end=${end}`)
                .then(response => response.json())
                .then(data => {
                    const roomSelect = document.getElementById('room-select');
                    roomSelect.innerHTML = '<option value="">Selecione a sala...</option>';

                    data.forEach(room => {
                        const option = document.createElement('option');
                        option.value = room.value;
                        option.text = room.text;
                        roomSelect.appendChild(option);
                    });
                })
                .catch(error => console.error('Erro ao carregar salas:', error));
        }

        dateInput.addEventListener('change', loadAvailableRooms);
        startInput.addEventListener('change', loadAvailableRooms);
        endInput.addEventListener('change', loadAvailableRooms);
    </script>
}
