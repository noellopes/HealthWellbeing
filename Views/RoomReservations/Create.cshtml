@model HealthWellbeingRoom.Models.RoomReservation

@{
    ViewData["Title"] = "Nova Reserva de Sala";
}

<h1 class="mb-4 text-success">
    <i class="bi bi-calendar-plus"></i> Confirmar Reserva da sala
</h1>

<div class="card shadow-sm">
    <div class="card-body">

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hidden para garantir envio -->
            <input asp-for="ConsultationId" type="hidden" />
            <input asp-for="SpecialtyId" type="hidden" />
            <input asp-for="RoomId" type="hidden" />
            <input asp-for="StartHour" type="hidden" />
            <input asp-for="EndHour" type="hidden" />
            <input asp-for="ConsultationDate" type="hidden" />

            <div class="row g-3">

                <!-- ===================== LINHA 1 ===================== -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Data da Consulta</label>
                    <input type="date"
                           class="form-control"
                           value="@Model.ConsultationDate.ToString("yyyy-MM-dd")"
                           readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Especialidade</label>
                    <input type="text"
                           class="form-control"
                           value="@((ViewBag.Specialties as SelectList)?.FirstOrDefault(x => x.Value == Model.SpecialtyId.ToString())?.Text ?? "Especialidade não encontrada")"
                           readonly />
                </div>

                <!-- ===================== LINHA 2 ===================== -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Hora de Início</label>
                    <input type="time"
                           class="form-control"
                           value="@Model.StartHour.ToString(@"hh\:mm")"
                           readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Hora de Fim</label>
                    <input type="time"
                           class="form-control"
                           value="@Model.EndHour.ToString(@"hh\:mm")"
                           readonly />
                </div>

                <!-- ===================== LINHA 3 ===================== -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Sala*</label>
                    <input type="text"
                           class="form-control"
                           value="@((ViewBag.Rooms as SelectList)?.FirstOrDefault(x => x.Value == Model.RoomId.ToString())?.Text ?? "Sala não encontrada")"
                           readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Responsável</label>
                    <input asp-for="ResponsibleName"
                           class="form-control"
                           readonly />
                </div>

                <!-- ===================== OBSERVAÇÕES ===================== -->
                <div class="col-md-12">
                    <label asp-for="Notes" class="form-label fw-bold">Observações**</label>
                    <textarea asp-for="Notes"
                              class="form-control"
                              rows="3"
                              placeholder="Informações adicionais..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>

            </div>

            <div class="text-end mt-4 gap-2 border-top pt-3">
                <button type="submit" class="btn btn-success btn-sm" style="min-width:150px">
                    <i class="bi bi-check-circle me-1"></i> Confirmar reserva
                </button>
            </div>

        </form>

    </div>
</div>

<div class="mt-4 d-flex justify-content-between">

    <a asp-controller="Rooms"
       asp-action="Index"
       class="btn btn-primary btn-sm">
        <i class="bi bi-house-door-fill me-1"></i> Lista de Salas
    </a>

    <div class="text-end">
        <a asp-action="Consultation"
           class="btn btn-success btn-sm me-2">
            <i class="bi bi-list-ul me-1"></i> Lista consultas
        </a>

        <a asp-action="Index"
           class="btn btn-success btn-sm">
            <i class="bi bi-list-ul me-1"></i> Lista de Reservas
        </a>
    </div>

</div>

<!-- ===================== ALERTA INFORMATIVO ===================== -->
<div class="alert alert-info d-flex align-items-start mt-4" role="alert">
    <i class="bi bi-info-circle-fill me-2"></i>
    <div>
        (*) - "Sala compativel com a Especialidade da consulta";<br />
        (**) - "A observacao é opcional";<br />
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Bloquear datas anteriores a hoje
        document.getElementById('consultation-date')
            .setAttribute('min', new Date().toISOString().split('T')[0]);

        function updateHourLimits() {
            const dateInput = document.getElementById('consultation-date');
            const startInput = document.getElementById('StartHour');
            const endInput = document.getElementById('EndHour');

            if (!dateInput.value) return;

            const selectedDate = new Date(dateInput.value);
            const today = new Date();
            const nowTime = today.getHours().toString().padStart(2, '0') + ":" +
                today.getMinutes().toString().padStart(2, '0');

            if (selectedDate.toDateString() === today.toDateString()) {
                startInput.min = nowTime;
                endInput.min = nowTime;
            } else {
                startInput.removeAttribute('min');
                endInput.removeAttribute('min');
            }

            if (startInput.value) {
                endInput.min = startInput.value;
            }
        }

        const startInput = document.getElementById('StartHour');
        const endInput = document.getElementById('EndHour');
        const dateInput = document.getElementById('consultation-date');

        dateInput.addEventListener('change', updateHourLimits);
        startInput.addEventListener('focus', updateHourLimits);
        endInput.addEventListener('focus', updateHourLimits);

        function loadAvailableRooms() {
            const date = dateInput.value;
            const start = startInput.value;
            const end = endInput.value;

            if (!date || !start || !end) return;

            fetch(`/RoomReservations/GetAvailableRooms?date=${date}&start=${start}&end=${end}`)
                .then(response => response.json())
                .then(data => {
                    const roomSelect = document.getElementById('room-select');
                    roomSelect.innerHTML = '<option value="">Selecione a sala...</option>';

                    data.forEach(room => {
                        const option = document.createElement('option');
                        option.value = room.value;
                        option.text = room.text;
                        roomSelect.appendChild(option);
                    });
                })
                .catch(error => console.error('Erro ao carregar salas:', error));
        }

        dateInput.addEventListener('change', loadAvailableRooms);
        startInput.addEventListener('change', loadAvailableRooms);
        endInput.addEventListener('change', loadAvailableRooms);
    </script>
}
