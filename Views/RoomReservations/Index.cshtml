@model IEnumerable<HealthWellbeingRoom.Models.RoomReservation>

@{
    ViewData["Title"] = "Reservas de Salas";
}

<h1 class="mb-4 text-primary">
    <i class="bi bi-calendar-check"></i> Lista das reservas de Salas
</h1>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success btn-sm" style="min-width:150px">
        <i class="bi bi-plus-circle me-1"></i> Nova Reserva
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nome do responsável</th>
                    <th>Sala</th>
                    <th>Início</th>
                    <th>Fim</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RoomReservationId</td>

                        <td>@(string.IsNullOrWhiteSpace(item.ResponsibleName) ? "—" : item.ResponsibleName)</td>

                        <td>@(item.Room?.Name ?? "—")</td>

                        <td>
                            @{
                                var startText = item.StartTime != default
                                ? item.StartTime.ToString("dd/MM/yyyy HH:mm")
                                : "—";
                            }
                            @startText
                        </td>

                        <td>
                            @{
                                var endText = item.EndTime != default
                                ? item.EndTime.ToString("dd/MM/yyyy HH:mm")
                                : "—";
                            }
                            @endText
                        </td>

                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.RoomReservationId" class="btn btn-primary btn-sm me-1" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.RoomReservationId" class="btn btn-info btn-sm me-1" title="Detalhes">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.RoomReservationId" class="btn btn-danger btn-sm" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>