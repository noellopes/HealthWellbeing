@model IEnumerable<HealthWellbeingRoom.Models.RoomReservation>

@{
    ViewData["Title"] = "Reservas de Salas";
}

<h1 class="mb-4 text-primary">
    <i class="bi bi-calendar-check"></i> Lista das reservas de Salas
</h1>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success btn-sm" style="min-width:150px">
        <i class="bi bi-plus-circle me-1"></i> Nova Reserva
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ResponsibleName)</th>
                    <th>@Html.DisplayNameFor(model => model.Room)</th>
                    <th>@Html.DisplayNameFor(model => model.ConsultationType)</th>
                    <th>@Html.DisplayNameFor(model => model.PatientId)</th>
                    <th>@Html.DisplayNameFor(model => model.Specialty)</th>
                    <th>@Html.DisplayNameFor(model => model.StartTime)</th>
                    <th>@Html.DisplayNameFor(model => model.EndTime)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>@Html.DisplayNameFor(model => model.Notes)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ResponsibleName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Room.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.ConsultationType)</td>
                        <td>@Html.DisplayFor(modelItem => item.PatientId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Specialty.Name)</td>
                        <td>@item.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.EndTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.RoomReservationId" class="btn btn-primary btn-sm me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.RoomReservationId" class="btn btn-info btn-sm me-1">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.RoomReservationId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>