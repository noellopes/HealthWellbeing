@model IEnumerable<HealthWellbeingRoom.Models.Consultation>

<style>
    .missing-value {
        color: rgba(0, 0, 0, 0.45);
        font-weight: 500;
    }
</style>

@{
    ViewData["Title"] = "Lista de Consultas";
}

<h2 class="mb-4 text-success">
    <i class="bi bi-clipboard2-pulse-fill me-2"></i>
    Lista de consultas
</h2>

<table class="table table-striped table-bordered">
    <thead class="table-success">
        <tr>
            @* removido o Id *@
            <th>Sala</th>
            <th>Data Marcação</th>
            <th>Data Consulta</th>
            <th>Início</th>
            <th>Fim</th>
            <th>Estado</th>
            <th>Médico</th>
            @* <th>Paciente</th> *@
            <th>Especialidade</th>
            <th>Ações</th> @* nova coluna *@
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* removido o TD do Id *@

                <td class="@(item.Room == null ? "missing-value" : "")">
                    @(item.Room != null
                                    ? (item.Room.Name.Length > 19
                                    ? item.Room.Name.Substring(0, 19) + "..."
                                    : item.Room.Name)
                                    : "-- sem sala --")
                </td>

                <td>@item.BookingDate.ToString("dd/MM/yyyy")</td>

                <td class="@(item.ConsultationDate.HasValue ? "" : "missing-value")">
                    @(item.ConsultationDate.HasValue
                                    ? item.ConsultationDate.Value.ToString("dd/MM/yyyy")
                                    : "-- sem data --")
                </td>

                <td class="@(item.StartTime.HasValue ? "" : "missing-value")">
                    @(item.StartTime.HasValue
                                    ? item.StartTime.Value.ToString("HH:mm")
                                    : "-- sem hora --")
                </td>

                <td class="@(item.EndTime.HasValue ? "" : "missing-value")">
                    @(item.EndTime.HasValue
                                    ? item.EndTime.Value.ToString("HH:mm")
                                    : "-- sem hora --")
                </td>

                <td>
                    @* estado igual ao teu código atual *@
                    @if (item.Status == "Pendente")
                    {
                        <span class="badge bg-warning text-dark">
                            <i class="bi bi-hourglass-split me-1"></i> Pendente
                        </span>
                    }
                    else if (item.Status == "Agendada")
                    {
                        <span class="badge bg-primary">
                            <i class="bi bi-calendar-check-fill me-1"></i> Agendada
                        </span>
                    }
                    else if (item.Status == "Realizada")
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle-fill me-1"></i> Realizada
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Status</span>
                    }
                </td>

                <td>@item.DoctorName</td>
                @* <td>@item.PatientName</td> *@
                <td>@item.Specialty?.Name</td>

                <td>
                    @if (item.Status == "Realizada" || item.Status == "Agendada")
                    {
                        <button class="btn btn-secondary btn-sm" disabled>
                            <i class="bi bi-plus-circle me-1"></i>
                            Reservar sala
                        </button>
                    }
                    else
                    {
                        <a asp-controller="RoomReservations"
                           asp-action="Create"
                           asp-route-consultationId="@item.ConsultationId"
                           class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle me-1"></i>
                            Reservar sala
                        </a>
                    }
                </td>


            </tr>
        }
    </tbody>
</table>


<div class="mt-3 d-flex justify-content-between">

    <a asp-controller="Rooms"
       asp-action="Index"
       class="btn btn-primary btn-sm">
        <i class="bi bi-house-door-fill me-1"></i> Lista de salas
    </a>

    <div>
        <a asp-controller="RoomReservations"
           asp-action="Index"
           class="btn btn-success btn-sm">
            <i class="bi bi-list-ul me-1"></i>
            Ver lista de reservas
        </a>
    </div>

</div>