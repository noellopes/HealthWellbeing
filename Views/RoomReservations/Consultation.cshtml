@model IEnumerable<HealthWellbeingRoom.Models.Consultation>

<style>
    .missing-value {
        color: rgba(0, 0, 0, 0.45);
        font-weight: 500;
    }
</style>

@{
    ViewData["Title"] = "Lista de Consultas";
}

<h2 class="mb-4 text-success">
    <i class="bi bi-clipboard2-pulse-fill me-2"></i>
    Lista de consultas
</h2>

<table class="table table-striped table-bordered">
    <thead class="table-success">
        <tr>
            <th>Sala</th>
            <th>Data Marcação</th>
            <th>Data Consulta</th>
            <th>Início</th>
            <th>Fim</th>
            <th>Estado</th>
            <th>Médico</th>
            <th>Especialidade</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class="@(item.Room == null ? "missing-value" : "")">
                    @(item.Room != null
                                    ? (item.Room.Name.Length > 19
                                    ? item.Room.Name.Substring(0, 19) + "..."
                                    : item.Room.Name)
                                    : "-- sem sala --")
                </td>

                <td>@item.BookingDate.ToString("dd/MM/yyyy")</td>

                <!-- FORMULÁRIO POR LINHA -->
                <form asp-controller="RoomReservations"
                      asp-action="Create"
                      method="get">

                    <input type="hidden" name="consultationId" value="@item.ConsultationId" />

                <td>
                    <input type="date"
                           name="ConsultationDate"
                           class="form-control form-control-sm"
                           value="@(item.ConsultationDate?.ToString("yyyy-MM-dd"))"
                           min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                </td>

                <td>
                    <input type="time"
                           name="StartTime"
                           class="form-control form-control-sm"
                           value="@(item.StartTime?.ToString("HH:mm"))" />
                </td>

                <td>
                    <input type="time"
                           name="EndTime"
                           class="form-control form-control-sm"
                           value="@(item.EndTime?.ToString("HH:mm"))" />
                </td>

                <td>
                    @if (item.Status == "Pendente")
                    {
                        <span class="badge bg-warning text-dark">
                            <i class="bi bi-hourglass-split me-1"></i> Pendente
                        </span>
                    }
                    else if (item.Status == "Agendada")
                    {
                        <span class="badge bg-primary">
                            <i class="bi bi-calendar-check-fill me-1"></i> Agendada
                        </span>
                    }
                    else if (item.Status == "Realizada")
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-check-circle-fill me-1"></i> Realizada
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Status</span>
                    }
                </td>

                <td>@item.DoctorName</td>
                <td>@item.Specialty?.Name</td>

                <td>
                    @if (item.Status == "Realizada" || item.Status == "Agendada")
                    {
                        <button class="btn btn-secondary btn-sm" disabled>
                            <i class="bi bi-plus-circle me-1"></i>
                            Reservar sala
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle me-1"></i>
                            Reservar sala
                        </button>
                    }
                </td>

                </form>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3 d-flex justify-content-between">

    <a asp-controller="Rooms"
       asp-action="Index"
       class="btn btn-primary btn-sm">
        <i class="bi bi-house-door-fill me-1"></i> Lista de salas
    </a>

    <div>
        <a asp-controller="RoomReservations"
           asp-action="Index"
           class="btn btn-success btn-sm">
            <i class="bi bi-list-ul me-1"></i>
            Ver lista de reservas
        </a>
    </div>

</div>