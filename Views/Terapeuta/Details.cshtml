@model HealthWellbeing.Models.Terapeuta

@{
    ViewData["Title"] = "Detalhes do Terapeuta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes do Terapeuta</h1>

<hr />

@* Mostra todos os campos do terapeuta em formato de leitura *@
<div>
    <h4>Dados do Terapeuta</h4>
    <hr />

    @* Lista dos atributos do terapeuta *@
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Especialidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidade)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-sm-2">
            Ano de Entrada
        </dt>
        <dd class="col-sm-10">
            @Model.AnoEntrada
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnosExperiencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnosExperiencia)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
</div>

@* Botões de navegação *@
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TerapeutaId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
</div>
