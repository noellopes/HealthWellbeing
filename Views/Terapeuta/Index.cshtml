@model IEnumerable<HealthWellbeing.Models.TerapeutaModel>

@{
    ViewData["Title"] = "Lista de Terapeutas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Terapeutas</h1>
<hr />

@* Mensagem de sucesso *@
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

@* Botão para criar novo terapeuta *@
<p>
    <a asp-action="Create" class="btn btn-success">Adicionar Novo Terapeuta</a>
</p>

@* Tabela que lista todos os terapeutas *@
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Especialidade)</th>
            <th>@Html.DisplayNameFor(model => model.Telefone)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.AnosExperiencia)</th>
            <th>@Html.DisplayNameFor(model => model.Ativo)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @* Percorre todos os terapeutas do modelo *@
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Especialidade)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.AnosExperiencia)</td>
                <td>
                    @if (item.Ativo)
                    {
                        <span class="badge bg-success">Ativo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inativo</span>
                    }
                </td>

                <td>
                    @* Botões *@
                    <a asp-action="Details" asp-route-id="@item.TerapeutaId" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.TerapeutaId" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.TerapeutaId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@* Paginação *@
@{
    // Valores padrão
    int paginaAtual = ViewBag.Page ?? 1;
    int totalPaginas = ViewBag.TotalPaginas ?? 1;
}

@if (totalPaginas > 1)
{
    <nav aria-label="Paginação de terapeutas">
        <ul class="pagination justify-content-center">

            @* Botão para a primeira página *@
            <li class="page-item @(paginaAtual == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="1">«</a>
            </li>

            @* Calcula o intervalo de páginas a mostrar *@
            @{
                int startPage = Math.Max(1, paginaAtual - 3);
                int endPage = Math.Min(totalPaginas, paginaAtual + 3);
            }

            @* Mostra as páginas dentro do intervalo definido *@
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == paginaAtual ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }

            @* Botão para a última página *@
            <li class="page-item @(paginaAtual == totalPaginas ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@totalPaginas">»</a>
            </li>
        </ul>
    </nav>
}