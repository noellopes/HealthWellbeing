@model IEnumerable<HealthWellbeing.Models.Specialities>
@{
    ViewData["Title"] = "Especialidades";
}

<h1 class="mb-4">Especialidades</h1>

<div class="row g-3">
    @foreach (var esp in Model)
    {
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="h5 card-title">@esp.Nome</h2>
                    <p class="card-text text-muted">@esp.Descricao</p>
                    <a class="stretched-link"
                       asp-controller="Doctors"
                       asp-action="BySpeciality"
                       asp-route-id="@esp.IdEspecialidade">
                        Ver médicos
                    </a>
                </div>
            </div>
        </div>
    }
</div>