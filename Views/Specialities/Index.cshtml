@model HealthWellbeing.ViewModel.PaginationInfo<HealthWellbeing.Models.Specialities>

@{
    ViewData["Title"] = "Especialidades";
    var q = ViewBag.SearchQuery as string ?? "";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        + Nova Especialidade
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <form asp-action="Index" method="get" class="d-flex gap-2">
            <input type="text"
                   name="q"
                   value="@q"
                   class="form-control"
                   placeholder="Procurar por nome..." />
            <button type="submit" class="btn btn-outline-secondary">Pesquisar</button>

            @if (!string.IsNullOrWhiteSpace(q))
            {
                <a asp-action="Index" class="btn btn-outline-light border">Limpar</a>
            }
        </form>
    </div>

    <div class="card-body">
        @if (Model.Items == null || !Model.Items.Any())
        {
            <div class="text-muted">
                @if (!string.IsNullOrWhiteSpace(q))
                {
                    <p class="mb-1">
                        Não foram encontradas especialidades para
                        <strong>"@q"</strong>.
                    </p>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary mt-2">Ver todas</a>
                }
                else
                {
                    <p class="mb-0">De momento não existem especialidades registadas.</p>
                }
            </div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var item in Model.Items)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-sm"
                             role="button"
                             style="cursor: pointer;"
                             onclick="location.href='@Url.Action("Details", new { id = item.IdEspecialidade })'">
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0">@item.Nome</h5>

                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit"
                                           asp-route-id="@item.IdEspecialidade"
                                           class="btn btn-outline-secondary"
                                           onclick="event.stopPropagation();">
                                            Editar
                                        </a>
                                        <a asp-action="Delete"
                                           asp-route-id="@item.IdEspecialidade"
                                           class="btn btn-outline-danger"
                                           onclick="event.stopPropagation();">
                                            Eliminar
                                        </a>
                                    </div>
                                </div>

                                @* Se quiseres meter uma linha discreta de resumo no futuro, mete aqui *@
                                @* <p class="text-muted small mb-0">@item.Descricao</p> *@
                            </div>
                        </div>
                    </div>
                }
            </div>

            @* PAGINAÇÃO *@
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Navegação de páginas" class="mt-3">
                    <ul class="pagination justify-content-center mb-0">

                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@(Model.CurrentPage - 1)"
                               asp-route-q="@q">
                                Anterior
                            </a>
                        </li>

                        @for (var p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                        {
                            <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@p"
                                   asp-route-q="@q">
                                    @p
                                </a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@(Model.CurrentPage + 1)"
                               asp-route-q="@q">
                                Seguinte
                            </a>
                        </li>

                    </ul>
                </nav>
            }
        }
    </div>
</div>
