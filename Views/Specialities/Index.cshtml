<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <div class="utente-header">
                <div class="utente-header-content">
                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing" class="logo-img" />
                    </div>

                    <div class="utente-actions">
                        <a class="utente-btn alt" asp-controller="Doctor" asp-action="Index">
                            <i class="bi bi-heart-pulse"></i> Médicos
                        </a>

                        <a class="utente-btn active-lock" href="#" aria-disabled="true" tabindex="-1">
                            <i class="bi bi-clipboard2-pulse"></i> Especialidades
                        </a>

                        <a class="utente-btn alt" asp-controller="UtenteSaude" asp-action="Index">
                            <i class="bi bi-people-fill"></i> Utentes
                        </a>
                    </div>
                </div>
            </div>

            <div class="utente-body">

                <div class="welcome-row">
                    <h2 class="welcome-title">@saudacao</h2>

                    <a class="agenda-btn" asp-controller="AgendaMedicas" asp-action="Index">
                        <i class="bi bi-calendar2-week"></i> Agenda Médica
                    </a>
                </div>

                <div class="content-card">

                    <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                        <div>
                            <h3 class="content-title">Especialidades</h3>
                            <p class="content-sub">Gere e consulta as especialidades médicas.</p>
                        </div>

                        <div class="d-flex gap-2 flex-wrap">
                            <button class="btn btn-primary hb-btn"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#specSearch"
                                    aria-expanded="false"
                                    aria-controls="specSearch">
                                <i class="bi bi-search"></i> Pesquisar
                            </button>

                            @if (podeGerirEspecialidades)
                            {
                                <a asp-action="Create" class="btn btn-success hb-btn">
                                    <i class="bi bi-plus-circle"></i> Nova Especialidade
                                </a>
                            }
                        </div>
                    </div>

                    <div class="collapse mt-3 @(string.IsNullOrWhiteSpace(q) ? "" : "show")" id="specSearch">
                        <div class="search-wrap">
                            <form asp-action="Index" method="get" class="row g-2 align-items-end">
                                <div class="col-12 col-lg-8">
                                    <label class="form-label fw-bold" style="color:#1f4f6a;">Pesquisar</label>
                                    <input type="text"
                                           name="q"
                                           value="@q"
                                           class="form-control hw-input"
                                           placeholder="Procurar por nome..." />
                                </div>

                                <div class="col-12 col-lg-4 d-flex gap-2 flex-wrap">
                                    <button type="submit" class="btn btn-primary hb-btn flex-grow-1">
                                        <i class="bi bi-search"></i> Pesquisar
                                    </button>

                                    @if (!string.IsNullOrWhiteSpace(q))
                                    {
                                        <a asp-action="Index" class="btn btn-secondary hb-btn flex-grow-1">
                                            Limpar
                                        </a>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="mt-3">
                        @if (Model.Items == null || !Model.Items.Any())
                        {
                            <div class="text-muted">
                                @if (!string.IsNullOrWhiteSpace(q))
                                {
                                    <p class="mb-1">
                                        Não foram encontradas especialidades para <strong>"@q"</strong>.
                                    </p>
                                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary hb-btn mt-2">Ver todas</a>
                                }
                                else
                                {
                                    <p class="mb-0">De momento não existem especialidades registadas.</p>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="row g-3">
                                @foreach (var item in Model.Items)
                                {
                                    <div class="col-12 col-md-6 col-lg-4">
                                        <div class="spec-card"
                                             onclick="location.href='@Url.Action("Details", new { id = item.IdEspecialidade })'">

                                            <div class="d-flex justify-content-between align-items-start gap-2">
                                                <h5 class="spec-name">@item.Nome</h5>

                                                @if (podeGerirEspecialidades)
                                                {
                                                    <div class="spec-actions" onclick="event.stopPropagation();">
                                                        <a asp-action="Edit"
                                                           asp-route-id="@item.IdEspecialidade"
                                                           class="btn btn-sm btn-warning text-white hb-btn">
                                                            <i class="bi bi-pencil-square"></i> Editar
                                                        </a>

                                                        <a asp-action="Delete"
                                                           asp-route-id="@item.IdEspecialidade"
                                                           class="btn btn-sm btn-danger hb-btn">
                                                            <i class="bi bi-trash"></i> Eliminar
                                                        </a>
                                                    </div>
                                                }
                                            </div>

                                            <div class="spec-hint">
                                                <i class="bi bi-eye me-1"></i> Clique para ver detalhes
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (Model.TotalPages > 1)
                            {
                                <nav aria-label="Navegação de páginas" class="mt-4">
                                    <ul class="pagination">

                                        <li class="page-item @(isFirst ? "disabled" : "")">
                                            <a class="page-link"
                                               href="@(isFirst ? "#" : Url.Action("Index", "Specialities", new { page = Model.CurrentPage - 1, q }))">
                                                «
                                            </a>
                                        </li>

                                        @for (var p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                                        {
                                            <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                                <a class="page-link"
                                                   href="@(p == Model.CurrentPage ? "#" : Url.Action("Index", "Specialities", new { page = p, q }))">
                                                    @p
                                                </a>
                                            </li>
                                        }

                                        <li class="page-item @(isLast ? "disabled" : "")">
                                            <a class="page-link"
                                               href="@(isLast ? "#" : Url.Action("Index", "Specialities", new { page = Model.CurrentPage + 1, q }))">
                                                »
                                            </a>
                                        </li>

                                    </ul>
                                </nav>
                            }
                        }
                    </div>

                </div>
            </div>

            <div class="utente-footer-bar"></div>
        </div>
    </div>
</div>
