@model HealthWellbeing.Models.Specialities

@{
    ViewData["Title"] = "Detalhes da Especialidade";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">@ViewData["Title"]</h1>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.IdEspecialidade" class="btn btn-outline-primary">Editar</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar à lista</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <div class="d-flex align-items-center justify-content-between">
            <span class="fw-semibold">Informação</span>
            @if (Model is not null)
            {
                <span class="badge text-bg-light border">ID: @Model.IdEspecialidade</span>
            }
        </div>
    </div>

    <div class="card-body">
        @if (Model is null)
        {
            <div class="alert alert-warning mb-0">
                Não foi possível carregar os detalhes desta especialidade.
            </div>
        }
        else
        {
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Nome)</dt>
                <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(m => m.Nome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Descricao)</dt>
                <dd class="col-sm-9">
                    <div class="text-wrap">@Html.DisplayFor(m => m.Descricao)</div>
                </dd>
            </dl>
        }
    </div>

    <div class="card-footer d-flex justify-content-end gap-2">
        <a asp-action="Edit" asp-route-id="@Model?.IdEspecialidade" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-light border">Voltar</a>
    </div>
</div>