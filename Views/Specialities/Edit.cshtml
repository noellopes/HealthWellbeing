@model HealthWellbeing.Models.Specialities

@{
    ViewData["Title"] = "Editar Especialidade";
}

<h1 class="h3 mb-3">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdEspecialidade" />

            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label">Texto abaixo do nome (resumo)</label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OqueEDescricao" class="form-label">O que é a especialidade?</label>
                <textarea asp-for="OqueEDescricao" class="form-control" rows="5"></textarea>
                <span asp-validation-for="OqueEDescricao" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
