@model HealthWellbeing.Models.Specialities

@{
    ViewData["Title"] = "Eliminar Especialidade";
}

<h1 class="h4 mb-3 text-danger">Eliminar Especialidade</h1>

<div class="alert alert-warning">
    Tem a certeza que pretende eliminar a especialidade
    <strong>@Model.Nome</strong>?
    <br />
    Esta ação não poderá ser revertida.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <p><strong>Nome:</strong> @Model.Nome</p>
        <p><strong>Descrição:</strong> @Model.Descricao</p>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdEspecialidade" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
