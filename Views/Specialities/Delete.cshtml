@model HealthWellbeing.Models.Specialities

@{
    ViewData["Title"] = "Apagar Especialidade";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0 text-danger">@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar à lista</a>
</div>

<div class="card border-danger shadow-sm">
    <div class="card-header bg-danger text-white fw-semibold">
        Confirmação de eliminação
    </div>

    <div class="card-body">
        <p class="mb-4">Tens a certeza de que queres apagar esta especialidade?</p>

        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Nome)</dt>
            <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(m => m.Nome)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Descricao)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Descricao)</dd>
        </dl>
    </div>

    <div class="card-footer d-flex justify-content-end gap-2">
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="IdEspecialidade" />
            <button type="submit" class="btn btn-danger">Apagar</button>
        </form>
        <a asp-action="Index" class="btn btn-light border">Cancelar</a>
    </div>
</div>