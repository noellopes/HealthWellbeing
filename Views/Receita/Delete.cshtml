@model HealthWellbeing.Models.Receita

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (User.IsInRole("Nutricionista"))
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Receita</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ModoPreparo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ModoPreparo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.TempoPreparo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TempoPreparo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Porcoes)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Porcoes)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Calorias)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Calorias)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Proteinas)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Proteinas)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HidratosCarbono)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.HidratosCarbono)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Gorduras)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Gorduras)
            </dd>
            <dt class = "col-sm-2">
                Componentes da Receita
            </dt>
            <dd class = "col-sm-10">
                @if (Model.Componentes != null && Model.Componentes.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var c in Model.Componentes)
                        {
                            <li>
                                @if (c.ComponenteReceitaId != 0)
                                {
                                    <a asp-controller="ComponenteReceita" asp-action="Details" asp-route-id="@c.ComponenteReceitaId">@c.Alimento?.Name</a>
                                }
                                else
                                {
                                    @c.Alimento?.Name
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <text>Nenhum componente</text>
                }
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RestricoesAlimentarId)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RestricoesAlimentarId)
            </dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="ReceitaId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}
else
{
    <div class="alert alert-danger">
        Apenas usuários com a role <strong>Nutricionista</strong> podem excluir receitas.
    </div>
}
