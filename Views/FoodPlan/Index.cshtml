@model IEnumerable<HealthWellbeing.Models.FoodPlan>
@{
    ViewData["Title"] = "Food Plans";
}

<h1 class="mb-3">Food Plans</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Plan</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Goal</th>
            
            
            <th>Nutritionist</th>
            <th style="width:190px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Goal?.GoalType</td>
                
                
                <td>@item.Nutritionist?.Name</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.FoodPlanId" class="btn btn-sm btn-outline-secondary"><i class="bi bi-archive"></i> Details</a>
                    <a asp-action="Edit" asp-route-id="@item.FoodPlanId" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.FoodPlanId" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
