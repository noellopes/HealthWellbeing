@model IEnumerable<HealthWellbeing.Models.FoodPlan>
@{
    ViewData["Title"] = "Food Plans";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">There are no food plans yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Patient</th>
                <th>Goal</th>
                <th>Food</th>
                <th>Quantity</th>
                <th>Nutritionist</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.PatientId</td>
                    <td>@p.Goal?.GoalType</td>
                    <td>@p.Food?.Name</td>
                    <td>@p.Quantity</td>
                    <td>@p.Nutritionist?.Name</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@p.FoodPlanId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.FoodPlanId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.FoodPlanId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
