@model HealthWellbeing.Models.FoodPlan
@{
    ViewData["Title"] = "Food Plan Details";
}

<h1><i class="bi bi-archive"></i> Food Plan Details</h1>

<dl class="row">
    <dt class="col-sm-3">Patient ID</dt>
    <dd class="col-sm-9">@Model.ClientId</dd>
    <dt class="col-sm-3">Goal</dt>
    <dd class="col-sm-9">@Model.Goal?.GoalType</dd>
    <dt class="col-sm-3">Food</dt>
    <dd class="col-sm-9">@Model.Food?.Name</dd>
    <dt class="col-sm-3">Quantity</dt>
    <dd class="col-sm-9">@Model.Quantity</dd>
    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">@Model.Description</dd>
    <dt class="col-sm-3">Nutritionist</dt>
    <dd class="col-sm-9">@Model.Nutritionist?.Name</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.FoodPlanId" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-backspace"></i> Back to List</a>
</p>
