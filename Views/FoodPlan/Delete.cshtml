@model HealthWellbeing.Models.FoodPlan
@{
    ViewData["Title"] = "Delete Food Plan";
}

<h1><i class="bi bi-trash"></i> Delete Food Plan</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h5>Are you sure you want to delete this food plan?</h5>

<div class="mb-3">
    <div><strong>Patient:</strong> @Model.ClientId</div>
    <div><strong>Goal:</strong> @Model.Goal?.GoalType</div>
    <div><strong>Food:</strong> @Model.Food?.Name</div>
    <div><strong>Quantity:</strong> @Model.Quantity</div>
    <div><strong>Description:</strong> @Model.Description</div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="FoodPlanId" />
    <button type="submit" class="btn btn-danger" onclick="return confirm('This action cannot be undone. Proceed?');"><i class="bi bi-trash"></i> Delete</button>
    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
</form>
