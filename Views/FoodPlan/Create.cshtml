@model HealthWellbeing.Models.FoodPlan
@{
    ViewData["Title"] = "Create Food Plan";
}

<h1><i class="bi bi-plus-circle"></i> Create Food Plan</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Create" method="post" novalidate>
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="ClientId" class="form-label"></label>
        <input asp-for="ClientId" class="form-control" placeholder="Enter Patient/Client ID" />
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-sm-6">
            <label asp-for="GoalId" class="form-label"></label>
            <select asp-for="GoalId" asp-items="ViewBag.GoalId" class="form-select">
                <option value="">-- Select Goal --</option>
            </select>
            <span asp-validation-for="GoalId" class="text-danger"></span>
        </div>

        <div class="col-sm-6">
            <label asp-for="FoodId" class="form-label"></label>
            <select asp-for="FoodId" asp-items="ViewBag.FoodId" class="form-select">
                <option value="">-- Select Food --</option>
            </select>
            <span asp-validation-for="FoodId" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mt-2">
        <div class="col-sm-6">
            <label asp-for="NutritionistId" class="form-label"></label>
            <select asp-for="NutritionistId" asp-items="ViewBag.NutritionistId" class="form-select">
                <option value="">-- Select Nutritionist --</option>
            </select>
            <span asp-validation-for="NutritionistId" class="text-danger"></span>
        </div>

        <div class="col-sm-6">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
