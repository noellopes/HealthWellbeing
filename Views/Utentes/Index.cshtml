@model HealthWellbeing.ViewModels.Paginacao<HealthWellbeing.Models.UtenteBalneario>


@{
    ViewData["Title"] = "Lista de Utentes";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-controller="Utentes" asp-action="Create">Novo Utente</a>

</p>

<!--Formulario de pesquisa [ Nome / NIF / Estado]-->
<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text"
               name="search"
               value="@ViewData["Search"]"
               class="form-control"
               placeholder="Pesquisar por nome ou NIF" />
    </div>

    <div class="col-md-3">
        <select name="ativo" class="form-select">
            <option value="">Todos</option>
            <option value="true" selected="@(ViewData["Ativo"]?.ToString() == "True")">Ativos</option>
            <option value="false" selected="@(ViewData["Ativo"]?.ToString() == "False")">Inativos</option>
        </select>
    </div>

    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filtrar</button>
    </div>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Data de Nascimento</th>
            <th>Sexo</th>
            <th>Contacto</th>
            <th>Ativo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.NomeCompleto</td>
                <td>@item.DataNascimento.ToShortDateString()</td>
                <td>@item.Sexo</td>
                <td>@item.Contacto</td>
                <td>@(item.Ativo ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.UtenteBalnearioId" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.UtenteBalnearioId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.UtenteBalnearioId" class="btn btn-danger btn-sm">Apagar</a>
                </td>
            </tr>
        }

    </tbody>
</table>



<nav aria-label="Page navigation">
    <ul class="pagination">

        <!-- Botão Anterior -->
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(Model.CurrentPage - 1)"
               asp-route-search="@ViewData["Search"]"
               asp-route-ativo="@ViewData["Ativo"]">
                Anterior
            </a>
        </li>

        <!-- Números das páginas -->
        @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-search="@ViewData["Search"]"
                   asp-route-ativo="@ViewData["Ativo"]">
                    @i
                </a>
            </li>
        }

        <!-- Botão Seguinte -->
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(Model.CurrentPage + 1)"
               asp-route-search="@ViewData["Search"]"
               asp-route-ativo="@ViewData["Ativo"]">
                Seguinte
            </a>
        </li>

    </ul>
</nav>
