@model HealthWellbeing.ViewModels.Paginacao<HealthWellbeing.Models.UtenteBalneario>

@{
    ViewData["Title"] = "Lista de Utentes";
}

<h2>@ViewData["Title"]</h2>

<!-- NOTIFICAÇÕES -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Utente</a>
</p>

<!-- FORMULÁRIO DE PESQUISA -->
<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text"
               name="search"
               value="@ViewData["Search"]"
               class="form-control"
               placeholder="Pesquisar por nome" />
    </div>

    <div class="col-md-3">
        <select name="ativo" class="form-select">
            <option value="">Todos</option>
            <option value="true" selected="@(ViewData["Ativo"]?.ToString() == "True")">Ativos</option>
            <option value="false" selected="@(ViewData["Ativo"]?.ToString() == "False")">Inativos</option>
        </select>
    </div>

    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filtrar</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Data Nasc.</th>
            <th>Sexo</th>
            <th>Contacto</th>
            <th>Ativo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.NomeCompleto</td>
                <td>@item.DataNascimento.ToShortDateString()</td>
                <td>@item.Sexo</td>
                <td>@item.Contacto</td>
                <td>@(item.Ativo ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.UtenteBalnearioId"
                       class="btn btn-info btn-sm">Detalhes</a>

                    <a asp-action="Edit" asp-route-id="@item.UtenteBalnearioId"
                       class="btn btn-warning btn-sm">Editar</a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Delete"
                           asp-route-id="@item.UtenteBalnearioId"
                           class="btn btn-danger"
                           onclick="return confirm('Tem a certeza que deseja apagar?');">
                            Apagar
                        </a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

<!-- PAGINAÇÃO -->
<nav aria-label="Page navigation">
    <ul class="pagination">

        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(Model.CurrentPage - 1)"
               asp-route-search="@ViewData["Search"]"
               asp-route-ativo="@ViewData["Ativo"]">
                Anterior
            </a>
        </li>

        @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-search="@ViewData["Search"]"
                   asp-route-ativo="@ViewData["Ativo"]">
                    @i
                </a>
            </li>
        }

        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@(Model.CurrentPage + 1)"
               asp-route-search="@ViewData["Search"]"
               asp-route-ativo="@ViewData["Ativo"]">
                Seguinte
            </a>
        </li>
    </ul>
</nav>
