@model HealthWellbeing.Models.UtenteBalneario

@{
    ViewData["Title"] = "Detalhes do Utente";
}

<h2>@ViewData["Title"]</h2>

<div class="card mb-3">
    <div class="card-header">
        <strong>@Model.NomeCompleto</strong>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Data de Nascimento</dt>
            <dd class="col-sm-9">@Model.DataNascimento.ToShortDateString()</dd>

            <dt class="col-sm-3">Sexo</dt>
            <dd class="col-sm-9">@Model.Sexo</dd>

            <dt class="col-sm-3">NIF</dt>
            <dd class="col-sm-9">@Model.NIF</dd>

            <dt class="col-sm-3">Contacto</dt>
            <dd class="col-sm-9">@Model.Contacto</dd>

            <dt class="col-sm-3">Morada</dt>
            <dd class="col-sm-9">@Model.Morada</dd>

            <dt class="col-sm-3">Data de Inscrição</dt>
            <dd class="col-sm-9">@Model.DataInscricao.ToShortDateString()</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @(Model.Ativo ? "Ativo" : "Inativo")
            </dd>
        </dl>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">
        <strong>Dados Médicos</strong>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Histórico Clínico</dt>
            <dd class="col-sm-8">@Model.DadosMedicos?.HistoricoClinico</dd>

            <dt class="col-sm-4">Indicações Terapêuticas</dt>
            <dd class="col-sm-8">@Model.DadosMedicos?.IndicacoesTerapeuticas</dd>

            <dt class="col-sm-4">Contraindicações</dt>
            <dd class="col-sm-8">@Model.DadosMedicos?.ContraIndicacoes</dd>

            <dt class="col-sm-4">Médico Responsável</dt>
            <dd class="col-sm-8">@Model.DadosMedicos?.MedicoResponsavel</dd>
        </dl>
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">
        <strong>Seguro de Saúde</strong>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Seguradora</dt>
            <dd class="col-sm-8">@Model.SeguroSaude?.NomeSeguradora</dd>

            <dt class="col-sm-4">Nº Apólice</dt>
            <dd class="col-sm-8">@Model.SeguroSaude?.NumeroApolice</dd>
        </dl>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.UtenteBalnearioId" class="btn btn-warning">
    Editar
</a>
<a asp-action="Index" class="btn btn-secondary">
    Voltar
</a>
