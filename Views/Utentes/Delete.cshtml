@model HealthWellbeing.Models.UtenteBalneario

@{
    ViewData["Title"] = "Apagar Utente";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <strong>Atenção!</strong>
    Tem a certeza que quer apagar este utente?
</div>

<dl class="row">
    <dt class="col-sm-3">Nome</dt>
    <dd class="col-sm-9">@Model.NomeCompleto</dd>

    <dt class="col-sm-3">NIF</dt>
    <dd class="col-sm-9">@Model.NIF</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UtenteBalnearioId" />

    <button type="submit" class="btn btn-danger">Apagar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
