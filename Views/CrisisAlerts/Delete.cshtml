@model HealthWellbeing.Models.CrisisAlert

@{
    ViewData["Title"] = "Delete Crisis Alert";
}

<div class="container py-4">
    <div class="page-header mb-4">
        <h1 class="text-danger"><i class="bi bi-trash"></i> Delete Crisis Alert</h1>
        <p class="text-muted">Are you sure you want to delete this crisis alert?</p>
    </div>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
        <p>This action cannot be undone. Deleting this crisis alert will permanently remove it from the patient's crisis history. This may affect reporting and historical records.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Alert Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Alert ID</dt>
                        <dd class="col-sm-7">@Model.AlertId</dd>

                        <dt class="col-sm-5">Alert Date & Time</dt>
                        <dd class="col-sm-7">
                            <strong>@Model.AlertDateTime.ToString("MMMM dd, yyyy")</strong><br>
                            <small>@Model.AlertDateTime.ToString("hh:mm tt")</small>
                        </dd>

                        <dt class="col-sm-5">Crisis Level</dt>
                        <dd class="col-sm-7">
                            @switch (Model.Level)
                            {
                                case CrisisLevel.Critical:
                                    <span class="badge bg-danger">CRITICAL</span>
                                    break;
                                case CrisisLevel.High:
                                    <span class="badge bg-warning">HIGH</span>
                                    break;
                                case CrisisLevel.Medium:
                                    <span class="badge bg-info">MEDIUM</span>
                                    break;
                                case CrisisLevel.Low:
                                    <span class="badge bg-secondary">LOW</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-5">Status</dt>
                        <dd class="col-sm-7">
                            @if (Model.IsResolved)
                            {
                                <span class="badge bg-success">RESOLVED</span>
                                @if (Model.ResolvedDateTime.HasValue)
                                {
                                    <br>
                            
                                    <small class="text-muted">@Model.ResolvedDateTime.Value.ToString("MMM dd, yyyy")</small>
                                }
                            }
                            else
                            {
                                <span class="badge bg-danger">ACTIVE</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Patient Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Patient</dt>
                        <dd class="col-sm-7">
                            <strong>@Model.Patient?.FullName</strong><br>
                            <small class="text-muted">@Model.Patient?.Email</small>
                        </dd>

                        <dt class="col-sm-5">Phone</dt>
                        <dd class="col-sm-7">
                            @if (!string.IsNullOrEmpty(Model.Patient?.Phone))
                            {
                                @Model.Patient.Phone
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Crisis Description</h5>
                </div>
                <div class="card-body">
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="AlertId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-action="Details" asp-route-id="@Model.AlertId" class="btn btn-info">
            <i class="bi bi-eye"></i> View Details
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}