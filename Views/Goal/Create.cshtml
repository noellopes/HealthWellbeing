@model HealthWellbeing.Models.Goal

@{
    ViewData["Title"] = "Create Goal";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <h1 class="h4 mb-0">
            <i class="bi bi-plus-circle-fill me-2 text-success"></i>
            Create Goal
        </h1>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to list
    </a>
</div>

<hr />

<div class="row">
    <div class="col-md-7">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-warning" role="alert"></div>

            <div class="mb-3">
                <label asp-for="ClientId" class="form-label"></label>
                <select asp-for="ClientId" asp-items="ViewBag.ClientId" class="form-select">
                    <option value="">-- Select Client --</option>
                </select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GoalName" class="form-label"></label>
                <input asp-for="GoalName" class="form-control" />
                <span asp-validation-for="GoalName" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="DailyCalories" class="form-label"></label>
                    <input asp-for="DailyCalories" class="form-control" />
                    <span asp-validation-for="DailyCalories" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="DailyProtein" class="form-label"></label>
                    <input asp-for="DailyProtein" class="form-control" />
                    <span asp-validation-for="DailyProtein" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="DailyFat" class="form-label"></label>
                    <input asp-for="DailyFat" class="form-control" />
                    <span asp-validation-for="DailyFat" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 mt-1">
                <div class="col-md-4">
                    <label asp-for="DailyHydrates" class="form-label"></label>
                    <input asp-for="DailyHydrates" class="form-control" />
                    <span asp-validation-for="DailyHydrates" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="DailyVitamins" class="form-label"></label>
                    <input asp-for="DailyVitamins" class="form-control" />
                    <span asp-validation-for="DailyVitamins" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="DailyMinerals" class="form-label"></label>
                    <input asp-for="DailyMinerals" class="form-control" />
                    <span asp-validation-for="DailyMinerals" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-1">
                <label asp-for="DailyFibers" class="form-label"></label>
                <input asp-for="DailyFibers" class="form-control" />
                <span asp-validation-for="DailyFibers" class="text-danger"></span>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle-fill me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
