@model HealthWellbeing.Models.Goal

@{
    ViewData["Title"] = "Delete Goal";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">
        <i class="bi bi-trash-fill me-2 text-danger"></i>
        Delete Goal
    </h1>

    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to list
    </a>
</div>

<hr />

<div class="alert alert-danger">
    <h5 class="alert-heading">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Are you sure you want to delete this goal?
    </h5>
</div>

<dl class="row">
    <dt class="col-sm-4">Client</dt>
    <dd class="col-sm-8">@Model.Client?.Name</dd>

    <dt class="col-sm-4">Goal</dt>
    <dd class="col-sm-8">@Model.GoalName</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="GoalId" />

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill me-1"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle me-1"></i> Cancel
        </a>
    </div>
</form>
