@model HealthWellbeing.Models.Goal

@{
    ViewData["Title"] = "Goal Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <h1 class="h4 mb-0">
            <i class="bi bi-info-circle-fill me-2 text-info"></i>
            Goal Details
        </h1>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to list
    </a>
</div>

<hr />

<div class="row">
    <div class="col-md-7">
        <dl class="row">
            <dt class="col-sm-4">Client</dt>
            <dd class="col-sm-8">@Model.Client?.Name</dd>

            <dt class="col-sm-4">Goal</dt>
            <dd class="col-sm-8">@Model.GoalName</dd>

            <dt class="col-sm-4">Daily Calories</dt>
            <dd class="col-sm-8">@Model.DailyCalories</dd>

            <dt class="col-sm-4">Daily Protein</dt>
            <dd class="col-sm-8">@Model.DailyProtein g</dd>

            <dt class="col-sm-4">Daily Fat</dt>
            <dd class="col-sm-8">@Model.DailyFat g</dd>

            <dt class="col-sm-4">Daily Hydrates</dt>
            <dd class="col-sm-8">@Model.DailyHydrates g</dd>

            <dt class="col-sm-4">Daily Vitamins</dt>
            <dd class="col-sm-8">@Model.DailyVitamins</dd>

            <dt class="col-sm-4">Daily Minerals</dt>
            <dd class="col-sm-8">@Model.DailyMinerals</dd>

            <dt class="col-sm-4">Daily Fibers</dt>
            <dd class="col-sm-8">@Model.DailyFibers g</dd>
        </dl>

        <div class="mt-3 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.GoalId"
               class="btn btn-warning text-white">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to list
            </a>
        </div>
    </div>
</div>
