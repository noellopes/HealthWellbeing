@model HealthWellbeing.Models.Goal
@{
    ViewData["Title"] = "Goal Details";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<dl class="row">
    <dt class="col-sm-3">Client</dt>
    <dd class="col-sm-9">@Model.Client?.Name</dd>

    <dt class="col-sm-3">Goal Type</dt>
    <dd class="col-sm-9">@Model.GoalType</dd>

    <dt class="col-sm-3">Calories</dt>
    <dd class="col-sm-9">@Model.DailyCalories</dd>

    <dt class="col-sm-3">Protein</dt>
    <dd class="col-sm-9">@Model.DailyProtein</dd>

    <dt class="col-sm-3">Carbs</dt>
    <dd class="col-sm-9">@Model.DailyCarbs</dd>

    <dt class="col-sm-3">Fat</dt>
    <dd class="col-sm-9">@Model.DailyFat</dd>

    <dt class="col-sm-3">Fiber</dt>
    <dd class="col-sm-9">@Model.DailyFiber</dd>

    <dt class="col-sm-3">Vitamins</dt>
    <dd class="col-sm-9">@Model.DailyVitamins</dd>

    <dt class="col-sm-3">Minerals</dt>
    <dd class="col-sm-9">@Model.DailyMinerals</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.GoalId">Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>
