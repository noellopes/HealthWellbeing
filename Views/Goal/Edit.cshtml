@model HealthWellbeing.Models.Goal

@{
    ViewData["Title"] = "Edit Goal";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">
        <i class="bi bi-pencil-square me-2 text-warning"></i>
        Edit Goal
    </h1>

    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to list
    </a>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="GoalId" />

            <div asp-validation-summary="ModelOnly" class="alert alert-warning"></div>

            <div class="mb-3">
                <label asp-for="ClientId" class="form-label"></label>
                <select asp-for="ClientId" asp-items="ViewBag.ClientId" class="form-select"></select>
            </div>

            <div class="mb-3">
                <label asp-for="GoalName" class="form-label">Goal Type</label>
                <select asp-for="GoalName" class="form-select">
                    <option value="maintain">Maintain weight</option>
                    <option value="gain">Gain weight</option>
                    <option value="lose">Lose weight</option>
                </select>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-warning text-white">
                    <i class="bi bi-save-fill me-1"></i> Update
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
