@model HealthWellbeing.Models.Goal

@{
    ViewData["Title"] = "Edit Goal";
}

<div class="container my-4">
    <div class="fh-wrapper">

        <!-- Header -->
        <div class="fh-header">
            <div class="d-flex justify-content-between align-items-center gap-3 flex-wrap">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-pencil-square" style="color: var(--fi-cyan); font-size:1.15rem;"></i>
                    <h1 class="h5 fh-title mb-0">Edit Goal</h1>
                </div>
                <a asp-action="Index" class="btn btn-outline-light" style="border-radius:12px;">
                    <i class="bi bi-arrow-left me-1"></i>Back
                </a>
            </div>
        </div>

        <!-- Panel -->
        <div class="fh-panel">
            <div class="fh-card p-3">
                <form asp-action="Edit" class="fh-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="GoalId" />

                    <!-- Cliente -->
                    <div class="mb-3">
                        <label asp-for="ClientId" class="form-label">Client</label>
                        <select asp-for="ClientId" class="form-select" asp-items="@(ViewData["ClientId"] as SelectList)">
                            <option value="">— Select —</option>
                        </select>
                        <span asp-validation-for="ClientId" class="text-danger"></span>
                    </div>

                 
                    <div class="mb-3">
                        <label asp-for="GoalName" class="form-label">Goal</label>
                        @Html.DropDownListFor(
                        model => model.GoalName,
                          new List<SelectListItem>
                           {
                             new SelectListItem { Text = "— Select —", Value = "" },
                             new SelectListItem { Text = "Weight Loss", Value = "lose" },
                             new SelectListItem { Text = "Maintenance", Value = "maintain" },
                             new SelectListItem { Text = "Muscle Gain", Value = "gain" },
                                                },new { @class = "form-select" })
                        <span asp-validation-for="GoalName" class="text-danger"></span>
                    </div>


                   

                    <!-- Botões -->
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary" style="border-radius:12px;">Cancel</a>
                        <button type="submit" class="btn fh-btn-primary">
                            <i class="bi bi-save2 me-1"></i>Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
