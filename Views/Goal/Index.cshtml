@model IEnumerable<HealthWellbeing.Models.Goal>

@{
    ViewData["Title"] = "Goals";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">
        <i class="bi bi-flag-fill me-2 text-primary"></i>
        Goals
    </h1>

    <a asp-action="Create" class="btn btn-success btn-sm">
        <i class="bi bi-plus-circle me-1"></i> Add Goal
    </a>
</div>

<hr />

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Client</th>
            <th>Goal</th>
            <th class="text-center" style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Client?.Name</td>
                <td>@item.GoalName</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.GoalId"
                       class="btn btn-sm btn-info text-white me-1">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.GoalId"
                       class="btn btn-sm btn-warning text-white me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.GoalId"
                       class="btn btn-sm btn-danger">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
