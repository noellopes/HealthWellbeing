@model HealthWellbeing.Models.PaginationInfo<HealthWellbeing.Models.Goal>

@{
    ViewData["Title"] = "Goals";
}

<div class="container my-4">
    <div class="fh-wrapper">

        <!-- Header -->
        <div class="fh-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-bullseye" style="color: var(--fi-cyan); font-size:1.15rem;"></i>
                    <h1 class="h5 fh-title mb-0">Goals</h1>
                </div>

                <a asp-action="Create" class="btn btn-success" style="border-radius:12px; font-weight:800;">
                    <i class="bi bi-plus-circle me-1"></i>Add Goal
                </a>
            </div>
        </div>

        <!-- Panel -->
        <div class="fh-panel">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success fh-alert">
                    <i class="bi bi-check2-circle me-1"></i>@TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger fh-alert">
                    <i class="bi bi-x-circle me-1"></i>@TempData["Error"]
                </div>
            }

            @if (!Model.Items.Any())
            {
                <div class="alert alert-warning fh-alert mb-0">
                    <i class="bi bi-exclamation-triangle me-1"></i>No goals found.
                </div>
            }
            else
            {
                <div class="fh-card p-2">
                    <div class="table-responsive">
                        <table class="table fh-table align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Client</th>
                                    <th>Goal</th>
                                   
                                    <th class="text-end" style="width:190px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var g in Model.Items)
                                {
                                    <tr>
                                        <td class="fw-bold">@((g.Client?.Name) ?? $"Client #{g.ClientId}")</td>
                                        <td>
                                            @(g.GoalName switch
                                            {
                                                "lose" => "Weight Loss",
                                                "maintain" => "Maintenance",
                                                "gain" => "Muscle Gain",
                                                _ => g.GoalName
                                            })
                                </td>
                                        
                                        <td class="text-end">
                                            <a asp-action="Details" asp-route-id="@g.GoalId"
                                               class="btn btn-sm btn-outline-info me-1" style="border-radius:10px;">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@g.GoalId"
                                               class="btn btn-sm btn-outline-warning me-1" style="border-radius:10px;">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@g.GoalId"
                                               class="btn btn-sm btn-outline-danger" style="border-radius:10px;">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">

                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                            </li>
                        }

                        @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                            </li>
                        }

                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
