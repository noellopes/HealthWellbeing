@model IEnumerable<HealthWellbeing.Models.Goal>

@{
    ViewData["Title"] = "Goals";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<!-- Linha Create New Goal + Barra de pesquisa -->
<div class="d-flex justify-content-between align-items-center mb-3">

    <a class="btn btn-primary" asp-action="Create">Create New Goal</a>

    <form method="get" asp-action="Index" class="d-flex">
        <input type="text"
               name="searchString"
               value="@ViewBag.SearchString"
               class="form-control me-2"
               placeholder="Pesquisar..." />
        <button class="btn btn-primary me-2" type="submit">Pesquisar</button>
        <a class="btn btn-secondary" asp-action="Index">Limpar</a>
    </form>

</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No goals found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Client</th>
                <th>Goal Type</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model)
            {
                <tr>
                    <td>@g.Client?.Name</td>
                    <td>@g.GoalType</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@g.GoalId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@g.GoalId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@g.GoalId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Paginação simples -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                   asp-route-searchString="@ViewBag.SearchString">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchString="@ViewBag.SearchString">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                   asp-route-searchString="@ViewBag.SearchString">Next</a>
            </li>
        </ul>
    </nav>
}
