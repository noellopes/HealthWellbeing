@model IEnumerable<HealthWellbeing.Models.Goal>
@{
    ViewData["Title"] = "Goals";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
    var patientId = ViewBag.PatientId as int?;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create" asp-route-patientId="@patientId">Create New</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">There are no goals yet.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Patient</th>
                <th>Goal Type</th>
                <th>Daily Calories</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model)
            {
                <tr>
                    <td>@g.PatientId</td>
                    <td>@g.GoalType</td>
                    <td>@g.DailyCalories</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@g.GoalId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@g.GoalId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@g.GoalId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
