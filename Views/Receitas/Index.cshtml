@model IEnumerable<HealthWellbeing.Models.Receita>

@{
    ViewData["Title"] = "Receitas";
}

<h1>Receitas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Nova Receita</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TempoPreparo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Porcoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaloriasPorPorcao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proteinas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HidratosCarbono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gorduras)
            </th>
            <th>Restrições</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoPreparo) min
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Porcoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaloriasPorPorcao) kcal
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proteinas) g
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HidratosCarbono) g
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gorduras) g
            </td>
            <td>
                @if (item.RestricoesAlimentares != null && item.RestricoesAlimentares.Any())
                {
                    foreach (var restricao in item.RestricoesAlimentares)
                    {
                        <span class="badge bg-secondary">@restricao.Nome</span>
                    }
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReceitaId" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.ReceitaId" class="btn btn-sm btn-info">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.ReceitaId" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
