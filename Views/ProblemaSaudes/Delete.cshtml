@model HealthWellbeing.Models.ProblemaSaude

@{
    ViewData["Title"] = "Apagar Problema de Saúde";
}

<h1>Apagar Problema de Saúde</h1>

<div class="alert alert-danger">
    Tens a certeza que queres apagar este problema de saúde?
</div>

<table class="table table-bordered">
    <tr>
        <th>Categoria</th>
        <td>@Model.ProblemaCategoria</td>
    </tr>
    <tr>
        <th>Nome</th>
        <td>@Model.ProblemaNome</td>
    </tr>
    <tr>
        <th>Zona Atingida</th>
        <td>@Model.ZonaAtingida</td>
    </tr>
    <tr>
        <th>Gravidade</th>
        <td>@Model.Gravidade / 10</td>
    </tr>
</table>

<form asp-action="Delete">
    <input type="hidden" asp-for="ProblemaSaudeId" />
    <button type="submit" class="btn btn-danger">Apagar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
