@model HealthWellbeing.Models.ProblemaSaude

@{
    ViewData["Title"] = "Criar Problema de Saúde";
}

<h1>Criar Problema de Saúde</h1>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="ProblemaCategoria" class="form-label"></label>
        <input asp-for="ProblemaCategoria" class="form-control" />
        <span asp-validation-for="ProblemaCategoria" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProblemaNome" class="form-label"></label>
        <input asp-for="ProblemaNome" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ZonaAtingida" class="form-label"></label>
        <input asp-for="ZonaAtingida" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Gravidade" class="form-label"></label>
        <input asp-for="Gravidade" type="number" min="1" max="10" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Criar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
