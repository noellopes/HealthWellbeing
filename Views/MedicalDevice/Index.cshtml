@using HealthWellbeingRoom.Models
@model HealthWellbeing.ViewModels.RPaginationInfo<MedicalDevice> 

@{
    ViewData["Title"] = "Dispositivos Médicos Registados";
}

@* --- Secção de Mensagem de Sucesso --- *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@* Usamos Model.Items para verificar se há dados na página atual *@
@if (Model == null || !Model.Items.Any())
{
    <div class="alert alert-warning d-flex align-items-center border-2" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">Nenhum Dispositivo Encontrado</h4>
            <p>Não há dispositivos médicos registados na base de dados.</p>
        </div>
    </div>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Registar Novo
    </a>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
    </a>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Lista de Dispositivos</h2>
        <div class="d-flex justify-content-end">
            <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#postSearch" aria-expanded="false" aria-controls="postSearch">
                <i class="bi bi-search me-1"></i> Pesquisar
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Registar Novo
            </a>
        </div>
    </div>

    <div class="collapse mt-2 mb-2" id="postSearch">
        <div class="card card-body">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">
                <div class="col-md-4">
                    <label for="searchName" class="form-label">Nome</label>
                    <input id="searchName" name="searchName" value="@ViewBag.SearchName" class="form-control" placeholder="Pesquisar pelo nome" type="search" />
                </div>
                <div class="col-md-4">
                    <label for="searchType" class="form-label">Tipo</label>
                    <input id="searchType" name="searchType" value="@ViewBag.SearchType" class="form-control" placeholder="Pesquisar pelo tipo" type="search" />
                </div>
                <div class="col-md-4">
                    <label for="searchRoom" class="form-label">Sala</label>
                    <input id="searchRoom" name="searchRoom" value="@ViewBag.SearchRoom" class="form-control" placeholder="Pesquisar pela sala" type="search" />
                </div>

                <div class="col-12 mt-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Pesquisar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        Limpar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Items.First().Name)</th>
                    <th scope="col">Tipo de Dispositivo</th>
                    <th scope="col">Localização</th>
                    <th class="text-end" scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @* Percorremos Model.Items (a lista de dispositivos na página atual) *@
                @foreach (var dispositivo in Model.Items)
                {

                    @* Extrair a localização do dispositivo *@
                    // Pega a primeira (e única, se IsCurrent for usado corretamente) localização ativa.
                    // O Controller garante que este campo está carregado (Eager Loading).
                    var localizacao = dispositivo.LocalizacaoDispMedicoMovel.FirstOrDefault();
                    string status = dispositivo.CurrentStatus;
                    
                    <tr>
                        <td>@Html.DisplayFor(modelItem => dispositivo.Name)</td>

                        <td>@(dispositivo.TypeMaterial?.Name ?? "N/A")</td>

                        <td class="text-nowrap">
                            @* Exibir Status *@
                            @if (status == "Disponível")
                            {
                                <span class="badge bg-success">@status</span>
                            }
                            else if (status == "Em Manutenção")
                            {
                                <span class="badge bg-warning text-dark">@status</span>
                            }
                            else /* Indisponível (Alocado) */
                            {
                                <span class="badge bg-danger">@status</span>
                            }

                            @* Exibir a localização(sala) *@
                            @if (localizacao != null && localizacao.Room != null)
                            {
                                // Tem atribuição, mostra o nome da sala
                                <span class="fw-bold ms-2">na @localizacao.Room.Name</span>
                            }
                            else if (status == "Disponível")
                            {
                                // Não tem atribuição (e não está em manutenção), está à espera
                                <span class="text-muted small ms-2">Aguardando atribuição...</span>
                            }
                            else if (status == "Em Manutenção")
                            {
                                // Se estiver em manutenção, não precisa de mostrar a localização da sala
                                <span class="text-muted small ms-2">Consultar observações</span>
                            }
                        </td>

                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@dispositivo.MedicalDeviceID" class="btn btn-sm btn-info me-1">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Edit" asp-route-id="@dispositivo.MedicalDeviceID" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@dispositivo.MedicalDeviceID" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @* --- Secção de Paginação --- *@
        <nav aria-label="Medical Device page" class="d-flex justify-content-between align-items-center">
            @* Model.Items.Count() mostra quantos itens estão na página atual *@
            <span>Mostrando @Model.Items.Count() dos @Model.TotalItems</span>

            <ul class="pagination mb-0">
                @if (Model.CurrentPage == 1)
                {
                    <li class="page-item disabled"><a class="page-link">Primeira</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index">Primeira</a></li>
                }

                @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                {
                    if (p == Model.CurrentPage)
                    {
                        <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@p">@p</a></li>
                    }
                }
                @if (Model.CurrentPage == Model.TotalPages)
                {
                    <li class="page-item disabled"><a class="page-link">Última</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages">Última</a></li>
                }
            </ul>
        </nav>
    </div>
}