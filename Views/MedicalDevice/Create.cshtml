@using HealthWellbeingRoom.Models
@model MedicalDevice;

@{
    ViewData["Title"] = "Registar Novo Dispositivo Médico";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">

    <div class="card-header bg-success text-white">
        <h4 class="mb-0">
            <i class="bi bi-clipboard-plus me-2"></i> Novo Dispositivo Médico
        </h4>
    </div>

    <div class="card-body">

        <form asp-action="Create" method="post">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <div class="row">
                <div class="col-md-6">

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ex: Monitor Multiparamétrico">
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SerialNumber" class="form-label fw-bold"></label>
                        <input asp-for="SerialNumber" class="form-control" placeholder="Ex: A1B2C3D4">
                        <span asp-validation-for="SerialNumber" class="text-danger small"></span>
                    </div>

                </div>

                <div class="col-md-6">

                    <div class="mb-3">
                        <label asp-for="TypeMaterialID" class="form-label fw-bold"></label>
                        <select asp-for="TypeMaterialID" class="form-control" asp-items="ViewBag.TypeMaterialID">
                            <option value="">-- Selecione o Tipo --</option>
                        </select>
                        <span asp-validation-for="TypeMaterialID" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Observation" class="form-label fw-bold"></label>
                        <textarea asp-for="Observation" class="form-control" rows="3" placeholder="Ex: Adquirido em 2024. Calibração necessária em Dezembro."></textarea>
                        <span asp-validation-for="Observation" class="text-danger small"></span>
                    </div>

                    <input asp-for="RegistrationDate" type="hidden" />
                    <input asp-for="MedicalDeviceID" type="hidden" />
                </div>

            </div>

            <div class="mt-4 d-flex justify-content-end gap-2 border-top pt-3">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i> Submeter Registo
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista
                </a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}