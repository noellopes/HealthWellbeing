@using HealthWellbeingRoom.ViewModels
@model IEnumerable<RoomPreparationMedicalDevice>

@{
    ViewData["Title"] = "Planeamento de Salas";
    // Recupera a data para manter no input (formatada para o HTML date input)
    string dataAtual = ViewBag.DataSelecionada ?? DateTime.Now.AddDays(1).ToString("yyyy-MM-dd");
}

<h2 class="text-primary mb-4">
    <i class="bi bi-calendar-check me-2"></i> @ViewData["Title"]
</h2>

@* --- BOTÃO DE PESQUISA --- *@
<div class="d-flex justify-content-end mb-3">
    <button class="btn btn-outline-primary"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#prepSearch"
            aria-expanded="false"
            aria-controls="prepSearch">
        <i class="bi bi-search me-1"></i> Filtrar por Data
    </button>
</div>

@* --- CAIXA DE PESQUISA --- *@
<div class="collapse mb-3 show" id="prepSearch">
    @* Adicionei 'show' para aparecer aberta por defeito, útil neste caso *@
    <div class="card card-body shadow-sm">
        <form asp-action="PreparationList" method="get" class="row g-2 align-items-end">

            <div class="col-md-10">
                <label for="dataAlvo" class="form-label">Ver planeamento para o dia:</label>
                <input id="dataAlvo"
                       name="dataAlvo"
                       value="@dataAtual"
                       min="@DateTime.Now.ToString("yyyy-MM-dd")" @*bloqueia datas passadas*@
                       class="form-control"
                       type="date"
                       onchange="this.form.submit()" /> @* Submete assim que mudas a data *@
            </div>

            <div class="col-md-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-fill">
                    <i class="bi bi-arrow-clockwise"></i> Atualizar
                </button>
            </div>
        </form>
    </div>
</div>

@* --- RESULTADOS --- *@
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle-fill me-2 fs-4"></i>
        <div>
            Não existem consultas agendadas para a data selecionada.
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var sala in Model)
        {
            // Verifica se há algum item em falta nesta sala
            bool temFalta = sala.Dispositivo.Any(d => d.EmFalta);
            string borderClass = temFalta ? "border-danger" : "border-success";
            string headerClass = temFalta ? "bg-danger text-white" : "bg-success text-white";

            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100 border-start border-4 @borderClass">

                    @* Cabeçalho do Card (Sala + Médico) *@
                    <div class="card-header @headerClass bg-opacity-75">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-door-closed"></i> @sala.NomeSala</h5>
                            <span class="badge bg-light text-dark">@sala.Especialidade</span>
                        </div>
                        <small class="d-block mt-1">
                            <i class="bi bi-person-badge"></i> @sala.Medico &bull;

                            @* mostra o intervalo da hora da consulta *@
                            <i class="bi bi-clock"></i>
                            @sala.DataConsulta.ToString("HH:mm")
                            @if (sala.HoraFim.HasValue)
                            {
                                <span> - @sala.HoraFim.Value.ToString("HH:mm")</span>
                            }
                        </small>
                    </div>

                    @* Lista de dispositivos *@
                    <ul class="list-group list-group-flush">
                        @foreach (var item in sala.Dispositivo)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@item.NomeDispositivo</strong>
                                    <div class="small text-muted">
                                        Necessário: @item.QtdNecessaria | Na Sala: @item.QtdNaSala
                                    </div>
                                </div>

                                @if (item.EmFalta)
                                {
                                    <div class="text-end">
                                        <span class="badge bg-danger mb-1">Faltam @item.QtdFalta</span>
                                        <br>
                                        @* Botão RESOLVER: Leva ao Inventário filtrado pelo nome do que falta *@
                                        <a asp-controller="MedicalDevice" asp-action="Index"
                                           asp-route-searchName="@item.NomeDispositivo"
                                           class="btn btn-sm btn-outline-danger py-0"
                                           style="font-size: 0.75rem;">
                                            <i class="bi bi-box-seam"></i> Resolver
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-success fs-4"><i class="bi bi-check-circle-fill"></i></span>
                                }
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
}

@* --- BOTÃO VOLTAR --- *@
<div class="mt-4 d-flex justify-content-end gap-2 border-top pt-3">
    <a asp-action="DeviceGroupIndex" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar 
    </a>
</div>