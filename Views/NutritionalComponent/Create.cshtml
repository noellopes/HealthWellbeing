@model HealthWellbeing.Models.NutritionalComponent

@{
    ViewData["Title"] = "Create Nutritional Component";
}

<div class="container my-4">
    <div class="fh-wrapper">
        <div class="fh-header">
            <div class="d-flex justify-content-between align-items-center gap-3 flex-wrap">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-plus-circle" style="color: var(--fi-cyan); font-size:1.15rem;"></i>
                    <h1 class="h5 fh-title mb-0">Create Nutritional Component</h1>
                </div>
                <a asp-action="Index" class="btn btn-outline-light" style="border-radius:12px;">
                    <i class="bi bi-arrow-left me-1"></i>Back
                </a>
            </div>
        </div>

        <div class="fh-panel">
            <div class="fh-card p-3">
                <form asp-action="Create" class="fh-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Protein" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row g-2">
                        <div class="col-md-4">
                            <label asp-for="Unit" class="form-label">Unit</label>
                            <input asp-for="Unit" class="form-control" placeholder="e.g., g, kcal" />
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                        <div class="col-md-8">
                            <label asp-for="Basis" class="form-label">Basis</label>
                            <input asp-for="Basis" class="form-control" placeholder="e.g., per 100 g" />
                            <span asp-validation-for="Basis" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary" style="border-radius:12px;">Cancel</a>
                        <button type="submit" class="btn fh-btn-primary">
                            <i class="bi bi-check2-circle me-1"></i>Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

