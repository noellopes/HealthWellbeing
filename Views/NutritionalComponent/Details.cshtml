@model HealthWellbeing.Models.NutritionalComponent

@{
    ViewData["Title"] = "Nutritional Component Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <h1 class="h4 mb-0">
            <i class="bi bi-info-circle-fill me-2 text-info"></i>
            Nutritional Component Details
        </h1>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to list
    </a>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Unit</dt>
            <dd class="col-sm-8">@Model.Unit</dd>

            <dt class="col-sm-4">Basis</dt>
            <dd class="col-sm-8">@Model.Basis</dd>
        </dl>

        <div class="mt-3 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.NutritionalComponentId"
               class="btn btn-warning text-white">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to list
            </a>
        </div>
    </div>
</div>
