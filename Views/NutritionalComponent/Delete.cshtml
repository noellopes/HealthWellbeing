@model HealthWellbeing.Models.NutritionalComponent

@{
    ViewData["Title"] = "Delete Nutritional Component";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <h1 class="h4 mb-0">
            <i class="bi bi-trash-fill me-2 text-danger"></i>
            Delete Nutritional Component
        </h1>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to list
    </a>
</div>

<hr />

<div class="alert alert-danger">
    <h5 class="alert-heading">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Are you sure you want to delete this component?
    </h5>
    <p class="mb-0">This action cannot be undone.</p>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Unit</dt>
            <dd class="col-sm-8">@Model.Unit</dd>

            <dt class="col-sm-4">Basis</dt>
            <dd class="col-sm-8">@Model.Basis</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="NutritionalComponentId" />
            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
