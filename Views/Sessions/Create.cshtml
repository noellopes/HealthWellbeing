@model HealthWellbeing.Models.Training

@{
    ViewData["Title"] = "Book Session";
}

<div class="container mt-5">
    <div class="card shadow border-0" style="max-width: 600px; margin: auto;">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">Confirm Booking</h3>
        </div>
        <div class="card-body p-4">

            <div class="text-center mb-4">
                <h2 class="text-primary fw-bold">@Model.Name</h2>
                <h5 class="text-muted">@Model.TrainingType.Name</h5>
            </div>

            <hr />

            <div class="row mb-3">
                <div class="col-6 text-end fw-bold">Trainer:</div>
                <div class="col-6">@Model.Trainer.Name</div>
            </div>
            <div class="row mb-3">
                <div class="col-6 text-end fw-bold">Day / Time:</div>
                <div class="col-6">@Model.DayOfWeek at @Model.StartTime.ToString(@"hh\:mm")</div>
            </div>
            <div class="row mb-3">
                <div class="col-6 text-end fw-bold">Duration:</div>
                <div class="col-6">@Model.Duration min</div>
            </div>

            <form asp-action="Create" method="post" class="mt-4">
                <input type="hidden" name="TrainingId" value="@Model.TrainingId" />

                <div class="form-group mb-4">
                    <label class="fw-bold mb-2">Select Date:</label>
                    <input type="date" name="SessionDate" class="form-control form-control-lg text-center"
                           value="@ViewBag.SuggestedDate" required />
                    <div class="form-text text-center">Please confirm the date for your session.</div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle-fill me-2"></i>Confirm Booking
                    </button>
                    <a asp-controller="Training" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>