@model Alimento
@{
    ViewData["Title"] = "Detalhes";
}
<h1>Detalhes</h1>
<dl class="row">
    <dt class="col-sm-3">Nome</dt>
    <dd class="col-sm-9">@Model.Name</dd>
    <dt class="col-sm-3">Categoria</dt>
    <dd class="col-sm-9">@Model.CategoriaAlimentoId</dd>
    <dt class="col-sm-3">Kcal/100g</dt>
    <dd class="col-sm-9">@Model.KcalPor100g</dd>
    <dt class="col-sm-3">Proteína</dt>
    <dd class="col-sm-9">@Model.ProteinaGPor100g g</dd>
    <dt class="col-sm-3">Hidratos</dt>
    <dd class="col-sm-9">@Model.HidratosGPor100g g</dd>
    <dt class="col-sm-3">Gordura</dt>
    <dd class="col-sm-9">@Model.GorduraGPor100g g</dd>
</dl>
<p>
    <a asp-action="Edit" asp-route-id="@Model.AlimentoId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>

