@model IEnumerable<Alimento>
@{
    ViewData["Title"] = "Alimento";
}
<h1>Alimentos</h1>

<p><a class="btn btn-primary" asp-action="Create">Novo</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Categoria</th>
            <th>Kcal/100g</th>
            <th>Prot</th>
            <th>Hidr</th>
            <th>Gord</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Categoria?.Name</td>
                <td>@a.KcalPor100g</td>
                <td>@a.ProteinaGPor100g</td>
                <td>@a.HidratosGPor100g</td>
                <td>@a.GorduraGPor100g</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@a.AlimentoId" class="btn btn-sm btn-secondary">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@a.AlimentoId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@a.AlimentoId" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
