@model HealthWellbeing.Models.UserFoodRegistration

@{
    ViewData["Title"] = "Registration Details";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered">
    <tr>
        <th>Client</th>
        <td>@Model.Client?.Name</td>
    </tr>
    <tr>
        <th>Meal Date</th>
        <td>@Model.MealDateTime.ToString("g")</td>
    </tr>
    <tr>
        <th>Meal Type</th>
        <td>@Model.MealType</td>
    </tr>
    <tr>
        <th>Food Name</th>
        <td>@Model.FoodName</td>
    </tr>
    <tr>
        <th>Quantity</th>
        <td>@Model.Quantity</td>
    </tr>
    <tr>
        <th>Notes</th>
        <td>@Model.Notes</td>
    </tr>
</table>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.UserFoodRegId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.UserFoodRegId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
