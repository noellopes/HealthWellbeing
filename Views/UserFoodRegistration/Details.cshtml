@model HealthWellbeing.Models.UserFoodRegistration

@{
    ViewData["Title"] = "Record Details";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">User ID</dt>
        <dd class="col-sm-9">@Model.UserId</dd>

        <dt class="col-sm-3">Meal Date and Time</dt>
        <dd class="col-sm-9">@Model.MealDateTime</dd>

        <dt class="col-sm-3">Meal Type</dt>
        <dd class="col-sm-9">@Model.MealType</dd>

        <dt class="col-sm-3">Food Name</dt>
        <dd class="col-sm-9">@Model.FoodName</dd>

        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
