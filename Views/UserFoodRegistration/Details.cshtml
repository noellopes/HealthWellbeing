@model HealthWellbeing.Models.UserFoodRegistration
@{
    ViewData["Title"] = "Food Record Details";
}

<h1><i class="bi bi-archive"></i> @ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-3">Client</dt>
    <dd class="col-sm-9">@Model.Client?.Name</dd>

    <dt class="col-sm-3">Food</dt>
    <dd class="col-sm-9">@Model.Food?.Name</dd>

    <dt class="col-sm-3">Portion</dt>
    <dd class="col-sm-9">@Model.FoodPortion?.Label</dd>

    <dt class="col-sm-3">Count</dt>
    <dd class="col-sm-9">@Model.PortionsCount</dd>

    <dt class="col-sm-3">Meal Type</dt>
    <dd class="col-sm-9">@Model.MealType</dd>

    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.MealDateTime.ToString("dd/MM/yyyy HH:mm")</dd>

    <dt class="col-sm-3">Estimated Energy (kcal)</dt>
    <dd class="col-sm-9">@Model.EstimatedEnergyKcal</dd>

    <dt class="col-sm-3">Notes</dt>
    <dd class="col-sm-9">@Model.Notes</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.UserFoodRegistrationId"><i class="bi bi-pencil-square"></i> Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-backspace"></i> Back</a>
</div>
