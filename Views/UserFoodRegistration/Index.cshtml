@model IEnumerable<HealthWellbeing.Models.UserFoodRegistration>

@{
    ViewData["Title"] = "User Food Registrations";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary mt-3">Add New Record</a>
</p>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
            <th>@Html.DisplayNameFor(model => model.First().MealDateTime)</th>
            <th>@Html.DisplayNameFor(model => model.First().MealType)</th>
            <th>@Html.DisplayNameFor(model => model.First().FoodName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.First().Notes)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.UserId</td>
                    <td>@item.MealDateTime</td>
                    <td>@item.MealType</td>
                    <td>@item.FoodName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Notes</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">No records found.</td>
            </tr>
        }
    </tbody>
</table>
