@model IEnumerable<HealthWellbeing.Models.UserFoodRegistration>

@{
    ViewData["Title"] = "User Food Registrations";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Registration</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Client</th>
            <th>Meal Date</th>
            <th>Meal Type</th>
            <th>Food Name</th>
            <th>Quantity</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Client?.Name</td>
                <td>@item.MealDateTime.ToString("g")</td>
                <td>@item.MealType</td>
                <td>@item.FoodName</td>
                <td>@item.Quantity</td>
                <td>@item.Notes</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.UserFoodRegId">Details</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.UserFoodRegId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.UserFoodRegId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
