@model IEnumerable<HealthWellbeing.Models.UserFoodRegistration>
@{
    ViewData["Title"] = "User Food Registrations";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}

<h1>@ViewData["Title"]</h1>

@if (success != null)
{
    <div class="alert alert-success">@success</div>
}
@if (error != null)
{
    <div class="alert alert-danger">@error</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Add Record</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No records found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Date</th>
                <th>Client</th>
                <th>Food</th>
                <th>Portion</th>
                <th>Count</th>
                <th>Meal Type</th>
                <th>Energy (kcal)</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.MealDateTime.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@r.Client?.Name</td>
                    <td>@r.Food?.Name</td>
                    <td>@r.FoodPortion?.Portion</td>
                    <td>@r.PortionsCount</td>
                    <td>@r.MealType</td>
                    <td>@r.EstimatedEnergyKcal</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@r.UserFoodRegistrationId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@r.UserFoodRegistrationId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@r.UserFoodRegistrationId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
