@model HealthWellbeing.Models.UserFoodRegistration

@{
    ViewData["Title"] = "Delete Record";
}

<h2>@ViewData["Title"]</h2>

<hr />

<h4>Are you sure you want to delete this record?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">User ID</dt>
        <dd class="col-sm-9">@Model.UserId</dd>

        <dt class="col-sm-3">Meal Date and Time</dt>
        <dd class="col-sm-9">@Model.MealDateTime</dd>

        <dt class="col-sm-3">Meal Type</dt>
        <dd class="col-sm-9">@Model.MealType</dd>

        <dt class="col-sm-3">Food Name</dt>
        <dd class="col-sm-9">@Model.FoodName</dd>

        <dt class="col-sm-3">Quantity</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Notes</dt>
        <dd class="col-sm-9">@Model.Notes</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
