@model HealthWellbeing.ViewModels.CustomerDashboardViewModel

@{
    ViewData["Title"] = "My Dashboard";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<div class="container py-5">

    @* --- CABEÇALHO HERO --- *@
    <div class="row align-items-center mb-5">
        <div class="col-md-8">
            <h6 class="text-uppercase text-muted fw-bold small ls-1">Welcome back,</h6>
            <h1 class="fw-bold text-dark display-5">@Model.CustomerName</h1>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <div class="d-inline-flex align-items-center bg-white px-4 py-3 rounded-4 shadow-sm border">
                <div class="me-3 text-end">
                    <div class="text-uppercase small fw-bold text-muted">Current Level</div>
                    <div class="fs-4 fw-bold text-primary">@Model.CurrentLevel?.LevelNumber</div>
                </div>
                <i class="bi bi-trophy-fill fs-1 text-warning"></i>
            </div>
        </div>
    </div>

    @* --- ESTATÍSTICAS RÁPIDAS --- *@
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 bg-primary bg-opacity-10">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle bg-white p-3 me-3 text-primary shadow-sm">
                        <i class="bi bi-lightning-charge-fill fs-4"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@Model.TotalPoints</h3>
                        <span class="text-muted small text-uppercase fw-bold">Total Points</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 bg-success bg-opacity-10">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle bg-white p-3 me-3 text-success shadow-sm">
                        <i class="bi bi-award-fill fs-4"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@Model.BadgesEarnedCount <span class="fs-6 text-muted fw-normal">/ @Model.BadgesTotalCount</span></h3>
                        <span class="text-muted small text-uppercase fw-bold">Badges Earned</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 bg-info bg-opacity-10">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle bg-white p-3 me-3 text-info shadow-sm">
                        <i class="bi bi-calendar-check-fill fs-4"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@Model.ActiveEnrollments.Count</h3>
                        <span class="text-muted small text-uppercase fw-bold">Active Events</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-5">

        @* --- COLUNA ESQUERDA (PRINCIPAL) --- *@
        <div class="col-lg-8">

            @* --- SECÇÃO: NÍVEL E PROGRESSO --- *@
            <div class="card border-0 shadow-sm rounded-4 mb-5 overflow-hidden">
                <div class="card-header bg-white border-0 p-4 pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-dark mb-0">Level Progress</h5>
                    <a asp-controller="CustomerLevel" asp-action="Index" class="btn btn-sm btn-light rounded-pill fw-bold">View Roadmap</a>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="fw-bold text-primary">Lvl @Model.CurrentLevel?.LevelNumber</span>
                        @if (!Model.IsMaxLevel)
                        {
                            <span class="text-muted small">Target: @Model.NextLevel?.LevelPointsLimit pts</span>
                        }
                    </div>
                    <div class="progress mb-3" style="height: 15px; border-radius: 10px;">
                        <div class="progress-bar bg-gradient-primary" role="progressbar" style="width: @Model.ProgressPercentage%"></div>
                    </div>
                    @if (!Model.IsMaxLevel)
                    {
                        <p class="text-muted small mb-0">
                            You need <strong>@Model.PointsNeeded more points</strong> to reach <span class="text-dark fw-bold">Level @Model.NextLevel?.LevelNumber</span> (@Model.NextLevel?.Category?.Name).
                        </p>
                    }
                    else
                    {
                        <p class="text-success small fw-bold mb-0"><i class="bi bi-star-fill me-1"></i> Maximum level reached!</p>
                    }
                </div>
            </div>

            @* --- SECÇÃO: EVENTOS ATIVOS --- *@
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold text-dark mb-0">Active Events</h5>
                <a asp-controller="CustomerEvents" asp-action="Index" class="text-decoration-none small fw-bold">View Calendar <i class="bi bi-arrow-right"></i></a>
            </div>

            @if (Model.ActiveEnrollments.Any())
            {
                <div class="row g-3 mb-5">
                    @foreach (var enroll in Model.ActiveEnrollments)
                    {
                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm rounded-4 border-start border-4 border-info hover-lift">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between">
                                        <span class="badge bg-light text-dark mb-2">@enroll.Event.EventType.EventTypeName</span>
                                        <span class="badge bg-danger animate-pulse" style="height: fit-content;">LIVE</span>
                                    </div>
                                    <h6 class="fw-bold text-truncate">@enroll.Event.EventName</h6>
                                    <div class="text-muted small"><i class="bi bi-calendar me-1"></i> Ends @enroll.Event.EventEnd.ToString("dd MMM")</div>
                                    <a asp-controller="CustomerEvents" asp-action="Details" asp-route-id="@enroll.EventId" class="btn btn-sm btn-outline-primary rounded-pill w-100 mt-3 fw-bold">Continue</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4 bg-light rounded-4 mb-5 border border-dashed">
                    <p class="text-muted mb-2">No active events.</p>
                    <a asp-controller="CustomerEvents" asp-action="Index" class="btn btn-sm btn-primary rounded-pill">Find Events</a>
                </div>
            }

            @* --- SECÇÃO: ATIVIDADES RECENTES --- *@
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold text-dark mb-0">Recent Activity</h5>
                <a asp-controller="CustomerActivity" asp-action="History" class="text-decoration-none small fw-bold">View Full History <i class="bi bi-arrow-right"></i></a>
            </div>

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="list-group list-group-flush">
                    @if (Model.RecentActivities.Any())
                    {
                        @foreach (var act in Model.RecentActivities)
                        {
                            <div class="list-group-item p-3 border-0 border-bottom d-flex align-items-center">
                                <div class="rounded-circle bg-light p-2 me-3 text-secondary">
                                    <i class="bi bi-activity fs-5"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 fw-bold text-dark">@act.Activity.ActivityName</h6>
                                    <small class="text-muted">@act.CompletionDate.ToString("dd MMM yyyy, HH:mm")</small>
                                </div>
                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2">
                                    +@act.PointsEarned pts
                                </span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">You haven't logged any activities yet.</div>
                    }
                </div>
                <div class="card-footer bg-white text-center p-3 border-0">
                    <a asp-controller="CustomerActivity" asp-action="Index" class="btn btn-primary rounded-pill fw-bold w-100">
                        <i class="bi bi-plus-circle me-2"></i> Log New Activity
                    </a>
                </div>
            </div>

        </div>

        @* --- COLUNA DIREITA (SIDEBAR) --- *@
        <div class="col-lg-4">

            @* --- SECÇÃO: BADGES --- *@
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="fw-bold text-dark mb-0">Recent Badges</h5>
                        <a asp-controller="MyBadges" asp-action="Index" class="text-decoration-none small">View All</a>
                    </div>

                    @if (Model.RecentBadges.Any())
                    {
                        <div class="d-flex gap-3 justify-content-center flex-wrap">
                            @foreach (var badge in Model.RecentBadges)
                            {
                                <div class="text-center" style="width: 80px;">
                                    <div class="rounded-circle bg-warning bg-opacity-10 p-3 mb-2 mx-auto border border-warning" style="width: 60px; height: 60px; display:flex; align-items:center; justify-content:center;">
                                        <i class="bi bi-trophy-fill text-warning fs-4"></i>
                                    </div>
                                    <div class="small fw-bold text-truncate" style="max-width: 100%;">@badge.BadgeName</div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-3">
                            <i class="bi bi-award opacity-50 display-4 d-block mb-2"></i>
                            <small>No badges earned yet. Keep going!</small>
                        </div>
                    }
                </div>
            </div>

            @* --- CARTÃO PROMOCIONAL --- *@
            <div class="card border-0 shadow-sm rounded-4 bg-dark text-white overflow-hidden position-relative">
                <div class="card-body p-4 position-relative z-1">
                    <h5 class="fw-bold mb-3">Boost your Rank!</h5>
                    <p class="small opacity-75 mb-4">Join active events to earn multipliers and unlock exclusive badges.</p>
                    <a asp-controller="CustomerEvents" asp-action="Index" class="btn btn-light rounded-pill fw-bold w-100 text-primary">Browse Events</a>
                </div>
                <div class="position-absolute top-0 end-0 opacity-25" style="transform: translate(30%, -30%);">
                    <i class="bi bi-rocket-takeoff-fill" style="font-size: 8rem;"></i>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(45deg, #0d6efd, #0dcaf0);
    }

    .ls-1 {
        letter-spacing: 1px;
    }

    .hover-lift {
        transition: transform 0.2s;
    }

        .hover-lift:hover {
            transform: translateY(-3px);
        }

    @@keyframes pulse-red {
        0% {
            box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.4);
        }

        70% {
            box-shadow: 0 0 0 6px rgba(220, 53, 69, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(220, 53, 69, 0);
        }
    }

    .animate-pulse {
        animation: pulse-red 2s infinite;
    }
</style>