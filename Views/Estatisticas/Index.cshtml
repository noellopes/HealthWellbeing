@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.UtenteGrupo7>

@{
    ViewData["Title"] = "Estatísticas dos Utentes";
}

<h1 class="mb-4 text-primary"><i class="bi bi-bar-chart-line"></i> Análise de Utentes</h1>

@if (TempData["StatusMessage"] is string statusMessage)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @statusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">Listagem</h2>
    <div>
        <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#searchForm" aria-expanded="false" aria-controls="searchForm">
            <i class="bi bi-search me-1"></i> Pesquisa Avançada
        </a>
    </div>
</div>

<div class="collapse mb-3" id="searchForm">
    <div class="card card-body bg-light">
        <form asp-action="Index" method="get" class="row g-2 align-items-end">

            <div class="col-md-5">
                <label for="searchNome" class="form-label fw-bold">Nome do Utente</label>
                <input id="searchNome" name="searchNome" value="@ViewBag.SearchNome" class="form-control" placeholder="Ex: João Silva" />
            </div>

            <div class="col-md-4">
                <label for="searchProfissional" class="form-label fw-bold">ID Profissional</label>
                <input id="searchProfissional" name="searchProfissional" value="@ViewBag.SearchProfissional" class="form-control" placeholder="Ex: P001" />
            </div>

            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i> Filtrar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Limpar</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Items.Any())
{
    <div class="alert alert-warning shadow-sm">
        <i class="bi bi-exclamation-triangle me-2"></i> Nenhum utente encontrado com os critérios de pesquisa.
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nome do Utente</th>
                        <th>ID Profissional</th>
                        <th class="text-end" style="min-width: 150px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="fw-bold text-dark">@item.Nome</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ProfissionalSaudeId))
                                {
                                    <span class="badge bg-secondary">@item.ProfissionalSaudeId</span>
                                }
                                else
                                {
                                    <span class="text-muted small">N/A</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Utente" asp-route-id="@item.UtenteGrupo7Id" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm">
                                    Ver Progresso <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @{
                var routeData = new Dictionary<string, string>
                {
                { "searchUtente", ViewBag.SearchUtente },
                { "dataInicio", ViewBag.DataInicio },
                { "dataFim", ViewBag.DataFim }
                };
            }

            @if (Model.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <span class="page-link"><i class="bi bi-chevron-double-left"></i> Primeira</span>
                </li>
                <li class="page-item disabled">
                    <span class="page-link"><i class="bi bi-chevron-left"></i> Anterior</span>
                </li>
            }
            else
            {
                routeData["page"] = "1";
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-all-route-data="routeData" title="Ir para a primeira página">
                        <i class="bi bi-chevron-double-left"></i> Primeira
                    </a>
                </li>

                routeData["page"] = (Model.CurrentPage - 1).ToString();
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-all-route-data="routeData" title="Página anterior">
                        <i class="bi bi-chevron-left"></i> Anterior
                    </a>
                </li>
            }

            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
            {
                if (p == Model.CurrentPage)
                {
                    <li class="page-item active"><span class="page-link">@p</span></li>
                }
                else
                {
                    routeData["page"] = p.ToString();
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-all-route-data="routeData">@p</a>
                    </li>
                }
            }

            @if (Model.CurrentPage == Model.TotalPages)
            {
                <li class="page-item disabled">
                    <span class="page-link">Próxima <i class="bi bi-chevron-right"></i></span>
                </li>
                <li class="page-item disabled">
                    <span class="page-link">Última <i class="bi bi-chevron-double-right"></i></span>
                </li>
            }
            else
            {
                routeData["page"] = (Model.CurrentPage + 1).ToString();
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-all-route-data="routeData" title="Próxima página">
                        Próxima <i class="bi bi-chevron-right"></i>
                    </a>
                </li>

                routeData["page"] = Model.TotalPages.ToString();
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-all-route-data="routeData" title="Ir para a última página">
                        Última <i class="bi bi-chevron-double-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
}