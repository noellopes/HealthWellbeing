@model HealthWellbeing.ViewModels.MetaEditViewModel

@{
    ViewData["Title"] = "Criar Meta";
}

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Criar Meta</h1>
            <p class="text-muted mb-0">Defina os seus objetivos diários.</p>
        </div>
        @if (User.IsInRole("Nutricionista"))
        {
            if (!string.IsNullOrWhiteSpace(Model.ReturnUrl))
            {
                <a class="btn btn-outline-secondary" href="@Model.ReturnUrl">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            }
            else
            {
                <a asp-action="GerirPerfilAlimentar" asp-route-clientId="@Model.ClientId" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar ao cliente
                </a>
            }
        }
        else
        {
            <a asp-action="MeuPerfilAlimentar" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar ao perfil
            </a>
        }
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="CriarMeta" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="ReturnUrl" />

                @if (!string.IsNullOrWhiteSpace(Model.ClientId))
                {
                    <input type="hidden" asp-for="ClientId" />
                }

                <div class="mb-3">
                    <label asp-for="MetaDescription" class="form-label">Descrição</label>
                    <input asp-for="MetaDescription" class="form-control" placeholder="Ex: Perder peso, ganhar massa, manter..." />
                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="DailyCalories" class="form-label">Calorias (kcal)</label>
                        <input asp-for="DailyCalories" class="form-control" type="number" min="0" />
                        <span asp-validation-for="DailyCalories" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="DailyProtein" class="form-label">Proteína</label>
                        <input asp-for="DailyProtein" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="DailyProtein" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="DailyFat" class="form-label">Gordura</label>
                        <input asp-for="DailyFat" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="DailyFat" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="DailyHydrates" class="form-label">Hidratos</label>
                        <input asp-for="DailyHydrates" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="DailyHydrates" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="DailyVitamins" class="form-label">Vitaminas</label>
                        <input asp-for="DailyVitamins" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="DailyVitamins" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    @if (User.IsInRole("Nutricionista"))
                    {
                        if (!string.IsNullOrWhiteSpace(Model.ReturnUrl))
                        {
                            <a class="btn btn-outline-secondary" href="@Model.ReturnUrl">Cancelar</a>
                        }
                        else
                        {
                            <a asp-action="GerirPerfilAlimentar" asp-route-clientId="@Model.ClientId" class="btn btn-outline-secondary">Cancelar</a>
                        }
                    }
                    else
                    {
                        <a asp-action="MeuPerfilAlimentar" class="btn btn-outline-secondary">Cancelar</a>
                    }
                    <button type="submit" class="btn btn-success"><i class="bi bi-check2"></i> Criar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
