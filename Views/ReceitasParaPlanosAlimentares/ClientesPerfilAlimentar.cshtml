@model HealthWellbeing.ViewModels.ClientesPerfilAlimentarViewModel

@{
    ViewData["Title"] = "Perfil Alimentar — Clientes";
}

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Perfil Alimentar — Clientes</h1>
            <p class="text-muted mb-0">Gerir alergias, restrições alimentares e metas por cliente.</p>
        </div>
        <a asp-action="ReceitasParaPlanosAlimentares" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-people"></i> Lista de clientes</h5>
        </div>
        <div class="card-body">
            @if (Model.Clientes == null || Model.Clientes.Count == 0)
            {
                <div class="alert alert-warning mb-0">Não existem clientes para apresentar.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Email</th>
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.Clientes)
                            {
                                <tr>
                                    <td class="fw-semibold">@c.Nome</td>
                                    <td class="text-muted">@c.Email</td>
                                    <td class="text-end">
                                        <a asp-action="GerirPerfilAlimentar" asp-route-clientId="@c.ClientId" class="btn btn-sm btn-primary">
                                            <i class="bi bi-sliders"></i> Gerir
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
