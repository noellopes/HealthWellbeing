@model HealthWellbeing.Models.Exercicio

@{
    ViewData["Title"] = "Detalhes do Exercício";
    string? successMessage = Context.Request.Query["SuccessMessage"];
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
            <a asp-action="Edit" asp-route-id="@Model.ExercicioId" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Delete" asp-route-id="@Model.ExercicioId" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Apagar
            </a>
        </div>
    </div>

    @if (successMessage != null)
    {
        <div class="container py-4">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @successMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.ExercicioNome</h3>
        </div>

        <div class="card-body">
            <div class="row">

                <!-- Informações básicas -->
                <div class="col-md-6 mb-3">
                    <h5 class="fw-bold">Informações Básicas</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-secondary">Descrição:</th>
                            <td>@Model.Descricao</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Duração:</th>
                            <td>@Model.Duracao minutos</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Intensidade:</th>
                            <td>@Model.Intencidade / 10</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Calorias Gastas:</th>
                            <td>@Model.CaloriasGastas cal</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Equipamento:</th>
                            <td>@Model.EquipamentoNecessario</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Géneros:</th>
                            <td>
                                @if (Model.ExercicioGeneros?.Any() == true)
                                {
                                    foreach (var item in Model.ExercicioGeneros)
                                    {
                                        <span class="badge bg-success me-1">
                                            @item.Genero.NomeGenero
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Nenhum gênero definido</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>

                <!-- Treino -->
                <div class="col-md-6 mb-3">
                    <h5 class="fw-bold">Configuração do Treino</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th class="text-secondary">Séries:</th>
                            <td>@Model.Series</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Repetições:</th>
                            <td>@Model.Repeticoes</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Músculos Trabalhados:</th>
                            <td>
                                @if (Model.ExercicioGrupoMusculares?.Any() == true)
                                {
                                    foreach (var item in Model.ExercicioGrupoMusculares)
                                    {
                                        <span class="badge bg-info text-dark me-1">
                                            @item.GrupoMuscular.GrupoMuscularNome
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Nenhum músculo definido</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>

            </div>

            <!-- Instruções -->
            <div class="mt-4">
                <h5 class="fw-bold">Instruções</h5>
                <div class="border rounded p-3 bg-light">
                    @if (!string.IsNullOrEmpty(Model.Instrucoes))
                    {
                        @Model.Instrucoes
                    }
                    else
                    {
                        <span class="text-muted">Nenhuma instrução definida</span>
                    }
                </div>
            </div>

        </div>
    </div>
</div>