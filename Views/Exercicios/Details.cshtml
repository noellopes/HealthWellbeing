@model HealthWellbeing.Models.Exercicio

@{
    ViewData["Title"] = "Detalhes do Exercício";
    string? successMessage = Context.Request.Query["SuccessMessage"];
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
            <a asp-action="Edit" asp-route-id="@Model.ExercicioId" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Delete" asp-route-id="@Model.ExercicioId" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Apagar
            </a>
        </div>
    </div>

    @if (successMessage != null)
    {
        <div class="container py-4">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @successMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.ExercicioNome</h3>
        </div>

        <div class="card-body">
            <div class="row">

                <div class="col-md-6 mb-3">
                    <h5 class="fw-bold text-primary border-bottom pb-2">Informações Básicas</h5>
                    <table class="table table-borderless mt-2">
                        <tr>
                            <th class="text-secondary" style="width: 140px;">Descrição:</th>
                            <td>@Model.Descricao</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Duração:</th>
                            <td>@Model.Duracao minutos</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Intensidade:</th>
                            <td>
                                <span class="badge bg-warning text-dark">@Model.Intencidade / 10</span>
                            </td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Calorias:</th>
                            <td>@Model.CaloriasGastas kcal</td>
                        </tr>

                        <tr>
                            <th class="text-secondary">Equipamentos:</th>
                            <td>
                                @if (Model.ExercicioEquipamentos?.Any() == true)
                                {
                                    foreach (var item in Model.ExercicioEquipamentos)
                                    {
                                        <span class="badge bg-primary me-1">
                                            @item.Equipamento.NomeEquipamento
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">Nenhum equipamento necessário</span>
                                }
                            </td>
                        </tr>

                        <tr>
                            <th class="text-secondary">Géneros:</th>
                            <td>
                                @if (Model.ExercicioGeneros?.Any() == true)
                                {
                                    foreach (var item in Model.ExercicioGeneros)
                                    {
                                        <span class="badge bg-success me-1">
                                            @item.Genero.NomeGenero
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">Nenhum gênero definido</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-6 mb-3">
                    <h5 class="fw-bold text-primary border-bottom pb-2">Configuração do Treino</h5>
                    <table class="table table-borderless mt-2">
                        <tr>
                            <th class="text-secondary" style="width: 140px;">Séries:</th>
                            <td>@Model.Series</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Repetições:</th>
                            <td>@Model.Repeticoes</td>
                        </tr>
                        <tr>
                            <th class="text-secondary">Músculos:</th>
                            <td>
                                @if (Model.ExercicioGrupoMusculares?.Any() == true)
                                {
                                    foreach (var item in Model.ExercicioGrupoMusculares)
                                    {
                                        <span class="badge bg-secondary me-1">
                                            @item.GrupoMuscular.GrupoMuscularNome
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">Nenhum músculo definido</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>

            </div>

            <div class="mt-4">
                <h5 class="fw-bold text-primary border-bottom pb-2">Instruções</h5>
                <div class="border rounded p-3 bg-light mt-2">
                    @if (!string.IsNullOrEmpty(Model.Instrucoes))
                    {
                        /* Permite quebras de linha se houver */
                        @Html.Raw(Model.Instrucoes.Replace("\n", "<br>"))
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Nenhuma instrução definida</span>
                    }
                </div>
            </div>

            <dt class="col-sm-2 text-danger">
                Contraindicações
            </dt>
            <dd class="col-sm-10">
                @if (Model.Contraindicacoes != null && Model.Contraindicacoes.Any())
                {
                    <ul class="list-unstyled">
                        @foreach (var item in Model.Contraindicacoes)
                        {
                            if (item.ProblemaSaude != null)
                            {
                                <li class="mb-1">
                                    <span class="badge bg-danger">@item.ProblemaSaude.ProblemaNome</span>
                                </li>
                            }
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">Nenhuma contraindicação registada</span>
                }
            </dd>

        </div>
    </div>
</div>