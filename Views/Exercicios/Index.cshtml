@model IEnumerable<HealthWellbeing.Models.Exercicio>

@{
    ViewData["Title"] = "Exercícios";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary"><i class="fas fa-dumbbell"></i> Exercícios</h2>
    <p class="text-muted">Lista dos exercícios registados no sistema:</p>

    @if (Model?.Any() == true)
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Descrição</th>
                        <th>Duração</th>
                        <th>Intensidade</th>
                        <th>Calorias</th>
                        <th class="text-center" style="width: 260px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var exercicio in Model)
                    {
                        <tr>
                            <td>@exercicio.ExercicioNome</td>

                            <td>
                                @(exercicio.Descricao?.Length > 50
                                                        ? exercicio.Descricao.Substring(0, 50) + "..."
                                                        : exercicio.Descricao)
                    </td>

                            <td>@exercicio.Duracao min</td>

                            <td>
                                <span class="badge bg-info">
                                    @exercicio.Intencidade / 10
                                </span>
                            </td>

                            <td>@exercicio.CaloriasGastas kcal</td>

                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@exercicio.ExercicioId"
                                   class="btn btn-primary btn-sm me-1">
                                    <i class="fas fa-eye"></i> Ver
                                </a>

                                <a asp-action="Edit" asp-route-id="@exercicio.ExercicioId"
                                   class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>

                                <a asp-action="Delete" asp-route-id="@exercicio.ExercicioId"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Tem a certeza que deseja apagar este exercício?');">
                                    <i class="fas fa-trash-alt"></i> Apagar
                                </a>
                            </td>
                        </tr>
                                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">
            Nenhum exercício encontrado.
        </div>
    }

    <!-- Botões Inferiores -->
    <div class="mt-4">
        <a asp-action="Create" class="btn btn-success me-2">
            <i class="fas fa-plus"></i> Criar Exercício
        </a>
        <a href="/" class="btn btn-secondary">
            <i class="fas fa-home"></i> Início
        </a>
    </div>
</div>

