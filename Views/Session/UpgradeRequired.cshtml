@model IEnumerable<HealthWellbeing.Models.Plan>

@{
    ViewData["Title"] = "Upgrade Required";
}

<div class="container mt-5">
    <div class="card border-warning shadow-lg">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0"><i class="bi bi-lock-fill me-2"></i>Access Restricted</h3>
        </div>
        <div class="card-body text-center p-5">

            <h2 class="text-secondary mb-3">Oops! Access Denied.</h2>

            <p class="lead">
                Your current plan (<strong>@ViewBag.CurrentPlan</strong>) does not include the class
                <span class="text-primary fw-bold">@ViewBag.TrainingName</span>.
            </p>

            <hr class="my-4" />

            <h4 class="mb-4">To access this session, please upgrade to one of these plans:</h4>

            <div class="row justify-content-center">
                @foreach (var plan in Model)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 border-success">
                            <div class="card-body">
                                <h5 class="card-title text-success">@plan.Name</h5>
                                <h3 class="fw-bold">@plan.Price €<small class="text-muted fs-6">/month</small></h3>
                                <p class="card-text small text-muted">@plan.Description</p>
                            </div>
                            <div class="card-footer bg-transparent border-top-0">
                                <button class="btn btn-outline-success w-100">Select This Plan</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-5">
                <a asp-action="AvailableTrainings" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Back to My Available Classes
                </a>
            </div>

        </div>
    </div>
</div>