@model HealthWellbeing.Models.Session

@{
    ViewData["Title"] = "Cancel Session";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">

            <div class="alert alert-danger p-4 shadow-sm border-0 mb-4 rounded-4" role="alert">
                <i class="bi bi-exclamation-octagon-fill fs-1 text-danger d-block mb-3"></i>
                <h2 class="alert-heading fw-bold">Cancel Booking?</h2>
                <p class="mb-0 fs-5">Are you sure you want to cancel your attendance for <br><strong>@Model.Training.Name</strong>?</p>
                <p class="small mt-2 text-danger opacity-75">This action cannot be undone.</p>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4 text-start">
                    <h5 class="card-title text-muted mb-3 border-bottom pb-2">Booking Summary</h5>
                    <div class="row">
                        <div class="col-sm-4 text-muted fw-bold small text-uppercase">Class</div>
                        <div class="col-sm-8 mb-2 fw-bold text-primary">@Model.Training.Name</div>

                        <div class="col-sm-4 text-muted fw-bold small text-uppercase">Date</div>
                        <div class="col-sm-8 mb-2">@Model.SessionDate.ToString("dd MMM yyyy")</div>

                        <div class="col-sm-4 text-muted fw-bold small text-uppercase">Time</div>
                        <div class="col-sm-8 mb-2">@Model.SessionDate.ToString("HH:mm")</div>

                        <div class="col-sm-4 text-muted fw-bold small text-uppercase">Trainer</div>
                        <div class="col-sm-8 mb-2">@(Model.Training.Trainer?.Name ?? "TBA")</div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="SessionId" />

                <div class="d-grid gap-2 d-md-block">
                    <button type="submit" class="btn btn-danger btn-lg px-5 shadow-sm me-md-2 rounded-pill">
                        <i class="bi bi-x-circle-fill me-2"></i> Confirm Cancellation
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 shadow-sm rounded-pill">
                        Keep Session
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>