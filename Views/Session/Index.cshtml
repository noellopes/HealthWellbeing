@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Session>

@{
    ViewData["Title"] = "Class Schedule";
    bool isStaff = User.IsInRole("Administrator") || User.IsInRole("Trainer");
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-primary fw-bold">
        <i class="bi bi-calendar-check-fill me-2"></i>@(isStaff ? "All Bookings" : "My Schedule")
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-start border-4 border-success" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-start border-4 border-danger" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm border-0 mt-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Sessions List</h5>

            @if (!isStaff)
            {
                <a asp-controller="Training" asp-action="Index" class="btn btn-success px-3 shadow-sm">
                    <i class="bi bi-plus-lg me-1"></i> Book New Class
                </a>
            }
        </div>

        <div class="card-body bg-light">

            <form method="get" asp-action="Index" class="mb-4">
                <div class="row g-2">
                    <div class="col-md-3">
                        <label class="form-label small fw-bold text-muted">Filter by Date</label>
                        <input type="date" name="searchDate" class="form-control shadow-sm" value="@ViewBag.SearchDate" />
                    </div>

                    @if (isStaff)
                    {
                        <div class="col-md-4">
                            <label class="form-label small fw-bold text-muted">Search Client Name</label>
                            <input type="text" name="searchClient" class="form-control shadow-sm" placeholder="Client Name..." value="@ViewBag.SearchClient" />
                        </div>
                    }

                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100 fw-bold shadow-sm">
                            <i class="bi bi-search me-1"></i> Search
                        </button>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <a asp-action="Index" class="btn btn-outline-secondary w-100 shadow-sm">Reset</a>
                    </div>
                </div>
            </form>

            @if (!Model.Items.Any())
            {
                <div class="text-center py-5 bg-white rounded shadow-sm">
                    <i class="bi bi-calendar-x display-1 text-muted opacity-25"></i>
                    <h4 class="mt-3 text-secondary">No sessions found.</h4>
                    @if (!isStaff)
                    {
                        <p>Go to the <a asp-controller="Training" asp-action="Index">Class Schedule</a> to book your first session!</p>
                    }
                </div>
            }
            else
            {
                <div class="table-responsive bg-white rounded shadow-sm">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light border-bottom">
                            <tr>
                                <th class="ps-4">Date & Time</th>
                                <th>Class Info</th>
                                <th>Trainer</th>
                                @if (isStaff)
                                {
                                    <th>Client</th>
                                }
                                <th>Feedback/Rating</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@item.SessionDate.ToString("dd MMM yyyy")</div>
                                        <div class="small text-muted"><i class="bi bi-clock me-1"></i>@item.SessionDate.ToString("HH:mm")</div>
                                    </td>
                                    <td>
                                        <span class="d-block fw-bold text-primary">@item.Training.Name</span>
                                        @if (item.Training.TrainingType != null)
                                        {
                                            <span class="badge bg-info text-dark" style="font-size: 0.75em;">@item.Training.TrainingType.Name</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Training.Trainer != null)
                                        {
                                            <span>@item.Training.Trainer.Name</span>
                                        }
                                        else
                                        {

                                            <span class="text-muted small">TBA</span>
                                        }
                                    </td>

                                    @if (isStaff)
                                    {
                                        <td>
                                            @if (item.Member != null && item.Member.Client != null)
                                            {
                                                <span class="fw-bold text-dark">@item.Member.Client.Name</span>
                                            }
                                            else
                                            {

                                                <span class="text-danger">Unknown</span>
                                            }
                                        </td>
                                    }

                                    <td>
                                        @if (item.Rating.HasValue)
                                        {
                                            <div class="text-warning">
                                                @for (int i = 0; i < item.Rating; i++)
                                                {
                                                    <i class="bi bi-star-fill"></i>
                                                }
                                            </div>
                                        }
                                        else
                                        {

                                            <span class="badge bg-light text-muted border">No Rating</span>
                                        }
                                    </td>

                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.SessionId" class="btn btn-sm btn-warning" title="Edit">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.SessionId" class="btn btn-sm btn-info text-white" title="Details">
                                                <i class="bi bi-info-circle"></i> Details
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.SessionId" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <nav aria-label="Session navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link shadow-sm" asp-action="Index"
                               asp-route-page="1"
                               asp-route-searchClient="@ViewBag.SearchClient"
                               asp-route-searchDate="@ViewBag.SearchDate">First</a>
                        </li>

                        @for (int p = 1; p <= Model.TotalPages; p++)
                        {
                            <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                <a class="page-link shadow-sm" asp-action="Index"
                                   asp-route-page="@p"
                                   asp-route-searchClient="@ViewBag.SearchClient"
                                   asp-route-searchDate="@ViewBag.SearchDate">@p</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link shadow-sm" asp-action="Index"
                               asp-route-page="@Model.TotalPages"
                               asp-route-searchClient="@ViewBag.SearchClient"
                               asp-route-searchDate="@ViewBag.SearchDate">Last</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>