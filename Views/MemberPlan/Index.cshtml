@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.MemberPlan>

@{
    ViewData["Title"] = "Member Plans";

    // Variáveis para manter a pesquisa nos links de paginação
    var searchClient = ViewBag.SearchClientName;
    var searchPlan = ViewBag.SearchPlanName;
}

<h1 class="display-4 text-primary mb-4">Member Plans</h1>

@* Mensagens de Sucesso/Erro *@
@if (TempData["Message"] != null)
{
    var message = TempData["Message"].ToString();
    var messageType = TempData["MessageType"]?.ToString() ?? "info";

    <div class="alert alert-@messageType alert-dismissible fade show shadow-sm" role="alert">
        @Html.Raw(message)
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Active Subscriptions</h2>
    <div class="d-flex justify-content-end">

        <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#planSearch" aria-expanded="false" aria-controls="planSearch">
            <i class="bi bi-search me-1"></i> Search
        </a>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Assign New Plan
        </a>

    </div>
</div>

@* Formulário de Pesquisa *@
<div class="collapse mt-2 mb-2" id="planSearch">
    <div class="card card-body shadow-sm">
        <form asp-action="Index" method="get" class="row g-2">

            @* Pesquisa por Cliente *@
            <div class="col-md-6">
                <label for="searchClientName" class="form-label">Client Name</label>
                <input id="searchClientName" name="searchClientName" value="@searchClient" class="form-control" placeholder="Search by client..." type="search" />
            </div>

            @* Pesquisa por Plano *@
            <div class="col-md-6">
                <label for="searchPlanName" class="form-label">Plan Name</label>
                <input id="searchPlanName" name="searchPlanName" value="@searchPlan" class="form-control" placeholder="Search by plan..." type="search" />
            </div>

            @* Botões *@
            <div class="col-12 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

@* Tabela de Resultados *@
@if (!Model.Items.Any())
{
    <div class="alert alert-warning mt-4" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> No Plans Found</h4>
        <p>There are no member plans matching your criteria.</p>
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Client</th>
                    <th>Plan</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="fw-bold">@Html.DisplayFor(modelItem => item.Member.Client.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Plan.Name)</td>
                        <td>@item.StartDate.ToShortDateString()</td>
                        <td>@item.EndDate.ToShortDateString()</td>
                        <td>
                            @if (item.Status == "Active")
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else if (item.Status == "Expired")
                            {
                                <span class="badge bg-secondary">Expired</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">@item.Status</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.MemberPlanId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MemberPlanId" class="btn btn-sm btn-info">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MemberPlanId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Paginação *@
    <nav aria-label="MemberPlan pages" class="mt-3">
        <ul class="pagination">
            @if (Model.CurrentPage == 1)
            {
                <li class="page-item disabled"><a class="page-link">First</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-searchClientName="@searchClient" asp-route-searchPlanName="@searchPlan">First</a></li>
            }

            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
            {
                if (p == Model.CurrentPage)
                {
                    <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@p" asp-route-searchClientName="@searchClient" asp-route-searchPlanName="@searchPlan">@p</a></li>
                }
            }

            @if (Model.CurrentPage == Model.TotalPages)
            {
                <li class="page-item disabled"><a class="page-link">Last</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-searchClientName="@searchClient" asp-route-searchPlanName="@searchPlan">Last</a></li>
            }
        </ul>
    </nav>
}