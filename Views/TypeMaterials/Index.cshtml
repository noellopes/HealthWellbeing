@using HealthWellbeing.Models
@using HealthWellbeing.ViewModels
@model RPaginationInfo<TypeMaterial>

@{
    ViewData["Title"] = "Tipos de Materiais de Dispositivos Médicos Móveis";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (!Model.Items.Any())
{
    <div class="alert alert-warning d-flex align-items-center border-2" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">Nenhum Tipo de Material Encontrado</h4>
            <p>Não há tipos de materiais registados na base de dados.</p>
        </div>
    </div>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Criar Novo
    </a>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
    </a>
}
else
{
    <!-- TÍTULO E BOTÕES -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Lista</h2>

        <div class="d-flex justify-content-end">
            <a class="btn btn-secondary me-2"
               data-bs-toggle="collapse"
               data-bs-target="#searchBox"
               aria-expanded="false">
                <i class="bi bi-search me-1"></i> Pesquisa
            </a>

            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Criar Novo
            </a>
        </div>
    </div>

    <!-- FORMULÁRIO DE PESQUISA -->
    <div class="collapse mb-3" id="searchBox">
        <div class="card card-body">

            <form asp-action="Index" method="get" class="row g-2 align-items-end">

                <div class="col-md-6">
                    <label for="searchName" class="form-label">Nome</label>
                    <input id="searchName" name="searchName"
                           value="@ViewBag.SearchName"
                           class="form-control"
                           type="search"
                           placeholder="Pesquisar por nome" />
                </div>

                <div class="col-md-6">
                    <label for="searchDescription" class="form-label">Descrição</label>
                    <input id="searchDescription" name="searchDescription"
                           value="@ViewBag.SearchDescription"
                           class="form-control"
                           type="search"
                           placeholder="Pesquisar por descrição" />
                </div>

                <div class="col-12 mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Pesquisar
                    </button>

                    <a asp-action="Index" class="btn btn-secondary">Limpar</a>
                </div>

            </form>

        </div>
    </div>

    <!-- TABELA -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrição</th>
                    <th class="text-end" scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var material in Model.Items)
                {
                    <tr>
                        <td>@material.Name</td>
                        <td>@material.Description</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@material.TypeMaterialID"
                               class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <a asp-action="Details" asp-route-id="@material.TypeMaterialID"
                               class="btn btn-sm btn-info me-1">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>

                            <a asp-action="Delete" asp-route-id="@material.TypeMaterialID"
                               class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

 

    <!-- PAGINAÇÃO -->
    <nav aria-label="Navegação de páginas" class="mt-4">
        <ul class="pagination justify-content-center">

            <!-- Botão anterior -->
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-searchName="@ViewBag.SearchName"
                       asp-route-searchDescription="@ViewBag.SearchDescription">
                        Anterior
                    </a>
                </li>
            }

            <!-- Números -->
            @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchName="@ViewBag.SearchName"
                       asp-route-searchDescription="@ViewBag.SearchDescription">
                        @i
                    </a>
                </li>
            }

            <!-- Próxima -->
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-searchName="@ViewBag.SearchName"
                       asp-route-searchDescription="@ViewBag.SearchDescription">
                        Próxima
                    </a>
                </li>
            }

        </ul>
    </nav>
}
