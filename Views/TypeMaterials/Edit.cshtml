@using HealthWellbeing.Models
@model TypeMaterial

@{
    ViewData["Title"] = "Editar Tipo de Dispósitivo Médico";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">

    
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">
            <i class="bi bi-pencil-square me-2"></i> Editar
        </h4>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <input type="hidden" asp-for="TypeMaterialID" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Nome do Tipo de dispositivo</label>
                        <input asp-for="Name" class="form-control" placeholder="Ex: ECG Portátil,Ventilação" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Descrição</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Descrição detalhada do tipo de dispositivo..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end gap-2 border-top pt-3">
                <button type="submit" class="btn btn-success" id="btnSave">
                    <i class="bi bi-save me-1"></i> Guardar Alterações
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancelar e Voltar
                </a>
            </div>
        </form>
    </div>
    

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form');
            const btnSave = document.getElementById('btnSave');

            // Guardar valores iniciais
            const initialValues = {};
            form.querySelectorAll('input, textarea').forEach(input => {
                initialValues[input.name] = input.value;
            });

            // Função para verificar alterações
            function checkChanges() {
                let changed = false;
                form.querySelectorAll('input, textarea').forEach(input => {
                    if (input.value !== initialValues[input.name]) {
                        changed = true;
                    }
                });
                btnSave.disabled = !changed;
            }

            // Verificar alterações em cada campo
            form.querySelectorAll('input, textarea').forEach(input => {
                input.addEventListener('input', checkChanges);
            });

            // Inicialmente desabilitar se não houver mudanças
            checkChanges();
        });
    </script>
}

