@model HealthWellbeing.Models.TypeMaterial

@{
    ViewData["Title"] = "Tipo de Material";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">

    
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">
            <i class="bi bi-box-seam me-2"></i> Novo Tipo de Material
        </h4>
    </div>

    <div class="card-body">

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Nome do Tipo de Material</label>
                        <input asp-for="Name" class="form-control" placeholder="Ex: Consumível, Equipamento, Dispositivo Médico">
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Descrição</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Ex: Materiais utilizados para esterilização ou uso único."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end gap-2 border-top pt-3">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i> Submeter Registo
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista
                </a>
            </div>
        </form>

    </div>
    

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
