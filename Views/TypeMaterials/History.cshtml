@model IEnumerable<HealthWellbeing.Models.TypeMaterialHistory>

@{
    ViewData["Title"] = "Histórico de Alterações";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">

    <div class="card-header bg-secondary text-white">
        <h4 class="mb-0">
            <i class="bi bi-clock-history me-2"></i> Histórico
        </h4>
    </div>

    <div class="card-body">

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Não existem alterações registadas.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Data</th>
                            <th>Utilizador</th>
                            <th>Nome (Antes)</th>
                            <th>Nome (Depois)</th>
                            <th>Descrição (Antes)</th>
                            <th>Descrição (Depois)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var h in Model)
                        {
                            <tr>
                                <td>@h.ChangedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@h.ChangedBy</td>
                                <td>@h.OldName</td>
                                <td>@h.NewName</td>
                                <td>@h.OldDescription</td>
                                <td>@h.NewDescription</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>

    <div class="card-footer d-flex justify-content-end">
        <a asp-action="Details"
           asp-route-id="@ViewBag.TypeMaterialId"
           class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Voltar
        </a>
    </div>

</div>
