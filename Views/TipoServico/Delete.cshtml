@model HealthWellbeing.Models.TipoServicos

@{
    ViewData["Title"] = "Delete";
    string? successMessage = Context.Request.Query["successMessage"];

}
@if (successMessage != null)
{
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

   
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<h3>Tem certeza de que deseja eleminar isto?</h3>

<hr />

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">
            <i class="bi bi-trash3-fill me-2"></i>Eliminar Tipo de Serviço
        </h4>
        </div>
        <div class="card-body">
    <dl class="row mb-0">
        <dt class="col-sm-3 fw-bold text-muted">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-3 fw-bold text-muted">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="TipoServicosId" />

        <div class="mt-4 d-flex justify-content-around-start gap-2">
        <button type="submit" value="Delete" class="btn btn-danger">
            <i class="bi bi-trash me-1"></i> Eliminar
        </Button> 
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i>Cancel
            </a>
            </div>
    </form>
</div>
</div>

