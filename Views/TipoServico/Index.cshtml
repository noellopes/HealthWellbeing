@model IEnumerable<HealthWellbeing.Models.TipoServico>

@{
    ViewData["Title"] = "Tipo de Serviço";

}


<h1>Tipo de Serviços</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i>Criar Novo Tipo de Serviço</a>
</p>

<div class="table-responsive">
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>

                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.TipoServicoId" class="btn btn-sm btn-primary me-2">
                        <i class="bi bi-pencil-square"></i>Edit
                        </a> |
                    <a asp-action="Details" asp-route-id="@item.TipoServicoId" class="btn btn-sm btn-warning me-2">
                        <i class="bi bi-info-circle"></i>Details
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.TipoServicoId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>