@model IEnumerable<HealthWellbeing.Models.TipoServicos>

@{
    ViewData["Title"] = "Tipo de Serviço";
    string? successMessage = Context.Request.Query["successMessage"];

}
@if (successMessage != null)
{
    <div class="container py-4">
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    </div>
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i>Criar Novo Tipo de Serviço</a>
</p>

<div class="table-responsive">
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>

                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.TipoServicosId" class="btn btn-sm btn-primary me-2">
                        <i class="bi bi-pencil-square"></i>Edit
                        </a> |
                    <a asp-action="Details" asp-route-id="@item.TipoServicosId" class="btn btn-sm btn-warning me-2">
                        <i class="bi bi-info-circle"></i>Details
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.TipoServicosId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>