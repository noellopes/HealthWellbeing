@model HealthWellbeing.Models.TipoServico

@{
    ViewData["Title"] = "Criar Tipo de Serviço";

}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-header bg-sucess text-white">
        <h4 class="mb-0">
            <i class="bg bi-plus-circle me-2"></i>Novo Serviço
        </h4>
    </div>
    <div class="card-body">
   
    <form asp-action="Create">

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Criar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar

    </a>

</form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


