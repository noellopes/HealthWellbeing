@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Musculo>

@{
    ViewData["Title"] = "Músculos";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-primary">
            <i class="fas fa-dumbbell me-2"></i>@ViewData["Title"]
        </h1>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#searchForm">
                <i class="bi bi-search"></i> Pesquisa
            </button>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Criar Novo
            </a>
        </div>
    </div>

    @if (TempData["StatusMessage"] is string statusMessage)
    {
        string alertClass = "alert-info";
        string icon = "bi-info-circle";

        if (statusMessage.StartsWith("Sucesso:")) { alertClass = "alert-success"; icon = "bi-check-circle"; }
        else if (statusMessage.StartsWith("Aviso:")) { alertClass = "alert-warning"; icon = "bi-exclamation-triangle"; }
        else if (statusMessage.StartsWith("Erro:")) { alertClass = "alert-danger"; icon = "bi-x-circle"; }

        <div class="alert @alertClass alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
            <i class="bi @icon me-2"></i> @statusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }

    <!-- Formulário de pesquisa -->
    <div class="collapse mb-4" id="searchForm">
        <div class="card border-0 shadow-sm bg-light">
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label for="searchNome" class="form-label fw-bold">Nome do Músculo</label>
                        <input id="searchNome" name="searchNome" value="@ViewBag.SearchNome" class="form-control" placeholder="Procurar por nome" />
                    </div>
                    <div class="col-md-6">
                        <label for="searchGrupo" class="form-label fw-bold">Grupo Muscular</label>
                        <input id="searchGrupo" name="searchGrupo" value="@ViewBag.SearchGrupo" class="form-control" placeholder="Procurar por grupo" />
                    </div>
                    <div class="col-12 d-flex gap-2 mt-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-1"></i> Pesquisar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-x-lg"></i> Limpar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Tabela de resultados -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (!Model.Items.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-4 mb-3 d-block opacity-50"></i>
                    <p class="mb-0">Nenhum músculo encontrado.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4 py-3">Nome do Músculo</th>
                                <th class="py-3">Grupo Muscular</th>
                                <th class="py-3 text-end pe-4">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Nome_Musculo</td>
                                    <td>@item.GrupoMuscular.GrupoMuscularNome</td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Details" asp-route-id="@item.MusculoId" class="btn btn-sm btn-info text-white me-1">
                                            <i class="bi bi-eye"></i> Detalhes
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.MusculoId" class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MusculoId" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Apagar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        @if (Model.Items.Any())
        {
            <div class="card-footer bg-white py-3">
                <nav>
                    <ul class="pagination justify-content-center mb-0">
                        @{
                            var routeData = new Dictionary<string, string> 
                                        {
                                        { "searchNome", ViewBag.SearchNome },
                                        { "searchGrupo", ViewBag.SearchGrupo }
                                        };
                        }

                        @if (Model.CurrentPage > 1)
                        {
                            routeData["page"] = (Model.CurrentPage - 1).ToString();
                            <li class="page-item">
                                <a class="page-link border-0" asp-action="Index" asp-all-route-data="routeData">Anterior</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled"><span class="page-link border-0">Anterior</span></li>
                        }
                        @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                        {
                            if (p == Model.CurrentPage)
                            {
                                <li class="page-item active"><span class="page-link">@p</span></li>
                            }
                            else
                            {
                                routeData["page"] = p.ToString();
                                <li class="page-item">
                                    <a class="page-link border-0 rounded-circle mx-1" asp-action="Index" asp-all-route-data="routeData">@p</a>
                                </li>
                            }
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            routeData["page"] = (Model.CurrentPage + 1).ToString();
                            <li class="page-item">
                                <a class="page-link border-0" asp-action="Index" asp-all-route-data="routeData">Próxima</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled"><span class="page-link border-0">Próxima</span></li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
