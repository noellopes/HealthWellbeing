@model IEnumerable<HealthWellbeing.Models.Musculo>

@{
    ViewData["Title"] = "Músculos";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary"><i class="fas fa-dumbbell"></i> @ViewData["Title"]</h2>


    <div class="d-flex justify-content-end align-items-center mb-3">
        <div>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Criar Novo
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-home me-1"></i> Início
            </a>
        </div>
    </div>

    @if (Model?.Any() == true)
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome do Músculo</th>
                        <th>Grupo Muscular</th>
                        <th class="text-center" style="width: 260px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome_Musculo</td>
                            <td>@item.GrupoMuscular.GrupoMuscularNome</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.MusculoId" class="btn btn-primary btn-sm me-1">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.MusculoId" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MusculoId" class="btn btn-danger btn-sm"
                                 >
                                    <i class="fas fa-trash-alt"></i> Apagar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">
            Nenhum músculo encontrado.
        </div>
    }
</div>
