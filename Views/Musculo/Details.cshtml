@model HealthWellbeing.Models.Musculo

@{
    ViewData["Title"] = "Detalhes do Músculo";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-primary">
            <i class="bi bi-dumbbell me-2"></i>Detalhes
        </h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.MusculoId" class="btn btn-warning shadow-sm text-dark">
                <i class="bi bi-pencil me-1"></i> Editar
            </a>
            <a asp-action="Delete" asp-route-id="@Model?.MusculoId" class="btn btn-danger shadow-sm text-white">
                <i class="bi bi-trash me-1"></i> Apagar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                <i class="bi bi-arrow-left me-1"></i> Voltar
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom pt-4 ps-4 pb-3">
            <h5 class="mb-0 fw-bold text-dark">Informação do Músculo</h5>
        </div>
        <div class="card-body p-4">
            <div class="row mb-3 border-bottom pb-3">
                <div class="col-md-3 text-muted fw-bold">Nome do Músculo</div>
                <div class="col-md-9 text-dark">@Model.Nome_Musculo</div>
            </div>

            <div class="row">
                <div class="col-md-3 text-muted fw-bold">Grupo Muscular</div>
                <div class="col-md-9 text-dark">
                    @if (Model.GrupoMuscular != null)
                    {
                        @Model.GrupoMuscular.GrupoMuscularNome
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Não atribuído</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
