@model HealthWellbeing.Models.Musculo

@{
    ViewData["Title"] = "Criar Músculo";
}

<h1>@ViewData["Title"]</h1>
<hr>

<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-2">
            <label asp-for="Nome_Musculo" class="control-label p-2"></label>
            <input asp-for="Nome_Musculo" class="form-control" />
            <span asp-validation-for="Nome_Musculo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GrupoMuscularId" class="control-label p-2"></label>
            <select asp-for="GrupoMuscularId" class="form-control" asp-items="ViewBag.GrupoMuscularId"></select>
            <span asp-validation-for="GrupoMuscularId" class="text-danger"></span>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Criar Músculo
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
