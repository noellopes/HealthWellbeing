@using HealthWellbeing.Models
@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.BadgeType>

@{
    ViewData["Title"] = "Badge Types";
    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@* --- FEEDBACK MESSAGES --- *@
@if (successMessage != null) {
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}
@if (errorMessage != null) {
    <div class="container py-4">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

@* --- EMPTY STATE (Sem filtros ativos) --- *@
@if (!Model.Items.Any() && string.IsNullOrEmpty(ViewBag.SearchName)) {
    <div class="alert alert-warning d-flex align-items-center border-2 p-3 rounded" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">No Badge Types Found</h4>
            <p>No categories are currently defined. Create one to start categorizing badges.</p>
        </div>
    </div>

    <a asp-action="Create" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-circle me-1"></i> Create New Type
    </a>
}
else {
    @* --- HEADER & SEARCH TOGGLE --- *@
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 text-secondary">Overview</h2>
        <div class="d-flex justify-content-end gap-2">
            <a class="btn btn-primary shadow-sm" data-bs-toggle="collapse" data-bs-target="#typeSearch" aria-expanded="false" aria-controls="typeSearch">
                <i class="bi bi-search me-1"></i> Search
            </a>
            <a asp-action="Create" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
        </div>
    </div>

    @* --- SEARCH FORM --- *@
    <div class="collapse mt-2 mb-4" id="typeSearch">
        <div class="card card-body border-0 shadow-sm rounded-4 bg-light">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">

                @* 1. Name Filter *@
                <div class="col-md-8">
                    <label for="searchName" class="form-label fw-bold small text-muted">Type Name</label>
                    <input id="searchName" name="searchName" value="@ViewBag.SearchName" class="form-control" placeholder="Search by type name..." type="search" />
                </div>

                @* 2. Buttons *@
                <div class="col-md-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm">
                        <i class="bi bi-search me-1"></i> Apply
                    </button>

                    <a asp-action="Index" class="btn btn-secondary w-100 shadow-sm text-decoration-none">
                        <i class="bi bi-x-lg me-1"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    @* --- NO RESULTS (Com filtros ativos) --- *@
    @if (!Model.Items.Any()) {
        <div class="alert alert-info d-flex align-items-center p-3 rounded" role="alert">
            <i class="bi bi-info-circle-fill" style="font-size: 2rem;"></i>
            <div class="ps-3">
                <h5 class="alert-heading">No results found for your search criteria.</h5>
            </div>
        </div>
    }
    else {
        @* --- DATA TABLE --- *@
        <div class="table-responsive shadow-sm rounded-3">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 30%;">Type Name</th>
                        <th style="width: 50%;">Description</th>
                        <th style="width: 20%;" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items) {
                        <tr>
                            @* 1. Type Name *@
                            <td>
                                <div class="fw-bold text-dark">
                                    <i class="bi bi-tag-fill text-primary me-2 opacity-50"></i> @Html.DisplayFor(modelItem => item.BadgeTypeName)
                                </div>
                            </td>

                            @* 2. Description *@
                            <td>
                                <span class="text-muted small">
                                    @Html.DisplayFor(modelItem => item.BadgeTypeDescription)
                                </span>
                            </td>

                            @* 3. Actions *@
                            <td class="text-end text-nowrap">
                                <a asp-action="Edit" asp-route-id="@item.BadgeTypeId" class="btn btn-sm btn-warning me-1 shadow-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.BadgeTypeId" class="btn btn-sm btn-info me-1 shadow-sm">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.BadgeTypeId" class="btn btn-sm btn-danger shadow-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @* --- PAGINATION FOOTER --- *@
            <div class="d-flex justify-content-between align-items-center bg-light p-3 border-top">
                <div class="small text-muted">
                    Showing @Model.FirstItemOnPage - @Model.LastItemOnPage of @Model.TotalItems
                </div>

                <nav aria-label="Badge Types page">
                    <ul class="pagination mb-0">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="1"
                               asp-route-searchName="@ViewBag.SearchName">First</a>
                        </li>

                        @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++) {
                            <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-page="@p"
                                   asp-route-searchName="@ViewBag.SearchName">@p</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@Model.TotalPages"
                               asp-route-searchName="@ViewBag.SearchName">Last</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
}