@model HealthWellbeing.Models.BadgeType

@{
    ViewData["Title"] = "Edit Badge Type";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            @* --- CARD CONTAINER --- *@
            <div class="card border-0 shadow-lg rounded-4 animate__animated animate__fadeInUp">

                @* --- HEADER (Amarelo Warning para Edição) --- *@
                @* Usei text-dark porque o amarelo pede contraste preto *@
                <div class="card-header bg-warning text-dark p-4 rounded-top-4">
                    <div class="d-flex align-items-center gap-3">
                        @* Icon de Edição *@
                        <div class="p-2 rounded-3 border border-dark border-opacity-25">
                            <i class="bi bi-pencil-square fs-4 text-dark"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Edit Badge Type</h5>
                            @* Slogan Profissional *@
                            <p class="mb-0 small text-dark opacity-75">Modify the badge category</p>
                        </div>
                    </div>
                </div>

                @* --- FORM BODY --- *@
                <div class="card-body p-4">
                    <form asp-action="Edit">

                        <input type="hidden" asp-for="BadgeTypeId" />

                        @* Mensagem de Erro Geral *@
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert"></div>

                        @* 1. Type Name *@
                        <div class="mb-4">
                            @* Label fora, tamanho normal *@
                            <label asp-for="BadgeTypeName" class="form-label fw-bold text-dark mb-1">
                                Type Name
                            </label>
                            @* Input tamanho normal para bater certo com a label *@
                            <input asp-for="BadgeTypeName" class="form-control shadow-sm" placeholder="e.g. Consistency" />
                            <span asp-validation-for="BadgeTypeName" class="text-danger small"></span>
                        </div>

                        @* 2. Description *@
                        <div class="mb-5">
                            <label asp-for="BadgeTypeDescription" class="form-label fw-bold text-dark mb-1">
                                Description
                            </label>
                            <textarea asp-for="BadgeTypeDescription" class="form-control shadow-sm" placeholder="e.g. Awarded for consistent daily login..." style="height: 120px"></textarea>
                            <span asp-validation-for="BadgeTypeDescription" class="text-danger small"></span>
                        </div>

                        @* --- ACTION BUTTONS --- *@
                        <div class="d-flex justify-content-end gap-2">

                            @* Custom Back to List *@
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                                Back to List
                            </a>

                            @* Save Button (Amarelo, sem bold) *@
                            <button type="submit" class="btn btn-warning px-4 shadow-sm">
                                Save Changes
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}