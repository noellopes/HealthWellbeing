@model HealthWellbeing.Models.BadgeType

@{
    ViewData["Title"] = "Delete Badge Type";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            @* --- CARD CONTAINER --- *@
            <div class="card border-0 shadow-lg rounded-4 animate__animated animate__fadeInUp">

                @* --- HEADER (Vermelho) --- *@
                <div class="card-header bg-danger text-white p-4 rounded-top-4">
                    <div class="d-flex align-items-center gap-3">
                        @* Icon Principal: Trash *@
                        <div class="bg-white bg-opacity-25 p-2 rounded-3">
                            <i class="bi bi-trash3-fill fs-4 text-white"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Delete Badge Type</h5>
                        </div>
                    </div>
                </div>

                @* --- BODY --- *@
                <div class="card-body p-4">
                    @* --- MENSAGEM DE ALERTA --- *@
                    @if (ViewBag.Error != null) {
                        <div class="alert alert-danger bg-danger bg-opacity-10 border-0 mb-5 d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill text-danger me-3 fs-4"></i>
                            <div>
                                <span class="fw-bold text-danger">Are you sure?</span>
                                <span class="text-danger opacity-75 d-block small">@ViewBag.Error</span>
                            </div>
                        </div>
                    }
                    else {
                        <div class="alert alert-danger bg-danger bg-opacity-10 border-0 mb-5 d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill text-danger me-3 fs-4"></i>
                            <div>
                                <span class="fw-bold text-danger">Are you sure?</span>
                                <span class="text-danger opacity-75 d-block small">This action cannot be undone.</span>
                            </div>
                        </div>
                    }

                    <dl class="row gy-4 mb-0">

                        @* 1. Name *@
                        <dt class="col-sm-4 text-secondary d-flex align-items-center">
                            @Html.DisplayNameFor(model => model.BadgeTypeName)
                        </dt>
                        <dd class="col-sm-8 fs-5 fw-bold text-dark mb-0">
                            @Html.DisplayFor(model => model.BadgeTypeName)
                        </dd>

                        @* 2. Description *@
                        <dt class="col-sm-4 text-secondary d-flex align-items-center">
                            @Html.DisplayNameFor(model => model.BadgeTypeDescription)
                        </dt>
                        <dd class="col-sm-8 mb-0">
                            @if (string.IsNullOrEmpty(Model.BadgeTypeDescription)) {
                                <span class="text-muted fst-italic small">No description provided</span>
                            }
                            else {
                                <span class="text-dark">@Html.DisplayFor(model => model.BadgeTypeDescription)</span>
                            }
                        </dd>

                        @* 3. Badges Associated (Lógica Visual de Risco) *@
                        <dt class="col-sm-4 text-secondary d-flex align-items-center">
                            Badges Associated
                        </dt>
                        <dd class="col-sm-8 mb-0">
                            @{
                                int count = Model.Badges?.Count ?? 0;
                                string badgeClass;
                                string badgeText;

                                if (count > 0) {
                                    // Vermelho: Atenção redobrada
                                    badgeClass = "bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25";
                                    badgeText = $"{count} Linked Badge" + (count != 1 ? "s" : "");
                                }
                                else {
                                    // Verde: Seguro para apagar
                                    badgeClass = "bg-success bg-opacity-10 text-success border border-success border-opacity-25";
                                    badgeText = "Safe to delete (No associations)";
                                }
                            }

                            <span class="badge @badgeClass rounded-pill" style="font-size: 0.9em; padding: 0.5em 1em;">
                                @badgeText
                            </span>
                        </dd>

                    </dl>

                    @* --- FORM & ACTIONS --- *@
                    <form asp-action="Delete" class="mt-5">
                        <input type="hidden" asp-for="BadgeTypeId" />

                        <div class="d-flex justify-content-end gap-2">

                            @* 1. Alterado Cancel para Back to List *@
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                                Back to List
                            </a>

                            @* 2. O botão Confirm só desaparece se já houver um erro reportado (ViewBag.Error) *@
                            @if (ViewBag.Error == null) {
                                <button type="submit" class="btn btn-danger px-4 shadow-sm">
                                    Confirm Delete
                                </button>
                            }
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>