@model HealthWellbeing.Models.ObjetivoFisico

@{
    ViewData["Title"] = "Eliminar Objetivo Físico";
    bool podeEliminar = ViewBag.PodeEliminar ?? true;
    int numUtentes = ViewBag.NumUtentes ?? 0;
    int numExercicios = ViewBag.NumExercicios ?? 0;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger shadow-sm mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                </div>
            }

            <div class="card border-0 shadow-sm">
                <div class="card-body p-5 text-center">

                    <div class="mb-4 text-danger">
                        <i class="bi bi-trophy display-1"></i>
                    </div>

                    <h2 class="h3 mb-3 fw-bold text-danger">Eliminar Objetivo Físico</h2>

                    @if (!podeEliminar)
                    {
                        <div class="alert alert-danger border-0 bg-danger bg-opacity-10 text-start small mb-4">
                            <h6 class="alert-heading fw-bold text-danger"><i class="bi bi-lock-fill me-1"></i> Ação Bloqueada</h6>
                            <p class="mb-0 text-dark">@ViewBag.MensagemErro</p>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-4">
                            Tem a certeza que deseja eliminar o objetivo
                            <strong class="text-dark">@Model.NomeObjetivo</strong>?
                        </p>
                    }

                    <div class="bg-light p-3 rounded mb-4 text-start small border">
                        <div class="row mb-2">
                            <div class="col-5 text-muted">Nome:</div>
                            <div class="col-7 fw-bold text-end">@Model.NomeObjetivo</div>
                        </div>
                        <hr class="my-2 text-muted opacity-25">

                        <div class="row align-items-center mb-1">
                            <div class="col-6 text-muted">Utentes ativos:</div>
                            <div class="col-6 text-end">
                                @if (numUtentes > 0)
                                {
                                    <span class="badge bg-danger">@numUtentes (Bloqueio Crítico)</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">0</span>
                                }
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-6 text-muted">Exercícios associados:</div>
                            <div class="col-6 text-end">
                                @if (numExercicios > 0)
                                {
                                    <span class="badge bg-danger">@numExercicios</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">0</span>
                                }
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="d-flex justify-content-center gap-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ObjetivoFisicoId" />

                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>

                        @if (podeEliminar)
                        {
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash-fill me-1"></i> Confirmar Eliminação
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger px-4 opacity-50" disabled>
                                <i class="bi bi-lock-fill me-1"></i> Bloqueado
                            </button>
                        }
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>