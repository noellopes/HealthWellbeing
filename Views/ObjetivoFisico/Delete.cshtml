@model HealthWellbeing.Models.ObjetivoFisico

@{
    ViewData["Title"] = "Eliminar Objetivo Físico";

    bool podeEliminar = ViewBag.PodeEliminar ?? true;
    int numExercicios = ViewBag.NumExercicios ?? 0;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger shadow-sm mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                </div>
            }

            <div class="card border-0 shadow-sm">
                <div class="card-body p-5 text-center">

                    <div class="mb-4 text-danger">
                        <i class="bi bi-trash3 display-1"></i>
                    </div>

                    <h2 class="h3 mb-3 fw-bold text-danger">Eliminar Objetivo?</h2>

                    @if (!podeEliminar)
                    {
                        <div class="alert alert-warning border-0 bg-warning bg-opacity-10 text-start small mb-4">
                            <h6 class="alert-heading fw-bold text-warning"><i class="bi bi-lock-fill me-1"></i> Ação Bloqueada</h6>
                            <p class="mb-0 text-muted">
                                Não é possível eliminar o objetivo <strong>@Model.NomeObjetivo</strong> porque está associado a
                                <strong>@numExercicios</strong> exercício(s). Remova a associação antes de continuar.
                            </p>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-4">
                            Tem a certeza que deseja eliminar o objetivo
                            <strong class="text-dark">@Model.NomeObjetivo</strong>?
                            <br>Esta ação não pode ser desfeita.
                        </p>
                    }

                    <div class="bg-light p-3 rounded mb-4 text-start small border">
                        <div class="row">
                            <div class="col-6 text-muted">Exercícios Associados:</div>
                            <div class="col-6 text-end">
                                @if (numExercicios > 0)
                                {
                                    <span class="badge bg-warning text-dark">@numExercicios</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">0 (Livre)</span>
                                }
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="d-flex justify-content-center gap-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ObjetivoFisicoId" value="@Model.ObjetivoFisicoId" />

                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            Cancelar
                        </a>

                        @if (podeEliminar)
                        {
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash-fill me-1"></i> Eliminar
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger px-4 opacity-50" disabled>
                                <i class="bi bi-lock-fill me-1"></i> Bloqueado
                            </button>
                        }
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>