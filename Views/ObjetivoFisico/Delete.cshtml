@model HealthWellbeing.Models.ObjetivoFisico

@{
    ViewData["Title"] = "Apagar Objetivo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="alert alert-danger d-flex align-items-center shadow-sm" role="alert">
                <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2 fs-4"></i>
                <div>
                    <strong>Atenção!</strong> Tem a certeza que pretende eliminar este registo?
                    <div class="small">Esta ação não pode ser revertida.</div>
                </div>
            </div>

            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash3 me-2"></i>Eliminar Objetivo</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center text-secondary mb-4">Resumo do Registo</h5>

                    <dl class="row justify-content-center">
                        <dt class="col-sm-4 text-end">Nome:</dt>
                        <dd class="col-sm-6 fw-bold">@Html.DisplayFor(model => model.NomeObjetivo)</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ObjetivoFisicoId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Confirmar Eliminação
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>