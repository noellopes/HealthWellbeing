@model HealthWellbeing.Models.ObjetivoFisico

@{
    ViewData["Title"] = "Editar Objetivo";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-warning text-dark">
                <i class="bi bi-pencil-square me-2"></i>Editar Objetivo
            </h1>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-4 ps-4">
                    <h5 class="text-warning text-dark fw-bold mb-0">Dados do Objetivo</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                        <input type="hidden" asp-for="ObjetivoFisicoId" />

                        <div class="mb-4">
                            <label asp-for="NomeObjetivo" class="form-label fw-bold text-muted small text-uppercase">Nome do Objetivo</label>
                            <input asp-for="NomeObjetivo" class="form-control" />
                            <span asp-validation-for="NomeObjetivo" class="text-danger small"></span>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-warning px-5 shadow-sm text-dark">
                                <i class="bi bi-save me-2"></i>Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}