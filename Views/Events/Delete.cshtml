@model HealthWellbeing.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            @* --- HEADER --- *@
            <div class="d-flex align-items-center mb-4">
                <div class="bg-danger text-dark bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center shadow-sm me-3" style="width: 48px; height: 48px;">
                    <i class="bi bi-trash fs-4 text-danger-emphasis"></i>
                </div>
                <div>
                    <h2 class="h4 mb-0 fw-bold text-dark">Delete Event</h2>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-4 overflow-hidden border-top border-4 border-danger">
                <div class="card-body p-4 p-md-5">

                    @* --- WARNING ALERT --- *@
                    <div class="alert alert-danger bg-danger bg-opacity-10 border-0 mb-5 d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill text-danger me-3 fs-4"></i>
                        <div>
                            <span class="fw-bold text-danger">Are you sure?</span>
                            <span class="text-danger opacity-75 d-block small">This action cannot be undone.</span>
                        </div>
                    </div>

                    @* --- EVENT SUMMARY --- *@
                    <div class="row mb-4">
                        <div class="col-12">
                            <label class="form-label fw-bold text-uppercase small text-muted mb-1">Event Name</label>
                            <div class="border-bottom pb-2">
                                <span class="fs-5 fw-bold text-dark">@Model.EventName</span>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-uppercase small text-muted mb-2">Category</label>
                            <div class="p-3 bg-light rounded-3 border">
                                <i class="bi bi-tag me-2 text-muted"></i>
                                <span class="fw-medium">@Model.EventType?.EventTypeName</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-uppercase small text-muted mb-2">Current Status</label>
                            <div class="p-3 bg-light rounded-3 border">
                                <span class="fw-medium">@Model.Status</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <label class="form-label fw-bold text-uppercase small text-muted mb-2">Schedule</label>
                            <div class="p-3 bg-light rounded-3 border d-flex align-items-center gap-3">
                                <i class="bi bi-calendar-event text-secondary"></i>
                                <div>
                                    <span class="fw-bold">@Model.EventStart.ToString("dd MMM yyyy, HH:mm")</span>
                                    <span class="text-muted mx-2">to</span>
                                    <span class="fw-bold">@Model.EventEnd.ToString("dd MMM yyyy, HH:mm")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* --- CONFIRMATION FORM --- *@
                    <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="EventId" />
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">Cancel</a>
                            <button type="submit" class="btn btn-danger px-4 shadow-sm">Confirm Delete</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>