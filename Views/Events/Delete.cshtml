@model HealthWellbeing.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-4">
    <h1 class="mb-4">Delete Event</h1>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Are you sure you want to delete this event?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <strong>Event Details</strong>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EventName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EventName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EventDescription)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EventDescription)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EventType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EventType.EventTypeName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EventStart)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EventStart)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EventEnd)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EventEnd)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MinLevel)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MinLevel)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EventPoints)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EventPoints)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="d-flex gap-3">
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>