@model HealthWellbeing.Models.Event

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            <i class="bi bi-calendar-event me-2"></i> Event Details
        </h4>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.EventName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.EventName)
            </dd>

            <dt class="col-sm-3 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.EventDescription)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.EventDescription)
            </dd>

            <dt class="col-sm-3 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.EventType)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.EventType.EventTypeName)
            </dd>

            <dt class="col-sm-3 fw-bold text-muted">Activity Focus</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ActivityTypeId)
            </dd>

            <dt class="col-sm-3 fw-bold text-muted">Activities</dt>
            <dd class="col-sm-9">
                @if (Model.EventActivities != null && Model.EventActivities.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var ea in Model.EventActivities)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-1">
                                @ea.Activity.ActivityName
                                <span class="badge bg-light text-dark border">@ea.Activity.ActivityReward pts</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted small">No activities assigned.</span>
                }
            </dd>

            <dt class="col-sm-3 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.EventStart)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.EventStart)
            </dd>

            <dt class="col-sm-3 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.EventEnd)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.EventEnd)
            </dd>

            <dt class="col-sm-3 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Status)
            </dd>

            <dt class="col-sm-3 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.MinLevel)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MinLevel)
            </dd>

            <dt class="col-sm-3 fw-bold text-muted">
                @Html.DisplayNameFor(model => model.EventPoints)
            </dt>
            <dd class="col-sm-9 fw-bold text-primary">
                @Html.DisplayFor(model => model.EventPoints) pts
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4 d-flex justify-content-end gap-2">
    <a asp-action="Edit" asp-route-id="@Model?.EventId" class="btn btn-warning">
        <i class="bi bi-pencil-square me-1"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
    </a>
</div>