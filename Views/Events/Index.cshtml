@model IEnumerable<HealthWellbeing.Models.Event>

@{
    ViewData["Title"] = "Events";
    var successMessage = TempData["SuccessMessage"];
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (successMessage != null)
{
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning d-flex align-items-center border-2 p-3 rounded" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">No Events Found</h4>
            <p>No events are currently available.</p>
        </div>
    </div>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Create New Event
    </a>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Event List</h2>
        <div class="d-flex justify-content-end">
            <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#eventSearch" aria-expanded="false" aria-controls="eventSearch">
                <i class="bi bi-search me-1"></i> Search
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
        </div>
    </div>

    <div class="collapse mt-2 mb-3" id="eventSearch">
        <div class="card card-body">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">
                <div class="col-md-4">
                    <label for="searchName" class="form-label">Event Name</label>
                    <input id="searchName" name="searchName" value="@ViewBag.SearchName" class="form-control" placeholder="Search by name" type="search" />
                </div>
                <div class="col-md-4">
                    <label for="searchType" class="form-label">Event Type</label>
                    <input id="searchType" name="searchType" value="@ViewBag.SearchType" class="form-control" placeholder="Search by type" type="search" />
                </div>
                <div class="col-12 mt-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Event Name</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Duration (min)</th>
                    <th>Intensity</th>
                    <th>Date</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EventName</td>
                        <td>@item.EventDescription</td>
                        <td>@item.EventType</td>
                        <td>@item.DurationMinutes</td>
                        <td>@item.Intensity</td>
                        <td>@item.EventDate.ToShortDateString()</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-info me-1">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
