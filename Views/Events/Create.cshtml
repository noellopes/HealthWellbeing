@model HealthWellbeing.Models.Event

@{
    ViewData["Title"] = "Adicionar Evento";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EventName"></label>
        <input asp-for="EventName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventDescription"></label>
        <input asp-for="EventDescription" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventType"></label>
        <input asp-for="EventType" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DurationMinutes"></label>
        <input asp-for="DurationMinutes" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Intensity"></label>
        <input asp-for="Intensity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CaloriesBurned"></label>
        <input asp-for="CaloriesBurned" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventDate"></label>
        <input asp-for="EventDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
</form>
