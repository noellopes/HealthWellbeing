@model HealthWellbeing.Models.Level

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Level Details</h5>
                        <small class="text-white-50">ID: @Model.LevelId</small>
                    </div>
                </div>

                <div class="card-body">
                    <div class="d-flex gap-3 align-items-start mb-3">
                        <div class="flex-shrink-0">
                            <div class="rounded-circle border border-dark border-2 d-flex align-items-center justify-content-center text-dark"
                                 style="width:64px;height:64px;">
                                <span class="fs-5 fw-semibold">@Html.DisplayFor(m => m.LevelNumber)</span>
                            </div>
                        </div>

                        <div class="w-100">
                            <h4 class="mb-1">
                                Level <span class="fw-semibold">@Html.DisplayFor(m => m.LevelNumber)</span>
                                <small class="text-muted ms-2">@Html.DisplayFor(m => m.Category.Name)</small>
                            </h4>

                            <p class="text-muted mb-2">@Html.DisplayFor(m => m.Description)</p>

                            <hr />

                            <dl class="row mb-0">
                                <dt class="col-sm-4 text-muted">Level Number</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.LevelNumber)</dd>

                                <dt class="col-sm-4 text-muted">Category</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.Category.Name)</dd>

                                <!-- NOVO CAMPO NA LISTA -->
                                <dt class="col-sm-4 text-muted">Points Limit</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.LevelPointsLimit)</dd>
                                <!-- FIM -->

                                <dt class="col-sm-4 text-muted">Description</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(m => m.Description)</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1" aria-hidden="true"></i> Back to List
                        </a>

                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.LevelId" class="btn btn-warning me-2">
                                <i class="bi bi-pencil me-1" aria-hidden="true"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.LevelId" class="btn btn-danger">
                                <i class="bi bi-trash me-1" aria-hidden="true"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>