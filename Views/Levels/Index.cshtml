@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Level>
@using System.Linq

@{
    ViewData["Title"] = "Levels";
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;

    // Captura os valores de pesquisa para facilitar a leitura no HTML
    var searchNumber = ViewBag.SearchNumber as string;
    // Tenta ir buscar ao QueryString se o ViewBag falhar para o ID da categoria
    var searchCategoryId = ViewBag.SearchCategoryId?.ToString() ?? Context.Request.Query["searchCategoryId"].ToString();
    var searchDescription = ViewBag.SearchDescription as string;
    var searchPoints = ViewBag.SearchPoints as string;

    // Lógica para decidir se a aba de pesquisa começa aberta
    bool hasSearch = !string.IsNullOrEmpty(searchNumber) || 
                     !string.IsNullOrEmpty(searchCategoryId) || 
                     !string.IsNullOrEmpty(searchDescription) || 
                     !string.IsNullOrEmpty(searchPoints);
}

<style>
    /* Estilo "Top Level" */
    #successToast, #errorToast {
        min-width: 28rem;
        max-width: 40rem;
        border-radius: .75rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.28), 0 0 0 6px rgba(16,185,129,0.06);
        font-size: 1.02rem;
    }
    
    #errorToast {
        box-shadow: 0 10px 30px rgba(0,0,0,0.28), 0 0 0 6px rgba(220,53,69,0.06);
    }

    .toast-body {
        padding: 1rem 1.25rem;
        display: flex;
        gap: .75rem;
        align-items: center;
        font-weight: 600;
    }

    .toast-body .bi {
        font-size: 1.5rem;
        opacity: .95;
    }
</style>

<div class="container py-4">

    <div class="position-fixed top-0 start-50 translate-middle-x mt-4" style="z-index:1080;">
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div id="successToast" class="toast align-items-center text-bg-success border-0"
                 role="alert" aria-live="polite" aria-atomic="true"
                 data-bs-delay="4000" data-bs-autohide="true">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi bi-check-circle-fill text-white"></i>
                        <div class="flex-grow-1">@successMessage</div>
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div id="errorToast" class="toast align-items-center text-bg-danger border-0"
                 role="alert" aria-live="assertive" aria-atomic="true"
                 data-bs-delay="5000" data-bs-autohide="true">
                <div class="d-flex">
                    <div class="toast-body text-white">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <div class="flex-grow-1">@errorMessage</div>
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">Levels</h1>

        <div class="d-flex align-items-center">
            <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#levelSearch">
                <i class="bi bi-search me-1"></i> Search
            </a>

            <a class="btn btn-info me-2" data-bs-toggle="collapse" data-bs-target="#calcLevelBox">
                <i class="bi bi-calculator"></i> Calculate Level
            </a>

            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> New Level
            </a>
        </div>
    </div>

    <div class="collapse mt-2 mb-3 @(hasSearch ? "show" : "")" id="levelSearch">
        <div class="card card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label">Level Number</label>
                    <input id="searchNumber" name="searchNumber"
                           value="@searchNumber"
                           class="form-control" type="number" min="1" max="100"
                           placeholder="Exact number (1–100)" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select id="searchCategoryId" name="searchCategoryId"
                            class="form-select"
                            asp-items="ViewBag.LevelCategories">
                        <option value="">All Categories</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Description</label>
                    <input id="searchDescription" name="searchDescription"
                           value="@searchDescription"
                           class="form-control" 
                           placeholder="Keywords (ex: Cardio)..." />
                </div>

                <div class="col-md-3">
                    <label class="form-label">Points Limit</label>
                    <input id="searchPoints" name="searchPoints"
                           value="@searchPoints"
                           class="form-control" type="number" min="0"
                           placeholder="Exact value" />
                </div>

                <div class="col-12 mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Search
                    </button>

                    <a asp-action="Index" class="btn btn-secondary">Clear</a>
                </div>

            </form>
        </div>
    </div>

    <div class="collapse mt-2 mb-3" id="calcLevelBox">
        <div class="card card-body">
            <label class="form-label fw-bold">Calculate Level</label>
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label small text-muted mb-1">Total Points</label>
                    <input id="pointsInput" type="number" min="0" class="form-control" placeholder="Enter points..." />
                </div>
                <div class="col-md-2">
                    <button id="calcBtn" class="btn btn-primary w-100">Calculate</button>
                </div>
                <div class="col-md-3">
                    <label class="form-label small text-muted mb-1">Result</label>
                    <input id="calcResult" type="text" class="form-control fw-bold" readonly placeholder="Level..." />
                </div>
                <div class="col-md-4">
                    <label class="form-label small text-muted mb-1">Next Level Progress</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">Remaining</span>
                        <input id="calcRemaining" type="text" class="form-control" readonly placeholder="Pts left over..." />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            @if (Model.Items.Any())
                            {
                                <th>@Html.DisplayNameFor(m => m.Items.First().LevelNumber)</th>
                                <th>Category</th>
                                <th>@Html.DisplayNameFor(m => m.Items.First().Description)</th>
                                <th>@Html.DisplayNameFor(m => m.Items.First().LevelPointsLimit)</th>
                            }
                            else
                            {
                                <th>Level Number</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Points Limit</th>
                            }
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Items != null && Model.Items.Any())
                        {
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary rounded-pill">@Html.DisplayFor(_ => item.LevelNumber)</span>
                                    </td>
                                    <td>
                                        @if (item.Category != null)
                                        {
                                            @item.Category.Name
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(_ => item.Description)</td>
                                    <td>@Html.DisplayFor(_ => item.LevelPointsLimit)</td>

                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.LevelId"
                                               class="btn btn-sm btn-outline-info" title="Details">Details</a>

                                            <a asp-action="Edit" asp-route-id="@item.LevelId"
                                               class="btn btn-sm btn-outline-warning" title="Edit">Edit</a>

                                            <a asp-action="Delete" asp-route-id="@item.LevelId"
                                               class="btn btn-sm btn-outline-danger" title="Delete">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">No levels found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="card-footer d-flex justify-content-between align-items-center">
                @{
                    var p = Model.CurrentPage;
                    var size = Model.ItemsPerPage;
                    var start = Model.TotalItems == 0 ? 0 : ((p - 1) * size + 1);
                    var end = Math.Min(Model.TotalItems, p * size);
                }

                <div class="small text-muted">
                    Showing @start - @end of @Model.TotalItems
                </div>

                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item @(p == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="1"
                               asp-route-searchNumber="@searchNumber"
                               asp-route-searchCategoryId="@searchCategoryId"
                               asp-route-searchDescription="@searchDescription"
                               asp-route-searchPoints="@searchPoints">First</a>
                        </li>

                        @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
                        {
                            <li class="page-item @(i == p ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i"
                                   asp-route-searchNumber="@searchNumber"
                                   asp-route-searchCategoryId="@searchCategoryId"
                                   asp-route-searchDescription="@searchDescription"
                                   asp-route-searchPoints="@searchPoints">@i</a>
                            </li>
                        }

                        <li class="page-item @(p == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages"
                               asp-route-searchNumber="@searchNumber"
                               asp-route-searchCategoryId="@searchCategoryId"
                               asp-route-searchDescription="@searchDescription"
                               asp-route-searchPoints="@searchPoints">Last</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // Toasts initialization
            const toasts = document.querySelectorAll('.toast');
            if (bootstrap?.Toast) {
                toasts.forEach(t => bootstrap.Toast.getOrCreateInstance(t).show());
            }

            // --- Calculator Logic ---
            const calcInput = document.getElementById("pointsInput");
            const calcBtn = document.getElementById("calcBtn");
            const calcResult = document.getElementById("calcResult");
            const calcRemaining = document.getElementById("calcRemaining");

            if (calcBtn) {
                calcBtn.addEventListener("click", async () => {
                    const points = calcInput.value;

                    if (!points || points < 0) {
                        calcResult.value = "";
                        calcRemaining.value = "";
                        alert("Please enter a valid number of points.");
                        return;
                    }

                    calcResult.value = "...";
                    calcRemaining.value = "...";

                    try {
                        const url = '@Url.Action("CalculateLevel", "Levels")' + `?points=${points}`;
                        const response = await fetch(url);

                        if (!response.ok) throw new Error("Network error");

                        const data = await response.json();

                        calcResult.value = `Level ${data.level}`;
                        calcRemaining.value = `${data.remaining} pts`;

                    } catch (error) {
                        console.error("Error:", error);
                        calcResult.value = "Error";
                        calcRemaining.value = "-";
                    }
                });
            }
        });
    </script>
}