@model List<HealthWellbeing.ViewModel.EspecialidadeAgendaVM>

@{
    ViewData["Title"] = "Horário de Marcação de Consultas";
}

<h2>@ViewData["Title"]</h2>

@foreach (var esp in Model)
{
    <h3>@esp.Especialidade</h3>

    <div class="table-responsive mb-4">
        <table class="table table-sm table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Médico</th>
                    <th>Segunda</th>
                    <th>Terça</th>
                    <th>Quarta</th>
                    <th>Quinta</th>
                    <th>Sexta</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var medico in esp.Medicos)
                {
                    <tr>
                        <td>@medico.Medico</td>
                        <td>@medico.Segunda</td>
                        <td>@medico.Terca</td>
                        <td>@medico.Quarta</td>
                        <td>@medico.Quinta</td>
                        <td>@medico.Sexta</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
