@using HealthWellbeing.Models
@model HealthWellbeing.ViewModel.MedicoAgenda15DiasVM

@{
    ViewData["Title"] = "Agenda Médica (15 dias úteis)";
    var medico = Model?.Medico ?? "—";
}

<style>
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .utente-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .utente-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
    }

        .utente-btn:hover {
            filter: brightness(1.05);
        }

    .utente-body {
        background: #e6f3fb;
        min-height: 360px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    .details-card {
        background: #fff;
        border-radius: 12px;
        padding: 16px;
        border: 1px solid rgba(97,166,199,.45);
        box-shadow: 0 2px 10px rgba(0,0,0,.08);
    }

    .welcome-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 14px;
    }

    .welcome-title {
        margin: 0;
        color: #1f4f6a;
        font-weight: 800;
    }

    .info-item {
        background: #f7fbfe;
        border: 1px solid rgba(97,166,199,.35);
        border-radius: 10px;
        padding: 10px 12px;
    }

        .info-item .lbl {
            display: block;
            font-size: .85rem;
            color: #2b546c;
            opacity: .85;
            margin-bottom: 2px;
            font-weight: 700;
        }

        .info-item .val {
            display: block;
            font-size: 1rem;
            color: #1f4f6a;
            font-weight: 800;
            word-break: break-word;
        }

    .hb-btn {
        border-radius: 18px !important;
        font-weight: 700 !important;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .hb-btn.btn-sm {
            padding: 6px 12px !important;
        }

    .tbl th {
        vertical-align: middle;
    }

    .tbl thead th {
        background: #f1f7fb;
    }

    .chk {
        transform: scale(1.15);
    }
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <div class="utente-header">
                <div class="utente-header-content">
                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing" class="logo-img" />
                    </div>

                    <div class="utente-actions">
                        <a asp-action="Index" class="utente-btn">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </div>
            </div>

            <div class="utente-body">
                <div class="details-card">

                    <div class="welcome-row">
                        <h2 class="welcome-title">Agenda Médica (15 dias úteis)</h2>
                    </div>

                    <div class="info-item mb-3">
                        <span class="lbl">Médico</span>
                        <span class="val">@medico</span>
                    </div>

                    <form asp-action="MinhaAgenda15Dias" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="text-danger mb-2"></div>

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped align-middle tbl">
                                <thead>
                                    <tr>
                                        <th style="min-width:130px;">Data</th>
                                        <th style="min-width:120px;">Dia</th>
                                        <th colspan="3" class="text-center">Manhã</th>
                                        <th colspan="3" class="text-center">Tarde</th>
                                    </tr>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th class="text-center" style="min-width:70px;">Ativo</th>
                                        <th style="min-width:120px;">Início</th>
                                        <th style="min-width:120px;">Fim</th>
                                        <th class="text-center" style="min-width:70px;">Ativo</th>
                                        <th style="min-width:120px;">Início</th>
                                        <th style="min-width:120px;">Fim</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @for (int i = 0; i < Model.Dias.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                @Model.Dias[i].Data.ToString("dd/MM/yyyy")
                                                <input type="hidden" asp-for="Dias[i].Data" />
                                                <input type="hidden" asp-for="Dias[i].DiaSemana" />
                                            </td>

                                            <td>@Model.Dias[i].DiaSemana</td>

                                            <td class="text-center">
                                                <input asp-for="Dias[i].Manha.Ativo" class="form-check-input chk" />
                                            </td>
                                            <td>
                                                <input asp-for="Dias[i].Manha.HoraInicio" type="time" class="form-control" />
                                            </td>
                                            <td>
                                                <input asp-for="Dias[i].Manha.HoraFim" type="time" class="form-control" />
                                            </td>

                                            <td class="text-center">
                                                <input asp-for="Dias[i].Tarde.Ativo" class="form-check-input chk" />
                                            </td>
                                            <td>
                                                <input asp-for="Dias[i].Tarde.HoraInicio" type="time" class="form-control" />
                                            </td>
                                            <td>
                                                <input asp-for="Dias[i].Tarde.HoraFim" type="time" class="form-control" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3 d-flex gap-2 flex-wrap">
                            <button type="submit" class="btn btn-success hb-btn">
                                <i class="bi bi-check2-circle"></i> Guardar Agenda
                            </button>

                            <a asp-action="Index" class="btn btn-secondary hb-btn">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>

                </div>
            </div>

            <div class="utente-footer-bar"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
