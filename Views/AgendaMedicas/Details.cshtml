@using HealthWellbeing.Models
@model HealthWellbeing.Models.AgendaMedica

@{
    ViewData["Title"] = "Detalhes da Agenda Médica";

    var medico = Model?.Medico?.Email ?? "—";
    var diaSemana = Model?.DiaSemana.ToString() ?? "—";
    var horaInicio = Model?.HoraInicio.ToString(@"hh\:mm") ?? "—";
    var horaFim = Model?.HoraFim.ToString(@"hh\:mm") ?? "—";
}

<style>
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .utente-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .utente-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .utente-btn:hover {
            filter: brightness(1.05);
        }

    .utente-body {
        background: #e6f3fb;
        min-height: 260px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    .details-card {
        background: #fff;
        border-radius: 12px;
        padding: 16px;
        border: 1px solid rgba(97,166,199,.45);
        box-shadow: 0 2px 10px rgba(0,0,0,.08);
    }

    .details-title {
        margin: 0 0 10px 0;
        color: #1f4f6a;
        font-weight: 800;
    }

    .details-sub {
        margin: 0 0 14px 0;
        color: #2b546c;
    }

    .info-item {
        background: #f7fbfe;
        border: 1px solid rgba(97,166,199,.35);
        border-radius: 10px;
        padding: 10px 12px;
        height: 100%;
    }

        .info-item .lbl {
            display: block;
            font-size: .85rem;
            color: #2b546c;
            opacity: .85;
            margin-bottom: 2px;
            font-weight: 700;
        }

        .info-item .val {
            display: block;
            font-size: 1rem;
            color: #1f4f6a;
            font-weight: 700;
            word-break: break-word;
        }

    .hb-btn {
        border-radius: 18px !important;
        font-weight: 700 !important;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <div class="utente-header">
                <div class="utente-header-content">
                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing" class="logo-img" />
                    </div>

                    <div class="utente-actions">
                        <a asp-action="Index" class="utente-btn">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>

                        <a asp-action="Edit" asp-route-id="@Model.IdAgendaMedica" class="utente-btn">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                    </div>
                </div>
            </div>

            <div class="utente-body">
                <div class="details-card">
                    <h2 class="details-title">
                        <i class="bi bi-calendar2-week me-2"></i> Detalhes da Agenda Médica
                    </h2>
                    <p class="details-sub">Consulta os dados do horário associado ao médico.</p>

                    <div class="row g-2">
                        <div class="col-12 col-md-6">
                            <div class="info-item">
                                <span class="lbl">Médico</span>
                                <span class="val">@medico</span>
                            </div>
                        </div>

                        <div class="col-12 col-md-2">
                            <div class="info-item">
                                <span class="lbl">Dia</span>
                                <span class="val">@diaSemana</span>
                            </div>
                        </div>

                        <div class="col-12 col-md-2">
                            <div class="info-item">
                                <span class="lbl">Início</span>
                                <span class="val">@horaInicio</span>
                            </div>
                        </div>

                        <div class="col-12 col-md-2">
                            <div class="info-item">
                                <span class="lbl">Fim</span>
                                <span class="val">@horaFim</span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3 d-flex gap-2 flex-wrap">
                        <a asp-action="Edit" asp-route-id="@Model.IdAgendaMedica" class="btn btn-warning text-white hb-btn">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>

                        <a asp-action="Index" class="btn btn-secondary hb-btn">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>

                </div>
            </div>

            <div class="utente-footer-bar"></div>
        </div>
    </div>
</div>
