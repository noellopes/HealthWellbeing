@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Training>

@{
    ViewData["Title"] = "Training Session Management";

    // Valores de pesquisa para uso nos links e inputs
    var searchName = ViewBag.SearchName ?? "";
    var searchTrainerId = ViewBag.SearchTrainerId;
    var searchTrainingTypeId = ViewBag.SearchTrainingTypeId;
    var searchDuration = ViewBag.SearchDuration; // Novo

    // Listas para os Dropdowns
    var trainerList = ViewData["TrainerId"] as SelectList;
    var trainingTypeList = ViewData["TrainingTypeId"] as SelectList;
}

<h1 class="display-4 text-primary mb-4">@ViewData["Title"]</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Training List</h2>
    <div class="d-flex justify-content-end">

        <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#trainingSearch" aria-expanded="false" aria-controls="trainingSearch">
            <i class="bi bi-search me-1"></i> Search
        </a>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>

    </div>
</div>

@* Formulário de Pesquisa *@
@* Mostra o formulário se houver qualquer pesquisa ativa *@
<div class="collapse mt-2 mb-2 @(string.IsNullOrEmpty(searchName) && searchTrainerId == null && searchTrainingTypeId == null && searchDuration == null ? "" : "show")" id="trainingSearch">
    <div class="card card-body shadow-sm">

        <form asp-action="Index" method="get" class="row g-2">

            @* 1. Trainer (col-md-3) *@
            <div class="col-md-3">
                <label for="searchTrainerId" class="form-label">Trainer</label>
                <select id="searchTrainerId" name="searchTrainerId" class="form-select" asp-items="trainerList">
                    <option value="">All Trainers</option>
                </select>
            </div>

            @* 2. Training Type (col-md-3) *@
            <div class="col-md-3">
                <label for="searchTrainingTypeId" class="form-label">Training Type</label>
                <select id="searchTrainingTypeId" name="searchTrainingTypeId" class="form-select" asp-items="trainingTypeList">
                    <option value="">All Types</option>
                </select>
            </div>

            @* 3. Name (col-md-3) *@
            <div class="col-md-3">
                <label for="searchName" class="form-label">Training Name</label>
                <input id="searchName" name="searchName" value="@searchName" class="form-control" placeholder="Search by name" type="search" />
            </div>

            @* 4. Duration (col-md-3) *@
            <div class="col-md-3">
                <label for="searchDuration" class="form-label">Duration (min)</label>
                <input id="searchDuration" name="searchDuration" value="@searchDuration" class="form-control" placeholder="e.g. 60" type="number" />
            </div>

            @* Botões *@
            <div class="col-12 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Clear
                </a>
            </div>

        </form>
    </div>
</div>


@* Verificação de Itens *@
@if (!Model.Items.Any())
{
    <div class="alert alert-warning mt-4" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> No Trainings Found</h4>
        <p>There are no training sessions matching your criteria. Try adjusting your search or create a new session.</p>
    </div>
}
else
{
    @* Tabela de Treinos *@
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover table-bordered align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Trainer)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().TrainingType)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Name)</th>
                    <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Items.First().Duration)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="fw-bold">@Html.DisplayFor(modelItem => item.Trainer.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.TrainingType.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Duration) min</td>
                        <td class="text-nowrap">
                            <a asp-action="Edit" asp-route-id="@item.TrainingId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.TrainingId" class="btn btn-sm btn-outline-info me-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.TrainingId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Secção de Paginação *@
    <nav aria-label="Training pages" class="mt-3">
        <ul class="pagination">

            @* Botão "First" *@
            @if (Model.CurrentPage == 1)
            {
                <li class="page-item disabled"><a class="page-link">First</a></li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="1"
                       asp-route-searchName="@searchName"
                       asp-route-searchTrainerId="@searchTrainerId"
                       asp-route-searchTrainingTypeId="@searchTrainingTypeId"
                       asp-route-searchDuration="@searchDuration">First</a>
                </li>
            }

            @* Links das Páginas (ex: 1, 2, 3) *@
            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
            {
                if (p == Model.CurrentPage)
                {
                    <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@p"
                           asp-route-searchName="@searchName"
                           asp-route-searchTrainerId="@searchTrainerId"
                           asp-route-searchTrainingTypeId="@searchTrainingTypeId"
                           asp-route-searchDuration="@searchDuration">@p</a>
                    </li>
                }
            }

            @* Botão "Last" *@
            @if (Model.CurrentPage == Model.TotalPages)
            {
                <li class="page-item disabled"><a class="page-link">Last</a></li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages"
                       asp-route-searchName="@searchName"
                       asp-route-searchTrainerId="@searchTrainerId"
                       asp-route-searchTrainingTypeId="@searchTrainingTypeId"
                       asp-route-searchDuration="@searchDuration">Last</a>
                </li>
            }
        </ul>
    </nav>
}