@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Training>

@{
    ViewData["Title"] = "Training Session Management";

    var searchName = ViewBag.SearchName ?? "";
    var searchTrainerId = ViewBag.SearchTrainerId;
    var searchTrainingTypeId = ViewBag.SearchTrainingTypeId;
    var searchDuration = ViewBag.SearchDuration;

    var trainerList = ViewData["TrainerId"] as SelectList;
    var trainingTypeList = ViewData["TrainingTypeId"] as SelectList;
}

<h1 class="display-4 text-primary mb-4">@ViewData["Title"]</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Training List</h2>

    <div class="d-flex justify-content-end">
        <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#trainingSearch">
            <i class="bi bi-search me-1"></i> Search
        </a>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Training
        </a>
    </div>
</div>

<div class="collapse mt-2 mb-2 @(string.IsNullOrEmpty(searchName) && searchTrainerId == null && searchTrainingTypeId == null && searchDuration == null ? "" : "show")" id="trainingSearch">
    <div class="card card-body shadow-sm">

        <form asp-action="Index" method="get" class="row g-2">

            <div class="col-md-3">
                <label class="form-label">Trainer</label>
                <select name="searchTrainerId" class="form-select" asp-items="trainerList">
                    <option value="">All Trainers</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Training Type</label>
                <select name="searchTrainingTypeId" class="form-select" asp-items="trainingTypeList">
                    <option value="">All Types</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Training Name</label>
                <input name="searchName" class="form-control" placeholder="Search by name" value="@searchName" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Duration (min)</label>
                <input name="searchDuration" class="form-control" type="number" placeholder="e.g. 60" value="@searchDuration" />
            </div>

            <div class="col-12 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Clear
                </a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Items.Any())
{
    <div class="alert alert-warning mt-4 shadow-sm" role="alert">
        <h4 class="alert-heading">
            <i class="bi bi-exclamation-triangle-fill"></i> No Trainings Found
        </h4>
        <p>No training sessions match your criteria. Try adjusting your search or create a new one.</p>
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Trainer)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().TrainingType)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Name)</th>
                    <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Items.First().Duration)</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="fw-bold">@item.Trainer.Name</td>
                        <td>@item.TrainingType.Name</td>
                        <td>@item.Name</td>
                        <td class="d-none d-md-table-cell">@item.Duration min</td>

                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.TrainingId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.TrainingId" class="btn btn-sm btn-info">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.TrainingId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Pagination" class="mt-3">
        <ul class="pagination">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="1"
                   asp-route-searchName="@searchName"
                   asp-route-searchTrainerId="@searchTrainerId"
                   asp-route-searchTrainingTypeId="@searchTrainingTypeId"
                   asp-route-searchDuration="@searchDuration">First</a>
            </li>

            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
            {
                <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-route-page="@p"
                       asp-route-searchName="@searchName"
                       asp-route-searchTrainerId="@searchTrainerId"
                       asp-route-searchTrainingTypeId="@searchTrainingTypeId"
                       asp-route-searchDuration="@searchDuration">@p</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="@Model.TotalPages"
                   asp-route-searchName="@searchName"
                   asp-route-searchTrainerId="@searchTrainerId"
                   asp-route-searchTrainingTypeId="@searchTrainingTypeId"
                   asp-route-searchDuration="@searchDuration">Last</a>
            </li>
        </ul>
    </nav>
}
