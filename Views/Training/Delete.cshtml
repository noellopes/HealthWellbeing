@model HealthWellbeing.Models.Training

@{
    ViewData["Title"] = "Delete Training Session";
}

<h1 class="display-4 text-danger mb-3">Delete Training Session</h1>

<h3 class="alert alert-warning border-0 shadow-sm p-3" role="alert">
    ⚠️ Are you sure you want to delete the training session: <strong class="text-danger">@Model.Name</strong>?
</h3>
<hr class="mb-4" />

<div class="card shadow-lg mb-4">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Training Session Details to be Deleted</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Trainer)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Trainer.Name) (@Html.DisplayFor(model => model.Trainer.Email))
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.TrainingType)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TrainingType.Name)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Duration)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Duration) minutes
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.DayOfWeek)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DayOfWeek)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.StartTime)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.StartTime)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.MaxParticipants)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MaxParticipants)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="d-flex align-items-center mt-4">
    <input type="hidden" asp-for="TrainingId" />

    <button type="submit" class="btn btn-danger btn-lg shadow-sm me-3">
        <i class="bi bi-trash"></i> Confirm Delete
    </button>

    <a asp-action="Index" class="btn btn-secondary btn-lg">
        <i class="bi bi-x-circle"></i> Cancel
    </a>
</form>