@model HealthWellbeing.Models.Training

@{
    ViewData["Title"] = "Delete Training Session";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">

            <div class="alert alert-danger p-4 shadow-sm border-0 mb-4 rounded-4" role="alert">
                <i class="bi bi-exclamation-octagon-fill fs-1 text-danger d-block mb-3"></i>
                <h2 class="alert-heading">Are you sure?</h2>
                <p class="mb-0">
                    You are about to delete the training session
                    <strong>@Model.Name</strong>.
                    This action cannot be undone.
                </p>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4 text-start">
                    <div class="row">

                        <div class="col-sm-4 text-muted fw-bold small">Trainer:</div>
                        <div class="col-sm-8 mb-2">
                            @Model.Trainer?.Name (@Model.Trainer?.Email)
                        </div>

                        <div class="col-sm-4 text-muted fw-bold small">Training Type:</div>
                        <div class="col-sm-8 mb-2">
                            @Model.TrainingType?.Name
                        </div>

                        <div class="col-sm-4 text-muted fw-bold small">Day:</div>
                        <div class="col-sm-8 mb-2">
                            @Model.DayOfWeek
                        </div>

                        <div class="col-sm-4 text-muted fw-bold small">Start Time:</div>
                        <div class="col-sm-8 mb-2">
                            @Model.StartTime
                        </div>

                        <div class="col-sm-4 text-muted fw-bold small">Duration:</div>
                        <div class="col-sm-8 mb-2">
                            @Model.Duration minutes
                        </div>

                        <div class="col-sm-4 text-muted fw-bold small">Max Participants:</div>
                        <div class="col-sm-8 mb-2">
                            @Model.MaxParticipants
                        </div>

                    </div>
                </div>
            </div>

            <form asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TrainingId" />

                <div class="d-grid gap-2 d-md-block">
                    <button type="submit"
                            class="btn btn-danger btn-lg px-5 shadow-sm me-md-2">
                        <i class="bi bi-trash-fill me-2"></i> Delete Forever
                    </button>

                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-lg px-5 shadow-sm">
                        <i class="bi bi-x-circle me-2"></i> Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>

