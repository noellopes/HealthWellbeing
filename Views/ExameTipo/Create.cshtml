@model HealthWellbeing.ViewModels.TipoExameRecursosViewModel

@{
    ViewData["Title"] = "Criar Novo Tipo de Exame";
}

<div class="container mt-4">
    <h1 class="display-6 mb-3">Criar Novo Tipo de Exame</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg p-3">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        @* --- Campos do Exame --- *@
                        <div class="mb-3">
                            <label asp-for="NomeExame" class="form-label">Nome</label>
                            <input asp-for="NomeExame" class="form-control" placeholder="Ex: Raio-X Torácico" />
                            <span asp-validation-for="NomeExame" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label">Descrição</label>
                            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EspecialidadeId" class="form-label">Especialidade</label>
                            <select asp-for="EspecialidadeId" class="form-select" asp-items="@(ViewData["EspecialidadeId"] as SelectList)">
                                <option value="">-- Selecione a Especialidade --</option>
                            </select>
                            <span asp-validation-for="EspecialidadeId" class="text-danger"></span>
                        </div>

                        @* --- BLOCO DE RECURSOS (Igual ao Edit) --- *@
                        <div class="card mt-4 border-secondary">
                            <div class="card-header bg-secondary text-white">
                                <h5 class="mb-0 fs-6"><i class="bi bi-tools me-2"></i>Recursos Necessários</h5>
                            </div>
                            <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                                @if (Model.Recursos.Any())
                                {
                                    @for (int i = 0; i < Model.Recursos.Count; i++)
                                    {
                                        <div class="d-flex align-items-center border-bottom py-2">
                                            @* Checkbox *@
                                            <div class="form-check flex-grow-1">
                                                <input type="hidden" asp-for="@Model.Recursos[i].Id" />
                                                <input type="hidden" asp-for="@Model.Recursos[i].Nome" />
                                                <input type="hidden" asp-for="@Model.Recursos[i].StockAtual" />

                                                <input class="form-check-input" type="checkbox" asp-for="@Model.Recursos[i].IsSelected" />
                                                <label class="form-check-label" asp-for="@Model.Recursos[i].IsSelected">
                                                    @Model.Recursos[i].Nome
                                                    <span class="text-muted small ms-2">(Stock: @Model.Recursos[i].StockAtual)</span>
                                                </label>
                                            </div>

                                            @* Quantidade *@
                                            <div class="d-flex align-items-center" style="width: 130px;">
                                                <span class="small text-muted me-2">Qtd:</span>
                                                <input type="number" class="form-control form-control-sm"
                                                       asp-for="@Model.Recursos[i].Quantidade"
                                                       min="1" max="@Model.Recursos[i].StockAtual" />
                                            </div>
                                        </div>
                                        <span asp-validation-for="@Model.Recursos[i].Quantidade" class="text-danger small"></span>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted mb-0">Não existem recursos registados.</p>
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success shadow-sm">
                                <i class="bi bi-plus-lg"></i> Criar Exame
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-short"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}