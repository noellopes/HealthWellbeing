@model HealthWellbeing.Models.ExameTipo

@{
    ViewData["Title"] = "Detalhes do Tipo de Exame";
}

<div class="container mt-4">

    <h1 class="display-6 mb-3">Detalhes do Tipo de Exame</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i>
                        Informações: @Model.Nome
                    </h5>
                </div>
                <div class="card-body">

                    <dl class="row mb-0">

                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-9 fw-bold">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.Especialidade)
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info text-dark">
                                @Html.DisplayFor(model => model.Especialidade!.Nome)
                            </span>
                        </dd>

                        <dt class="col-sm-3 text-muted mt-3">
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>
                        <dd class="col-sm-9 mt-3">
                            <p class="text-break">
                                @Html.DisplayFor(model => model.Descricao)
                            </p>
                        </dd>

                    </dl>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-start">
                <a asp-action="Edit" asp-route-id="@Model?.ExameTipoId" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-short"></i> Voltar para a Lista
                </a>
            </div>

        </div>
    </div>
</div>