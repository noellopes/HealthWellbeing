@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.ExameTipo>

@{
    ViewData["Title"] = "Tipos de Exame";
    // Variáveis da ViewBag para serem usadas nos links de paginação
    var searchNome = ViewBag.SearchNome;
    var searchEspecialidade = ViewBag.SearchEspecialidade;
}

<div class="container mt-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Sucesso!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Tipos de Exame</h1>
        <div class="d-flex justify-content-end">
            <a class="btn btn-secondary me-2" data-bs-toggle="collapse"
               data-bs-target="#postSearch" aria-expanded="false"
               aria-controls="postSearch">
                <i class="bi bi-search me-1"></i> Pesquisar
            </a>
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle"></i> Criar Novo
            </a>
        </div>
    </div>

    <div class="collapse mt-2 mb-4" id="postSearch">
        <div class="card card-body">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">

                <div class="col-md-4">
                    <label for="searchNome" class="form-label">Nome</label>
                    <input id="searchNome" name="searchNome" value="@searchNome"
                           class="form-control" placeholder="Pesquisar por nome" type="search" />
                </div>

                <div class="col-md-4">
                    <label for="searchEspecialidade" class="form-label">Especialidade</label>
                    <input id="searchEspecialidade" name="searchEspecialidade" value="@searchEspecialidade"
                           class="form-control" placeholder="Pesquisar por especialidade" type="search" />
                </div>

                <div class="col-12 mt-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search me-1"></i> Pesquisar</button>
                    <a asp-action="Index" class="btn btn-secondary">Limpar Filtros</a>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Nome)</th>
                    <th class="d-none d-sm-table-cell">@Html.DisplayNameFor(model => model.Items.First().Descricao)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Especialidade!.Nome)</th>
                    <th>Especialidade</th>
                    <th class="text-center" style="width: 250px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items!)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td class="d-none d-sm-table-cell">@Html.DisplayFor(modelItem => item.Descricao)</td>
                        <td>@Html.DisplayFor(modelItem => item.Especialidade!.Nome)</td>
                        <td class="text-center text-nowrap">
                            <a asp-action="Edit" asp-route-id="@item.ExameTipoId" class="btn btn-warning btn-sm"><i class="bi bi-pencil me-1"></i> Editar</a>
                            <a asp-action="Details" asp-route-id="@item.ExameTipoId" class="btn btn-info btn-sm mx-1"><i class="bi bi-eye me-1"></i> Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.ExameTipoId" class="btn btn-danger btn-sm"><i class="bi bi-trash me-1"></i> Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Navegação dos Tipos de Exame" class="mt-4">
            <ul class="pagination justify-content-center">

                @* Link "Primeiro" (First) *@
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-page="1"
                       asp-route-searchNome="@searchNome"
                       asp-route-searchEspecialidade="@searchEspecialidade">Primeiro</a>
                </li>

                @* Links Numéricos *@
                @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                {
                    <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                        @if (p == Model.CurrentPage)
                        {
                            <a class="page-link" href="#">@p</a>
                        }
                        else
                        {
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@p"
                               asp-route-searchNome="@searchNome"
                               asp-route-searchEspecialidade="@searchEspecialidade">@p</a>
                        }
                    </li>
                }

                @* Link "Último" (Last) *@
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@Model.TotalPages"
                       asp-route-searchNome="@searchNome"
                       asp-route-searchEspecialidade="@searchEspecialidade">Último</a>
                </li>

            </ul>
        </nav>
    }

</div>