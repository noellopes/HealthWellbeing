@model IEnumerable<HealthWellbeing.Models.ExameTipo>

@{
    ViewData["Title"] = "Tipos de Exame"; // Título mais amigável
}

<div class="container mt-4">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Sucesso!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">Tipos de Exame</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle"></i> Criar Novo
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th class="d-none d-sm-table-cell">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Especialidade)
                    </th>
                    <th class="text-center" style="width: 250px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td class="d-none d-sm-table-cell">
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Especialidade)
                        </td>
                        <td class="text-center text-nowrap">
                            <a asp-action="Edit" asp-route-id="@item.ExameTipoId" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil me-1"></i> Editar
                            </a>

                            <a asp-action="Details" asp-route-id="@item.ExameTipoId" class="btn btn-info btn-sm mx-1">
                                <i class="bi bi-eye me-1"></i> Detalhes
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.ExameTipoId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash me-1"></i> Apagar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>