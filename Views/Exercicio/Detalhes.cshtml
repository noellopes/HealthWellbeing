@model HealthWellbeing.Models.Exercicio

@{
    ViewData["Title"] = "Detalhes do Exercício";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Detalhes do Exercício</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar à Lista
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.ExercicioNome</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Informações Básicas</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th>Descrição:</th>
                            <td>@Model.Descricao</td>
                        </tr>
                        <tr>
                            <th>Duração:</th>
                            <td>@Model.Duracao minutos</td>
                        </tr>
                        <tr>
                            <th>Intensidade:</th>
                            <td>@Model.Intencidade/10</td>
                        </tr>
                        <tr>
                            <th>Calorias Gastas:</th>
                            <td>@Model.CaloriasGastas cal</td>
                        </tr>
                        <tr>
                            <th>Equipamento:</th>
                            <td>@Model.EquipamentoNecessario</td>
                        </tr>
                        <tr>
                            <th>Género:</th>
                            <td>@Model.Genero</td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-6">
                    <h5>Configuração do Treino</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th>Séries:</th>
                            <td>@Model.Series</td>
                        </tr>
                        <tr>
                            <th>Repetições:</th>
                            <td>@Model.Repeticoes</td>
                        </tr>
                        <tr>
                            <th>Músculos Trabalhados:</th>
                            <td>
                                @if (Model.GrupoMuscular?.Any() == true)
                                {
                                    foreach (var musculo in Model.GrupoMuscular)
                                    {
                                        <span class="badge bg-info me-1">@musculo.GrupoMuscularNome</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Nenhum músculo definido</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="mt-4">
                <h5>Instruções</h5>
                <div class="border rounded p-3 bg-light">
                    @Model.Instrucoes
                </div>
            </div>
        </div>
    </div>
</div>