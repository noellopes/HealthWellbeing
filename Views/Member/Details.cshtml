@model HealthWellbeing.Models.Member

@{
    ViewData["Title"] = "Membership Details";
}

<div class="container py-4">
    <h1 class="mb-4 text-primary">Membership Record</h1>

    <div class="row">
        <div class="col-md-4 text-center mb-4">
            <div class="card shadow-sm border-0 p-4">
                <i class="bi bi-person-circle text-secondary mb-3" style="font-size: 5rem;"></i>
                <h4>@Model.Client?.Name</h4>
                <p class="text-muted">Member ID: #@Model.MemberId</p>
                <hr />
                <div class="d-grid gap-2">
                    <a asp-controller="Client" asp-action="Details" asp-route-id="@Model.ClientId" class="btn btn-outline-primary btn-sm">View Full Client Profile</a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Contract & Activity Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Registration Email</dt>
                        <dd class="col-sm-8">@Model.Client?.Email</dd>

                        <dt class="col-sm-4 text-muted mt-2">Registration Date</dt>
                        <dd class="col-sm-8 mt-2">@Model.Client?.RegistrationDate.ToLongDateString()</dd>

                        <dt class="col-sm-4 text-muted mt-2">Active Plans</dt>
                        <dd class="col-sm-8 mt-2">
                            @* Aqui poderíamos listar os planos ativos deste membro *@
                            <span class="badge bg-success">Standard Monthly</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-end gap-2">
        <a asp-action="Edit" asp-route-id="@Model.MemberId" class="btn btn-warning">Edit Membership</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>