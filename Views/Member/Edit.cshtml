@model HealthWellbeing.Models.Member

@{
    ViewData["Title"] = "Manage Subscription";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-primary mb-4"><i class="bi bi-pencil-square me-2"></i>Manage Subscription</h1>

            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="mb-0 fw-bold">Change Plan / Update</h5>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Edit" id="editForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MemberId" />

                        <div class="mb-4">
                            <label class="form-label fw-bold text-muted">Member Name</label>
                            <input type="text" class="form-control bg-light" value="@Model.Client.Name" readonly />
                        </div>

                        <div class="mb-4">
                            <label for="NewPlanId" class="form-label fw-bold">Active Plan</label>
                            <select name="NewPlanId" id="NewPlanId" class="form-select form-select-lg" asp-items="ViewBag.PlanId" onchange="showWarning()">
                            </select>

                            <div id="planChangeWarning" class="alert alert-warning mt-3 d-none">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>Warning:</strong> Changing your plan will <u>cancel the current period</u> and start a new subscription cycle effectively immediately.
                                <br><small>Your new renewal date will be calculated from today.</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-5">
                            @if (User.IsInRole("Administrator") || User.IsInRole("Trainer"))
                            {
                                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                            }
                            else
                            {
                                <a asp-action="Details" asp-route-id="@Model.MemberId" class="btn btn-outline-secondary">Cancel</a>
                            }

                            <button type="button" class="btn btn-primary px-4 fw-bold" onclick="confirmSubmission()">
                                <i class="bi bi-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Guarda o valor original do plano quando a página carrega
    const originalPlanId = document.getElementById('NewPlanId').value;

    function showWarning() {
        const select = document.getElementById('NewPlanId');
        const warningDiv = document.getElementById('planChangeWarning');

        // Se o plano selecionado for diferente do original, mostra o aviso
        if (select.value !== originalPlanId) {
            warningDiv.classList.remove('d-none');
        } else {
            warningDiv.classList.add('d-none');
        }
    }

    function confirmSubmission() {
        const select = document.getElementById('NewPlanId');

        if (select.value !== originalPlanId) {
            // Se mudou o plano, pede confirmação
            if (confirm("Are you sure you want to change your plan? This will start a new billing cycle today.")) {
                document.getElementById('editForm').submit();
            }
        } else {
            // Se não mudou nada, apenas submete
            document.getElementById('editForm').submit();
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}