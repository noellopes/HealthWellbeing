@model HealthWellbeing.Models.Member

@{
    ViewData["Title"] = "Delete Member";
}

<h1 class="display-4 text-danger mb-3">Delete Member</h1>

<h3 class="alert alert-warning border-0 shadow-sm p-3" role="alert">
    ⚠️ Are you sure you want to delete the member with ID:
    <strong class="text-danger">@Model.MemberId</strong>?
</h3>
<hr class="mb-4" />

<div class="card shadow-lg mb-4">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Member Information to be Deleted</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.MemberId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MemberId)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.ClientId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ClientId)
            </dd>

            @* If the Member model has more fields, you can display them too *@
            @* Example:
            <dt class="col-sm-3 fw-bold">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            *@
        </dl>
    </div>
</div>

<form asp-action="Delete" class="d-flex align-items-center mt-4">
    <input type="hidden" asp-for="MemberId" />

    <button type="submit" class="btn btn-danger btn-lg shadow-sm me-3">
        <i class="bi bi-trash"></i> Confirm Delete
    </button>

    <a asp-action="Index" class="btn btn-secondary btn-lg">
        <i class="bi bi-x-circle"></i> Cancel
    </a>
</form>
