@model HealthWellbeing.Models.Member

<div class="container py-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white py-3">
            <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>New Membership & Plan</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">1. Select Client</label>
                    <select name="ClientId" class="form-select" asp-items="ViewBag.ClientId">
                        <option value="">-- Choose Client --</option>
                    </select>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">2. Select Initial Plan</label>
                    <select name="PlanId" class="form-select" asp-items="ViewBag.PlanId">
                        <option value="">-- Choose Subscription Plan --</option>
                    </select>
                    <div class="form-text">As per gym policy, a plan must be selected to activate membership.</div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                    <button type="submit" class="btn btn-success px-5 shadow-sm">
                        <i class="bi bi-check-circle me-1"></i> Activate Membership
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>