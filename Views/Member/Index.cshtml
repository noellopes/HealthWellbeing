@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Member>

@{
    ViewData["Title"] = "Members Directory";
    var successMessage = TempData["SuccessMessage"];
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-primary fw-bold"><i class="bi bi-card-checklist me-2"></i>@ViewData["Title"]</h1>

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-start border-4 border-success" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0"><i class="bi bi-table me-2"></i>Active Membership List</h5>
            <a asp-action="Create" class="btn btn-success px-3 shadow-sm">
                <i class="bi bi-plus-lg me-1"></i> New Membership
            </a>
        </div>
        <div class="card-body bg-light">
            @* Formulário de Pesquisa - Seguindo o estilo do Clients *@
            <form asp-action="Index" method="get" class="row g-2 mb-4">
                <div class="col-md-3">
                    <input type="text" name="searchName" value="@ViewBag.SearchName" class="form-control shadow-sm" placeholder="Member Name...">
                </div>
                <div class="col-md-3">
                    <input type="text" name="searchEmail" value="@ViewBag.SearchEmail" class="form-control shadow-sm" placeholder="Email...">
                </div>
                <div class="col-md-3">
                    <input type="text" name="searchPhone" value="@ViewBag.SearchPhone" class="form-control shadow-sm" placeholder="Phone...">
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm fw-bold">
                        <i class="bi bi-search me-1"></i> Search
                    </button>
                </div>
            </form>

            <div class="table-responsive bg-white rounded shadow-sm">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light border-bottom">
                        <tr>
                            <th class="ps-3">Member ID</th>
                            <th>Client Name</th>
                            <th>Contact</th>
                            <th class="text-end pe-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="ps-3">
                                    <span class="badge rounded-pill bg-secondary shadow-sm">#@item.MemberId</span>
                                </td>
                                <td class="fw-bold">@item.Client?.Name</td>
                                <td>
                                    <div class="small text-primary">@item.Client?.Email</div>
                                    <div class="small text-muted">@item.Client?.Phone</div>
                                </td>
                                <td class="text-end pe-3">
                                    @* Botões de Ação: Idênticos ao estilo do Clients *@
                                    <div class="btn-group shadow-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.MemberId" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.MemberId" class="btn btn-sm btn-info text-white" title="Details">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MemberId" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* Paginação - Seguindo o estilo do Clients *@
            <nav aria-label="Member navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link shadow-sm" asp-action="Index" asp-route-page="1"
                           asp-route-searchName="@ViewBag.SearchName">First</a>
                    </li>
                    @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                    {
                        <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                            <a class="page-link shadow-sm" asp-action="Index" asp-route-page="@p"
                               asp-route-searchName="@ViewBag.SearchName">@p</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link shadow-sm" asp-action="Index" asp-route-page="@Model.TotalPages"
                           asp-route-searchName="@ViewBag.SearchName">Last</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>