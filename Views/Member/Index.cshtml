@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Member>
@using HealthWellbeing.Models

@{
    ViewData["Title"] = "Members";
}

<h1>@ViewData["Title"]</h1>

@* Bloco para mostrar mensagens de sucesso/erro *@
@if (TempData["Message"] != null)
{
    var message = TempData["Message"].ToString();
    var messageType = TempData["MessageType"]?.ToString() ?? "info";

    <div class="alert alert-@messageType alert-dismissible fade show shadow-sm" role="alert">
        @Html.Raw(message)
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Member List</h2>
    <div class="d-flex justify-content-end">

        <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#memberSearch" aria-expanded="false" aria-controls="memberSearch">
            <i class="bi bi-search me-1"></i> Search
        </a>

        @* O botão "Create New" foi removido daqui, 
           porque a criação de Membros é feita a partir da página de Clientes *@

    </div>
</div>

@* Formulário de Pesquisa (3 colunas, sem filtro de "Member") *@
<div class="collapse mt-2 mb-2" id="memberSearch">
    <div class="card card-body shadow-sm">

        <form asp-action="Index" method="get" class="row g-2">

            @* 1. Name (col-md-4) *@
            <div class="col-md-4">
                <label for="searchName" class="form-label">Name</label>
                <input id="searchName" name="searchName" value="@ViewBag.SearchName" class="form-control" placeholder="Search by name" type="search" />
            </div>

            @* 2. Phone (col-md-4) *@
            <div class="col-md-4">
                <label for="searchPhone" class="form-label">Phone</label>
                <input id="searchPhone" name="searchPhone" value="@ViewBag.SearchPhone" class="form-control" placeholder="Search by phone" type="search" />
            </div>

            @* 3. Email (col-md-4) *@
            <div class="col-md-4">
                <label for="searchEmail" class="form-label">Email</label>
                <input id="searchEmail" name="searchEmail" value="@ViewBag.SearchEmail" class="form-control" placeholder="Search by email" type="search" />
            </div>

            @* Botões *@
            <div class="col-12 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Clear
                </a>
            </div>

        </form>
    </div>
</div>


@* Verificação de Itens *@
@if (!Model.Items.Any())
{
    <div class="alert alert-warning mt-4" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> No Members Found</h4>
        <p>There are no members matching your criteria. Try adjusting your search.</p>
    </div>
}
else
{
    @* Tabela de Membros *@
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Member ID</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        @* Aceder aos dados do Cliente (item.Client) *@
                        <td>@Html.DisplayFor(modelItem => item.Client.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.MemberId)</td>

                        <td class="text-end">
                            <div class="btn-group" role="group">
                                @* O ID aqui é o item.MemberId *@
                                <a asp-action="Edit" asp-route-id="@item.MemberId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MemberId" class="btn btn-sm btn-info">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MemberId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Secção de Paginação (sem o searchMember) *@
    <nav aria-label="Member pages" class="mt-3">
        <ul class="pagination">

            @* Botão "First" *@
            @if (Model.CurrentPage == 1)
            {
                <li class="page-item disabled"><a class="page-link">First</a></li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-searchName="@ViewBag.SearchName"
                       asp-route-searchPhone="@ViewBag.SearchPhone"
                       asp-route-searchEmail="@ViewBag.SearchEmail">First</a>
                </li>
            }

            @* Links das Páginas (ex: 1, 2, 3) *@
            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
            {
                if (p == Model.CurrentPage)
                {
                    <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@p"
                           asp-route-searchName="@ViewBag.SearchName"
                           asp-route-searchPhone="@ViewBag.SearchPhone"
                           asp-route-searchEmail="@ViewBag.SearchEmail">@p</a>
                    </li>
                }
            }

            @* Botão "Last" *@
            @if (Model.CurrentPage == Model.TotalPages)
            {
                <li class="page-item disabled"><a class="page-link">Last</a></li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages"
                       asp-route-searchName="@ViewBag.SearchName"
                       asp-route-searchPhone="@ViewBag.SearchPhone"
                       asp-route-searchEmail="@ViewBag.SearchEmail">Last</a>
                </li>
            }
        </ul>
    </nav>
}