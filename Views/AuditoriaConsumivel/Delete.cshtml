@model HealthWellbeing.Models.AuditoriaConsumivel

@{
    ViewData["Title"] = "Apagar Auditoria";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 40px auto;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background-color: #dc3545; /* vermelho bootstrap */
        color: white;
        font-weight: 600;
        font-size: 1.25rem;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-body dt {
        font-weight: 500;
    }

    .btn-spacing {
        margin-right: 10px;
    }
</style>

<div class="delete-container">
    <div class="card">
        <div class="card-header">
            ⚠️ Apagar Auditoria
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Sala</dt>
                <dd class="col-sm-8">@Model.Sala?.TipoSala</dd>

                <dt class="col-sm-4">Consumível</dt>
                <dd class="col-sm-8">@Model.Consumivel?.Nome</dd>

                <dt class="col-sm-4">Quantidade Usada</dt>
                <dd class="col-sm-8">@Model.QuantidadeUsada</dd>

                <dt class="col-sm-4">Data Consumo</dt>
                <dd class="col-sm-8">@Model.DataConsumo.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="AuditoriaConsumivelId" />
                <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-danger btn-spacing">
                        <i class="bi bi-trash me-1"></i> Apagar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
