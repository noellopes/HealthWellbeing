@using HealthWellbeing.Models
@using HealthWellbeing.ViewModels
@model PaginationInfo<AuditoriaConsumivel>

@{
    ViewData["Title"] = "Auditorias de Consumíveis";
    var successMessage = TempData["SuccessMessage"];
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (successMessage != null)
{
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

@if (Model.Items == null || !Model.Items.Any())
{
    <div class="alert alert-warning d-flex align-items-center border-2" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">Nenhuma Auditoria Encontrada</h4>
            <p>Não existem auditorias registadas.</p>
        </div>
    </div>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Criar Auditoria
    </a>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Lista de Auditorias</h2>
        <div class="d-flex justify-content-end">
            <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#auditSearch" aria-expanded="false" aria-controls="auditSearch">
                <i class="bi bi-search me-1"></i> Pesquisar
            </a>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Criar Auditoria
            </a>
        </div>
    </div>

    <div class="collapse mt-2 mb-2" id="auditSearch">
        <div class="card card-body">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">
                <div class="col-md-6">
                    <label for="searchConsumivel" class="form-label">Consumível</label>
                    <input id="searchConsumivel" name="searchConsumivel" value="@ViewBag.SearchConsumivel" class="form-control" placeholder="Pesquisar por consumível" type="search" />
                </div>

                <div class="col-12 mt-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i> Pesquisar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Consumível</th>
                    <th>Sala</th>
                    <th>Quantidade Usada</th>
                    <th>Data Consumo</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Consumivel?.Nome</td>
                        <td>@item.Sala?.TipoSala</td>
                        <td>@item.QuantidadeUsada</td>
                        <td>@item.DataConsumo.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.AuditoriaConsumivelId" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.AuditoriaConsumivelId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Apagar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Auditorias page">
            <ul class="pagination">
                @if (Model.CurrentPage == 1)
                {
                    <li class="page-item disabled"><a class="page-link">Primeira</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index">Primeira</a></li>
                }

                @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                {
                    if (p == Model.CurrentPage)
                    {
                        <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@p">@p</a></li>
                    }
                }

                @if (Model.CurrentPage == Model.TotalPages)
                {
                    <li class="page-item disabled"><a class="page-link">Última</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages">Última</a></li>
                }
            </ul>
        </nav>
    </div>
}
