@model IEnumerable<HealthWellbeing.Models.MentalHealthProfessional>

@{
    ViewData["Title"] = "Mental Health Professionals";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-people"></i> Mental Health Professionals</h1>
            <p class="mb-0">Manage therapists, psychiatrists, and counselors</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-light btn-lg">
                <i class="bi bi-plus-circle"></i> Add Professional
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <h5 class="card-title mb-0">All Professionals (@Model.Count())</h5>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Specialization</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>License #</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.FirstName @item.LastName</strong>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@item.Type</span>
                                </td>
                                <td>
                                    @if (item.Specialization != null)
                                    {
                                        <small>@item.Specialization</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>@item.Email</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Phone))
                                    {
                                        @item.Phone
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.LicenseNumber))
                                    {
                                        <small>@item.LicenseNumber</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge status-active">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge status-inactive">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.ProfessionalId" class="btn btn-sm btn-info" title="View">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.ProfessionalId" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ProfessionalId" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <h5 class="alert-heading">No professionals found</h5>
                <p>Add mental health professionals to the system.</p>
                <hr>
                <a asp-action="Create" class="btn btn-primary">Add First Professional</a>
            </div>
        }
    </div>
</div>