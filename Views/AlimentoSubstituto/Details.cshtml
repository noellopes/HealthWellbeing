@model HealthWellbeing.Models.AlimentoSubstituto
@using Microsoft.AspNetCore.Authorization

@{
    ViewData["Title"] = "Detalhes";
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-@(TempData["AlertType"] ?? "info") alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (User.IsInRole("Cliente"))
{
    <div class="alert alert-info">
        Você está visualizando os detalhes como um <strong>Cliente</strong>. Apenas nutricionistas podem editar ou excluir este item.
    </div>
}

<!-- Cabeçalho padronizado -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Detalhes do Alimento Substituto</h1>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>

<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Informações</h5>

                <dl class="row">
                    <dt class="col-sm-4">Alimento Original</dt>
                    <dd class="col-sm-8">
                        @(Model?.AlimentoOriginal?.Name ?? "-")
                    </dd>

                    <dt class="col-sm-4">Alimento Substituto</dt>
                    <dd class="col-sm-8">
                        @(Model?.AlimentoSubstitutoRef?.Name ?? "-")
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Motivo)</dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Motivo)
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProporcaoEquivalente)</dt>
                    <dd class="col-sm-8">
                        @(Model?.ProporcaoEquivalente.HasValue == true
                                                ? Model.ProporcaoEquivalente.Value.ToString("0.##")
                                                : "-")
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Observacoes)</dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Observacoes)
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FatorSimilaridade)</dt>
                    <dd class="col-sm-8">
                        @(Model?.FatorSimilaridade.HasValue == true
                                                ? string.Format("{0:P0}", Model.FatorSimilaridade)
                                                : "-")
                    </dd>
                </dl>

                @if (User.IsInRole("Nutricionista"))
                {
                    <div class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@Model.AlimentoSubstitutoId" class="btn btn-primary me-2">Editar</a>
                        <a asp-action="Delete" asp-route-id="@Model.AlimentoSubstitutoId" class="btn btn-danger">Apagar</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
