@model IEnumerable<HealthWellbeing.Models.AlimentoSubstituto>

@{
    ViewData["Title"] = "Index";
    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var totalCount = (int)(ViewBag.TotalCount ?? 0);


    var startItem = (int)(ViewBag.StartItem ?? (totalCount == 0 ? 0 : 1));
    var endItem = (int)(ViewBag.EndItem ?? (startItem == 0 ? 0 : startItem + Model.GroupBy(m =>
    m.AlimentoOriginal?.Name).Count() - 1));


    var searchOriginal = (string)ViewBag.SearchOriginalName ?? string.Empty;
    var searchSubstituto = (string)ViewBag.SearchSubstitutoName ?? string.Empty;
    var searchFactorOp = (string)ViewBag.SearchFactorOp ?? "gt";
    var searchFactorValueObj = ViewBag.SearchFactorValue;
    decimal? searchFactorValue = searchFactorValueObj != null ? (decimal?)searchFactorValueObj : null;
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-@(TempData["AlertType"] ?? "info") alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Alimento Substituto</h1>
    <div class="d-flex">

        <a class="btn btn-outline-secondary me-2" data-bs-toggle="collapse" href="#searchPanel" role="button"
            aria-expanded="false" aria-controls="searchPanel">
            Pesquisar
        </a>
        @if (User.IsInRole("Nutricionista"))
        {
            <a class="btn btn-primary" asp-action="Create">Novo</a>
        }
    </div>
</div>


<div class="collapse mt-2 mb-3" id="searchPanel">
    <div class="card card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="originalName" class="form-label">Alimento Original</label>
                <input type="search" id="originalName" name="originalName" class="form-control"
                    value="@(searchOriginal)" placeholder="Nome do alimento original" />
            </div>

            <div class="col-md-4">
                <label for="substitutoName" class="form-label">Alimento Substituto</label>
                <input type="search" id="substitutoName" name="substitutoName" class="form-control"
                    value="@(searchSubstituto)" placeholder="Nome do alimento substituto" />
            </div>

            <div class="col-md-2">
                <label for="factorOp" class="form-label">Comparador</label>
                <select class="form-select" id="factorOp" name="factorOp">

                    @if (searchFactorOp == "gt")
                    {
                        <option value="gt" selected>Maior que</option>
                    }
                    else
                    {
                        <option value="gt">Maior que</option>
                    }

                    @if (searchFactorOp == "eq")
                    {
                        <option value="eq" selected>Igual a</option>
                    }
                    else
                    {
                        <option value="eq">Igual a</option>
                    }

                    @if (searchFactorOp == "lt")
                    {
                        <option value="lt" selected>Menor que</option>
                    }
                    else
                    {
                        <option value="lt">Menor que</option>
                    }
                </select>
            </div>

            <div class="col-md-2">
                <label for="factorValue" class="form-label">Valor (0 a 1)</label>
                <input type="number" step="0.01" min="0" max="1" class="form-control" id="factorValue"
                    name="factorValue"
                    value="@(searchFactorValue.HasValue? searchFactorValue.Value.ToString("0.##") : "")"
                    placeholder="ex: 0.5" />
            </div>

            <div class="col-12 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Pesquisar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>

<div class="mb-2 text-muted d-flex justify-content-between align-items-center">
    <small>Mostrando <strong>@startItem</strong> a <strong>@endItem</strong> de <strong>@totalCount</strong> alimentos
        originais</small>
    <div>
        <button id="expandAllBtn" class="btn btn-sm btn-outline-secondary me-1">Expandir Tudo</button>
        <button id="collapseAllBtn" class="btn btn-sm btn-outline-secondary">Fechar Tudo</button>
    </div>
</div>


@{
    var groups = Model
    .GroupBy(m => (m.AlimentoOriginal != null ? m.AlimentoOriginal.Name : "(Sem Nome)"))
    .OrderBy(g => g.Key)
    .ToList();
    int groupIndex = 0;
}

@if (!groups.Any())
{
    <div class="alert alert-light">Nenhum registro encontrado.</div>
}
else
{
    <div class="accordion" id="originalsAccordion">
        @foreach (var group in groups)
        {
            var safeId = $"group-{groupIndex}";
            <div class="card mb-3 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center" role="button"
                    data-bs-toggle="collapse" data-bs-target="#@safeId" aria-expanded="false" aria-controls="@safeId"
                    style="cursor:pointer;">
                    <div>
                        <strong>@group.Key</strong>
                        <span class="badge bg-primary ms-2">@group.Count()</span>
                        <div class="text-muted small">@string.Join(" • ", group.Select(g => g.AlimentoSubstitutoRef?.Name ??
                                                "-").Take(3))@(group.Count() > 3 ? "…" : "")</div>
            </div>
            <div class="text-end">
                <small class="text-muted">Clique para ver substitutos</small>
            </div>
        </div>

                <div id="@safeId" class="collapse group-collapse" data-parent="#originalsAccordion">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Substituto</th>
                                        <th>Motivo</th>
                                        <th>Proporção</th>
                                        <th>Similaridade</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                            @foreach (var item in group.OrderBy(i => i.AlimentoSubstitutoRef!.Name))
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.AlimentoSubstitutoRef.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Motivo)</td>
                                            <td>@(item.ProporcaoEquivalente.HasValue ?
                                                                        item.ProporcaoEquivalente.Value.ToString("0.##") : "-")</td>
                                            <td>@(item.FatorSimilaridade.HasValue ? string.Format("{0:P0}", item.FatorSimilaridade)
                                                                                    : "-")</td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.AlimentoSubstitutoId"
                                                        class="btn btn-sm btn-secondary ms-1">Ver</a>
                                                    @if (User.IsInRole("Nutricionista"))
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@item.AlimentoSubstitutoId"
                                                        class="btn btn-sm btn-warning ms-1">Editar</a>
                                                        <a asp-action="Delete" asp-route-id="@item.AlimentoSubstitutoId"
                                                        class="btn btn-sm btn-danger ms-1">Apagar</a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            groupIndex++;
        }
    </div>
}

@if (totalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)"
                    asp-route-originalName="@(searchOriginal)" asp-route-substitutoName="@(searchSubstituto)"
                    asp-route-factorOp="@(searchFactorOp)" asp-route-factorValue="@(searchFactorValue)">« Anterior</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")" aria-current="@(i == currentPage ? "page" : null)">
                    <a class="page-link" asp-action="Index" asp-route-page="@(i)" asp-route-originalName="@(searchOriginal)"
                        asp-route-substitutoName="@(searchSubstituto)" asp-route-factorOp="@(searchFactorOp)"
                        asp-route-factorValue="@(searchFactorValue)">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)"
                    asp-route-originalName="@(searchOriginal)" asp-route-substitutoName="@(searchSubstituto)"
                    asp-route-factorOp="@(searchFactorOp)" asp-route-factorValue="@(searchFactorValue)">Próximo »</a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            var expandBtn = document.getElementById('expandAllBtn');
            var collapseBtn = document.getElementById('collapseAllBtn');

            expandBtn && expandBtn.addEventListener('click', function () {
                document.querySelectorAll('.group-collapse').forEach(function (el) {
                    if (!el.classList.contains('show')) {
                        var bs = new bootstrap.Collapse(el, { toggle: true });
                        bs.show && bs.show();
                    }
                });
            });

            collapseBtn && collapseBtn.addEventListener('click', function () {
                document.querySelectorAll('.group-collapse').forEach(function (el) {
                    if (el.classList.contains('show')) {
                        var bs = new bootstrap.Collapse(el, { toggle: true });
                        bs.hide && bs.hide();
                    }
                });
            });
        })();
    </script>
}