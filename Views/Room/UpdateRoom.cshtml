@model Room
@{
    ViewData["Title"] = "Atualizar Sala";
}

<h2>Atualizar Sala</h2>

@using (Html.BeginForm("UpdateRoom", "Room", FormMethod.Post))
{
    @Html.HiddenFor(m => m.RoomId)

    <div class="mb-3">
        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Capacity, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Capacity, new { @class = "form-control", type = "number", min = "0" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Specialty, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Specialty, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Location, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Notes, new { @class = "form-label" })
        @Html.TextAreaFor(m => m.Notes, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-check mb-3">
        @Html.LabelFor(m => m.Status, new { @class = "form-check-input" })
        @Html.TextBoxFor(m => m.Status, new { @class = "form-check-label" })
    </div>

    <div class="d-flex gap-2 mt-3">
        <a asp-action="ReadRoom" asp-controller="Room" class="btn btn-secondary flex-fill">Cancelar</a>
        <button type="submit" class="btn btn-success flex-fill">Salvar</button>
    </div>

}