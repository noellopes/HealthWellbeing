@model Room
@{
    ViewData["Title"] = "Atualizar Sala";
}

<h2>Atualizar Sala</h2>

@using (Html.BeginForm("UpdateRoom", "Room", FormMethod.Post))
{
    @Html.HiddenFor(m => m.SalaId)

    <div class="mb-3">
        @Html.LabelFor(m => m.Nome, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Capacidade, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Capacidade, new { @class = "form-control", type = "number", min = "0" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Especialidade, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Especialidade, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Localizacao, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Localizacao, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Observacoes, new { @class = "form-label" })
        @Html.TextAreaFor(m => m.Observacoes, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-check mb-3">
        @Html.CheckBoxFor(m => m.Disponibilidade, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.Disponibilidade, new { @class = "form-check-label" })
    </div>

    <div class="d-flex gap-2 mt-3">
        <a asp-action="ReadRoom" asp-controller="Room" class="btn btn-secondary flex-fill">Cancelar</a>
        <button type="submit" class="btn btn-success flex-fill">Salvar</button>
    </div>

}