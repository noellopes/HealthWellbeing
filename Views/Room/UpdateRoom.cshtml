@model Room
@{
    ViewData["Title"] = "Atualizar Sala";
}



@using (Html.BeginForm("Editar", "Salas", FormMethod.Post))
{
    @Html.HiddenFor(m => m.SalaId)
    <div>
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome)
    </div>
    <!-- Adiciona os outros campos aqui -->
    <button type="submit" class="btn btn-success">Salvar</button>
}