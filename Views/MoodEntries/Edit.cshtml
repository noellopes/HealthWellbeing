@model HealthWellbeing.Models.MoodEntry

@{
    ViewData["Title"] = "Edit Mood Entry";
}

<div class="container py-4">
    <div class="page-header mb-4">
        <h1><i class="bi bi-pencil"></i> Edit Mood Entry</h1>
        <p class="text-muted">Update mood tracking information</p>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Mood Entry Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MoodEntryId" />

                        <div class="mb-3">
                            <label asp-for="PatientId" class="form-label"></label>
                            <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EntryDateTime" class="form-label"></label>
                            <input asp-for="EntryDateTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="EntryDateTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MoodScore" class="form-label"></label>
                            <input asp-for="MoodScore" class="form-control" type="number" min="1" max="10" />
                            <span asp-validation-for="MoodScore" class="text-danger"></span>
                            <small class="form-text text-muted">Rate mood from 1 (very low) to 10 (very high)</small>
                            <div class="mt-2">
                                <span class="badge bg-danger">1-4: Low</span>
                                <span class="badge bg-warning">5-7: Medium</span>
                                <span class="badge bg-success">8-10: High</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Emotion" class="form-label"></label>
                            <input asp-for="Emotion" class="form-control" />
                            <span asp-validation-for="Emotion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.MoodEntryId" class="btn btn-info">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-info-circle"></i> Current Entry</h5>
                    <dl class="mb-0">
                        <dt>Entry ID</dt>
                        <dd>@Model.MoodEntryId</dd>

                        <dt>Patient</dt>
                        <dd>@Model.Patient?.FullName</dd>

                        <dt>Current Mood Score</dt>
                        <dd>
                            @{
                                var moodClass = Model.MoodScore >= 8 ? "bg-success" :
                                Model.MoodScore >= 5 ? "bg-warning" : "bg-danger";
                            }
                            <span class="badge @moodClass">@Model.MoodScore / 10</span>
                        </dd>

                        <dt>Entry Date</dt>
                        <dd>@Model.EntryDateTime.ToString("MMM dd, yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}