@model IEnumerable<HealthWellbeing.Models.MoodEntry>

@{
    ViewData["Title"] = "Mood Tracking";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Mood Tracking</h2>
            <p class="text-muted mb-0">Monitor patient emotional wellbeing over time</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Mood Entry
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body">
                    <h2 class="text-primary mb-2">@Model.Count()</h2>
                    <p class="text-muted mb-0">Total Entries</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <h2 class="mb-2">@Model.Count(m => m.MoodScore >= 8)</h2>
                    <p class="mb-0">High Mood (8-10)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm bg-warning text-white">
                <div class="card-body">
                    <h2 class="mb-2">@Model.Count(m => m.MoodScore >= 5 && m.MoodScore < 8)</h2>
                    <p class="mb-0">Medium Mood (5-7)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm bg-danger text-white">
                <div class="card-body">
                    <h2 class="mb-2">@Model.Count(m => m.MoodScore < 5)</h2>
                    <p class="mb-0">Low Mood (1-4)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Table Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="d-flex justify-content-between align-items-center p-3 bg-light border-bottom">
                <h5 class="mb-0">Recent Entries (@Model.Count())</h5>
                <input type="text" id="searchInput" class="form-control" placeholder="🔍 Search entries..." style="max-width: 300px;">
            </div>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="moodTable">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 ps-4">Date & Time</th>
                                <th class="border-0">Patient</th>
                                <th class="border-0">Mood Score</th>
                                <th class="border-0">Emotion</th>
                                <th class="border-0">Notes</th>
                                <th class="border-0">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(m => m.EntryDateTime))
                            {
                                <tr>
                                    <td class="ps-4">
                                        <strong>@item.EntryDateTime.ToString("MMM dd, yyyy")</strong><br>
                                        <small class="text-muted">@item.EntryDateTime.ToString("HH:mm")</small>
                                    </td>
                                    <td><strong>@(item.Patient?.FullName ?? "Unknown")</strong></td>
                                    <td>
                                        @{
                                            var moodClass = item.MoodScore >= 8 ? "bg-success" :
                                            item.MoodScore >= 5 ? "bg-warning" : "bg-danger";
                                        }
                                        <span class="badge @moodClass">@item.MoodScore/10</span>
                                    </td>
                                    <td>
                                        @if (item.Emotion != null)
                                        {
                                            <span class="badge bg-info">@item.Emotion.ToString()</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-muted">
                                        @if (!string.IsNullOrEmpty(item.Notes))
                                        {
                                            var displayNotes = item.Notes.Length > 40 ? item.Notes.Substring(0, 40) + "..." : item.Notes;
                                            <small>@displayNotes</small>
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.MoodEntryId" class="btn btn-sm btn-info me-1">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.MoodEntryId" class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MoodEntryId" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="p-3 bg-light border-top">
                    <small class="text-muted"><i class="bi bi-info-circle"></i> Total: <strong>@Model.Count()</strong> mood entries</small>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-emoji-neutral" style="font-size: 4rem; color: #dee2e6;"></i>
                    <h5 class="mt-3 text-muted">No mood entries found</h5>
                    <p class="text-muted">Start tracking patient moods to monitor their emotional wellbeing.</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Add First Entry
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('keyup', function() {
            var searchText = this.value.toLowerCase();
            var tableRows = document.querySelectorAll('#moodTable tbody tr');
            tableRows.forEach(function(row) {
                var text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchText) ? '' : 'none';
            });
        });
    </script>
}