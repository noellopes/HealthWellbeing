@model IEnumerable<HealthWellbeing.Models.FoodNutrient>
@{
    ViewData["Title"] = "Food Nutrients";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <label class="form-label">Filter by food</label>
        <select name="foodId" class="form-select" asp-items="ViewBag.FoodId">
            <option value="">-- All foods --</option>
        </select>
    </div>
    <div class="col-auto align-self-end">
        <button class="btn btn-outline-primary" type="submit">Filter</button>
        <a class="btn btn-primary" asp-action="Create">Add Nutrient to Food</a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">No nutrient values found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Food</th>
                <th>Nutrient</th>
                <th>Value</th>
                <th>Unit</th>
                <th>Basis</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td>@row.Food?.Name</td>
                    <td>@row.NutrientComponent?.Name</td>
                    <td>@row.Value</td>
                    <td>@row.Unit</td>
                    <td>@row.Basis</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@row.FoodNutrientId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@row.FoodNutrientId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
