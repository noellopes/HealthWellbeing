@model HealthWellbeing.Models.FoodNutrient
@{
    ViewData["Title"] = "Add Nutrient to Food";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-warning"></div>

    <div class="mb-3">
        <label asp-for="FoodId" class="form-label">Food</label>
        <select asp-for="FoodId" class="form-select" asp-items="ViewBag.FoodId"></select>
        <span asp-validation-for="FoodId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NutrientComponentId" class="form-label">Nutrient</label>
        <select asp-for="NutrientComponentId" class="form-select" asp-items="ViewBag.NutrientComponentId"></select>
        <span asp-validation-for="NutrientComponentId" class="text-danger"></span>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Value" class="form-label"></label>
            <input asp-for="Value" class="form-control" />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Unit" class="form-label"></label>
            <input asp-for="Unit" class="form-control" placeholder="g, mg, kcal..." />
            <span asp-validation-for="Unit" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Basis" class="form-label"></label>
            <input asp-for="Basis" class="form-control" placeholder="per100g, perServing..." />
            <span asp-validation-for="Basis" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Add</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
