@model HealthWellbeing.Models.FoodNutrient
@{
    ViewData["Title"] = "Food Nutrient Details";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}
<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<dl class="row">
    <dt class="col-sm-3">Food</dt>
    <dd class="col-sm-9">@Model.Food?.Name</dd>

    <dt class="col-sm-3">Nutrient</dt>
    <dd class="col-sm-9">@Model.NutrientComponent?.Name</dd>

    <dt class="col-sm-3">Value</dt>
    <dd class="col-sm-9">@Model.Value</dd>

    <dt class="col-sm-3">Unit</dt>
    <dd class="col-sm-9">@Model.Unit</dd>

    <dt class="col-sm-3">Basis</dt>
    <dd class="col-sm-9">@Model.Basis</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.FoodNutrientId">Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index" asp-route-foodId="@Model.FoodId">Back</a>
</div>
