@model HealthWellbeing.Models.TipoTreino

@{
    ViewData["Title"] = "Detalhes do Tipo de Treino";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <p class="card-text"><strong>Descrição:</strong> @Model.Descricao</p>
        <p class="card-text"><strong>Duração:</strong> @Model.DuracaoMinutos minutos</p>
        <p class="card-text"><strong>Intensidade:</strong> @Model.Intensidade</p>
        <p class="card-text"><strong>Ativo:</strong> @(Model.Ativo ? "Sim" : "Não")</p>
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.TipoTreinoId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>
