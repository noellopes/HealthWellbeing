@model HealthWellbeing.Models.TipoTreino

@{
    ViewData["Title"] = "Editar Tipo de Treino";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TipoTreinoId" />

    <div class="form-group mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DuracaoMinutos"></label>
        <input asp-for="DuracaoMinutos" class="form-control" />
        <span asp-validation-for="DuracaoMinutos" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Intensidade"></label>
        <input asp-for="Intensidade" class="form-control" />
        <span asp-validation-for="Intensidade" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Ativo" class="form-check-input" />
        <label asp-for="Ativo" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

