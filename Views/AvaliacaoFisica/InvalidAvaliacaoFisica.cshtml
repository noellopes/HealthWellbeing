@model HealthWellbeing.Models.AvaliacaoFisica

@{
    ViewData["Title"] = "Avaliação Não Encontrada";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card border-0 shadow-sm text-center p-5 mb-4">
                <div class="mb-4 text-danger">
                    <i class="bi bi-exclamation-octagon display-1"></i>
                </div>
                <h2 class="h3 fw-bold text-danger mb-3">Registo Inválido ou Removido</h2>
                <p class="text-muted mb-0">
                    A Avaliação Física que estava a tentar editar ou visualizar já não existe na base de dados.
                    É muito provável que tenha sido eliminada por outro utilizador.
                </p>
            </div>

            @if (Model != null)
            {
                <div class="card border-0 shadow-sm border-start border-4 border-info">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div>
                                <h5 class="fw-bold mb-0">Recuperação de Dados</h5>
                                <small class="text-muted">Evite perder o seu trabalho</small>
                            </div>
                        </div>

                        <p class="text-muted mb-4">
                            Ainda temos os dados que acabou de preencher em memória.
                            Pode optar por salvar estes dados como uma <strong>NOVA avaliação</strong>.
                        </p>

                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()

                            <input type="hidden" asp-for="UtenteGrupo7Id" />
                            <input type="hidden" asp-for="DataMedicao" />
                            <input type="hidden" asp-for="Peso" />
                            <input type="hidden" asp-for="Altura" />
                            <input type="hidden" asp-for="GorduraCorporal" />
                            <input type="hidden" asp-for="MassaMuscular" />
                            <input type="hidden" asp-for="Pescoco" />
                            <input type="hidden" asp-for="Ombros" />
                            <input type="hidden" asp-for="Peitoral" />
                            <input type="hidden" asp-for="BracoDireito" />
                            <input type="hidden" asp-for="BracoEsquerdo" />
                            <input type="hidden" asp-for="Cintura" />
                            <input type="hidden" asp-for="Abdomen" />
                            <input type="hidden" asp-for="Anca" />
                            <input type="hidden" asp-for="CoxaDireita" />
                            <input type="hidden" asp-for="CoxaEsquerda" />
                            <input type="hidden" asp-for="GemeoDireito" />
                            <input type="hidden" asp-for="GemeoEsquerdo" />

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-success flex-grow-1">
                                    <i class="bi bi-save me-1"></i> Salvar como Nova Avaliação
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center">
                    <a asp-action="Index" class="btn btn-secondary px-5">
                        <i class="bi bi-arrow-left me-2"></i> Voltar à Lista
                    </a>
                </div>
            }

        </div>
    </div>
</div>