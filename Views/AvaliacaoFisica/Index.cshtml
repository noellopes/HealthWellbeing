@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.AvaliacaoFisica>

@{
    ViewData["Title"] = "Histórico de Avaliações";
    bool isStaff = User.IsInRole("Administrador") || User.IsInRole("ProfissionalSaude");
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-primary">
                <i class="bi bi-clipboard-data me-2"></i>Avaliações Físicas
            </h1>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#searchForm">
                <i class="bi bi-search"></i> Pesquisar
            </button>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Nova Avaliação
            </a>
        </div>
    </div>

    <div class="collapse mb-4" id="searchForm">
        <div class="card border-0 shadow-sm bg-light">
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-3 align-items-end">
                    @if (isStaff)
                    {
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Nome do Utente</label>
                            <input type="text" name="searchUtente" value="@ViewBag.SearchUtente" class="form-control" placeholder="Procurar nome..." />
                        </div>
                    }

                    <div class="col-md-3">
                        <label class="form-label fw-bold">Data Início</label>
                        <input type="date" name="dataInicio" value="@ViewBag.DataInicio" class="form-control" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold">Data Fim</label>
                        <input type="date" name="dataFim" value="@ViewBag.DataFim" class="form-control" />
                    </div>

                    <div class="col-md-2">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
                            <a asp-action="Index" class="btn btn-outline-secondary w-100">Limpar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (!Model.Items.Any())
            {
                <div class="alert alert-info m-3 text-center">
                    <i class="bi bi-info-circle me-2"></i> Nenhuma avaliação encontrada.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4 py-3">Utente</th>
                                <th class="py-3">Data</th>
                                <th class="py-3">Peso</th>
                                <th class="py-3">Altura</th>
                                <th class="py-3 text-end pe-4">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">
                                        @Html.DisplayFor(modelItem => item.UtenteGrupo7.Nome)
                                    </td>
                                    <td>
                                        @item.DataMedicao.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@item.Peso kg</span>
                                    </td>
                                    <td>@item.Altura cm</td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Details" asp-route-id="@item.AvaliacaoFisicaId" class="btn btn-sm btn-info text-white me-1" title="Detalhes">
                                            <i class="bi bi-eye"></i>Detalhes
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.AvaliacaoFisicaId" class="btn btn-sm btn-warning me-1" title="Editar">
                                            <i class="bi bi-pencil"></i>Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.AvaliacaoFisicaId" class="btn btn-sm btn-danger" title="Apagar">
                                            <i class="bi bi-trash"></i>Apagar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        @if (Model.Items.Any())
        {
            <div class="card-footer bg-white py-3">
                <nav>
                    <ul class="pagination justify-content-center mb-0">
                        @{
                            var routeData = new Dictionary<string, string>
                                        {
                                        { "searchUtente", ViewBag.SearchUtente },
                                        { "dataInicio", ViewBag.DataInicio },
                                        { "dataFim", ViewBag.DataFim }
                                        };
                        }

                        @if (Model.CurrentPage > 1)
                        {
                            routeData["page"] = (Model.CurrentPage - 1).ToString();
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-all-route-data="routeData">Anterior</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Anterior</span>
                            </li>
                        }

                        @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                        {
                            if (p == Model.CurrentPage)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@p</span>
                                </li>
                            }
                            else
                            {
                                routeData["page"] = p.ToString();
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-all-route-data="routeData">@p</a>
                                </li>
                            }
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            routeData["page"] = (Model.CurrentPage + 1).ToString();
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-all-route-data="routeData">Próxima</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Próxima</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>