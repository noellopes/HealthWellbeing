@model HealthWellbeing.Models.AvaliacaoFisica

@{
    ViewData["Title"] = "Apagar Avaliação";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="alert alert-danger d-flex align-items-center shadow-sm" role="alert">
                <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-3 fs-3"></i>
                <div>
                    <strong>Atenção!</strong> Tem a certeza que pretende eliminar esta avaliação?
                    <div class="small">Esta ação é irreversível.</div>
                </div>
            </div>

            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash3 me-2"></i>Eliminar Registo</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-end">Utente:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.UtenteGrupo7.Nome</dd>

                        <dt class="col-sm-4 text-end">Data:</dt>
                        <dd class="col-sm-8">@Model.DataMedicao.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4 text-end">Peso:</dt>
                        <dd class="col-sm-8">@Model.Peso kg</dd>
                    </dl>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="AvaliacaoFisicaId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Confirmar Eliminação
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>