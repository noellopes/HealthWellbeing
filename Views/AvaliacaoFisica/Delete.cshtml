@model HealthWellbeing.Models.AvaliacaoFisica

@{
    ViewData["Title"] = "Apagar Avaliação";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card border-0 shadow-sm">
                <div class="card-body p-5 text-center">

                    <div class="mb-4 text-danger">
                        <i class="bi bi-exclamation-circle display-1"></i>
                    </div>

                    <h2 class="h3 mb-3 fw-bold text-danger">Eliminar Avaliação?</h2>
                    <p class="text-muted mb-4">
                        Tem a certeza que pretende eliminar a avaliação de
                        <strong class="text-dark">@Model.UtenteGrupo7.Nome</strong> realizada a
                        <strong>@Model.DataMedicao.ToString("dd/MM/yyyy")</strong>?
                        <br>Esta ação não pode ser revertida.
                    </p>

                    <div class="bg-light p-3 rounded mb-4 text-start small border">
                        <div class="row">
                            <div class="col-6 text-muted">Peso:</div>
                            <div class="col-6 fw-bold text-dark text-end">@Model.Peso kg</div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6 text-muted">Data da Criação:</div>
                            <div class="col-6 fw-bold text-dark text-end">@Model.DataMedicao.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            Cancelar
                        </a>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="AvaliacaoFisicaId" />
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash-fill me-1"></i> Confirmar
                            </button>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>