@model HealthWellbeing.Models.Compra
@using HealthWellbeing.Models

@{
    ViewData["Title"] = "Nova Compra";
    var consumiveis = ViewBag.Consumiveis as List<Consumivel> ?? new List<Consumivel>();
}

<div class="container mt-4">

    <h2 class="fw-bold text-primary mb-4">
        📦 Nova Compra
    </h2>

    @if (!consumiveis.Any())
    {
        <div class="alert alert-warning">
            Não existem consumíveis registados no sistema.
        </div>
    }
    else
    {
        <form asp-action="SubmeterCompra" method="post">

            <div class="card shadow-sm">
                <div class="card-body">

                    <!-- CONSUMÍVEL -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Consumível</label>
                        <select asp-for="ConsumivelId"
                                id="consumivelSelect"
                                class="form-select"
                                required>
                            <option value="">-- Selecionar Consumível --</option>

                            @foreach (var c in consumiveis)
                            {
                                <option value="@c.ConsumivelId"
                                        data-atual="@c.QuantidadeAtual"
                                        data-min="@c.QuantidadeMinima"
                                        data-max="@c.QuantidadeMaxima">
                                    @c.Nome
                                </option>
                            }
                        </select>

                        <span asp-validation-for="ConsumivelId"
                              class="text-danger"></span>
                    </div>

                    <!-- QUANTIDADES -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label class="form-label">Quantidade Atual</label>
                            <input id="qtdAtual" class="form-control" disabled />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Quantidade Mínima</label>
                            <input id="qtdMin" class="form-control" disabled />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Quantidade Máxima</label>
                            <input id="qtdMax" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- QUANTIDADE A COMPRAR -->
                    <div class="mb-3">
                        <label class="form-label">Quantidade a Comprar</label>

                        <!-- valor enviado no POST -->
                        <input asp-for="Quantidade"
                               id="qtdComprar"
                               type="hidden" />

                        <!-- valor editável pelo utilizador -->
                        <input id="qtdComprarView"
                               type="number"
                               min="0"
                               class="form-control" />
                    </div>

                    <p id="infoCompra" class="text-muted small"></p>

                </div>
            </div>

            <div class="mt-4 text-end">
                <button type="submit"
                        class="btn btn-success px-4">
                    ✔ Continuar para Registo de Compras
                </button>
            </div>
        </form>
    }
</div>

@section Scripts {
    <script>
        const select = document.getElementById("consumivelSelect");
        const qtdAtualInput = document.getElementById("qtdAtual");
        const qtdMinInput = document.getElementById("qtdMin");
        const qtdMaxInput = document.getElementById("qtdMax");
        const qtdComprarView = document.getElementById("qtdComprarView");
        const qtdComprarHidden = document.getElementById("qtdComprar");
        const infoCompra = document.getElementById("infoCompra");

        if (select) {
            select.addEventListener("change", function () {

                const opt = select.options[select.selectedIndex];
                if (!opt || !opt.dataset) return;

                const atual = parseInt(opt.dataset.atual || 0);
                const min = parseInt(opt.dataset.min || 0);
                const max = parseInt(opt.dataset.max || 0);

                qtdAtualInput.value = atual;
                qtdMinInput.value = min;
                qtdMaxInput.value = max;

                // 🔹 sugestão automática (max - atual)
                let sugestao = 0;
                if (atual < min) {
                    sugestao = max - atual;
                }

                qtdComprarView.value = sugestao;
                qtdComprarHidden.value = sugestao;

                infoCompra.innerText =
                    sugestao > 0
                        ? "Sugestão automática baseada na diferença entre o stock atual e o máximo."
                        : "O stock encontra-se dentro dos valores normais.";
            });
        }

        // 🔹 sincroniza valor editado com o hidden
        qtdComprarView.addEventListener("input", function () {
            qtdComprarHidden.value = qtdComprarView.value;
        });
    </script>
}
