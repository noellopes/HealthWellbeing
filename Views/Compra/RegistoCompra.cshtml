@model HealthWellbeing.Models.ViewModels.RegistoCompra

@{
    ViewData["Title"] = "Registo de Encomenda";
}

<div class="container mt-4">

    <h2 class="fw-bold text-primary mb-4">
        🧾 Registo de Encomenda
    </h2>

    <p class="text-muted">
        Selecione o fornecedor para o consumível.
    </p>

    <form asp-action="ConfirmarRegisto" method="post">
        @Html.AntiForgeryToken()

        <input asp-for="ConsumivelId" type="hidden" />
        <input asp-for="Quantidade" type="hidden" />

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="card shadow-sm">
            <div class="card-body">

                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th></th>
                            <th>Fornecedor</th>
                            <th>Preço (€)</th>
                            <th>Tempo de Entrega (dias)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fc in Model.Fornecedores)
                        {
                            <tr>
                                <td>
                                    <input type="radio"
                                           name="FornecedorId"
                                           value="@fc.FornecedorId"
                                           required />
                                </td>
                                <td>@fc.Fornecedor?.NomeEmpresa</td>
                                <td>@fc.Preco</td>
                                <td>@(fc.TempoEntrega ?? 0) dias</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                ⬅ Voltar
            </a>

            <button type="submit" class="btn btn-success px-4">
                ✔ Confirmar Encomenda
            </button>
        </div>
    </form>
</div>

