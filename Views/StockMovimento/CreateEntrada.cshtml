@{
    ViewData["Title"] = "Entrada de Stock";
}

<h2>Adicionar Entrada de Stock</h2>

<form method="post">
    <input type="hidden" name="stockId" value="@ViewBag.StockId" />

    <div class="mb-3">
        <label>Quantidade a adicionar</label>
        <input class="form-control" type="number" name="quantidade" min="1" required />
    </div>

    <div class="mb-3">
        <label>Descrição (opcional)</label>
        <input class="form-control" type="text" name="descricao" />
    </div>

    <button type="submit" class="btn btn-success">Confirmar Entrada</button>
</form>

