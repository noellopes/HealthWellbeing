@model HealthWellbeing.Models.StockMovimento

@{
    ViewData["Title"] = "Detalhes da Compra";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">
            <i class="bi bi-cart-fill me-2"></i> Detalhes da Compra de Consumível
        </h4>
    </div>

    <div class="card-body">
        <dl class="row mb-0">

            <dt class="col-sm-4 fw-bold text-muted">Consumível</dt>
            <dd class="col-sm-8">
                @Model.Stock?.Consumivel?.Nome ?? "<i class='text-muted'>Não disponível</i>"
            </dd>

            <dt class="col-sm-4 fw-bold text-muted">Zona de Armazenamento</dt>
            <dd class="col-sm-8">
                @Model.Stock?.Zona?.Nome ?? "<i class='text-muted'>Não disponível</i>"
            </dd>

            <dt class="col-sm-4 fw-bold text-muted">Quantidade Comprada</dt>
            <dd class="col-sm-8">@Model.Quantidade</dd>

            <dt class="col-sm-4 fw-bold text-muted">Tipo</dt>
            <dd class="col-sm-8">@Model.Tipo</dd>

            <dt class="col-sm-4 fw-bold text-muted">Data</dt>
            <dd class="col-sm-8">@Model.Data.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4 fw-bold text-muted">Descrição</dt>
            <dd class="col-sm-8">
                @(!string.IsNullOrWhiteSpace(Model.Descricao)
                                ? Model.Descricao
                                : "<i class='text-muted'>Sem descrição</i>")
            </dd>

        </dl>
    </div>
</div>

<div class="mt-4 d-flex justify-content-end gap-2">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista
    </a>

    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="bi bi-trash me-1"></i> Eliminar Registo
    </a>
</div>
