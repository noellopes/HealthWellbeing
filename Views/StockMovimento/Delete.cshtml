@model HealthWellbeing.Models.StockMovimento
@{
    ViewData["Title"] = "Eliminar Registo";
}

<div class="container mt-4">

    <h2 class="fw-bold text-danger mb-3">🗑 Eliminar Registo de Compra</h2>

    <!-- Alerta suave -->
    <div class="alert alert-warning shadow-sm mb-4">
        <strong>Atenção:</strong> Está prestes a eliminar este registo.<br />
        Esta ação <u>não pode ser desfeita</u>.
    </div>

    <!-- Cartão leve -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light text-dark py-3" style="border-bottom: 2px solid #e6e6e6;">
            <h5 class="mb-0">🛒 Detalhes da Compra</h5>
        </div>

        <div class="card-body p-4">

            <div class="row mb-3">
                <div class="col-sm-4 fw-semibold">Consumível</div>
                <div class="col-sm-8">
                    @Model.Stock?.Consumivel?.Nome
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 fw-semibold">Zona de Armazenamento</div>
                <div class="col-sm-8">
                    @Model.Stock?.Zona?.Nome
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 fw-semibold">Quantidade Comprada</div>
                <div class="col-sm-8">
                    @Model.Quantidade
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-4 fw-semibold">Data</div>
                <div class="col-sm-8">
                    @Model.Data.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

        </div>
    </div>

    <!-- Botões -->
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-flex justify-content-end gap-3">

        <button type="submit" class="btn btn-danger px-4">
            🗑 Eliminar
        </button>

        <a asp-action="Index" class="btn btn-secondary px-4">
            ← Voltar à Lista
        </a>

    </form>

</div>
