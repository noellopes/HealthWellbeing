@model HealthWellbeing.Models.StockMovimento

@{
    ViewData["Title"] = "Eliminar Movimento";
}

<div class="container mt-4">

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <!-- Título -->
            <h2 class="fw-bold text-danger mb-3">
                🗑️ Eliminar Histórico de Compra de Consumível
            </h2>

            <p class="text-secondary mb-4">
                Tem a certeza de que deseja eliminar este movimento?
                <br />
                Esta ação <strong>não pode ser desfeita</strong>.
            </p>

            <!-- Informações do Movimento -->
            <div class="table-responsive mb-4">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="w-25">Consumível</th>
                            <td>@Model.Stock?.Consumivel?.Nome</td>
                        </tr>
                        <tr>
                            <th>Zona</th>
                            <td>@Model.Stock?.Zona?.Nome</td>
                        </tr>
                        <tr>
                            <th>Quantidade</th>
                            <td>@Model.Quantidade</td>
                        </tr>
                        <tr>
                            <th>Tipo</th>
                            <td>@Model.Tipo</td>
                        </tr>
                        <tr>
                            <th>Data</th>
                            <td>@Model.Data.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Descrição</th>
                            <td>@Model.Descricao</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Botões -->
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-danger px-4">
                        🗑️ Eliminar
                    </button>

                    <a asp-action="Index" class="btn btn-secondary px-4">
                        ❮ Voltar à Lista
                    </a>
                </div>
            </form>

        </div>
    </div>

</div>
