@model IEnumerable<HealthWellbeing.Models.StockMovimento>

@{
    ViewData["Title"] = "Compras de Consumíveis";
}

<div class="container mt-4">

    <!-- Mensagem de sucesso (quando uma compra é apagada) -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4 shadow-sm">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Cabeçalho com botões -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            📥 Histórico de Compras de Consumíveis
        </h2>

        <div>
            <a asp-controller="Stock" asp-action="Index" class="btn btn-outline-primary me-2 px-4">
                ↩ Voltar ao Stock
            </a>

            <a asp-action="CreateEntrada" class="btn btn-success px-4">
                ➕ Nova Compra
            </a>
        </div>
    </div>

    @{
        var compras = Model?.Where(m => m.Tipo == "Entrada").ToList()
        ?? new List<HealthWellbeing.Models.StockMovimento>();
    }

    @if (!compras.Any())
    {
        <!-- ALERTA QUANDO NÃO EXISTEM COMPRAS -->
        <div class="alert alert-warning text-center py-4 shadow-sm">
            <h4 class="fw-bold">Nenhuma compra registada</h4>
            <p>Ainda não existem entradas de stock registadas.</p>

            <a asp-action="CreateEntrada" class="btn btn-success px-4">
                ➕ Registar Primeira Compra
            </a>
        </div>
    }
    else
    {
        <!-- TABELA DAS COMPRAS -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped shadow-sm align-middle">
                <thead style="background-color: #e8f1ff;" class="fw-bold text-center">
                    <tr>
                        <th>Consumível</th>
                        <th>Zona</th>
                        <th>Quantidade</th>
                        <th>Data</th>
                        <th style="width:170px;">Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in compras)
                    {
                        <tr class="text-center">
                            <td>@item.Stock?.Consumivel?.Nome</td>
                            <td>@item.Stock?.Zona?.Nome</td>
                            <td>@item.Quantidade</td>
                            <td>@item.Data.ToString("dd/MM/yyyy HH:mm")</td>

                            <td>
                                <div class="d-flex justify-content-center gap-2">

                                    <a asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-info btn-sm text-white px-3">
                                        Ver
                                    </a>

                                    <a asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn btn-danger btn-sm px-3">
                                        Eliminar
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
