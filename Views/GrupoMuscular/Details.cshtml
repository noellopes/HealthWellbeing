@model HealthWellbeing.Models.GrupoMuscular

@{
    ViewData["Title"] = "Detalhes do Grupo Muscular";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary"><i class="fas fa-dumbbell"></i> @ViewData["Title"]</h2>

    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white fw-bold">
            @Model.GrupoMuscularNome
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Nome do Grupo</dt>
                <dd class="col-sm-9">@Model.GrupoMuscularNome</dd>

                <dt class="col-sm-3">Localização Corporal</dt>
                <dd class="col-sm-9">@Model.LocalizacaoCorporal</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex">
        <a asp-action="Edit" asp-route-id="@Model.GrupoMuscularId" class="btn btn-warning me-2">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar à Lista
        </a>
    </div>
</div>
