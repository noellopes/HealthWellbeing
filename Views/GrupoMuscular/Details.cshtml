@model HealthWellbeing.Models.GrupoMuscular

@{
    ViewData["Title"] = "Detalhes do Grupo Muscular";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-primary">
                <i class="bi bi-dumbbell me-2"></i>Detalhes
            </h1>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit"
               asp-route-id="@Model?.GrupoMuscularId"
               class="btn btn-warning shadow-sm text-dark">
                <i class="bi bi-pencil me-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom pt-4 ps-4 pb-3">
            <h5 class="mb-0 fw-bold text-dark">
                Informação do Grupo Muscular
            </h5>
        </div>

        <div class="card-body p-4">
            <div class="row mb-3 border-bottom pb-3">
                <div class="col-md-3 text-muted fw-bold">
                    @Html.DisplayNameFor(model => model.GrupoMuscularNome)
                </div>
                <div class="col-md-9 text-dark">
                    @Html.DisplayFor(model => model.GrupoMuscularNome)
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 text-muted fw-bold">
                    @Html.DisplayNameFor(model => model.LocalizacaoCorporal)
                </div>
                <div class="col-md-9 text-dark">
                    @Html.DisplayFor(model => model.LocalizacaoCorporal)
                </div>
            </div>
        </div>
    </div>
</div>
