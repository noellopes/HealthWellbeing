@model HealthWellbeing.Models.GrupoMuscular

@{
    ViewData["Title"] = "Editar Grupo Muscular";
}

<div class="container mt-4">
    <h2 class="mb-4 text-warning"><i class="fas fa-edit"></i> @ViewData["Title"]</h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="GrupoMuscularId" />
        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

        <div class="mb-3">
            <label asp-for="GrupoMuscularNome" class="form-label">Nome do Grupo *</label>
            <input asp-for="GrupoMuscularNome" class="form-control" />
            <span asp-validation-for="GrupoMuscularNome" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LocalizacaoCorporal" class="form-label">Localização Corporal *</label>
            <input asp-for="LocalizacaoCorporal" class="form-control" />
            <span asp-validation-for="LocalizacaoCorporal" class="text-danger small"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-warning">
                <i class="fas fa-save"></i> Guardar Alterações
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
