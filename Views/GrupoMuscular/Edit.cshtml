@model HealthWellbeing.Models.GrupoMuscular

@{
    ViewData["Title"] = "Editar Grupo Muscular";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-warning text-dark">
                <i class="bi bi-pencil-square me-2"></i>Editar Grupo Muscular
            </h1>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    @* ALERT IGUAL AO BENEFÍCIO *@
    @if (ViewData["StatusMessage"] is string statusMessage)
    {
        string alertClass = "alert-info";
        if (statusMessage.StartsWith("Erro:", StringComparison.OrdinalIgnoreCase))
        {
            alertClass = "alert-danger";
        }

        <div class="alert @alertClass alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
            @statusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-4 ps-4">
                    <h5 class="text-warning text-dark fw-bold mb-0">
                        Dados do Grupo Muscular
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="GrupoMuscularId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="GrupoMuscularNome"
                                   class="form-label fw-bold text-muted small text-uppercase">
                                Nome do Grupo Muscular
                            </label>
                            <input asp-for="GrupoMuscularNome" class="form-control" />
                            <span asp-validation-for="GrupoMuscularNome" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="LocalizacaoCorporal"
                                   class="form-label fw-bold text-muted small text-uppercase">
                                Localização Corporal
                            </label>
                            <input asp-for="LocalizacaoCorporal" class="form-control" />
                            <span asp-validation-for="LocalizacaoCorporal" class="text-danger small"></span>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-warning px-5 shadow-sm text-dark">
                                <i class="bi bi-save me-2"></i>Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
