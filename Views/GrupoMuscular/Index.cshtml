@model HealthWellbeing.ViewModels.PaginationInfoExercicios<HealthWellbeing.Models.GrupoMuscular>

@{
    ViewData["Title"] = "Grupos Musculares";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary"><i class="fas fa-dumbbell"></i> @ViewData["Title"]</h2>
    <p class="text-muted">Lista dos grupos musculares registados no sistema:</p>

    <div class="d-flex justify-content-end mb-3">
        <div>
            <a asp-action="Create" class="btn btn-success me-2">
                <i class="bi bi-plus-circle me-1"></i> Criar Novo
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-home me-1"></i> Início
            </a>
        </div>
    </div>

    @if (Model.Items.Any() == true)
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome do Grupo</th>
                        <th>Localização Corporal</th>
                        <th class="text-center" style="width: 260px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.GrupoMuscularNome</td>
                            <td>@item.LocalizacaoCorporal</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.GrupoMuscularId" class="btn btn-primary btn-sm me-1">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.GrupoMuscularId" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.GrupoMuscularId" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Tem a certeza que deseja apagar este grupo muscular?');">
                                    <i class="fas fa-trash-alt"></i> Apagar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

<!-- PAGINAÇÃO -->
        <nav aria-label="Pagination" class="mt-3">
            <ul class="pagination justify-content-center">

                
                @if (Model.CurrentPage == 1)
                {
                    <li class="page-item disabled"><a class="page-link">Primeira</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="1">Primeira</a></li>
                }

                
                @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                {
                    if (p == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <a class="page-link">@p</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-page="@p">@p</a>
                        </li>
                    }
                }

                
                @if (Model.CurrentPage == Model.TotalPages)
                {
                    <li class="page-item disabled">
                        <a class="page-link">Última</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages">Última</a>
                    </li>
                }
            </ul>
        </nav>
    }
    
    else
    {
        <div class="alert alert-warning mt-3">
            Nenhum grupo muscular encontrado.
        </div>
    }
</div>
