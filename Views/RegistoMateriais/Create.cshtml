@model HealthWellbeing.ViewModels.RegistoMateriais

@{
    ViewData["Title"] = "Novo Registo de Material";
}

<div class="container mt-4">
    @* --- Cabeçalho --- *@
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-secondary">
            <i class="bi bi-plus-circle me-2"></i>Registar Novo Consumo
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Voltar à Lista
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            @* --- Cartão do Formulário --- *@
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-success py-3">
                    <h5 class="card-title mb-0 text-white fw-bold">
                        <i class="bi bi-box-seam me-2"></i>Dados do Material
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-bold small text-muted text-uppercase">Nome do Material</label>
                            <input asp-for="Nome" class="form-control shadow-sm border-2" placeholder="Ex: Seringa, Algodão..." />
                            <span asp-validation-for="Nome" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Tamanho" class="form-label fw-bold small text-muted text-uppercase">Tamanho / Medida</label>
                                <input asp-for="Tamanho" class="form-control shadow-sm" placeholder="Ex: 5ml, Grande..." />
                                <span asp-validation-for="Tamanho" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Quantidade" class="form-label fw-bold small text-muted text-uppercase">Quantidade</label>
                                <input asp-for="Quantidade" class="form-control shadow-sm" type="number" min="1" value="1" />
                                <span asp-validation-for="Quantidade" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaterialStatusId" class="form-label fw-bold small text-muted text-uppercase">Estado do Material</label>
                            <select asp-for="MaterialStatusId" class="form-select shadow-sm border-2" asp-items="ViewBag.MaterialStatusId">
                                <option value="">-- Selecionar Estado --</option>
                            </select>
                            <span asp-validation-for="MaterialStatusId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ExameId" class="form-label fw-bold small text-muted text-uppercase">Vincular a Exame (Utente - Data)</label>
                            @* Dropdown com a string combinada vinda do Controller *@
                            <select asp-for="ExameId" class="form-select shadow-sm border-success" asp-items="ViewBag.ExameId">
                                <option value="">-- Selecionar Utente e Data do Exame --</option>
                            </select>
                            <span asp-validation-for="ExameId" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                <i class="bi bi-check-lg me-2"></i>Criar Registo
                            </button>
                            <a asp-action="Index" class="btn btn-light border">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>

            @* --- Informação Extra --- *@
            <div class="mt-3 p-3 bg-light rounded-3 border small text-muted">
                <i class="bi bi-shield-lock me-1"></i>
                <strong>Segurança:</strong> Todos os materiais devem estar obrigatoriamente associados a um exame para efeitos de inventário e faturação.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}