@model HealthWellbeing.Models.Terapeuta

@{
    ViewData["Title"] = "Detalhes do Terapeuta";

    string badgeClass = Model.Ativo
        ? "bg-success"
        : "bg-danger";
}

<h1 class="mb-4">@Model.Nome</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4">Especialidade</dt>
            <dd class="col-sm-8">
                @Model.Especialidade?.Nome
            </dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">
                <a href="mailto:@Model.Email">@Model.Email</a>
            </dd>

            <dt class="col-sm-4">Telefone</dt>
            <dd class="col-sm-8">
                @Model.Telefone
            </dd>

            <dt class="col-sm-4">Ano de Entrada</dt>
            <dd class="col-sm-8">
                @Model.AnoEntrada
            </dd>

            <dt class="col-sm-4">Experiência</dt>
            <dd class="col-sm-8">
                @Model.AnosExperiencia anos
            </dd>

            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">
                <span class="badge @badgeClass px-3 py-2">
                    @(Model.Ativo ? "Ativo" : "Inativo")
                </span>
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        Voltar
    </a>

    @if (User.IsInRole("Admin") || User.IsInRole("Funcionario"))
    {
        <a asp-action="Edit"
           asp-route-id="@Model.TerapeutaId"
           class="btn btn-warning ms-2">
            Editar
        </a>
    }
</div>