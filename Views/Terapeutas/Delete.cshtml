@model HealthWellbeing.Models.Terapeuta

@{
    ViewData["Title"] = "Remover Terapeuta";
}

<h1 class="mb-4">Remover Terapeuta</h1>

<div class="alert alert-danger">
    Tem a certeza que pretende remover o terapeuta
    <strong>@Model.Nome</strong>?
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="TerapeutaId" />

    <button type="submit" class="btn btn-danger">Remover</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>