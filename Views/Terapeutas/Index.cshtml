@model IEnumerable<HealthWellbeing.Models.Terapeuta>

@{
    ViewData["Title"] = "Terapeutas";
}

<h1 class="mb-4">Equipa de Terapeutas</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Funcionario"))
{
    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">
            + Adicionar Terapeuta
        </a>
    </div>
}

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Especialidade</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Experiência</th>
            <th>Estado</th>
            <th class="text-end">Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Nome</td>
                <td>@t.Especialidade?.Nome</td>
                <td><a href="mailto:@t.Email">@t.Email</a></td>
                <td>@t.Telefone</td>
                <td>@t.AnosExperiencia anos</td>
                <td>
                    <span class="badge @(t.Ativo ? "bg-success" : "bg-danger")">
                        @(t.Ativo ? "Ativo" : "Inativo")
                    </span>
                </td>
                <td class="text-end">
                    <a asp-action="Details"
                       asp-route-id="@t.TerapeutaId"
                       class="btn btn-sm btn-outline-info">
                        Ver
                    </a>

                    @if (User.IsInRole("Admin") || User.IsInRole("Funcionario"))
                    {
                        <a asp-action="Edit"
                           asp-route-id="@t.TerapeutaId"
                           class="btn btn-sm btn-outline-warning">
                            Editar
                        </a>

                        <a asp-action="Delete"
                           asp-route-id="@t.TerapeutaId"
                           class="btn btn-sm btn-outline-danger">
                            Remover
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>