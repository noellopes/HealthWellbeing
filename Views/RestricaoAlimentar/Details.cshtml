@model HealthWellbeing.Models.RestricaoAlimentar

@{
    ViewData["Title"] = "Detalhes da Restrição Alimentar";
}

<h1>Detalhes da Restrição Alimentar</h1>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>

        <dt class="col-sm-2">Gravidade</dt>
        <dd class="col-sm-10">@Model.Gravidade</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Alimento</dt>
        <dd class="col-sm-10">@Model.Alimento?.Name</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.RestricaoAlimentarId" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
