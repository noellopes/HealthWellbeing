@model IEnumerable<HealthWellbeing.Models.RestricaoAlimentar>

@{
    ViewData["Title"] = "Restrições Alimentares";

    var currentPage = (int)(ViewBag.CurrentPage ?? 1);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var totalCount = (int)(ViewBag.TotalCount ?? 0);
    var startItem = totalCount == 0 ? 0 : ((currentPage - 1) * pageSize) + 1;
    var endItem = startItem == 0 ? 0 : startItem + Model.Count() - 1;

    var searchNome = (string)ViewBag.SearchNome ?? string.Empty;
    var searchTipo = (string)ViewBag.SearchTipo ?? string.Empty;
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-@(TempData["AlertType"] ?? "info") alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Restrições Alimentares</h1>

    <div class="d-flex">
        <a class="btn btn-outline-secondary me-2" data-bs-toggle="collapse" href="#searchPanel">
            Pesquisar
        </a>
        <a class="btn btn-primary" asp-action="Create">Nova Restrição</a>
    </div>
</div>

<!-- Painel de Busca -->
<div class="collapse mt-2 mb-3" id="searchPanel">
    <div class="card card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">

            <div class="col-md-4">
                <label class="form-label">Nome da Restrição</label>
                <input type="search" name="nome" class="form-control"
                       value="@searchNome" placeholder="Digite o nome da restrição" />
            </div>

            <div class="col-md-4">
                <label class="form-label">Tipo</label>
                <select name="tipo" class="form-control">
                    <option value="">-- Todos os Tipos --</option>
                    @foreach (var tipo in Enum.GetValues(typeof(HealthWellbeing.Models.TipoRestricao)))
                    {
                        <option value="@tipo" selected="@(searchTipo == tipo.ToString())">@tipo</option>
                    }
                </select>
            </div>

            <div class="col-12 d-flex gap-2">
                <button class="btn btn-primary">Pesquisar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>

<div class="mb-2 text-muted">
    <small>Mostrando <strong>@startItem</strong> a <strong>@endItem</strong> de <strong>@totalCount</strong> itens</small>
</div>

<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Gravidade</th>
            <th>Descrição</th>
            <th>Alimentos Relacionados</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            string rowClass = item.Gravidade switch
            {
                GravidadeRestricao.Leve => "table-success",      // verde
                GravidadeRestricao.Moderada => "table-warning",  // amarelo
                GravidadeRestricao.Grave => "table-danger",      // vermelho
                _ => ""
            };
            <tr class="@rowClass">
                <td>@item.Nome</td>
                <td>@item.Tipo</td>
                <td>
                    @{
                        var gravidadeBadgeClass = item.Gravidade switch
                        {
                            GravidadeRestricao.Leve => "badge bg-success",
                            GravidadeRestricao.Moderada => "badge bg-warning",
                            GravidadeRestricao.Grave => "badge bg-danger",
                            _ => "badge bg-secondary"
                        };
                    }
                    <span class="@gravidadeBadgeClass">@item.Gravidade</span>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Descricao))
                    {
                        <span title="@item.Descricao">
                            @(item.Descricao.Length > 50 ? item.Descricao.Substring(0, 50) + "..." : item.Descricao)
                        </span>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
                <td>
                    @if (item.AlimentosAssociados?.Any() == true)
                    {
                        <div class="d-flex flex-wrap gap-1">
                            @foreach (var aa in item.AlimentosAssociados.Take(3))
                            {
                                <span class="badge bg-primary">@aa.Alimento?.Name</span>
                            }
                            @if (item.AlimentosAssociados.Count > 3)
                            {
                                <span class="badge bg-secondary">+@(item.AlimentosAssociados.Count - 3)</span>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.RestricaoAlimentarId">Ver</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.RestricaoAlimentarId">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.RestricaoAlimentarId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-nome="@searchNome"
                   asp-route-tipo="@searchTipo">« Anterior</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link"
                       asp-route-page="@i"
                       asp-route-nome="@searchNome"
                       asp-route-tipo="@searchTipo">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-nome="@searchNome"
                   asp-route-tipo="@searchTipo">Próximo »</a>
            </li>

        </ul>
    </nav>
}


