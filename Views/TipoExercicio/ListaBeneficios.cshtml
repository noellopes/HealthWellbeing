@model IEnumerable<HealthWellbeing.Models.Beneficio>

@{
    ViewData["Title"] = "Lista de Benefícios";
}

<h1 class="mb-4">Benefícios</h1>

<div class="mb-3">
    <a asp-action="CreateBeneficio" class="btn btn-primary">Criar Novo Benefício</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Descricao)</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted"><em>Nenhum benefício encontrado.</em></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
