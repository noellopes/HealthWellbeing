@model HealthWellbeing.Models.TipoExercicio

@{
    ViewData["Title"] = "Criar Tipo de Exercício";
    var beneficios = ViewData["Beneficios"] as List<HealthWellbeing.Models.Beneficio> ?? new List<HealthWellbeing.Models.Beneficio>();
}

<div class="container py-4" style="max-width: 900px;">
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-primary fw-bold">@ViewData["Title"]</h4>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i> Voltar à Lista</a>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 shadow-sm"></div>

                <h5 class="text-muted fs-6 text-uppercase fw-bold mb-3">Dados Principais</h5>

                <div class="form-floating mb-3">
                    <input asp-for="NomeTipoExercicios" class="form-control" placeholder="Ex: Pilates" />
                    <label asp-for="NomeTipoExercicios">Nome do Exercício</label>
                    <span asp-validation-for="NomeTipoExercicios" class="text-danger small"></span>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="form-floating h-100">
                            <textarea asp-for="DescricaoTipoExercicios" class="form-control" placeholder="Descrição" style="height: 120px"></textarea>
                            <label asp-for="DescricaoTipoExercicios">Descrição Detalhada</label>
                            <span asp-validation-for="DescricaoTipoExercicios" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating h-100">
                            <textarea asp-for="CaracteristicasTipoExercicios" class="form-control" placeholder="Características" style="height: 120px"></textarea>
                            <label asp-for="CaracteristicasTipoExercicios">Características Técnicas</label>
                            <span asp-validation-for="CaracteristicasTipoExercicios" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <hr class="my-4 text-muted opacity-25">

                <h5 class="text-muted fs-6 text-uppercase fw-bold mb-3">
                    <i class="bi bi-heart-pulse text-danger me-1"></i> Benefícios Associados
                </h5>

                <div class="bg-light p-3 rounded border">
                    @if (beneficios.Any())
                    {
                        <div class="row g-2">
                            @foreach (var beneficio in beneficios)
                            {
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="selectedBeneficios"
                                               value="@beneficio.BeneficioId"
                                               id="chk_ben_@beneficio.BeneficioId" />
                                        <label class="form-check-label" for="chk_ben_@beneficio.BeneficioId">
                                            @beneficio.NomeBeneficio
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i> Não existem benefícios registados.
                        </div>
                    }
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-light border">Cancelar</a>
                    <button type="submit" class="btn btn-success px-5 shadow-sm fw-bold">
                        <i class="bi bi-check-lg me-1"></i> Criar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}