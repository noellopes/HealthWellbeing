@model HealthWellbeing.Models.TipoExercicio

@{
    ViewData["Title"] = "Apagar Tipo de Exercício";
}

<h1>Apagar Tipo de Exercício</h1>

@if (Model != null)
{
    <div class="alert alert-danger">
        Tem certeza que deseja apagar este tipo de exercício?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Categoria</dt>
        <dd class="col-sm-9">@Model.CategoriaTipoExercicios ?? "-"</dd>

        <dt class="col-sm-3">Descrição</dt>
        <dd class="col-sm-9">@Model.DescricaoTipoExercicios ?? "-"</dd>

        <dt class="col-sm-3">Nível de Dificuldade</dt>
        <dd class="col-sm-9">@Model.NivelDificuldadeTipoExercicios ?? "-"</dd>

        <dt class="col-sm-3">Benefício</dt>
        <dd class="col-sm-9">@Model.BeneficioTipoExercicios ?? "-"</dd>

        <dt class="col-sm-3">Grupos Musculares</dt>
        <dd class="col-sm-9">@Model.GruposMuscularesTrabalhadosTipoExercicios ?? "-"</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TipoExercicioId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Apagar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancelar
        </a>
    </form>
}
else
{
    <div class="alert alert-warning">
        Tipo de exercício não encontrado.
    </div>
}