@model HealthWellbeing.Models.TipoExercicio

@{
    ViewData["Title"] = "Excluir Tipo de Exercício";
}

<h1 class="mb-4">Excluir</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <p class="text-danger fw-bold">Tem certeza que deseja excluir este tipo de exercício?</p>

                <dl class="row">
                    <dt class="col-sm-4">Nome</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NomeTipoExercicios)</dd>

                    <dt class="col-sm-4">Descrição</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DescricaoTipoExercicios)</dd>

                    <dt class="col-sm-4">Nível de Dificuldade</dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CaracteristicasTipoExercicios)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="TipoExercicioId" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
