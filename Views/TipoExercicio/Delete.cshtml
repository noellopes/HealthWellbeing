@model HealthWellbeing.Models.TipoExercicio

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Tem a certeza que deseja eliminar isto?</h3>
<div>
    <h4>Tipo de Exercício</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeTipoExercicios)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeTipoExercicios)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoTipoExercicios)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescricaoTipoExercicios)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaracteristicasTipoExercicios)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaracteristicasTipoExercicios)
        </dd>

        <dt class="col-sm-2">
            Benefícios Associados
        </dt>
        <dd class="col-sm-10">
            @if (Model.TipoExercicioBeneficios != null && Model.TipoExercicioBeneficios.Any())
            {
                <ul class="list-unstyled">
                    @foreach (var item in Model.TipoExercicioBeneficios)
                    {
                        if (item.Beneficio != null)
                        {
                            <li class="mb-1">
                                <span class="badge bg-primary">@item.Beneficio.NomeBeneficio</span>
                            </li>
                        }
                    }
                </ul>
            }
            else
            {
                <span class="text-muted">Nenhum benefício associado</span>
            }
        </dd>

        <dt class="col-sm-2 text-danger">
            Contraindicações
        </dt>
        <dd class="col-sm-10">
            @if (Model.Contraindicacao != null && Model.Contraindicacao.Any())
            {
                <ul class="list-unstyled">
                    @foreach (var item in Model.Contraindicacao)
                    {
                        if (item.ProblemaSaude != null)
                        {
                            <li class="mb-1">
                                <span class="badge bg-danger">@item.ProblemaSaude.ProblemaNome</span>
                            </li>
                        }
                    }
                </ul>
            }
            else
            {
                <span class="text-muted">Nenhuma contraindicação registada</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TipoExercicioId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </form>
</div>