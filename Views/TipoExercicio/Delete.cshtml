@model HealthWellbeing.Models.TipoExercicio

@{
    ViewData["Title"] = "Eliminar Registo";
    bool podeEliminar = ViewBag.PodeEliminar ?? true;
    int numExercicios = ViewBag.NumExercicios ?? 0;
}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg border-danger" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-danger text-white py-3 text-center">
            <h4 class="mb-0 fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i>Eliminar Tipo de Exercício</h4>
        </div>

        <div class="card-body p-4 text-center">
            <h2 class="h4 mb-3 text-dark">@Model.NomeTipoExercicios</h2>

            @if (!podeEliminar)
            {
                <div class="alert alert-warning text-start shadow-sm border-warning mb-4">
                    <div class="d-flex">
                        <i class="bi bi-lock-fill fs-4 me-3"></i>
                        <div>
                            <strong>Ação Bloqueada!</strong>
                            <p class="mb-0">Este tipo de exercício está a ser utilizado em <strong>@numExercicios</strong> ficha(s) de exercício. Remova a associação nos exercícios antes de eliminar este tipo.</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <p class="text-muted mb-4">Tem a certeza absoluta que deseja eliminar este registo? Esta ação é <strong>irreversível</strong>.</p>
            }

            <div class="bg-light p-3 rounded text-start mb-4 border small">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-muted">Descrição:</dt>
                    <dd class="col-sm-8 text-truncate">@Model.DescricaoTipoExercicios</dd>

                    <dt class="col-sm-4 text-muted">Benefícios:</dt>
                    <dd class="col-sm-8">@(Model.TipoExercicioBeneficios?.Count ?? 0) associados</dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" name="TipoExercicioId" value="@Model.TipoExercicioId" />

                <div class="d-flex justify-content-center gap-2">
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>

                    @if (podeEliminar)
                    {
                        <button type="submit" class="btn btn-danger px-4 shadow-sm">
                            <i class="bi bi-trash-fill me-1"></i> Confirmar Eliminação
                        </button>
                    }
                    else
                    {
                        <button type="button" disabled class="btn btn-outline-danger px-4 opacity-50">
                            <i class="bi bi-lock-fill me-1"></i> Bloqueado
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>