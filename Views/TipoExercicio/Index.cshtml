@using HealthWellbeing.Data
@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.TipoExercicio>

@{
    ViewData["Title"] = "Tipos de Exercício";
    bool podeGerir = User.IsInRole(SeedData.Roles.Administrador) || User.IsInRole(SeedData.Roles.Profissional);
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-primary">
                <i class="bi bi-activity me-2"></i>@ViewData["Title"]
            </h1>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                <i class="bi bi-search"></i> Pesquisa
            </button>
            @if (podeGerir)
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-lg me-1"></i> Criar Novo
                </a>
            }
        </div>
    </div>

    @if (TempData["StatusMessage"] is string statusMessage)
    {
        string alertClass = "alert-info";
        string icon = "bi-info-circle";

        if (statusMessage.StartsWith("Sucesso")) { alertClass = "alert-success"; icon = "bi-check-circle"; }
        else if (statusMessage.StartsWith("Aviso")) { alertClass = "alert-warning"; icon = "bi-exclamation-triangle"; }
        else if (statusMessage.StartsWith("Erro")) { alertClass = "alert-danger"; icon = "bi-x-circle"; }

        <div class="alert @alertClass alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
            <i class="bi @icon me-2"></i> @statusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }

    <div class="collapse mb-4" id="filterCollapse">
        <div class="card card-body bg-light border-0 shadow-sm">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label for="searchNome" class="form-label fw-bold">Nome</label>
                    <input type="text" class="form-control" id="searchNome" name="searchNome" value="@ViewBag.SearchNome" placeholder="Ex: Cardio...">
                </div>
                <div class="col-md-5">
                    <label for="searchBeneficio" class="form-label fw-bold">Benefício</label>
                    <input type="text" class="form-control" id="searchBeneficio" name="searchBeneficio" value="@ViewBag.SearchBeneficio" placeholder="Ex: Resistência...">
                </div>
                <div class="col-md-2">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i>
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary w-100" title="Limpar">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (!Model.Items.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-4 mb-3 d-block opacity-50"></i>
                    <p class="mb-0">Nenhum registo encontrado.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4 py-3">Nome</th>
                                <th class="py-3">Benefícios</th>
                                <th class="text-end pe-4 py-3">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">
                                        @item.NomeTipoExercicios
                                        <div class="small fw-normal text-muted text-truncate" style="max-width: 250px;">
                                            @item.DescricaoTipoExercicios
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.TipoExercicioBeneficios != null && item.TipoExercicioBeneficios.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var tb in item.TipoExercicioBeneficios.Take(3))
                                                {
                                                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-10 rounded-pill px-2">
                                                        @tb.Beneficio?.NomeBeneficio
                                                    </span>
                                                }
                                                @if (item.TipoExercicioBeneficios.Count > 3)
                                                {
                                                    <span class="badge bg-secondary text-white small rounded-pill">+@(item.TipoExercicioBeneficios.Count - 3)</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted small fst-italic opacity-50">Sem benefícios</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Details" asp-route-id="@item.TipoExercicioId" class="btn btn-sm btn-info text-white me-1" title="Detalhes">
                                            <i class="bi bi-eye"></i>Detalhes
                                        </a>
                                        @if (podeGerir)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.TipoExercicioId" class="btn btn-sm btn-warning me-1" title="Editar">
                                                <i class="bi bi-pencil"></i>Editar
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.TipoExercicioId" class="btn btn-sm btn-danger" title="Apagar">
                                                <i class="bi bi-trash"></i>Apagar
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        @if (Model.Items.Any())
        {
            <div class="card-footer bg-white py-3">
                <nav>
                    <ul class="pagination justify-content-center mb-0">
                        @{
                            var routeData = new Dictionary<string, string>
                                        {
                                        { "searchNome", ViewBag.SearchNome },
                                        { "searchBeneficio", ViewBag.SearchBeneficio }
                                        };
                        }

                        @if (Model.CurrentPage > 1)
                        {
                            routeData["page"] = (Model.CurrentPage - 1).ToString();
                            <li class="page-item">
                                <a class="page-link border-0" asp-action="Index" asp-all-route-data="routeData">Anterior</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link border-0">Anterior</span>
                            </li>
                        }

                        @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                        {
                            if (p == Model.CurrentPage)
                            {
                                <li class="page-item active"><span class="page-link">@p</span></li>
                            }
                            else
                            {
                                routeData["page"] = p.ToString();
                                <li class="page-item">
                                    <a class="page-link border-0 rounded-circle mx-1" asp-action="Index" asp-all-route-data="routeData">@p</a>
                                </li>
                            }
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            routeData["page"] = (Model.CurrentPage + 1).ToString();
                            <li class="page-item">
                                <a class="page-link border-0" asp-action="Index" asp-all-route-data="routeData">Próxima</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link border-0">Próxima</span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>