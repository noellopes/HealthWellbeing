@model IEnumerable<HealthWellbeing.Models.TipoExercicio>

@{
    ViewData["Title"] = "Tipos de Exercício";
}

<h1>Tipos de Exercício</h1>

<p>Lista de tipos de exercícios disponíveis:</p>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Categoria</th>
                    <th>Descrição</th>
                    <th>Nível de Dificuldade</th>
                    <th>Benefício</th>
                    <th>Grupos Musculares</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tipo in Model)
                {
                    <tr style="cursor:pointer;"
                        onclick="location.href='@Url.Action("Details", "TipoExercicio", new { id = tipo.TipoExercicioId })'">
                        <td>@tipo.CategoriaTipoExercicios</td>
                        <td>@tipo.DescricaoTipoExercicios</td>
                        <td>@tipo.NivelDificuldadeTipoExercicios</td>
                        <td>@tipo.BeneficioTipoExercicios</td>
                        <td>@tipo.GruposMuscularesTrabalhadosTipoExercicios</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        Nenhum tipo de exercício encontrado.
    </div>
}

<div class="mt-4 d-flex gap-3 align-items-center">
    <a href="/" class="btn btn-secondary">
        <i class="fas fa-home"></i> Voltar ao Início
    </a>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Criar Tipo de Exercício
    </a>
</div>