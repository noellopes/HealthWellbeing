@model IEnumerable<HealthWellbeing.Models.TipoExercicio>

@{
    ViewData["Title"] = "Lista de Tipos de Exercício";
}

<h1 class="mb-4">Tipos de Exercício</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Criar Novo</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NomeTipoExercicios)</th>
                        <th>@Html.DisplayNameFor(model => model.DescricaoTipoExercicios)</th>
                        <th>@Html.DisplayNameFor(model => model.CaracteristicasTipoExercicios)</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.NomeTipoExercicios)</td>
                                <td>@Html.DisplayFor(modelItem => item.DescricaoTipoExercicios)</td>
                                <td>@Html.DisplayFor(modelItem => item.CaracteristicasTipoExercicios)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.TipoExercicioId" class="btn btn-sm btn-warning me-1">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.TipoExercicioId" class="btn btn-sm btn-info text-white me-1">Detalhes</a>
                                    <a asp-action="Delete" asp-route-id="@item.TipoExercicioId" class="btn btn-sm btn-danger">Excluir</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted"><em>Nenhum tipo de exercício encontrado.</em></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
