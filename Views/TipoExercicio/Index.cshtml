@model IEnumerable<HealthWellbeing.Models.TipoExercicio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Benefícios</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeTipoExercicios)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoTipoExercicios)
                </td>
                <td>
                    <!-- ✅ ADICIONADO: Lista de benefícios -->
                    @if (item.Beneficios != null && item.Beneficios.Any())
                    {
                        <div class="beneficios-list">
                            @foreach (var beneficio in item.Beneficios.Take(3))
                            {
                                <span class="badge bg-primary me-1 mb-1">
                                    <a href="@Url.Action("Details", "Beneficio", new { id = beneficio.BeneficioId })"
                                       class="text-white text-decoration-none"
                                       target="_blank">
                                        @beneficio.NomeBeneficio
                                    </a>
                                </span>
                            }
                            @if (item.Beneficios.Count > 3)
                            {
                                <span class="badge bg-secondary">+@(item.Beneficios.Count - 3) mais</span>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">Nenhum benefício</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TipoExercicioId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.TipoExercicioId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.TipoExercicioId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>