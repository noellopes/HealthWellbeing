@using HealthWellbeing.Data
@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.TipoExercicio>

@{
    ViewData["Title"] = "Tipos de Exercício";
    bool podeGerir = User.IsInRole(SeedData.Roles.Administrador) || User.IsInRole(SeedData.Roles.Profissional);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-primary fw-bold"><i class="bi bi-activity me-2"></i>@ViewData["Title"]</h1>
    @if (podeGerir)
    {
        <a asp-action="Create" class="btn btn-success shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-lg me-1"></i> Criar Novo
        </a>
    }
</div>

@if (TempData["StatusMessage"] is string statusMessage)
{
    var alertType = statusMessage.StartsWith("Sucesso") ? "success" : (statusMessage.StartsWith("Erro") ? "danger" : "warning");
    <div class="alert alert-@alertType alert-dismissible fade show shadow-sm" role="alert">
        @statusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<div class="mb-3">
    <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
        <i class="bi bi-funnel-fill me-1"></i> Pesquisa Avançada
    </button>
</div>

<div class="collapse mb-4" id="filterCollapse">
    <div class="card card-body bg-light border-0 shadow-sm">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="searchNome" class="form-label fw-bold small text-uppercase text-muted">Nome</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" id="searchNome" name="searchNome" value="@ViewBag.SearchNome" placeholder="Ex: Cardio...">
                </div>
            </div>
            <div class="col-md-4">
                <label for="searchBeneficio" class="form-label fw-bold small text-uppercase text-muted">Benefício</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-heart"></i></span>
                    <input type="text" class="form-control" id="searchBeneficio" name="searchBeneficio" value="@ViewBag.SearchBeneficio" placeholder="Ex: Resistência...">
                </div>
            </div>
            <div class="col-md-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    Filtrar Resultados
                </button>
                <a asp-action="Index" class="btn btn-secondary" title="Limpar Filtros">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Items.Any())
{
    <div class="alert alert-light border text-center py-5 shadow-sm">
        <div class="fs-1 text-muted mb-2"><i class="bi bi-inbox"></i></div>
        <h5 class="text-muted">Nenhum registo encontrado.</h5>
        <p class="mb-0 text-secondary">Tente alterar os filtros de pesquisa.</p>
    </div>
}
else
{
    <div class="card border-0 shadow-sm overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4 py-3">Nome</th>
                        <th class="py-3">Benefícios</th>
                        <th class="text-center py-3" style="width: 320px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-dark">
                                @item.NomeTipoExercicios
                                <div class="small fw-normal text-muted text-truncate" style="max-width: 250px;">
                                    @item.DescricaoTipoExercicios
                                </div>
                            </td>
                            <td>
                                @if (item.TipoExercicioBeneficios != null && item.TipoExercicioBeneficios.Any())
                                {
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var tb in item.TipoExercicioBeneficios.Take(3))
                                        {
                                            <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-10 rounded-pill px-2">
                                                @tb.Beneficio?.NomeBeneficio
                                            </span>
                                        }
                                        @if (item.TipoExercicioBeneficios.Count > 3)
                                        {
                                            <span class="badge bg-secondary text-white small rounded-pill">+@(item.TipoExercicioBeneficios.Count - 3)</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small fst-italic"><i class="bi bi-dash"></i> Sem benefícios</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-inline-flex gap-1">
                                    @if (podeGerir)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.TipoExercicioId" class="btn btn-warning btn-sm text-dark shadow-sm" title="Editar">
                                            <i class="bi bi-pencil-square me-1"></i> Editar
                                        </a>
                                    }
                                    <a asp-action="Details" asp-route-id="@item.TipoExercicioId" class="btn btn-info btn-sm text-white shadow-sm" title="Ver Detalhes">
                                        <i class="bi bi-eye-fill me-1"></i> Detalhes
                                    </a>
                                    @if (podeGerir)
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.TipoExercicioId" class="btn btn-danger btn-sm shadow-sm" title="Eliminar">
                                            <i class="bi bi-trash-fill me-1"></i> Apagar
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-white py-3 border-top">
            <nav aria-label="Navegação de página">
                <ul class="pagination justify-content-center mb-0">
                    @{
                        var routeData = new Dictionary<string, string>
                                {
                                { "searchNome", ViewBag.SearchNome },
                                { "searchBeneficio", ViewBag.SearchBeneficio }
                                };
                    }

                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        @{
                            routeData["page"] = (Model.CurrentPage - 1).ToString();
                        }
                        <a class="page-link border-0" asp-action="Index" asp-all-route-data="routeData" aria-label="Anterior">
                            <span aria-hidden="true">&laquo; Anterior</span>
                        </a>
                    </li>

                    @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                    {
                        routeData["page"] = p.ToString();
                        <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                            <a class="page-link rounded-circle mx-1 border-0 @(p == Model.CurrentPage ? "shadow-sm" : "")" asp-action="Index" asp-all-route-data="routeData">@p</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        @{
                            routeData["page"] = (Model.CurrentPage + 1).ToString();
                        }
                        <a class="page-link border-0" asp-action="Index" asp-all-route-data="routeData" aria-label="Próximo">
                            <span aria-hidden="true">Próximo &raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="text-center mt-2 text-muted small">
                A mostrar página @Model.CurrentPage de @Model.TotalPages
            </div>
        </div>
    </div>
}