@model HealthWellbeing.Models.TipoExercicio

@{
    ViewData["Title"] = "Editar Tipo de Exercício";
}

<h1>Editar Tipo de Exercício</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TipoExercicioId" />

    <div class="mb-3">
        <label asp-for="CategoriaTipoExercicios" class="form-label">Categoria *</label>
        <input asp-for="CategoriaTipoExercicios" class="form-control" placeholder="Ex: Cardio, Força, Flexibilidade">
        <span asp-validation-for="CategoriaTipoExercicios" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DescricaoTipoExercicios" class="form-label">Descrição *</label>
        <textarea asp-for="DescricaoTipoExercicios" class="form-control" rows="3" placeholder="Descreva o tipo de exercício..."></textarea>
        <span asp-validation-for="DescricaoTipoExercicios" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NivelDificuldadeTipoExercicios" class="form-label">Nível de Dificuldade *</label>
        <select asp-for="NivelDificuldadeTipoExercicios" class="form-select">
            <option value="">-- Selecione --</option>
            <option value="Fácil" selected="@(Model?.NivelDificuldadeTipoExercicios == "Fácil" ? "selected" : null)">Fácil</option>
            <option value="Intermediário" selected="@(Model?.NivelDificuldadeTipoExercicios == "Intermediário" ? "selected" : null)">Intermediário</option>
            <option value="Difícil" selected="@(Model?.NivelDificuldadeTipoExercicios == "Difícil" ? "selected" : null)">Difícil</option>
        </select>
        <span asp-validation-for="NivelDificuldadeTipoExercicios" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BeneficioTipoExercicios" class="form-label">Benefício *</label>
        <input asp-for="BeneficioTipoExercicios" class="form-control" placeholder="Ex: Melhora cardiovascular, Tonificação muscular">
        <span asp-validation-for="BeneficioTipoExercicios" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="GruposMuscularesTrabalhadosTipoExercicios" class="form-label">Grupos Musculares Trabalhados *</label>
        <input asp-for="GruposMuscularesTrabalhadosTipoExercicios" class="form-control" placeholder="Ex: Peito, Costas, Pernas">
        <span asp-validation-for="GruposMuscularesTrabalhadosTipoExercicios" class="text-danger small"></span>
    </div>

    <div class="mt-3 d-flex gap-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Salvar Alterações
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar à Lista
        </a>
    </div>
</form>

