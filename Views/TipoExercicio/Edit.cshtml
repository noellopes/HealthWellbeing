@model HealthWellbeing.Models.TipoExercicio

@{
    ViewData["Title"] = "Editar Tipo de Exercício";
    var beneficios = ViewData["Beneficios"] as List<HealthWellbeing.Models.Beneficio> ?? new List<HealthWellbeing.Models.Beneficio>();
    var selectedBeneficios = ViewData["SelectedBeneficios"] as List<int> ?? new List<int>();
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-warning text-dark">
                <i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]
            </h1>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    <form asp-action="Edit">
        <input type="hidden" asp-for="TipoExercicioId" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 shadow-sm"></div>

        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-4 ps-4">
                        <h5 class="text-warning text-dark fw-bold mb-0">Dados Principais</h5>
                    </div>
                    <div class="card-body p-4 pt-2">

                        <div class="mb-3">
                            <label asp-for="NomeTipoExercicios" class="form-label fw-bold text-muted small text-uppercase">Nome do Exercício</label>
                            <input asp-for="NomeTipoExercicios" class="form-control" />
                            <span asp-validation-for="NomeTipoExercicios" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DescricaoTipoExercicios" class="form-label fw-bold text-muted small text-uppercase">Descrição</label>
                            <textarea asp-for="DescricaoTipoExercicios" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="DescricaoTipoExercicios" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CaracteristicasTipoExercicios" class="form-label fw-bold text-muted small text-uppercase">Características</label>
                            <textarea asp-for="CaracteristicasTipoExercicios" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="CaracteristicasTipoExercicios" class="text-danger small"></span>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-4 ps-4">
                        <h5 class="text-warning text-dark fw-bold mb-0">
                            <i class="bi bi-heart-pulse me-2"></i>Benefícios Associados
                        </h5>
                    </div>
                    <div class="card-body p-4 pt-2">
                        @if (beneficios.Any())
                        {
                            <div class="row g-3">
                                @foreach (var beneficio in beneficios)
                                {
                                    <div class="col-md-6">
                                        <div class="form-check p-3 border rounded bg-light">
                                            <input class="form-check-input" type="checkbox"
                                                   name="selectedBeneficios"
                                                   value="@beneficio.BeneficioId"
                                                   id="chk_ben_@beneficio.BeneficioId"
                                                   @(selectedBeneficios.Contains(beneficio.BeneficioId) ? "checked" : "") />
                                            <label class="form-check-label w-100 stretched-link" for="chk_ben_@beneficio.BeneficioId">
                                                <span class="fw-bold d-block">@beneficio.NomeBeneficio</span>
                                                @if (!string.IsNullOrEmpty(beneficio.DescricaoBeneficio))
                                                {
                                                    <small class="text-muted text-truncate d-block">@beneficio.DescricaoBeneficio</small>
                                                }
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning mb-0">
                                <i class="bi bi-exclamation-triangle me-2"></i> Não existem benefícios registados.
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-12 text-end mt-2 mb-5">
                <button type="submit" class="btn btn-warning btn-lg px-5 shadow-sm text-dark">
                    <i class="bi bi-save me-2"></i>Guardar Alterações
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}