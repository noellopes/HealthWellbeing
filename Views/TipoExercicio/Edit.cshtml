@model HealthWellbeing.Models.TipoExercicio

@{
    ViewData["Title"] = "Editar";
    var beneficios = ViewData["Beneficios"] as List<Beneficio> ?? new List<Beneficio>();
    var selectedBeneficios = ViewData["SelectedBeneficios"] as List<int> ?? new List<int>();
}

<h1>Editar</h1>

<h4>Tipo de Exercício</h4>

@if (ViewData["StatusMessage"] is string statusMessage)
{
    
    string alertClass = "alert-info";

    if (statusMessage.StartsWith("Erro:", StringComparison.OrdinalIgnoreCase))
    {
        alertClass = "alert-danger";
    }


    <div class="alert @alertClass alert-dismissible fade show" role="alert">
        @statusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipoExercicioId" />

            <div class="form-group mb-3">
                <label asp-for="NomeTipoExercicios" class="control-label">Nome do Tipo de Exercício</label>
                <input asp-for="NomeTipoExercicios" class="form-control" />
                <span asp-validation-for="NomeTipoExercicios" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DescricaoTipoExercicios" class="control-label">Descrição</label>
                <textarea asp-for="DescricaoTipoExercicios" class="form-control" rows="3"></textarea>
                <span asp-validation-for="DescricaoTipoExercicios" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CaracteristicasTipoExercicios" class="control-label">Características Principais</label>
                <textarea asp-for="CaracteristicasTipoExercicios" class="form-control" rows="3"></textarea>
                <span asp-validation-for="CaracteristicasTipoExercicios" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="control-label fw-bold">Benefícios Associados</label>
                <small class="form-text text-muted d-block">Selecione ou desmarque os benefícios associados a este tipo de exercício</small>
                <div class="border p-3 rounded mt-2">
                    @if (beneficios.Any())
                    {
                        <div class="row">
                            @foreach (var beneficio in beneficios)
                            {
                                <div class="col-md-6 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="selectedBeneficios"
                                               value="@beneficio.BeneficioId"
                                               id="beneficio_@beneficio.BeneficioId"
                                               @(selectedBeneficios.Contains(beneficio.BeneficioId) ? "checked" : "") />
                                        <label class="form-check-label" for="beneficio_@beneficio.BeneficioId">
                                            <a href="@Url.Action("Details", "Beneficio", new { id = beneficio.BeneficioId })"
                                               target="_blank"
                                               class="text-decoration-none"
                                               title="Ver detalhes do benefício">
                                                @beneficio.NomeBeneficio
                                            </a>
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <p class="mb-1">Nenhum benefício encontrado no sistema.</p>
                            <a href="@Url.Action("Create", "Beneficio")" class="btn btn-sm btn-outline-primary">
                                Criar Primeiro Benefício
                            </a>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" /> 
                <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}