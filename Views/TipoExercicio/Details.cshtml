@model HealthWellbeing.Models.TipoExercicio

@{
    ViewData["Title"] = "DetalhesTiopExercicio";
}

<h1>Detalhes do Tipo de Exercício</h1>

@if (Model != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <strong>@Model.CategoriaTipoExercicios</strong>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Descrição</dt>
                <dd class="col-sm-9">@Model.DescricaoTipoExercicios</dd>

                <dt class="col-sm-3">Nível de Dificuldade</dt>
                <dd class="col-sm-9">@Model.NivelDificuldadeTipoExercicios</dd>

                <dt class="col-sm-3">Benefício</dt>
                <dd class="col-sm-9">@Model.BeneficioTipoExercicios</dd>

                <dt class="col-sm-3">Grupos Musculares Trabalhados</dt>
                <dd class="col-sm-9">@Model.GruposMuscularesTrabalhadosTipoExercicios</dd>
            </dl>
        </div>
    </div>

    <!-- Botões -->
    <div class="mt-3 d-flex gap-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar à Lista
        </a>
        <a asp-action="Edit" asp-route-id="@Model.TipoExercicioId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Delete" asp-route-id="@Model.TipoExercicioId" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Apagar
        </a>
    </div>
}
else
{
    <div class="alert alert-warning">
        Tipo de exercício não encontrado.
    </div>
}
