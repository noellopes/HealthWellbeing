@model IEnumerable<HealthWellbeing.Models.CustomerActivity>

@{
    ViewData["Title"] = "Activity History";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<div class="container py-5">

    <div class="mb-4 d-flex align-items-center justify-content-between">
        <div>
            <a asp-action="Index" class="text-decoration-none text-muted mb-2 d-inline-block">
                <i class="bi bi-arrow-left me-1"></i> Back to Library
            </a>
            <h1 class="fw-bold text-dark">Your Activity History</h1>
            <p class="text-muted">Track your daily achievements and consistency.</p>
        </div>

        <div class="bg-primary bg-opacity-10 text-primary rounded-pill px-4 py-2 fw-bold">
            Total Activities: @Model.Count()
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-4 border border-dashed">
            <i class="bi bi-journal-x display-1 text-muted opacity-25"></i>
            <h3 class="mt-3 text-muted">No history yet</h3>
            <p class="text-muted">Start logging activities to see them here!</p>
            <a asp-action="Index" class="btn btn-primary rounded-pill mt-3">Start Now</a>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-10">

                @* Agrupar por Data *@
                @foreach (var group in Model.GroupBy(x => x.CompletionDate.Date))
                {
                    <div class="mb-5">
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-dark rounded-pill px-3 py-2 me-3">
                                @group.Key.ToString("dd MMM yyyy")
                            </span>
                            <div class="h-1 flex-grow-1 bg-secondary opacity-25 rounded" style="height: 2px;"></div>
                        </div>

                        <div class="list-group shadow-sm rounded-4 border-0">
                            @foreach (var item in group)
                            {
                                <div class="list-group-item border-0 p-4 d-flex align-items-center justify-content-between hover-bg">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-info bg-opacity-10 text-info rounded-circle p-3 me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="bi bi-check-lg fs-4"></i>
                                        </div>
                                        <div>
                                            <h5 class="mb-1 fw-bold text-dark">@item.Activity?.ActivityName</h5>
                                            <div class="text-muted small">
                                                <i class="bi bi-clock me-1"></i> @item.CompletionDate.ToString("HH:mm")
                                                <span class="mx-2">•</span>
                                                <span class="text-uppercase">@item.Activity?.ActivityType?.Name</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="fs-5 fw-bold text-primary">+@item.PointsEarned</span>
                                        <div class="small text-muted">pts</div>
                                    </div>
                                </div>
                                @* Linha divisória exceto no último *@
                                @if (item != group.Last())
                                {
                                    <hr class="my-0 opacity-10">
                                }
                            }
                        </div>
                    </div>
                }

            </div>
        </div>
    }
</div>

<style>
    .hover-bg:hover {
        background-color: #f8f9fa;
    }
</style>