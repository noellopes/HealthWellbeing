@model HealthWellbeing.Models.Activity

@{
    ViewData["Title"] = "Activity Details";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<div class="container py-5">

    <div class="mb-4">
        <a asp-action="Index" class="text-decoration-none text-muted">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow rounded-4 overflow-hidden">

                @* Cabeçalho Colorido *@
                <div class="bg-info bg-gradient p-5 text-center text-white">
                    <div class="bg-white bg-opacity-25 rounded-circle d-inline-flex p-3 mb-3">
                        <i class="bi bi-lightning-charge-fill fs-1"></i>
                    </div>
                    <h2 class="fw-bold mb-2">@Model.ActivityName</h2>
                    <span class="badge bg-white text-info bg-opacity-75 border-0 px-3 py-2 rounded-pill text-uppercase">
                        @Model.ActivityType?.Name
                    </span>
                </div>

                <div class="card-body p-5">

                    <div class="row mb-5">
                        <div class="col-md-6">
                            <h5 class="fw-bold text-dark">Description</h5>
                            <p class="text-muted">@Model.ActivityDescription</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <div class="p-3 bg-light rounded-3 d-inline-block text-start text-md-center w-100 w-md-auto">
                                <small class="text-uppercase text-muted fw-bold d-block mb-1">Reward</small>
                                <span class="fs-2 fw-bold text-primary">@Model.ActivityReward</span>
                                <span class="text-muted">points</span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-light border border-info border-opacity-25 rounded-3 d-flex align-items-center mb-5">
                        <i class="bi bi-info-circle-fill text-info fs-4 me-3"></i>
                        <div class="small text-muted">
                            Did you complete this activity today? Logging it will increase your score and might count towards your enrolled Events!
                        </div>
                    </div>

                    <form asp-action="PerformActivity" method="post">
                        <input type="hidden" name="activityId" value="@Model.ActivityId" />
                        <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm fw-bold py-3 hover-scale">
                            <i class="bi bi-check-lg me-2"></i> Mark as Completed
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }

        .hover-scale:hover {
            transform: scale(1.02);
        }
</style>