@model HealthWellbeing.Models.Trainer

@{
    ViewData["Title"] = "Register New Trainer";
}

<div class="container py-4">
    <h1 class="text-primary fw-bold mb-4">Register New Trainer</h1>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white py-3">
            <h5 class="mb-0">Trainer Membership Form</h5>
        </div>

        <div class="card-body p-4">
            <p class="text-muted small mb-4">
                Complete the fields below to add a new trainer to the Health & Wellbeing directory.
            </p>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="First and Last Name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-bold">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Phone" class="form-label fw-bold">Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="e.g. 912345678" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="BirthDate" class="form-label fw-bold">Birth Date</label>
                        <input asp-for="BirthDate" class="form-control" type="date" />
                        <span asp-validation-for="BirthDate" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 mb-3">
                        <label asp-for="Address" class="form-label fw-bold">Address</label>
                        <input asp-for="Address" class="form-control" placeholder="Current residential address" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label asp-for="Gender" class="form-label fw-bold">Gender</label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">Choose gender...</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-2">
                    <button type="submit" class="btn btn-success px-4">Create Trainer</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}