@model IEnumerable<HealthWellbeing.Models.Trainer>

@{
    ViewData["Title"] = "Trainer Management";
}

<h1 class="display-4 text-primary mb-4">@ViewData["Title"]</h1>

@* Bloco para mostrar mensagens de sucesso/erro (do MemberPlan) *@
@if (TempData["Message"] != null)
{
    var message = TempData["Message"].ToString();
    var messageType = TempData["MessageType"]?.ToString() ?? "info";

    <div class="alert alert-@messageType alert-dismissible fade show shadow-sm" role="alert">
        @Html.Raw(message)
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@* Cabeçalho de Ação (do MemberPlan) *@
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Trainer List</h2>
    <div class="d-flex justify-content-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Trainer
        </a>
    </div>
</div>

@* Verificação se existem itens *@
@if (!Model.Any())
{
    <div class="alert alert-warning mt-4" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> No Trainers Found</h4>
        <p>There are no trainers currently in the system. You can create one using the button above.</p>
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                @* Alterado de table-dark *@
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="d-none d-md-table-cell">
                        @Html.DisplayNameFor(model => model.Speciality)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th class="d-none d-sm-table-cell">
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th class="text-end">
                        @* Alinhado à direita *@
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="d-none d-md-table-cell">
                            @Html.DisplayFor(modelItem => item.Speciality)
                        </td>
                        <td>
                            <a href="mailto:@item.Email" class="text-decoration-none">
                                @Html.DisplayFor(modelItem => item.Email)
                            </a>
                        </td>
                        <td class="d-none d-sm-table-cell">
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td class="text-end">
                            @* Alinhado à direita *@
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.TrainerId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.TrainerId" class="btn btn-sm btn-info">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.TrainerId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}