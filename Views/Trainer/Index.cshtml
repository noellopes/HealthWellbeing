@model IEnumerable<HealthWellbeing.Models.Trainer>

@{
    ViewData["Title"] = "Trainers";
}

<div class="container py-4">
    <h1 class="text-primary fw-bold mb-4">Trainers</h1>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">Trainer Directory</h5>
            @* Permissão: Só Admin cria *@
            @if (User.IsInRole("Administrator"))
            {
                <a asp-action="Create" class="btn btn-success px-4">
                    <i class="bi bi-plus-lg me-1"></i>Add New Trainer
                </a>
            }
        </div>

        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-2 mb-4">
                    <div class="col-md-3">
                        <input type="text" name="searchName" class="form-control" placeholder="Search by name..." value="@ViewBag.SearchName">
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="searchEmail" class="form-control" placeholder="Search by email..." value="@ViewBag.SearchEmail">
                    </div>
                    <div class="col-md-3">
                        <input type="text" name="searchPhone" class="form-control" placeholder="Search by phone..." value="@ViewBag.SearchPhone">
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100 fw-bold">
                            <i class="bi bi-search me-1"></i>Search
                        </button>
                    </div>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%">Name</th>
                            <th style="width: 25%">Contact Info</th>
                            <th style="width: 15%">Gender</th>
                            <th style="width: 15%">Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string rowClass = item.IsActive ? "" : "table-light text-muted opacity-75";

                            <tr class="@rowClass">
                                <td class="fw-bold">
                                    @item.Name
                                    @if (!item.IsActive)
                                    {
                                        <span class="badge bg-secondary ms-1" style="font-size: 0.6rem;">OFF</span>
                                    }
                                </td>
                                <td>
                                    <div class="text-muted small">@item.Email</div>
                                    <div class="text-muted small">@item.Phone</div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-light text-dark border">@item.Gender</span>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge rounded-pill bg-success px-3">Active Trainer</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-secondary px-3">Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group gap-1">
                                        @* Permissão: Só Admin Edita *@
                                        @if (User.IsInRole("Administrator"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.TrainerId" class="btn btn-warning btn-sm px-3">Edit</a>
                                        }

                                        <a asp-action="Details" asp-route-id="@item.TrainerId" class="btn btn-info btn-sm px-2 text-white">Details</a>

                                        @* Permissão: Só Admin Apaga *@
                                        @if (User.IsInRole("Administrator"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.TrainerId" class="btn btn-danger btn-sm px-2">Delete</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* Paginação Visual *@
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled"><a class="page-link">First</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">Last</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>