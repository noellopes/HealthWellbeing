@model HealthWellbeing.Models.Trainer

@{
    ViewData["Title"] = "Delete Confirmation";
}

<div class="container py-4">
    <div class="alert alert-danger shadow-sm border-0" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Delete Trainer</h4>
        <p>Are you sure you want to remove <strong>@Model.Name</strong> from the system? This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <p class="mb-1 text-muted">Email: @Model.Email</p>
            <p class="mb-0 text-muted">Phone: @Model.Phone</p>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TrainerId" />
        <button type="submit" class="btn btn-danger px-4">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>