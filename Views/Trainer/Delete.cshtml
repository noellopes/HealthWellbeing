@model HealthWellbeing.Models.Trainer

@{
    ViewData["Title"] = "Delete Trainer";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="alert alert-danger border-0 shadow-sm p-4 text-center mb-4" style="background-color: #f8d7da; color: #842029;">
                <h2 class="fw-bold mb-3" style="color: #842029;">Are you sure?</h2>
                <p class="mb-0">
                    You are about to delete <strong>@Model.Name</strong> from the system.
                    This action cannot be undone and will affect their gym history.
                </p>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-sm-5 fw-bold text-muted">Trainer ID:</div>
                        <div class="col-sm-7">#@Model.TrainerId</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-5 fw-bold text-muted">Email:</div>
                        <div class="col-sm-7">@Model.Email</div>
                    </div>

                    <p class="text-danger fw-bold mt-4 mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i>
                        This trainer may have active training sessions assigned!
                    </p>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="TrainerId" />
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger px-5 py-2 fw-bold shadow-sm">
                        Delete Forever
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-5 py-2 shadow-sm bg-white">
                        Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>