@model HealthWellbeing.Models.LevelCategory

@{
    ViewData["Title"] = "Delete Category";

    // Get the count passed from the Controller (default to 0 if null)
    int levelsCount = ViewBag.LevelsCount ?? 0;
    string errorMessage = ViewBag.ErrorMessage as string;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7">

            <!-- Change card color: Red if possible to delete, Grey if blocked -->
            <div class="card shadow-sm @(levelsCount > 0 ? "border-secondary" : "border-danger")">

                <div class="card-header @(levelsCount > 0 ? "bg-secondary" : "bg-danger") text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">
                            @(levelsCount > 0 ? "Cannot Delete Category" : "Delete Category")
                        </h5>
                        @if (levelsCount == 0)
                        {
                            <small class="text-light opacity-75">This action cannot be undone</small>
                        }
                    </div>
                </div>

                <div class="card-body">

                    <!-- Alert Logic -->
                    @if (levelsCount > 0)
                    {
                        <!-- BLOCKING ALERT -->
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bi bi-x-circle-fill me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <h6 class="alert-heading fw-bold">Deletion Blocked</h6>
                                <p class="mb-0">
                                    This category is currently used by <strong>@levelsCount</strong> levels.
                                    You must delete or reassign those levels before deleting this category.
                                </p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- WARNING ALERT -->
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2" style="font-size: 1.25rem;"></i>
                            <div>Are you sure you want to delete this category?</div>
                        </div>
                    }

                    <!-- Details List -->
                    <dl class="row mt-3">
                        <dt class="col-sm-4 text-muted">Category ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LevelCategoryId)</dd>

                        <dt class="col-sm-4 text-muted">Name</dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 text-muted">Status</dt>
                        <dd class="col-sm-8">
                            @if (levelsCount > 0)
                            {
                                <span class="badge bg-danger">Used by @levelsCount Levels</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Unused (Safe to delete)</span>
                            }
                        </dd>
                    </dl>

                    <!-- Delete Form -->
                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="LevelCategoryId" />

                        @* Preserve pager/search state if they exist *@
                        <input type="hidden" name="page" value="@(ViewBag.Page ?? 1)" />
                        <input type="hidden" name="searchCategory" value="@(ViewBag.SearchCategory ?? "")" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index"
                               asp-route-page="@(ViewBag.Page ?? 1)"
                               asp-route-searchCategory="@(ViewBag.SearchCategory ?? "")"
                               class="btn btn-outline-secondary">
                                @(levelsCount > 0 ? "Back to List" : "Cancel")
                            </a>

                            <!-- BUTTON LOGIC: Hide submit if levels > 0 -->
                            @if (levelsCount == 0)
                            {
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this category? This cannot be undone.');">
                                    Delete Category
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-secondary" disabled>
                                    Delete Disabled
                                </button>
                            }
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>