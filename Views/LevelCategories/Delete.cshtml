@model HealthWellbeing.Models.LevelCategory

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-sm border-danger">

                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Delete Category</h5>
                        <small class="text-light">This action cannot be undone</small>
                    </div>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>Are you sure you want to delete this category?</div>
                    </div>

                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Category ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LevelCategoryId)</dd>

                        <dt class="col-sm-4 text-muted">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                    </dl>

                        <form asp-action="Delete" method="post" onsubmit="return confirm('Delete this category? This cannot be undone.');" class="mt-3">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="LevelCategoryId" />

                            @* preserve pager/search state *@
                            <input type="hidden" name="page" value="@(ViewBag.Page ?? 1)" />
                            <input type="hidden" name="searchCategory" value="@(ViewBag.SearchCategory ?? "")" />

                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" asp-route-page="@(ViewBag.Page ?? 1)"
                                   asp-route-searchCategory="@(ViewBag.SearchCategory ?? "")"
                                   class="btn btn-outline-secondary">Cancel</a>
                                <button type="submit" class="btn btn-danger">Delete category</button>
                            </div>
                        </form>
                </div>
        </div>
    </div>
</div>