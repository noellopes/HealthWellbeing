@model HealthWellbeing.Models.LevelCategory

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Category Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Category ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LevelCategoryId)</dd>

                        <dt class="col-sm-4 text-muted">Name</dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Name)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    <a asp-action="Edit" asp-route-id="@Model?.LevelCategoryId" class="btn btn-warning">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>