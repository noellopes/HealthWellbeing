@model PaginationInfo<Consulta>

@{
    ViewData["Title"] = "Consultas";
    var successMessage = TempData["SuccessMessage"];
}

@functions {
    // Mantém a função Badge compatível com qualquer versão de Razor/C#
    public static string Badge(string estado)
    {
        switch (estado)
        {
            case "Cancelada": return "badge bg-danger";
            case "Expirada": return "badge bg-secondary";
            case "Hoje": return "badge bg-warning text-dark";
            default: return "badge bg-success";
        }
    }
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (successMessage != null)
{
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}




<div class="collapse mt-2 mb-2" id="postSearch">
    <div class="card card-body">
        <form asp-action="Index" method="get" class="row g-2 align-items-end">
            <div class="col-md-4">
                <label for="searchTerm" class="form-label">Pesquisa</label>
                <input id="searchTerm" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Pesquise uma data" type="search" />
            </div>
            

            <div class="col-12 mt-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Procurar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Limpar
                </a>
            </div>
        </form>
    </div>
</div>


@if (!Model.Items.Any())
{
    <div class="alert alert-warning d-flex align-items-center border-2" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">Sem Consultas</h4>
            <p>Ainda não existem consultas registadas.</p>
        </div>
    </div>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Marcar Consulta
    </a>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Lista de Consultas</h2>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex justify-content-end gap-2">
                <button class="btn btn-primary"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#postSearch"
                        aria-expanded="false"
                        aria-controls="postSearch">
                    <i class="bi bi-search me-1"></i> Pesquisar
                </button>

                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Marcar Consulta
                </a>
            </div>
        </div>
    </div>


    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Data Marcação</th>
                    <th>Data Consulta</th>
                    <th>Médico</th>
                    <th>Especialidade</th>
                    <th>Estado</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var consulta in Model.Items)
                {
                    <tr class="text-center">
                        <td>@consulta.DataMarcacao.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@consulta.DataConsulta.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@consulta.Doctor?.Nome</td>
                        <td>@consulta.Speciality?.Nome</td>
                        
                    <td>
                        <span class="@Badge(consulta.Estado) px-3 py-2 rounded-pill">
                            @consulta.Estado
                        </span>
                    </td>
                    <td class="text-end">
                            <a asp-action="Details" asp-route-id="@consulta.IdConsulta" class="btn btn-sm btn-primary" >
                                <i class="bi bi-info-circle"></i> Detalhes
                        </a>
                            <a asp-action="Edit" asp-route-id="@consulta.IdConsulta" class="btn btn-sm btn-warning text-white">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                            <a asp-action="Delete" asp-route-id="@consulta.IdConsulta" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
                        }
            </tbody>
        </table>

        <nav aria-label="Consultas page">
            <ul class="pagination">
                @if (Model.CurrentPage == 1)
                {
                    <li class="page-item disabled"><a class="page-link">Primeira</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index">Primeira</a></li>
                }

                @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                {
                    if (p == Model.CurrentPage)
                    {
                        <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@p">@p</a></li>
                    }
                }

                @if (Model.CurrentPage == Model.TotalPages)
                {
                    <li class="page-item disabled"><a class="page-link">Última</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages">Última</a></li>
                }
            </ul>
        </nav>
    </div>
}