@model HealthWellbeing.Models.Consulta

@{
    ViewData["Title"] = "Marcar Consulta";
}

<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0">
                <i class="bi bi-calendar-check me-2"></i> Marcar Nova Consulta
            </h2>
        </div>

        <div class="card-body px-4 py-4 bg-light">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="DataMarcacao" class="form-label fw-semibold">
                            Data de Marcação
                        </label>
                        <input asp-for="DataMarcacao" type="datetime-local" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="DataMarcacao" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DataConsulta" class="form-label fw-semibold">
                            Data da Consulta
                        </label>
                        <input asp-for="DataConsulta" type="datetime-local" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="DataConsulta" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HoraInicio" class="form-label fw-semibold">
                            Hora de Início
                        </label>
                        <input asp-for="HoraInicio" type="time" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="HoraInicio" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HoraFim" class="form-label fw-semibold">
                            Hora de Fim
                        </label>
                        <input asp-for="HoraFim" type="time" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="HoraFim" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DataCancelamento" class="form-label fw-semibold">
                            Data de Cancelamento (opcional)
                        </label>
                        <input asp-for="DataCancelamento" type="datetime-local" class="form-control rounded-3 shadow-sm" />
                        <span asp-validation-for="DataCancelamento" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check2-circle"></i> Marcar Consulta
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

