@model HealthWellbeing.Models.Consulta

@{
    ViewData["Title"] = "Create Consulta";
}

<style>
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .utente-actions {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .utente-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
    }

        .utente-btn:hover {
            filter: brightness(1.05);
        }

    .utente-body {
        background: #e6f3fb;
        min-height: 360px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    .details-card {
        background: #fff;
        border-radius: 12px;
        padding: 16px;
        border: 1px solid rgba(97,166,199,.45);
        box-shadow: 0 2px 10px rgba(0,0,0,.08);
    }

    .welcome-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 14px;
    }

    .welcome-title {
        margin: 0;
        color: #1f4f6a;
        font-weight: 800;
    }

    .hb-btn {
        border-radius: 18px !important;
        font-weight: 700 !important;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .form-label {
        font-weight: 800;
        color: #1f4f6a;
    }

    .hw-input, .hw-select {
        border-radius: 14px !important;
        border: 2px solid rgba(45,121,160,.55) !important;
        background: #eef7fd !important;
        color: #1f4f6a !important;
        font-weight: 700;
        box-shadow: 0 1px 0 rgba(0,0,0,.03);
    }

        .hw-input:focus, .hw-select:focus {
            border-color: #2d79a0 !important;
            box-shadow: 0 0 0 .2rem rgba(45,121,160,.25) !important;
            background: #fff !important;
        }
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <div class="utente-header">
                <div class="utente-header-content">
                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing" class="logo-img" />
                    </div>

                    <div class="utente-actions">
                        <a asp-action="Index" class="utente-btn">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </div>
            </div>

            <div class="utente-body">
                <div class="details-card">

                    <div class="welcome-row">
                        <h2 class="welcome-title">
                            <i class="bi bi-calendar-check me-2"></i> Marcar Nova Consulta
                        </h2>
                    </div>

                    <form asp-action="Create" method="post" class="row g-3">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="col-12 col-md-6">
                            <label asp-for="DataMarcacao" class="form-label">Data de Marcação</label>
                            <input asp-for="DataMarcacao" type="date" class="form-control hw-input" />
                            <span asp-validation-for="DataMarcacao" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="DataConsulta" class="form-label">Data da Consulta</label>
                            <input asp-for="DataConsulta" type="date" class="form-control hw-input" />
                            <span asp-validation-for="DataConsulta" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="HoraInicio" class="form-label">Hora de Início</label>
                            <input asp-for="HoraInicio" type="time" class="form-control hw-input" />
                            <span asp-validation-for="HoraInicio" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="HoraFim" class="form-label">Hora de Fim</label>
                            <input asp-for="HoraFim" type="time" class="form-control hw-input" />
                            <span asp-validation-for="HoraFim" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="IdMedico" class="form-label">Médico</label>
                            <select asp-for="IdMedico" class="form-select hw-select" asp-items="ViewBag.IdMedico">
                                <option value="">-- Selecione o médico --</option>
                            </select>
                            <span asp-validation-for="IdMedico" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="IdEspecialidade" class="form-label">Especialidade</label>
                            <select asp-for="IdEspecialidade" class="form-select hw-select" asp-items="ViewBag.IdEspecialidade">
                                <option value="">-- Selecione a especialidade --</option>
                            </select>
                            <span asp-validation-for="IdEspecialidade" class="text-danger small"></span>
                        </div>

                        <div class="col-12 d-flex gap-2 flex-wrap mt-2">
                            <button type="submit" class="btn btn-success hb-btn">
                                <i class="bi bi-check2-circle"></i> Marcar Consulta
                            </button>

                            <a asp-action="Index" class="btn btn-secondary hb-btn">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>

                </div>
            </div>

            <div class="utente-footer-bar"></div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
