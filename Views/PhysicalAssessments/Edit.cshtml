@model HealthWellbeing.Models.PhysicalAssessment

<div class="container py-4">
    <h1 class="text-primary fw-bold mb-4">Edit Assessment</h1>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark py-3">
            <h5 class="mb-0 fw-bold">Update Evaluation Records</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="PhysicalAssessmentId" />
                @* Use a mesma estrutura do Create aqui *@
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>