@model IEnumerable<HealthWellbeing.Models.CategoriaConsumivel>

@{
    ViewData["Title"] = "Categorias de Consumíveis";
}

<style>
    .btn-acao {
        display: inline-flex;
        align-items: center;
        font-weight: 500;
        padding: 4px 10px;
    }

    .badge {
        font-size: 0.85rem;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">
            Categorias de Consumíveis
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm btn-acao">
            Nova Categoria
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            Nenhuma categoria de consumível registada.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                        <th class="text-center" style="width: 230px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Nome</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-info text-white me-1 btn-acao">
                                    Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-warning text-white me-1 btn-acao">
                                    Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-danger btn-acao">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Paginação *@
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-3">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Anterior</a>
                    </li>

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Próxima</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<script>
    // Fecha alertas automaticamente
    setTimeout(() => {
        document.querySelectorAll('.alert').forEach(alert => {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 4000);
</script>
