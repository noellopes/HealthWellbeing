@model HealthWellbeing.Models.Fornecedor_Consumivel

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container mt-4">

    <h2 class="fw-bold text-danger mb-4">
        🗑 Eliminar Associação
    </h2>

    <div class="alert alert-warning shadow-sm">
        ⚠️ Tem a certeza que deseja eliminar esta associação?
        Esta ação <strong>não pode ser revertida</strong>.
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">

            <dl class="row mb-0">

                <dt class="col-sm-3 text-muted">Fornecedor</dt>
                <dd class="col-sm-9 fw-semibold">
                    @Model.Fornecedor?.NomeEmpresa
                </dd>

                <dt class="col-sm-3 text-muted">Consumível</dt>
                <dd class="col-sm-9">
                    @Model.Consumivel?.Nome
                </dd>

                <dt class="col-sm-3 text-muted">Tempo de Entrega</dt>
                <dd class="col-sm-9">
                    @(Model.TempoEntrega.HasValue ? $"{Model.TempoEntrega} dias" : "—")
                </dd>

                <dt class="col-sm-3 text-muted">Preço</dt>
                <dd class="col-sm-9 fw-bold text-success">
                    @Model.Preco.ToString("0.00") €
                </dd>

            </dl>

        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FornecedorConsumivelId" />

        <div class="d-flex gap-2">
            <button type="submit"
                    class="btn btn-danger px-4">
                ❌ Eliminar
            </button>

            <a asp-action="Index"
               class="btn btn-outline-secondary px-4">
                Cancelar
            </a>
        </div>
    </form>

</div>
