@model HealthWellbeing.Models.Fornecedor_Consumivel

@{
    ViewData["Title"] = "Detalhes";
}

<div class="container mt-4">

    <h2 class="fw-bold text-primary mb-4">
        📄 Detalhes do Fornecedor / Consumível
    </h2>

    <div class="card shadow-sm">
        <div class="card-body">

            <dl class="row mb-0">

                <dt class="col-sm-3 text-muted">
                    🏢 Fornecedor
                </dt>
                <dd class="col-sm-9 fw-semibold">
                    @Model.Fornecedor?.NomeEmpresa
                </dd>

                <dt class="col-sm-3 text-muted">
                    📦 Consumível
                </dt>
                <dd class="col-sm-9">
                    @Model.Consumivel?.Nome
                </dd>

                <dt class="col-sm-3 text-muted">
                    ⏱ Tempo de Entrega
                </dt>
                <dd class="col-sm-9">
                    @(Model.TempoEntrega.HasValue ? $"{Model.TempoEntrega} dias" : "—")
                </dd>

                <dt class="col-sm-3 text-muted">
                    💰 Preço
                </dt>
                <dd class="col-sm-9 fw-bold text-success">
                    @Model.Preco.ToString("0.00") €
                </dd>

            </dl>

        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a asp-action="Edit"
           asp-route-id="@Model.FornecedorConsumivelId"
           class="btn btn-warning px-4">
            ✏️ Editar
        </a>

        <a asp-action="Index"
           class="btn btn-outline-secondary px-4">
            Voltar à lista
        </a>
    </div>

</div>
