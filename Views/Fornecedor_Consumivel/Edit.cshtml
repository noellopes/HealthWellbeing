@model HealthWellbeing.Models.Fornecedor_Consumivel

@{
    ViewData["Title"] = "Editar Associação";
}

<style>
    .edit-container {
        max-width: 600px;
        margin: 40px auto;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background-color: #0d6efd;
        color: white;
        font-weight: 600;
        font-size: 1.25rem;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-spacing {
        margin-right: 10px;
    }
</style>

<div class="edit-container">
    <div class="card">
        <div class="card-header">
            ✏️ Editar Associação Fornecedor–Consumível
        </div>

        <div class="card-body">

            @if (TempData["ErrorMessageLigaçaoExistente"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    @TempData["ErrorMessageLigaçaoExistente"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="FornecedorConsumivelId" />

                <div class="mb-3">
                    <label asp-for="FornecedorId" class="form-label">Fornecedor</label>
                    <select asp-for="FornecedorId"
                            class="form-control"
                            asp-items="ViewBag.FornecedorId">
                    </select>
                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConsumivelId" class="form-label">Consumível</label>
                    <select asp-for="ConsumivelId"
                            class="form-control"
                            asp-items="ViewBag.ConsumivelId">
                    </select>
                    <span asp-validation-for="ConsumivelId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TempoEntrega" class="form-label"></label>
                    <input asp-for="TempoEntrega" class="form-control" />
                    <span asp-validation-for="TempoEntrega" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Preco" class="form-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary btn-spacing">
                        💾 Guardar alterações
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        ⬅️ Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
