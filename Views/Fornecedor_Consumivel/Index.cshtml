@model IEnumerable<HealthWellbeing.Models.Fornecedor_Consumivel>

@{
    ViewData["Title"] = "Associações Fornecedor–Consumível";
}

<style>
    .btn-acao {
        display: inline-flex;
        align-items: center;
        font-weight: 500;
        padding: 4px 10px;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">
            🔗 Fornecedor – Consumível
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm btn-acao">
            ➕ Adicionar Novo
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            Nenhuma associação registada.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Fornecedor</th>
                        <th>Consumível</th>
                        <th>Tempo de Entrega</th>
                        <th>Preço</th>
                        <th class="text-center" style="width: 230px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">
                                @item.Fornecedor.NomeEmpresa
                            </td>
                            <td>
                                @item.Consumivel.Nome
                            </td>
                            <td>
                                @item.TempoEntrega
                            </td>
                            <td>
                                @item.Preco
                            </td>
                            <td class="text-center">
                                <a asp-action="Details"
                                   asp-route-id="@item.FornecedorConsumivelId"
                                   class="btn btn-sm btn-info text-white me-1 btn-acao">
                                    Ver
                                </a>
                                <a asp-action="Edit"
                                   asp-route-id="@item.FornecedorConsumivelId"
                                   class="btn btn-sm btn-warning text-white me-1 btn-acao">
                                    Editar
                                </a>
                                <a asp-action="Delete"
                                   asp-route-id="@item.FornecedorConsumivelId"
                                   class="btn btn-sm btn-danger btn-acao">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
