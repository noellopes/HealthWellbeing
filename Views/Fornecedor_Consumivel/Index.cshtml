@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Fornecedor_Consumivel>

@{
    ViewData["Title"] = "Fornecedor – Consumível";
}

<style>
    .btn-acao {
        display: inline-flex;
        align-items: center;
        font-weight: 500;
        padding: 4px 10px;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">
            🔗 Fornecedor – Consumível
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm btn-acao">
            ➕ Adicionar Novo
        </a>
    </div>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="row g-2">
            <div class="col-md-10">
                <input type="text"
                       name="searchConsumivel"
                       value="@ViewBag.SearchConsumivel"
                       class="form-control shadow-sm"
                       placeholder="Procurar por consumível..." />
            </div>
            <div class="col-md-2 d-flex">
                <button type="submit" class="btn btn-primary w-50 me-2">
                    Pesquisar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary w-50">
                    Limpar
                </a>
            </div>
        </div>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            @if (string.IsNullOrEmpty(ViewBag.SearchConsumivel as string))
            {
                <span>Nenhuma associação registada.</span>
            }
            else
            {
                <span>Nenhuma associação encontrada para o consumível pesquisado.</span>
            }
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
						<th>Consumível</th>
                        <th>Fornecedor</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="fw-semibold">
                                @item.Consumivel.Nome
                            </td>
                            <td class="fw-semibold">
                                @item.Fornecedor.NomeEmpresa
                            </td>
                            <td class="text-end">
                                <a asp-action="Details"
                                   asp-route-id="@item.FornecedorConsumivelId"
                                   class="btn btn-sm btn-info text-white me-1 btn-acao">
                                    📄 Detalhes
                                </a>
                                <a asp-action="Edit"
                                   asp-route-id="@item.FornecedorConsumivelId"
                                   class="btn btn-sm btn-warning text-white me-1 btn-acao">
                                    ✏️ Editar
                                </a>
                                <a asp-action="Delete"
                                   asp-route-id="@item.FornecedorConsumivelId"
                                   class="btn btn-sm btn-danger text-white me-1 btn-acao">
                                    🗑️ Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.CurrentPage - 1)"
                   asp-route-searchConsumivel="@ViewBag.SearchConsumivel">
                    Anterior
                </a>
            </li>

            @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchConsumivel="@ViewBag.SearchConsumivel">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.CurrentPage + 1)"
                   asp-route-searchConsumivel="@ViewBag.SearchConsumivel">
                    Seguinte
                </a>
            </li>

        </ul>
    </nav>
}

<script>
    setTimeout(() => {
        document.querySelectorAll('.alert').forEach(alert => {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 4000);
</script>
