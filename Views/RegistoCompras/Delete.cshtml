@model HealthWellbeing.Models.CompraOpcao

@{
    ViewData["Title"] = "Eliminar Opção";
}

<div class="container mt-5">

    <h3 class="text-danger fw-bold mb-4">🗑 Eliminar Opção de Compra</h3>

    <div class="alert alert-warning">
        Tem a certeza que pretende eliminar esta opção de compra?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Consumível</dt>
        <dd class="col-sm-9">@Model.Consumivel?.Nome</dd>

        <dt class="col-sm-3">Fornecedor</dt>
        <dd class="col-sm-9">@Model.Fornecedor?.NomeEmpresa</dd>

        <dt class="col-sm-3">Preço</dt>
        <dd class="col-sm-9">@Model.Preco €</dd>

        <dt class="col-sm-3">Tempo Entrega</dt>
        <dd class="col-sm-9">@Model.TempoEntrega dias</dd>

        <dt class="col-sm-3">Quantidade</dt>
        <dd class="col-sm-9">@Model.Quantidade</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CompraOpcaoId" />

        <button type="submit" class="btn btn-danger px-4">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
    </form>

</div>
