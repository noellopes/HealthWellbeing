@model HealthWellbeing.Models.CompraOpcao

@{
    ViewData["Title"] = "Adicionar Opção de Compra";
}

<h2 class="fw-bold text-primary mb-4">➕ Adicionar Opção de Compra</h2>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label class="form-label fw-bold">Consumível</label>
        <select asp-for="ConsumivelId" class="form-select">
            <option value="">-- Selecionar --</option>

            @foreach (var c in ViewBag.Consumiveis)
            {
                <option value="@c.ConsumivelId">@c.Nome</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Fornecedor</label>
        <select asp-for="FornecedorId" class="form-select">
            <option value="">-- Selecionar --</option>

            @foreach (var f in ViewBag.Fornecedores)
            {
                <option value="@f.FornecedorId">@f.NomeEmpresa</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Preço (€)</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Tempo de Entrega (dias)</label>
        <input asp-for="TempoEntrega" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Quantidade Disponível</label>
        <input asp-for="Quantidade" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>
