@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.HistoricoAtividade>

@{
    ViewData["Title"] = "Histórico de Atividades";

    bool isAdminOrProf =
        User.IsInRole("Administrador") ||
        User.IsInRole("ProfissionalSaude");
}

<h1>Histórico de Atividades</h1>

<p class="d-flex justify-content-between align-items-center">
    <span></span>
    <span>
        <a class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#searchForm">
            <i class="bi bi-search"></i> Pesquisa
        </a>
    </span>
</p>

<div class="collapse mb-3" id="searchForm">
    <div class="card card-body">
        <form asp-action="Index" method="get" class="row g-3">

            @if (isAdminOrProf)
            {
                <div class="col-md-4">
                    <label class="form-label">Utente</label>
                    <input name="utente" value="@ViewBag.Utente" class="form-control" />
                </div>
            }

            <div class="col-md-4">
                <label class="form-label">Exercício</label>
                <input name="exercicio" value="@ViewBag.Exercicio" class="form-control" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Data Início</label>
                <input type="date" name="dataInicio" value="@ViewBag.DataInicio" class="form-control" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Data Fim</label>
                <input type="date" name="dataFim" value="@ViewBag.DataFim" class="form-control" />
            </div>

            <div class="col-md-12">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Procurar
                </button>
                <a asp-action="Index" class="btn btn-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Items == null || !Model.Items.Any())
{
    <div class="alert alert-warning">
        Nenhuma atividade encontrada.
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                @if (isAdminOrProf)
                {
                    <th>Utente</th>
                }
                <th>Exercício</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    @if (isAdminOrProf)
                    {
                        <td>@item.UtenteGrupo7.Nome</td>
                    }
                    <td>@item.Exercicio.ExercicioNome</td>
                    <td>@item.DataRealizacao.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- 📄 PAGINAÇÃO -->
    <nav>
        <ul class="pagination">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="1"
                   asp-route-utente="@ViewBag.Utente"
                   asp-route-exercicio="@ViewBag.Exercicio"
                   asp-route-dataInicio="@ViewBag.DataInicio"
                   asp-route-dataFim="@ViewBag.DataFim">
                    Primeira
                </a>
            </li>

            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
            {
                <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-route-page="@p"
                       asp-route-utente="@ViewBag.Utente"
                       asp-route-exercicio="@ViewBag.Exercicio"
                       asp-route-dataInicio="@ViewBag.DataInicio"
                       asp-route-dataFim="@ViewBag.DataFim">
                        @p
                    </a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="@Model.TotalPages"
                   asp-route-utente="@ViewBag.Utente"
                   asp-route-exercicio="@ViewBag.Exercicio"
                   asp-route-dataInicio="@ViewBag.DataInicio"
                   asp-route-dataFim="@ViewBag.DataFim">
                    Última
                </a>
            </li>
        </ul>
    </nav>
}

