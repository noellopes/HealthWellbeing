@model HealthWellbeing.Models.ProgressRecord

@{
    ViewData["Title"] = "Novo Registo de Progresso";
}

<h1>Novo Registo de Progresso</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ClientId" class="control-label">Cliente</label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId">
                    <option value="">-- Selecione um cliente --</option>
                </select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RecordDate" class="control-label"></label>
                <input asp-for="RecordDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="RecordDate" class="text-danger"></span>
            </div>

            <hr />
            <h5>Métricas de Saúde</h5>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Weight" class="control-label"></label>
                        <input asp-for="Weight" class="form-control" placeholder="Ex: 72.5" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="BodyFatPercentage" class="control-label"></label>
                        <input asp-for="BodyFatPercentage" class="form-control" placeholder="Ex: 18.5" />
                        <span asp-validation-for="BodyFatPercentage" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="Cholesterol" class="control-label"></label>
                        <input asp-for="Cholesterol" class="form-control" placeholder="Ex: 180" />
                        <span asp-validation-for="Cholesterol" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="BMI" class="control-label"></label>
                        <input asp-for="BMI" class="form-control" placeholder="Ex: 23.1" />
                        <span asp-validation-for="BMI" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="MuscleMass" class="control-label"></label>
                        <input asp-for="MuscleMass" class="form-control" placeholder="Ex: 35.2" />
                        <span asp-validation-for="MuscleMass" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />
            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Observações sobre o progresso do cliente..."></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar Registo" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
