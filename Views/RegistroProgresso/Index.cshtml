@model HealthWellbeing.ViewModels.ProgressRecordIndexViewModel

@{
    ViewData["Title"] = "Registos de Progresso";
}

<h1>Registos de Progresso</h1>

<!-- Search and Filter Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Pesquisar Cliente</label>
                <input type="text" name="searchString" class="form-control" placeholder="Nome do cliente..." value="@ViewData["CurrentSearch"]" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Data Início</label>
                <input type="date" name="dateFrom" class="form-control" value="@ViewData["DateFrom"]" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Data Fim</label>
                <input type="date" name="dateTo" class="form-control" value="@ViewData["DateTo"]" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Filtrar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>

@if (User.IsInRole("Nutricionista"))
{
    <p>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Novo Registo</a>
    </p>
}

@if (Model.Records.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Cliente</th>
                    <th>Data</th>
                    <th>Peso (kg)</th>
                    <th>Gordura (%)</th>
                    <th>Colesterol</th>
                    <th>IMC</th>
                    <th>Massa Muscular</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Records)
                {
                    <tr>
                        <td>@item.Client?.Name</td>
                        <td>@item.RecordDate.ToShortDateString()</td>
                        <td>@(item.Weight?.ToString("F1") ?? "-")</td>
                        <td>@(item.BodyFatPercentage?.ToString("F1") ?? "-")</td>
                        <td>@(item.Cholesterol?.ToString("F0") ?? "-")</td>
                        <td>@(item.BMI?.ToString("F1") ?? "-")</td>
                        <td>@(item.MuscleMass?.ToString("F1") ?? "-")</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Details" asp-route-id="@item.ProgressRecordId" class="btn btn-info" title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="History" asp-route-id="@item.ClientId" class="btn btn-secondary" title="Histórico">
                                    <i class="bi bi-clock-history"></i>
                                </a>
                                <a asp-action="Suggestions" asp-route-id="@item.ClientId" class="btn btn-warning" title="Sugestões">
                                    <i class="bi bi-lightbulb"></i>
                                </a>
                                @if (User.IsInRole("Nutricionista"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.ProgressRecordId" class="btn btn-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProgressRecordId" class="btn btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <nav aria-label="Navegação de páginas">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <span class="text-muted">
                    Mostrando @((Model.PageIndex - 1) * Model.PageSize + 1) a @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount)) de @Model.TotalCount registos
                </span>
            </div>
            <ul class="pagination mb-0">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-searchString="@ViewData["CurrentSearch"]" asp-route-dateFrom="@ViewData["DateFrom"]" asp-route-dateTo="@ViewData["DateTo"]">
                            &laquo; Primeira
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex - 1)" asp-route-searchString="@ViewData["CurrentSearch"]" asp-route-dateFrom="@ViewData["DateFrom"]" asp-route-dateTo="@ViewData["DateTo"]">
                            Anterior
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">&laquo; Primeira</span>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Anterior</span>
                    </li>
                }

                @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@ViewData["CurrentSearch"]" asp-route-dateFrom="@ViewData["DateFrom"]" asp-route-dateTo="@ViewData["DateTo"]">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageIndex + 1)" asp-route-searchString="@ViewData["CurrentSearch"]" asp-route-dateFrom="@ViewData["DateFrom"]" asp-route-dateTo="@ViewData["DateTo"]">
                            Próxima
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-searchString="@ViewData["CurrentSearch"]" asp-route-dateFrom="@ViewData["DateFrom"]" asp-route-dateTo="@ViewData["DateTo"]">
                            Última &raquo;
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Próxima</span>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Última &raquo;</span>
                    </li>
                }
            </ul>
        </div>
    </nav>
}
else
{
    <div class="alert alert-info">
        @if (User.IsInRole("Nutricionista"))
        {
            <text>Ainda não existem registos de progresso. Clique em "Novo Registo" para criar.</text>
        }
        else
        {
            <text>Ainda não existem registos de progresso para a sua conta.</text>
        }
    </div>
}
