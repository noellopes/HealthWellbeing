<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthWellbeing.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HealthWellbeing</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @* --- MANAGER MENU (Only if Gestor) --- *@
                        @if (User.IsInRole("Gestor"))
                        {
                            // 1. Gym Management Menu
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Gym Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Client" asp-action="Index">Client</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Member" asp-action="Index">Member</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Plan" asp-action="Index">Plan</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="MemberPlan" asp-action="Index">MemberPlan</a></li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li><a class="dropdown-item" asp-area="" asp-controller="Trainer" asp-action="Index">Trainer</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Training" asp-action="Index">Training</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="TrainingPlan" asp-action="Index">TrainingPlan</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="TrainingType" asp-action="Index">TrainingType</a></li>
                                </ul>
                            </li>

                            // 2. Gamification Management Menu
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle fw-bold" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-controller me-1"></i> Gamification
                                </a>
                                <ul class="dropdown-menu">
                                    <li><h6 class="dropdown-header">Events & Activities</h6></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Events" asp-action="Index">Events</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="EventTypes" asp-action="Index">Event Types</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Activities" asp-action="Index">Activities</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="ActivityTypes" asp-action="Index">Activity Types</a></li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li><h6 class="dropdown-header">Rewards</h6></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Badges" asp-action="Index">Badges</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="BadgeTypes" asp-action="Index">Badge Types</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Levels" asp-action="Index">Levels</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="LevelCategories" asp-action="Index">Level Categories</a></li>
                                </ul>
                            </li>
                        }

                        @* --- CUSTOMER MENU (Only if Utente) --- *@
                        @if (User.IsInRole("Utente"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle fw-bold" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-workspace me-1"></i> Client Area
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item fw-bold" asp-area="" asp-controller="ViewCustomer" asp-action="Index">
                                            <i class="bi bi-speedometer2 me-2 text-muted"></i> Dashboard
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="CustomerActivity" asp-action="Index">
                                            <i class="bi bi-activity me-2 text-muted"></i> Activities Library
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="CustomerEvents" asp-action="Index">
                                            <i class="bi bi-calendar-event me-2 text-muted"></i> Events Calendar
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="MyBadges" asp-action="Index">
                                            <i class="bi bi-award me-2 text-muted"></i> My Badges
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="CustomerLevel" asp-action="Index">
                                            <i class="bi bi-bar-chart-line me-2 text-muted"></i> My Progress (Level)
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-3">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HealthWellbeing - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>