@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthWellbeing.styles.css" asp-append-version="true" />
</head>

<body class="bg-light">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-sm mb-4">
            <div class="container-fluid">

                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse"></i> HealthWellbeing
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">

                    <!-- MENU -->
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link @(controller == "Home" ? "active fw-bold" : "")"
                               asp-controller="Home"
                               asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(controller == "UtenteBalneario" ? "active fw-bold" : "")"
                               asp-controller="UtenteBalneario"
                               asp-action="Index">
                                <i class="bi bi-people"></i> Utentes
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(controller == "Terapeutas" ? "active fw-bold" : "")"
                               asp-controller="Terapeutas"
                               asp-action="Index">
                                <i class="bi bi-person-badge"></i> Terapeutas
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(controller == "Agendamentos" ? "active fw-bold" : "")"
                               asp-controller="Agendamentos"
                               asp-action="Index">
                                <i class="bi bi-calendar-check"></i> Agendamentos
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(controller == "ClienteBalneario" ? "active fw-bold" : "")"
                               asp-controller="ClienteBalneario"
                               asp-action="Index">
                                <i class="bi bi-person-heart"></i> Cliente Balneário
                            </a>
                        </li>

                    </ul>

                    <!-- LOGIN / REGISTER -->
                    <ul class="navbar-nav ms-auto">
                        <partial name="_LoginPartial" />
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- CONTEÚDO -->
    <div class="container pb-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted bg-white">
        <div class="container text-center py-3">
            &copy; 2026 - HealthWellbeing ·
            <a asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>