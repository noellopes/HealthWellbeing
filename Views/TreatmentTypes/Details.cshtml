@model HealthWellbeing.Models.TreatmentType

@{
    ViewData["Title"] = "Detalhes do Tipo de Tratamento";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0 rounded-4">

        <div class="card-header bg-info text-white rounded-top-4 py-3">
            <h4 class="mb-0">
                <i class="bi bi-info-circle me-2"></i>Detalhes do Tipo de Tratamento
            </h4>
        </div>

        <div class="card-body p-4">

            <dl class="row mb-4">

                <!-- Nome -->
                <dt class="col-sm-3 fw-semibold text-secondary">Nome</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <!-- Descrição -->
                <dt class="col-sm-3 fw-semibold text-secondary">Descrição</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <!-- Duração -->
                <dt class="col-sm-3 fw-semibold text-secondary">Duração Estimada</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary px-3 py-2 rounded-pill">
                        @Model.EstimatedDuration min
                    </span>
                </dd>

                <!-- Prioridade -->
                <dt class="col-sm-3 fw-semibold text-secondary">Prioridade</dt>
                <dd class="col-sm-9">
                    @if (Model.Priority == "Urgente")
                    {
                        <span class="badge bg-danger px-3 py-2 rounded-pill">Urgente</span>
                    }
                    else if (Model.Priority == "Normal")
                    {
                        <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">Normal</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary px-3 py-2 rounded-pill">Rotina</span>
                    }
                </dd>

            </dl>

            <!-- Botões -->
            <div class="d-flex justify-content-between mt-4">

                <a asp-action="Index" class="btn btn-outline-secondary rounded-3 px-4">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>

                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-3 px-4">
                    <i class="bi bi-pencil"></i> Editar
                </a>

            </div>

        </div>

    </div>

</div>
