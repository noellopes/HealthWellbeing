@model HealthWellbeing.Models.TreatmentType

@{
    ViewData["Title"] = "Editar Tipo de Tratamento";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0 rounded-4">

        <div class="card-header bg-warning text-dark rounded-top-4 py-3">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>Editar Tipo de Tratamento
            </h4>
        </div>

        <div class="card-body p-4">

            <form asp-action="Edit">

                <input type="hidden" asp-for="Id" />

                <!-- Nome -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control rounded-3" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- Descrição -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" rows="3" class="form-control rounded-3"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <!-- Duração -->
                <div class="mb-3">
                    <label asp-for="EstimatedDuration" class="form-label fw-semibold"></label>
                    <input asp-for="EstimatedDuration" type="number" class="form-control rounded-3" min="1" max="480" />
                    <span asp-validation-for="EstimatedDuration" class="text-danger small"></span>
                </div>

                <!-- Prioridade -->
                <div class="mb-3">
                    <label asp-for="Priority" class="form-label fw-semibold"></label>
                    <select asp-for="Priority" class="form-select rounded-3">
                        <option value="Urgente" selected="@(Model.Priority == "Urgente")">Urgente</option>
                        <option value="Normal" selected="@(Model.Priority == "Normal")">Normal</option>
                        <option value="Rotina" selected="@(Model.Priority == "Rotina")">Rotina</option>
                    </select>
                </div>

                <!-- Botões -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-3 px-4">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>

                    <button type="submit" class="btn btn-warning text-dark rounded-3 px-4">
                        <i class="bi bi-check2-circle"></i> Guardar
                    </button>
                </div>

            </form>

        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
