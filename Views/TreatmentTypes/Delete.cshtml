@model HealthWellbeing.Models.TreatmentType

@{
    ViewData["Title"] = "Eliminar Tipo de Tratamento";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0 rounded-4">

        <div class="card-header bg-danger text-white rounded-top-4 py-3">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-octagon me-2"></i>Confirmar Eliminação
            </h4>
        </div>

        <div class="card-body p-4">

            <p class="text-secondary mb-4 fs-5">
                Tens a certeza de que queres eliminar este tipo de tratamento?
            </p>

            <dl class="row mb-4">

                <!-- Nome -->
                <dt class="col-sm-3 fw-semibold text-secondary">Nome</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <!-- Descrição -->
                <dt class="col-sm-3 fw-semibold text-secondary">Descrição</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <!-- Duração -->
                <dt class="col-sm-3 fw-semibold text-secondary">Duração Estimada</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary px-3 py-2 rounded-pill">@Model.EstimatedDuration min</span>
                </dd>

                <!-- Prioridade -->
                <dt class="col-sm-3 fw-semibold text-secondary">Prioridade</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">@Model.Priority</span>
                </dd>

            </dl>

            <!-- Botões -->
            <form asp-action="Delete" class="d-flex justify-content-between align-items-center mt-4">

                <input type="hidden" asp-for="Id" />

                <a asp-action="Index" class="btn btn-outline-secondary rounded-3 px-4">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>

                <button type="submit" class="btn btn-danger rounded-3 px-4">
                    <i class="bi bi-trash"></i> Eliminar
                </button>

            </form>

        </div>

    </div>

</div>
