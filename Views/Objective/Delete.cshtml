@model HealthWellbeing.Models.Goal
@{
    ViewData["Title"] = "Delete Objective";
}

<h1 class="mb-3">Delete Objective</h1>
<hr />

<h5>Are you sure you want to delete this objective?</h5>

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Category)</dt>
    <dd class="col-sm-10">@Model.Category</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Details)</dt>
    <dd class="col-sm-10">@Model.Details</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ObjectiveId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
