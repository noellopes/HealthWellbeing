@model IEnumerable<HealthWellbeing.Models.Objective>
@{
    ViewData["Title"] = "Objectives";
}

<h1 class="mb-3">Objectives</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create new</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Category)</th>
            <th>@Html.DisplayNameFor(m => m.First().Details)</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Details</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.ObjectiveId">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.ObjectiveId">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.ObjectiveId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
