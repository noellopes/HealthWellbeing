@using HealthWellbeingRoom.Models.FileMedicalDevices;
@model MedicalDevices;

@{
    ViewData["Title"] = $"Editar Dispositivo: {Model.Name}";
}

<h1>@ViewData["Title"]</h1>
<p class="lead">Altere apenas os campos necessários.</p>

<hr />

<div class="row">
    <div class="col-md-6">

        <form asp-action="UpdateMedicalDevices" method="post">

            @*(ModelOnly) -> mostra apenas o erro na validação*@
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nome do Equipamento</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label">Tipo de Dispositivo (Categoria)</label>
                <input asp-for="Type" class="form-control">
                <span asp-validation-for="Type" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Specification" class="form-label">Especificação Detalhada</label>
                <input asp-for="Specification" class="form-control">
                <span asp-validation-for="Specification" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Quantidade</label>
                <input asp-for="Quantity" class="form-control" type="number" min="1">
                <span asp-validation-for="Quantity" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label">Status do Dispositivo</label>
                <input asp-for="Status" class="form-control">
                <span asp-validation-for="Status" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Observation" class="form-label">Observações</label>
                <input asp-for="Observation" class="form-control">
                <span asp-validation-for="Observation" class="text-danger small"></span>
            </div>

            <input asp-for="RegistrationDate" type="hidden" />
            <input asp-for="DevicesID" type="hidden" />

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Salvar Alterações
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar e Voltar
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        //As validações do C# apareçam imediatamente no navegador
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}