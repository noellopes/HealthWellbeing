@using HealthWellbeingRoom.Models.FileMedicalDevices;
@model MedicalDevices; 
@{
    ViewData["Title"] = $"Detalhes: {Model.Name}"; //mostra o nome do dispositivo selecionado
}

<h1>@ViewData["Title"]</h1>
<p>Informações completas do dispositivo selecionado.</p>
<hr />

<div class="card shadow-sm p-4">
    <dl class="row">

        <dt class="col-sm-4">ID:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.DevicesID)</dd>

        <dt class="col-sm-4">Nome do dispositivo:</dt>
        <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.Name)</strong></dd>

        <dt class="col-sm-4">Tipo do dispositivo:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

        <dt class="col-sm-4">Especificação:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Specification)</dd>

        <dt class="col-sm-4">Quantidade:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

        <dt class="col-sm-4">Data do registo:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.RegistrationDate)</dd>

        <dt class="col-sm-4">Status:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

        <dt class="col-sm-4">Observação:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Observation)</dd>

        <dt class="col-sm-4">ID da Sala:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.SalaID)</dd>
    </dl>
</div>


<div class="mt-4">
    <a asp-action="UpdateMedicalDevices" asp-route-id="@Model.DevicesID" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Editar
    </a>
    <a asp-action="DeleteMedicalDevices" asp-route-id="@Model.DevicesID" class="btn btn-danger">
        <i class="bi bi-trash"></i> Eliminar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Voltar
    </a>
</div>
