@using HealthWellbeingRoom.Models.FileMedicalDevices;
@model MedicalDevices;

@{
    ViewData["Title"] = "Registar novo Dispositivo Médico";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-6">

        @if (TempData["Mensagem de sucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Mensagem de sucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="CreateMedicalDevices" method="post">

            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nome do Dispositivo</label>
                <input asp-for="Name" class="form-control" placeholder="Ex: Monitor Multiparamétrico, Bomba de Infusão, Carrinho de Urgência">
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label">Tipo de Dispositivo (Categoria)</label>
                <input asp-for="Type" class="form-control" placeholder="Ex: Monitorização, Equipamento Cirúrgico, Diagnóstico, Suporte Vital">
                <span asp-validation-for="Type" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Specification" class="form-label">Especificação Detalhada</label>
                <input asp-for="Specification" class="form-control" placeholder="Ex: Marca Philips, Modelo VM8, Bateria 8h, Número de Série (S/N) 123456">
                <span asp-validation-for="Specification" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Quantidade a Adicionar</label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" placeholder="1">
                <span asp-validation-for="Quantity" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label">Status</label>
                <input asp-for="Status" class="form-control" placeholder="Ex: Disponível, Em Uso, Em Manutenção.">
                <span asp-validation-for="Status" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Observation" class="form-label">Observações</label>
                <input asp-for="Observation" class="form-control" placeholder="Ex: Adquirido em 2024. Calibração necessária em Dezembro.">
                <span asp-validation-for="Observation" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SalaID" class="form-label">ID da Sala</label>
                <input asp-for="SalaID" class="form-control" type="number" min="1" placeholder="1">
                <span asp-validation-for="SalaID" class="text-danger small"></span>
            </div>

            <input asp-for="RegistrationDate" type="hidden" />
            <input asp-for="DevicesID" type="hidden" />

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Submeter Registo
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar e Ver a Lista
                </a>
            </div>

        </form>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}