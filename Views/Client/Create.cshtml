@model Client

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Create Your Client Account</h1>

<div class="card shadow-sm border-primary">
    <div class="card-body">
        <h4 class="text-primary mb-3">Client Registration</h4>

        <form asp-action="Create" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold">Full Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your First and Last Name.">
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your Email Address.">
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-semibold">Phone Number</label>
                <input asp-for="Phone" class="form-control" placeholder="Enter your Phone Number.">
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CreateMember" class="form-label fw-semibold">Would you like to be a member of the Gym?</label>

                <div class="form-check">
                    <input asp-for="CreateMember" id="create_member_yes" class="form-check-input" type="radio" value="true">
                    <label for="create_member_yes" class="form-check-label">Yes</label>
                </div>

                <div class="form-check">
                    <input asp-for="CreateMember" id="create_member_no" class="form-check-input" type="radio" value="false">
                    <label for="create_member_no" class="form-check-label">No</label>
                </div>

                <span asp-validation-for="CreateMember" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
