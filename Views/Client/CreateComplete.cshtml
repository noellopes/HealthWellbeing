@model Client

@{
    ViewData["Title"] = "Create Completed!";
}

<h1>You are now a client of the Gym!!!</h1>

<div class="card shadow-sm border-success mt-4">
    <div class="card-body">
        <h4 class="text-success">Create Completed!</h4>
        <p class="text-muted">Thank you for creating an account!</p>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Membership</dt>
            <dd class="col-sm-9">
                @(Model.CreateMember switch
                {
                    true => "Yes — I am now a member of the Gym!",
                    false => "No",
                    _ => "Pending Acceptation..."
                })
            </dd>
        </dl>

        <hr />
        <a asp-action="Index" class="btn btn-outline-success">Ok</a>
    </div>
</div>
