@model HealthWellbeing.Models.Client

@{
    ViewData["Title"] = "Client Created";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card text-center shadow-lg p-5">

            <h1 class="display-4 text-success mb-3">
                <i class="bi bi-check-circle-fill"></i> Client Successfully Registered!
            </h1>

            <p class="lead">The client **@ViewBag.ClientName** has been added to the system.</p>
            <p class="mb-4">Would you like to create a membership for this client now?</p>

            <div class="d-grid gap-2">
                <a asp-controller="Member" asp-action="Create" asp-route-clientId="@ViewBag.ClientId" class="btn btn-primary btn-lg shadow">
                    <i class="bi bi-person-plus"></i> Create Membership Now
                </a>

                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    Back to Client List
                </a>
            </div>

        </div>
    </div>
</div>
