@model HealthWellbeing.Models.Client

@{
    ViewData["Title"] = "Client Details";
    // Tenta encontrar o plano ativo
    var activePlan = Model.Member?.MemberPlans?.FirstOrDefault(mp => mp.Status == "Active")?.Plan;
}

<div class="container py-5">
    <div class="d-flex align-items-center mb-4">
        <h1 class="text-primary me-3"><i class="bi bi-person-badge"></i> Client Details</h1>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="bi bi-person-lines-fill me-2"></i>Personal Information
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Full Name</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Name</dd>

                        <dt class="col-sm-4 text-muted">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4 text-muted">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4 text-muted">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">
                    <i class="bi bi-award me-2"></i>Membership & Active Plans
                </div>
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    @if (Model.Member != null)
                    {
                        <h3 class="text-success fw-bold">Active Member</h3>
                        <p class="text-muted small">Registered since: @Model.RegistrationDate.Year</p>
                        <hr />

                        <h6 class="fw-bold">Current Active Plan:</h6>
                        @if (activePlan != null)
                        {
                            <span class="badge bg-success fs-5 px-4 py-2">@activePlan.Name</span>
                        }
                        else
                        {
                            <div class="alert alert-warning py-2">No active plan assigned.</div>
                        }

                        <a asp-controller="Member" asp-action="Details" asp-route-id="@Model.Member.MemberId"
                           class="btn btn-outline-dark mt-4 rounded-pill btn-sm">
                            Go to Membership Dashboard <i class="bi bi-arrow-right"></i>
                        </a>
                    }
                    else
                    {
                        <h3 class="text-muted">Not a Member</h3>
                        <p>This client has no active subscription.</p>
                        <a asp-controller="Plan" asp-action="PublicIndex" class="btn btn-primary mt-3 rounded-pill">
                            Subscribe to Plan
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-3">
        @if (User.IsInRole("Administrator") || User.IsInRole("Trainer"))
        {
            <a asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-warning">Edit Client</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        }
        else
        {
            <a asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-warning">Edit My Profile</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
        }
    </div>
</div>