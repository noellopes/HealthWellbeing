@model HealthWellbeing.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">

            <div class="alert alert-danger p-4 shadow-sm border-0 mb-4 rounded-4" role="alert">
                <i class="bi bi-exclamation-octagon-fill fs-1 text-danger d-block mb-3"></i>
                <h2 class="alert-heading">Are you sure?</h2>
                <p class="mb-0">You are about to delete <strong>@Model.Name</strong> from the system. This action cannot be undone and will affect their gym history.</p>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4 text-start">
                    <div class="row">
                        <div class="col-sm-4 text-muted fw-bold small">Client ID:</div>
                        <div class="col-sm-8 mb-2">#@Model.ClientId</div>

                        <div class="col-sm-4 text-muted fw-bold small">Registration:</div>
                        <div class="col-sm-8 mb-2">@Model.RegistrationDate.ToLongDateString()</div>

                        @if (Model.Member != null)
                        {
                            <div class="col-sm-12 text-danger mt-3 small fw-bold">
                                <i class="bi bi-info-circle-fill me-1"></i> This client has an active membership!
                            </div>
                        }
                    </div>
                </div>
            </div>

            <form asp-action="Delete">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ClientId" />

                <div class="d-grid gap-2 d-md-block">
                    <button type="submit" class="btn btn-danger btn-lg px-5 shadow-sm me-md-2">
                        <i class="bi bi-trash-fill me-2"></i> Delete Forever
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 shadow-sm">
                        <i class="bi bi-x-circle me-2"></i> Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>