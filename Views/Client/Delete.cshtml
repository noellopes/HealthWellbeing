@model HealthWellbeing.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<h1 class="display-4 text-danger mb-3">Delete Client</h1>

<h3 class="alert alert-warning border-0 shadow-sm p-3" role="alert">
    ⚠️ Are you sure you want to delete the client: <strong class="text-danger">@Model.Name</strong>?
</h3>
<hr class="mb-4" />

<div class="card shadow-lg mb-4">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">Client Information to be Deleted</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.CreateMember)
            </dt>
            <dd class="col-sm-9">
                @{
                    string badgeClass = Model.CreateMember == true ? "bg-success" : (Model.CreateMember == false ? "bg-danger" : "bg-warning text-dark");
                }
                <span class="badge @badgeClass fs-6">
                    @Model.CreateMemberText
                </span>
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="d-flex align-items-center mt-4">
    <input type="hidden" asp-for="ClientId" />

    <button type="submit" class="btn btn-danger btn-lg shadow-sm me-3">
        <i class="bi bi-trash"></i> Confirm Delete
    </button>

    <a asp-action="Index" class="btn btn-secondary btn-lg">
        <i class="bi bi-x-circle"></i> Cancel
    </a>
</form>