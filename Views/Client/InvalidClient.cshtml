@model HealthWellbeing.Models.Client

@{
    ViewData["Title"] = "Invalid Client";
}

<div class="container py-5">
    <div class="alert alert-warning d-flex align-items-center p-4 border border-warning rounded shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-4" style="font-size: 3rem;"></i>
        <div>
            <h4 class="alert-heading mb-2">Client Not Found</h4>
            <p class="mb-0">The selected client no longer exists in the Health & Wellbeing system. It may have been removed by an administrator.</p>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Client List
        </a>
    </div>
</div>