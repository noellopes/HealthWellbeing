@model HealthWellbeing.Models.Client

@{
    ViewData["Title"] = "Invalid Client";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">

        <h1 class="display-3 text-danger mb-4">
            <i class="bi bi-x-octagon-fill"></i> Access Denied
        </h1>

        <div class="alert alert-danger alert-dismissible fade show shadow-lg" role="alert">
            <h4 class="alert-heading">Invalid Client!</h4>
            <p class="mb-0">The requested client record could not be found or does not exist in the database. Please check the ID or go back to the list.</p>
        </div>

        <hr class="my-4" />

        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to Client List
        </a>

    </div>
</div>