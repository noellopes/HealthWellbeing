@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Client>

@{
    ViewData["Title"] = "Clients";
    var successMessage = TempData["Message"];
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-primary fw-bold"><i class="bi bi-people-fill me-2"></i>@ViewData["Title"]</h1>

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-start border-4 border-success" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i>Client Directory</h5>
            <a asp-action="Create" class="btn btn-success px-3 shadow-sm">
                <i class="bi bi-person-plus-fill me-1"></i> Add New Client
            </a>
        </div>
        <div class="card-body bg-light">
            <form asp-action="Index" method="get" class="row g-2 mb-4">
                <div class="col-md-3">
                    <input type="text" name="searchName" value="@ViewBag.SearchName" class="form-control shadow-sm" placeholder="Search by name...">
                </div>
                <div class="col-md-3">
                    <input type="text" name="searchEmail" value="@ViewBag.SearchEmail" class="form-control shadow-sm" placeholder="Search by email...">
                </div>
                <div class="col-md-3">
                    <input type="text" name="searchPhone" value="@ViewBag.SearchPhone" class="form-control shadow-sm" placeholder="Search by phone...">
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm fw-bold">
                        <i class="bi bi-search me-1"></i> Search
                    </button>
                </div>
            </form>

            <div class="table-responsive bg-white rounded shadow-sm">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light border-bottom">
                        <tr>
                            <th class="ps-3">Name</th>
                            <th>Contact Info</th>
                            <th>Membership Status</th>
                            <th>Active Plan</th>
                            <th class="text-end pe-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="fw-bold ps-3">@item.Name</td>
                                <td>
                                    <div class="small">@item.Email</div>
                                    <div class="small text-muted">@item.Phone</div>
                                </td>
                                <td>
                                    @if (item.Membership != null)
                                    {
                                        <span class="badge rounded-pill bg-info text-dark shadow-sm">Member #@item.Membership.MemberId</span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-light text-muted border shadow-sm">Not a Member</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Membership?.MemberPlans != null && item.Membership.MemberPlans.Any())
                                    {
                                        foreach (var mp in item.Membership.MemberPlans)
                                        {
                                            <span class="badge bg-success shadow-sm"><i class="bi bi-journal-check me-1"></i>@mp.Plan.Name</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No active plan</span>
                                    }
                                </td>
                                <td class="text-end pe-3">
                                    @* Botões de Ação no estilo do Plan Index: com texto e ícones  *@
                                    <div class="btn-group shadow-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.ClientId" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.ClientId" class="btn btn-sm btn-info" title="Details">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ClientId" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav aria-label="Client navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link shadow-sm" asp-action="Index" asp-route-page="1"
                           asp-route-searchName="@ViewBag.SearchName" asp-route-searchEmail="@ViewBag.SearchEmail" asp-route-searchPhone="@ViewBag.SearchPhone">First</a>
                    </li>
                    @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                    {
                        <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                            <a class="page-link shadow-sm" asp-action="Index" asp-route-page="@p"
                               asp-route-searchName="@ViewBag.SearchName" asp-route-searchEmail="@ViewBag.SearchEmail" asp-route-searchPhone="@ViewBag.SearchPhone">@p</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link shadow-sm" asp-action="Index" asp-route-page="@Model.TotalPages"
                           asp-route-searchName="@ViewBag.SearchName" asp-route-searchEmail="@ViewBag.SearchEmail" asp-route-searchPhone="@ViewBag.SearchPhone">Last</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>