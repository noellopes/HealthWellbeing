@model IEnumerable<HealthWellbeing.Models.Client>

@{
    ViewData["Title"] = "Client Management";
}

<h1 class="display-4 text-primary mb-4">@ViewData["Title"]</h1>

@{
    var message = TempData["Message"] as string;
    var messageType = TempData["MessageType"] as string ?? "info"; // Default to info
}

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-@messageType alert-dismissible fade show" role="alert">
        @Html.Raw(message)
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle"></i> Create New Client
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-center" style="width: 100px;">
                    Member
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                // Determine membership status
                var isMember = item.Membership != null;

                <tr>
                    <td class="fw-bold">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center">
                        @if (isMember)
                        {
                            <span class="badge bg-success py-2 px-3 d-inline-block">
                                Yes
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger py-2 px-3 d-inline-block">
                                No
                            </span>
                        }
                    </td>
                    <td class="text-nowrap">
                        @if (!isMember)
                        {
                            <a asp-controller="Member" asp-action="Create" asp-route-clientId="@item.ClientId" class="btn btn-sm btn-info me-1" title="Make Member">
                                <i class="bi bi-person-plus"></i> Make Member
                            </a>
                        }

                        <a asp-action="Edit" asp-route-id="@item.ClientId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ClientId" class="btn btn-sm btn-outline-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ClientId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>