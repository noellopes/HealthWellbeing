@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Client>
@using HealthWellbeing.Models

@{
    ViewData["Title"] = "Clients";

    // Usado para o dropdown de Member
    var searchMember = ViewBag.SearchMember ?? "";

    // Usado para manter os valores de pesquisa na paginação
    var searchName = ViewBag.SearchName;
    var searchPhone = ViewBag.SearchPhone;
    var searchEmail = ViewBag.SearchEmail;
}

<h1 class="display-4 text-primary mb-4">@ViewData["Title"]</h1>

@* Bloco para mostrar mensagens de sucesso/erro *@
@if (TempData["Message"] != null)
{
    var message = TempData["Message"].ToString();
    var messageType = TempData["MessageType"]?.ToString() ?? "info";

    <div class="alert alert-@messageType alert-dismissible fade show shadow-sm" role="alert">
        @Html.Raw(message)
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Client List</h2>
    <div class="d-flex justify-content-end">

        <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#clientSearch" aria-expanded="false" aria-controls="clientSearch">
            <i class="bi bi-search me-1"></i> Search
        </a>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>

    </div>
</div>

@* Formulário de Pesquisa (com 4 colunas 'col-md-3') *@
<div class="collapse mt-2 mb-2" id="clientSearch">
    <div class="card card-body shadow-sm">

        <form asp-action="Index" method="get" class="row g-2">

            @* Name (col-md-3) *@
            <div class="col-md-3">
                <label for="searchName" class="form-label">Name</label>
                <input id="searchName" name="searchName" value="@searchName" class="form-control" placeholder="Search by name" type="search" />
            </div>

            @* Phone (col-md-3) *@
            <div class="col-md-3">
                <label for="searchPhone" class="form-label">Phone</label>
                <input id="searchPhone" name="searchPhone" value="@searchPhone" class="form-control" placeholder="Search by phone" type="search" />
            </div>

            @* Email (col-md-3) *@
            <div class="col-md-3">
                <label for="searchEmail" class="form-label">Email</label>
                <input id="searchEmail" name="searchEmail" value="@searchEmail" class="form-control" placeholder="Search by email" type="search" />
            </div>

            @* 4. Dropdown Member (col-md-3)*@
            <div class="col-md-3">
                <label for="searchMember" class="form-label">Member</label>
                <select id="searchMember" name="searchMember" class="form-select">

                    @* Opção "All" *@
                    @if (searchMember == "")
                    {
                        <option value="" selected>All</option>
                    }
                    else
                    {
                        <option value="">All</option>
                    }

                    @* Opção "Yes" *@
                    @if (searchMember == "Yes")
                    {
                        <option value="Yes" selected>Yes</option>
                    }
                    else
                    {
                        <option value="Yes">Yes</option>
                    }

                    @* Opção "No" *@
                    @if (searchMember == "No")
                    {
                        <option value="No" selected>No</option>
                    }
                    else
                    {
                        <option value="No">No</option>
                    }

                </select>
            </div>

            @* Botões *@
            <div class="col-12 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Clear
                </a>
            </div>

        </form>
    </div>
</div>


@* Verificação de Itens *@
@if (!Model.Items.Any())
{
    <div class="alert alert-warning mt-4" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> No Clients Found</h4>
        <p>There are no clients matching your criteria. Try adjusting your search or create a new client.</p>
    </div>
}
else
{
    @* Tabela de Clientes *@
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Member</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    bool isMember = item.Membership != null;
                    <tr>
                        <td class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>
                            @if (isMember)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                @if (!isMember)
                                {
                                    <a asp-controller="Member" asp-action="Create" asp-route-clientId="@item.ClientId" class="btn btn-sm btn-success">
                                        <i class="bi bi-person-plus"></i> Create Membership
                                    </a>
                                }
                                <a asp-action="Edit" asp-route-id="@item.ClientId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ClientId" class="btn btn-sm btn-info">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ClientId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Secção de Paginação *@
    <nav aria-label="Client pages" class="mt-3">
        <ul class="pagination">

            @* Botão "First" *@
            @if (Model.CurrentPage == 1)
            {
                <li class="page-item disabled"><a class="page-link">First</a></li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-searchName="@searchName"
                       asp-route-searchPhone="@searchPhone"
                       asp-route-searchEmail="@searchEmail"
                       asp-route-searchMember="@searchMember">First</a>
                </li>
            }

            @* Links das Páginas (ex: 1, 2, 3) *@
            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
            {
                if (p == Model.CurrentPage)
                {
                    <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@p"
                           asp-route-searchName="@searchName"
                           asp-route-searchPhone="@searchPhone"
                           asp-route-searchEmail="@searchEmail"
                           asp-route-searchMember="@searchMember">@p</a>
                    </li>
                }
            }

            @* Botão "Last" *@
            @if (Model.CurrentPage == Model.TotalPages)
            {
                <li class="page-item disabled"><a class="page-link">Last</a></li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages"
                       asp-route-searchName="@searchName"
                       asp-route-searchPhone="@searchPhone"
                       asp-route-searchEmail="@searchEmail"
                       asp-route-searchMember="@searchMember">Last</a>
                </li>
            }
        </ul>
    </nav>
}