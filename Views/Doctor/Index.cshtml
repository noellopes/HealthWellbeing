@using HealthWellbeing.Models
@model PaginationInfo<Doctor>

@{
    ViewData["Title"] = "Diretor Clínico - Médicos";

    string searchName = ViewBag.searchName as string ?? "";

    bool isFirst = Model.CurrentPage <= 1;
    bool isLast = Model.CurrentPage >= Model.TotalPages;
}

<style>
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 12px;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .top-nav {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .top-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .top-btn:hover {
            filter: brightness(1.05);
        }

        .top-btn.active {
            background: #256b8f;
            cursor: default;
            pointer-events: none;
            opacity: .95;
            box-shadow: inset 0 0 0 2px rgba(255,255,255,.25);
        }

    .utente-body {
        background: #e6f3fb;
        min-height: 360px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    .welcome-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 14px;
    }

    .welcome-title {
        margin: 0;
        color: #1f4f6a;
        font-weight: 800;
    }

    .agenda-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
    }

        .agenda-btn:hover {
            filter: brightness(1.05);
        }

    /* Padronização de botões gerais (Bootstrap + esta classe) */
    .hb-btn {
        border-radius: 18px !important;
        font-weight: 700 !important;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .hb-btn.btn-sm {
            padding: 6px 12px !important;
        }
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <!-- TOPO: LOGO + NAV -->
            <div class="utente-header">
                <div class="utente-header-content">

                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing"
                             class="logo-img" />
                    </div>

                    <div class="top-nav">
                        <!-- MÉDICOS (ATIVO) -->
                        <a class="top-btn active" href="#" aria-disabled="true" tabindex="-1">
                            <i class="bi bi-heart-pulse"></i> Médicos
                        </a>

                        <a class="top-btn"
                           asp-controller="Especialidades"
                           asp-action="Index">
                            <i class="bi bi-diagram-3"></i> Especialidades
                        </a>

                        <a class="top-btn"
                           asp-controller="UtenteSaude"
                           asp-action="Index">
                            <i class="bi bi-people"></i> Utentes
                        </a>
                    </div>

                </div>
            </div>

            <!-- CORPO -->
            <div class="utente-body">

                <div class="welcome-row">
                    <h2 class="welcome-title">Bem-vindo, Diretor Clínico</h2>

                    <a class="agenda-btn"
                       asp-controller="AgendasMedicas"
                       asp-action="Index">
                        <i class="bi bi-calendar2-week"></i> Agenda Médica
                    </a>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h4 m-0">Lista de Médicos</h2>

                    <div class="d-flex justify-content-end gap-2 flex-wrap">
                        <button class="btn btn-secondary hb-btn"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#doctorSearch"
                                aria-expanded="false"
                                aria-controls="doctorSearch">
                            <i class="bi bi-search"></i> Pesquisar
                        </button>

                        <a asp-action="Create" class="btn btn-success hb-btn">
                            <i class="bi bi-plus-circle"></i> Criar Perfil
                        </a>
                    </div>
                </div>

                <!-- Pesquisa -->
                <div class="collapse mt-2 mb-2" id="doctorSearch">
                    <div class="card card-body">
                        <form asp-action="Index" method="get" class="row g-2 align-items-end">
                            <div class="col-md-6">
                                <label for="searchName" class="form-label">Pesquisa</label>
                                <input id="searchName"
                                       name="searchName"
                                       value="@searchName"
                                       class="form-control"
                                       placeholder="Pesquise um médico"
                                       type="search" />
                            </div>

                            <div class="col-12 mt-2 d-flex gap-2 flex-wrap">
                                <button type="submit" class="btn btn-primary hb-btn">
                                    <i class="bi bi-search"></i> Procurar
                                </button>
                                <a asp-action="Index" class="btn btn-secondary hb-btn">
                                    Limpar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                @if (TempData["Msg"] != null)
                {
                    <div class="alert alert-success mt-3">
                        @TempData["Msg"]
                    </div>
                }

                <!-- Conteúdo -->
                @if (Model.Items == null || !Model.Items.Any())
                {
                    <div class="alert alert-warning d-flex align-items-center border-2 mt-3" role="alert">
                        <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
                        <div class="ps-3">
                            <h4 class="alert-heading m-0">Sem Perfis</h4>
                            <p class="mb-0">Ainda não existem médicos registados. Clique em <strong>Criar Perfil</strong> para adicionar.</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="table-responsive mt-4">
                        <table class="table table-striped table-bordered align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nome</th>
                                    <th>Especialidade</th>
                                    <th style="width:340px;">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.Nome</td>
                                        <td>@item.Especialidade?.Nome</td>
                                        <td class="d-flex gap-2 flex-wrap">
                                            <a asp-action="Details"
                                               class="btn btn-sm btn-primary hb-btn"
                                               asp-route-id="@item.IdMedico">
                                                <i class="bi bi-eye"></i> Detalhes
                                            </a>

                                            <a asp-action="Edit"
                                               class="btn btn-sm btn-warning text-white hb-btn"
                                               asp-route-id="@item.IdMedico">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </a>

                                            <a asp-action="Delete"
                                               class="btn btn-sm btn-danger hb-btn"
                                               asp-route-id="@item.IdMedico">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Paginação -->
                    <nav aria-label="Paginação de médicos">
                        <ul class="pagination justify-content-center">

                            <li class="page-item @(isFirst ? "disabled" : "")">
                                <a class="page-link"
                                   href="@(isFirst ? "#" : Url.Action("Index", "Doctors", new { page = Model.CurrentPage - 1, searchName }))">
                                    «
                                </a>
                            </li>

                            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                            {
                                <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link"
                                       href="@(p == Model.CurrentPage ? "#" : Url.Action("Index", "Doctors", new { page = p, searchName }))">
                                        @p
                                    </a>
                                </li>
                            }

                            <li class="page-item @(isLast ? "disabled" : "")">
                                <a class="page-link"
                                   href="@(isLast ? "#" : Url.Action("Index", "Doctors", new { page = Model.CurrentPage + 1, searchName }))">
                                    »
                                </a>
                            </li>

                        </ul>
                    </nav>
                }
            </div>

            <div class="utente-footer-bar"></div>
        </div>
    </div>
</div>
