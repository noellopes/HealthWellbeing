@model HealthWellbeing.Models.Doctor

@{
    ViewData["Title"] = "Detalhes";
}

<style>
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .top-nav {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .top-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .top-btn:hover {
            filter: brightness(1.05);
        }

    /* ---------- CORPO ---------- */
    .utente-body {
        background: #e6f3fb;
        min-height: 360px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    .detail-card {
        background: #fff;
        border-radius: 12px;
        padding: 16px;
        border: 1px solid rgba(97,166,199,.45);
        box-shadow: 0 2px 10px rgba(0,0,0,.08);
    }

    .detail-title {
        color: #1f4f6a;
        font-weight: 900;
        font-size: 1.25rem;
    }

    .detail-sub {
        margin: 6px 0 14px 0;
        color: #2b546c;
        font-weight: 600;
    }

    .info-item {
        background: rgba(255,255,255,.65);
        border: 1px solid #e6f3fb;
        border-radius: 10px;
        padding: 10px 12px;
        height: 100%;
    }

        .info-item .lbl {
            display: block;
            font-size: .85rem;
            color: #1f4f6a;
            opacity: .9;
            margin-bottom: 2px;
            font-weight: 800;
        }

        .info-item .val {
            display: block;
            font-size: 1rem;
            color: #61a6c7;
            font-weight: 800;
            word-break: break-word;
        }
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">

            <!-- Header -->
            <div class="utente-header">
                <div class="utente-header-content">
                    <div class="utente-logo">
                        <img src="https://ipgpt-my.sharepoint.com/:u:/g/personal/1707765_sal_ipg_pt/EXQ_SdGCX0ZAhcsexkX0g5UBYcJ60VvKhiARCgmRiKBTIw?e=A4dVIr&download=1"
                             alt="Logo HealthWellbeing"
                             class="logo-img" />
                    </div>

                    <div class="top-nav">
                        <a class="top-btn"
                           asp-action="Index">
                            <i class="bi bi-arrow-left"></i> Voltar à lista
                        </a>
                    </div>
                </div>
            </div>

            <!-- CORPO -->
            <div class="utente-body">
                <div class="detail-card">
                    <h2 class="detail-title">
                        <i class="bi bi-person-fill me-2"></i>@Model.Nome
                    </h2>
                    <p class="detail-sub">
                        <i class="bi bi-telephone me-1"></i>@Model.Telemovel
                    </p>
                    <p class="detail-sub">
                        <i class="bi bi-envelope me-1"></i>@Model.Email
                    </p>

                    <!-- Especialidade -->
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <span class="lbl">Especialidade</span>
                                <span class="val">@Model.Especialidade.Nome</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="utente-footer-bar"></div>

        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar à lista
    </a>
</div>
