@model HealthWellbeing.Models.Doctor

@{
    ViewData["Title"] = "Eliminar Médico";
}

<style>
    .utente-wrapper {
        background: #1f4f6a;
        border-radius: 10px;
        padding: 24px;
        box-shadow: 0 2px 12px rgba(0,0,0,.2);
        color: #1f4f6a;
    }

    .utente-card {
        background: #2d79a0;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 16px rgba(0,0,0,.25);
    }

    .utente-panel {
        background: #a8d6ea;
        border-radius: 12px;
        padding: 10px;
    }

    .utente-header {
        background: #a8d6ea;
        border-radius: 10px 10px 0 0;
        padding: 12px 16px;
    }

    .utente-header-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
    }

    .utente-logo .logo-img {
        max-height: 80px;
        border-radius: 4px;
        box-shadow: 0 2px 3px rgba(0,0,0,.2);
    }

    .top-nav {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    .top-btn {
        padding: 8px 14px;
        border-radius: 18px;
        border: none;
        background: #2d79a0;
        color: #fff;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .top-btn:hover {
            filter: brightness(1.05);
        }

    .utente-body {
        background: #e6f3fb;
        min-height: 360px;
        margin: 8px;
        border-radius: 8px;
        padding: 18px;
    }

    .utente-footer-bar {
        height: 10px;
        background: #61a6c7;
        margin: 0 8px 8px 8px;
        border-radius: 0 0 8px 8px;
    }

    .detail-card {
        background: #fff;
        border-radius: 12px;
        padding: 16px;
        border: 1px solid rgba(97,166,199,.45);
        box-shadow: 0 2px 10px rgba(0,0,0,.08);
    }

    .detail-title {
        color: #1f4f6a;
        font-weight: 900;
        font-size: 1.25rem;
    }

    .detail-sub {
        margin: 6px 0 14px 0;
        color: #2b546c;
        font-weight: 600;
    }

    .info-item {
        background: rgba(255,255,255,.65);
        border: 1px solid rgba(220,53,69,.20);
        border-radius: 10px;
        padding: 10px 12px;
        height: 100%;
    }

        .info-item .lbl {
            display: block;
            font-size: .85rem;
            color: #7a2a33;
            opacity: .9;
            margin-bottom: 2px;
            font-weight: 800;
        }

        .info-item .val {
            display: block;
            font-size: 1rem;
            color: #8a1f2b;
            font-weight: 800;
            word-break: break-word;
        }

    .danger-btn {
        background-color: #8a1f2b;
        color: #fff;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 8px;
    }

    .cancel-btn {
        background-color: #f1f1f1;
        color: #6c757d;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 8px;
    }

        .danger-btn:hover, .cancel-btn:hover {
            filter: brightness(1.05);
        }
</style>

<div class="utente-wrapper">
    <div class="utente-card">
        <div class="utente-panel">
            <div class="utente-header">
                <div class="utente-header-content">
                    <div class="utente-logo">
                        <img src="https://example.com/logo.png" alt="Logo HealthWellbeing" class="logo-img" />
                    </div>

                    <div class="top-nav">
                        <a class="top-btn" asp-action="Index">
                            <i class="bi bi-arrow-left"></i> Voltar à lista
                        </a>
                    </div>
                </div>
            </div>

            <div class="utente-body">
                <div class="detail-card">
                    <h2 class="detail-title">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Apagar Médico
                    </h2>
                    <p class="detail-sub">
                        Tens a certeza que queres apagar este médico? Esta ação não pode ser desfeita.
                    </p>

                    <div class="info-item">
                        <span class="lbl">Nome</span>
                        <span class="val">@Model.Nome</span>
                    </div>
                    <div class="info-item">
                        <span class="lbl">Telemóvel</span>
                        <span class="val">@Model.Telemovel</span>
                    </div>
                    <div class="info-item">
                        <span class="lbl">Email</span>
                        <span class="val">@Model.Email</span>
                    </div>
                    <div class="info-item">
                        <span class="lbl">Especialidade</span>
                        <span class="val">@Model.Especialidade?.Nome</span>
                    </div>
                </div>

                <form asp-action="Delete" asp-route-id="@Model.IdMedico" method="post" class="d-flex gap-3 mt-4">
                    @Html.AntiForgeryToken()

                    <button type="submit" class="danger-btn">
                        <i class="bi bi-trash"></i> Apagar
                    </button>

                    <a asp-action="Index" class="cancel-btn">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </form>
            </div>

            <div class="utente-footer-bar"></div>
        </div>
    </div>
</div>
