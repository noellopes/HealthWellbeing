@model HealthWellbeing.Models.TrainingType

@{
    ViewData["Title"] = "Edit Training Type";
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-primary">
        <i class="bi bi-pencil-square me-2"></i>Edit Training Type
    </h1>

    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-warning text-dark py-3">
            <h5 class="card-title mb-0 fw-bold">
                Update Training Type Information
            </h5>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger mb-4 shadow-sm"></div>

                <input type="hidden" asp-for="TrainingTypeId" />

                <div class="row g-3">

                    <!-- Name -->
                    <div class="col-md-12 mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name"
                               class="form-control shadow-sm"
                               placeholder="Training type name" />
                        <span asp-validation-for="Name" class="invalid-feedback"></span>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12 mb-3">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Description"
                                  class="form-control shadow-sm"
                                  rows="3"></textarea>
                        <span asp-validation-for="Description" class="invalid-feedback"></span>
                    </div>

                    <!-- Max Participants -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaxParticipants" class="form-label fw-bold"></label>
                        <input asp-for="MaxParticipants"
                               class="form-control shadow-sm"
                               type="number"
                               min="1"
                               max="50" />
                        <span asp-validation-for="MaxParticipants" class="invalid-feedback"></span>
                    </div>

                    <!-- Active -->
                    <div class="col-md-6 mb-3 d-flex align-items-center">
                        <div class="form-check mt-4">
                            <input asp-for="IsActive"
                                   class="form-check-input"
                                   type="checkbox" />
                            <label asp-for="IsActive"
                                   class="form-check-label fw-bold ms-1"></label>
                        </div>
                        <span asp-validation-for="IsActive"
                              class="invalid-feedback d-block"></span>
                    </div>

                </div>

                <div class="mt-4 pt-3 border-top d-flex justify-content-end gap-2">
                    <button type="submit"
                            class="btn btn-primary px-4 shadow-sm">
                        <i class="bi bi-save me-1"></i>Save Changes
                    </button>

                    <a asp-action="Index"
                       class="btn btn-outline-secondary px-4 shadow-sm">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
