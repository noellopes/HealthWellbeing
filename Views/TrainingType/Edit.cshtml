@model HealthWellbeing.Models.TrainingType

@{
    ViewData["Title"] = "Edit Training Type";
}

<h1 class="display-4 text-primary mb-4">Edit Training Type</h1>

<h4 class="mb-3">Training Details</h4>
<hr class="mb-4" />

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="TrainingTypeId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DurationMinutes" class="form-label fw-bold"></label>
                    <input asp-for="DurationMinutes" type="number" class="form-control" />
                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Intensity" class="form-label fw-bold"></label>
                    <input asp-for="Intensity" class="form-control" />
                    <span asp-validation-for="Intensity" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                    <label class="form-check-label fw-bold" asp-for="IsActive"></label>
                    <span asp-validation-for="IsActive" class="text-danger d-block"></span>
                </div>

                <div class="mb-3 d-flex justify-content-between pt-2">
                    <input type="submit" value="Save Changes" class="btn btn-primary btn-lg shadow" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}