@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.TrainingType>

@{
    ViewData["Title"] = "Training Types";
    var searchActive = ViewBag.SearchActive ?? "";
    var searchDuration = ViewBag.SearchDuration;
}

<div class="container-fluid px-4">
    <h1 class="mt-4 text-primary fw-bold">
        <i class="bi bi-tags-fill me-2"></i>@ViewData["Title"]
    </h1>

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">
                <i class="bi bi-list-ul me-2"></i>Training Type Directory
            </h5>
            <a asp-action="Create" class="btn btn-success px-3 shadow-sm">
                <i class="bi bi-plus-circle me-1"></i>Add Training Type
            </a>
        </div>

        <div class="card-body bg-light">

            <!-- SEARCH -->
            <form asp-action="Index" method="get" class="row g-2 mb-4">
                <div class="col-md-4">
                    <input type="number"
                           name="searchDuration"
                           value="@searchDuration"
                           class="form-control shadow-sm"
                           placeholder="Search by duration (min)" />
                </div>

                <div class="col-md-4">
                    <select name="searchActive" class="form-select shadow-sm">
                        <option value="">All Status</option>
                        <option value="Yes" selected="@(searchActive == "Yes")">Active</option>
                        <option value="No" selected="@(searchActive == "No")">Inactive</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm fw-bold">
                        <i class="bi bi-search me-1"></i>Search
                    </button>
                </div>
            </form>

            @if (Model.Items == null || !Model.Items.Any())
            {
                <div class="alert alert-warning shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    No training types found with the selected criteria.
                </div>
            }
            else
            {
                <div class="table-responsive bg-white rounded shadow-sm">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light border-bottom">
                            <tr>
                                <th class="ps-3">Name</th>
                                <th>Default Duration</th>
                                <th>Status</th>
                                <th class="text-end pe-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="fw-bold ps-3">@item.Name</td>
                                    <td>@item.DurationMinutes min</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-end pe-3">
                                        <div class="btn-group shadow-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.TrainingTypeId"
                                               class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.TrainingTypeId"
                                               class="btn btn-sm btn-info">
                                                <i class="bi bi-info-circle"></i> Details
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.TrainingTypeId"
                                               class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- PAGINATION -->
                <nav aria-label="Training type navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link shadow-sm"
                               asp-route-page="1"
                               asp-route-searchDuration="@searchDuration"
                               asp-route-searchActive="@searchActive">First</a>
                        </li>

                        @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                        {
                            <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                <a class="page-link shadow-sm"
                                   asp-route-page="@p"
                                   asp-route-searchDuration="@searchDuration"
                                   asp-route-searchActive="@searchActive">@p</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link shadow-sm"
                               asp-route-page="@Model.TotalPages"
                               asp-route-searchDuration="@searchDuration"
                               asp-route-searchActive="@searchActive">Last</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
