@model IEnumerable<HealthWellbeing.Models.TrainingType>

@{
    ViewData["Title"] = "Training Management";
}

<h1 class="display-4 text-primary mb-4">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle"></i> Create New Training
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.DurationMinutes)</th>
                <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="d-none d-md-table-cell text-truncate" style="max-width: 200px;">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.DurationMinutes)</td>
                    <td>
                        @{
                            string badgeClass = item.IsActive ? "bg-success" : "bg-danger";
                            string badgeText = item.IsActive ? "Active" : "Inactive";
                        }
                        <span class="badge @badgeClass">@badgeText</span>
                    </td>
                    <td class="text-nowrap">
                        <a asp-action="Edit" asp-route-id="@item.TrainingTypeId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.TrainingTypeId" class="btn btn-sm btn-outline-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.TrainingTypeId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>