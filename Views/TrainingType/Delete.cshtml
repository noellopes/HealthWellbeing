@model HealthWellbeing.Models.TrainingType

@{
    ViewData["Title"] = "Delete Training Type";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">

            <div class="alert alert-danger p-4 shadow-sm border-0 mb-4 rounded-4" role="alert">
                <i class="bi bi-exclamation-octagon-fill fs-1 text-danger d-block mb-3"></i>
                <h2 class="alert-heading">Are you sure?</h2>
                <p class="mb-0">
                    You are about to delete the training type
                    <strong>@Model.Name</strong>.
                    This action may affect associated training sessions.
                </p>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4 text-start">
                    <div class="row">

                        <div class="col-sm-4 text-muted fw-bold small">Training Type:</div>
                        <div class="col-sm-8 mb-2">@Model.Name</div>

                        <div class="col-sm-4 text-muted fw-bold small">Description:</div>
                        <div class="col-sm-8 mb-2">@Model.Description</div>

                        <div class="col-sm-4 text-muted fw-bold small">Default Duration:</div>
                        <div class="col-sm-8 mb-2">@Model.DurationMinutes minutes</div>

                        <div class="col-sm-4 text-muted fw-bold small">Status:</div>
                        <div class="col-sm-8 mb-2">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </div>

                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TrainingTypeId" />

                <div class="d-grid gap-2 d-md-block">
                    <button type="submit"
                            class="btn btn-danger btn-lg px-5 shadow-sm me-md-2">
                        <i class="bi bi-trash-fill me-2"></i>Delete Forever
                    </button>

                    <a asp-action="Index"
                       class="btn btn-outline-secondary btn-lg px-5 shadow-sm">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>

