@model HealthWellbeing.Models.FoodHabitsPlan

@{
    ViewData["Title"] = "Create Plan";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <h1 class="h4 mb-0">
            <i class="bi bi-plus-circle-fill me-2 text-success"></i>
            Create Plan
        </h1>
    </div>

    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to list
    </a>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-warning" role="alert"></div>

            <div class="mb-3">
                <label asp-for="StartingDate" class="form-label"></label>
                <input asp-for="StartingDate" class="form-control" />
                <span asp-validation-for="StartingDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndingDate" class="form-label"></label>
                <input asp-for="EndingDate" class="form-control" />
                <span asp-validation-for="EndingDate" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Done" class="form-check-input" />
                <label asp-for="Done" class="form-check-label"></label>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle-fill me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
