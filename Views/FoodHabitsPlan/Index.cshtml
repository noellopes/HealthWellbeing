@using HealthWellbeing.Models
@using HealthWellbeing.ViewModels
@model PaginationInfoFoodHabits<FoodHabitsPlan>

@{
    ViewData["Title"] = "Plans";
    string search = ViewBag.Search as string ?? "";
    var today = DateTime.Today.Date;

    bool canManage = User.IsInRole("Nutricionista") || User.IsInRole("Administrador");
}

<div class="container my-4">
    <div class="fh-wrapper">

        <!-- HEADER -->
        <div class="fh-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-calendar2-check-fill" style="color: var(--fi-cyan); font-size:1.15rem;"></i>
                        <h1 class="h5 fh-title mb-0">Plans</h1>
                    </div>
                    <div class="mt-2 fh-badge">
                        <i class="bi bi-search" style="color: var(--fi-cyan);"></i>
                        <span>Index</span>
                    </div>
                </div>

                <div class="d-flex flex-wrap align-items-center gap-2">
                    <!-- SEARCH -->
                    <form asp-action="Index" method="get" class="fh-form d-flex align-items-center gap-2">
                        <input type="search"
                               name="search"
                               value="@search"
                               class="form-control"
                               style="min-width: 320px;"
                               placeholder="Search by client, goal, date (YYYY-MM-DD)..." />

                        <button type="submit" class="btn d-flex fh-btn-primary">
                            <i class="bi bi-search me-1"></i>Search
                        </button>
                    </form>

                    <!-- CREATE -->
                    @if (canManage)
                    {
                        <a asp-action="Create" class="btn btn-success" style="border-radius:12px; font-weight:800;">
                            <i class="bi bi-plus-circle me-1"></i>Add Plan
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- CONTENT -->
        <div class="fh-panel">

            @if (!Model.Items.Any())
            {
                <div class="alert alert-warning fh-alert d-flex align-items-center gap-2 mb-0" role="alert">
                    <i class="bi bi-exclamation-triangle-fill" style="font-size:1.4rem;"></i>
                    <div>
                        <div class="fw-bold">No plans</div>
                        <div>There are no plans matching your search.</div>
                    </div>
                </div>
            }
            else
            {
                <div class="fh-card p-2">
                    <div class="table-responsive">
                        <table class="table fh-table align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Client</th>
                                    <th>Goal</th>
                                    <th>Start</th>
                                    <th>End</th>
                                    <th>Status</th>
                                    <th class="text-end" style="width: 190px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    string status;
                                    string badgeStyle;

                                    if (today < item.StartingDate.Date)
                                    {
                                        status = "Pending";
                                        badgeStyle = "background: rgba(148,163,184,.18); border: 1px solid rgba(148,163,184,.35); color: rgba(255,255,255,.88);";
                                    }
                                    else if (today > item.EndingDate.Date)
                                    {
                                        status = "Finished";
                                        badgeStyle = "background: rgba(251,113,133,.16); border: 1px solid rgba(251,113,133,.35); color: rgba(255,255,255,.9);";
                                    }
                                    else
                                    {
                                        // Keep this aligned with controller search: "completed" means within date range
                                        status = "Completed";
                                        badgeStyle = "background: linear-gradient(135deg, var(--fi-cyan), var(--fi-cyan2)); border: 1px solid rgba(34,211,238,.25); color: #001018; font-weight: 900;";
                                    }

                                    <tr>
                                        <td class="fw-bold">@item.Client?.Name</td>
                                        <td>@(item.Goal?.GoalName ?? "-")</td>
                                        <td>@item.StartingDate.ToString("yyyy-MM-dd")</td>
                                        <td>@item.EndingDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <span class="badge" style="@badgeStyle border-radius: 999px; padding: .45rem .6rem;">
                                                @status
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <a asp-action="Details" asp-route-id="@item.FoodHabitsPlanId"
                                               class="btn btn-sm btn-outline-info me-1"
                                               style="border-radius:10px;">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>

                                            @if (canManage)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.FoodHabitsPlanId"
                                                   class="btn btn-sm btn-outline-warning me-1"
                                                   style="border-radius:10px;">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.FoodHabitsPlanId"
                                                   class="btn btn-sm btn-outline-danger"
                                                   style="border-radius:10px;">
                                                    <i class="bi bi-trash-fill"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Plans pagination" class="mt-3">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(Model.CurrentPage - 1)"
                                   asp-route-search="@search"
                                   aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            @for (int i = Model.FirstPageShow; i <= Model.LastPageShow; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-search="@search">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(Model.CurrentPage + 1)"
                                   asp-route-search="@search"
                                   aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <style>
                        .pagination .page-link {
                            background: rgba(17,24,39,.92);
                            border: 1px solid rgba(255,255,255,.14);
                            color: rgba(255,255,255,.85);
                        }

                            .pagination .page-link:hover {
                                border-color: rgba(34,211,238,.45);
                                color: rgba(255,255,255,.95);
                            }

                        .pagination .page-item.active .page-link {
                            background: linear-gradient(135deg, var(--fi-cyan), var(--fi-cyan2));
                            border-color: transparent;
                            color: #001018;
                            font-weight: 900;
                        }

                        .pagination .page-item.disabled .page-link {
                            opacity: .45;
                        }
                    </style>
                }
            }

        </div>
    </div>
</div>
