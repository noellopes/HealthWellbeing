@model HealthWellbeing.Models.FoodHabitsPlan

@{
    ViewData["Title"] = "Delete Plan";
}

<div class="container my-4">
    <div class="fi-wrapper">

        <div class="fi-header">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3">
                <div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-trash-fill" style="color: var(--fi-cyan); font-size:1.15rem;"></i>
                        <h1 class="h5 mb-0 fi-titlebar">Delete Plan</h1>
                    </div>

                    <div class="mt-2 fi-badge">
                        <i class="bi bi-exclamation-triangle" style="color: var(--fi-cyan);"></i>
                        <span>This action cannot be undone.</span>
                    </div>
                </div>

                <a asp-action="Index" class="btn btn-outline-light" style="border-radius:12px;">
                    <i class="bi bi-arrow-left-circle me-1"></i>Back
                </a>
            </div>
        </div>

        <div class="fi-panel">
            <div class="alert alert-danger" role="alert" style="border-radius:14px;">
                <div class="fw-bold">Are you sure you want to delete this plan?</div>
                <div class="small">This will remove related daily entries and intakes.</div>
            </div>

            <div class="fi-card p-3">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Client</dt>
                    <dd class="col-sm-8">@Model.Client?.Name</dd>

                    <dt class="col-sm-4">Goal</dt>
                    <dd class="col-sm-8">@Model.Goal?.GoalName</dd>

                    <dt class="col-sm-4">Start</dt>
                    <dd class="col-sm-8">@Model.StartingDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4">End</dt>
                    <dd class="col-sm-8">@Model.EndingDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @if (Model.StatusText == "Pending")
                        {
                            <span class="badge bg-secondary">Pending</span>
                        }
                        else if (Model.StatusText == "Finished")
                        {
                            <span class="badge bg-danger">Finished</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                    </dd>
                </dl>
            </div>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" name="id" value="@Model.FoodHabitsPlanId" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger" style="border-radius:12px; font-weight:800;">
                        <i class="bi bi-trash-fill me-1"></i>Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light" style="border-radius:12px;">
                        Cancel
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>
