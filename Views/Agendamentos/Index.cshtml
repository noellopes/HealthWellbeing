@model IEnumerable<HealthWellbeing.Models.Agendamento>

@{
    ViewData["Title"] = "Agendamentos";
}

<h1 class="mb-4">Agendamentos</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div></div>

    <a asp-action="Create" class="btn btn-primary">
        + Novo Agendamento
    </a>
</div>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light border-bottom">
            <tr>
                <th>Data Início</th>
                <th>Data Fim</th>
                <th>Terapeuta</th>
                <th>Estado</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                string badgeClass = a.Estado switch
                {
                    "Pendente" => "bg-warning text-dark",
                    "Marcado" => "bg-primary",
                    "Concluído" => "bg-success",
                    "Cancelado" => "bg-danger",
                    _ => "bg-secondary"
                };

                <tr>
                    <td>@a.DataHoraInicio.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@a.DataHoraFim.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@a.Terapeuta?.Nome</td>
                    <td>
                        <span class="badge @badgeClass px-3 py-2">
                            @a.Estado
                        </span>
                    </td>
                    <td class="text-end">
                        <a asp-action="Details"
                           asp-route-id="@a.AgendamentoId"
                           class="btn btn-sm btn-outline-primary me-1">
                            <i class="bi bi-eye"></i>
                        </a>

                        @if (User.IsInRole("Admin") || User.IsInRole("Funcionario"))
                        {
                            <a asp-action="Edit"
                               asp-route-id="@a.AgendamentoId"
                               class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@a.AgendamentoId"
                               class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (ViewBag.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(ViewBag.HasPrevious ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage - 1)">
                    ‹
                </a>
            </li>

            @for (int i = ViewBag.StartPage; i <= ViewBag.EndPage; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(ViewBag.HasNext ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage + 1)">
                    ›
                </a>
            </li>

        </ul>
    </nav>
}