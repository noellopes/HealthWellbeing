@model HealthWellbeing.Models.Agendamento

@{
    ViewData["Title"] = "Novo Agendamento";
}

<h1 class="mb-4">Novo Agendamento</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DataHoraInicio" class="form-label">Data e Hora de Início</label>
                    <input asp-for="DataHoraInicio" class="form-control" type="datetime-local" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="DataHoraFim" class="form-label">Data e Hora de Fim</label>
                    <input asp-for="DataHoraFim" class="form-control" type="datetime-local" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Terapeuta</label>
                <select asp-for="TerapeutaId"
                        class="form-select"
                        asp-items="ViewBag.TerapeutaId">
                </select>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Criar Agendamento</button>
            </div>
        </form>
    </div>
</div>