@model HealthWellbeing.Models.Agendamento

@{
    ViewData["Title"] = "Novo Agendamento";
}

<h1>Novo Agendamento</h1>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="DataHoraInicio" class="form-label"></label>
        <input asp-for="DataHoraInicio" class="form-control" type="datetime-local" />
    </div>

    <div class="mb-3">
        <label asp-for="DataHoraFim" class="form-label"></label>
        <input asp-for="DataHoraFim" class="form-control" type="datetime-local" />
    </div>

    <div class="mb-3">
        <label class="form-label">Terapeuta</label>
        <select asp-for="TerapeutaId"
                class="form-select"
                asp-items="ViewBag.TerapeutaId">
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Criar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>