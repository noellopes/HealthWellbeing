@model HealthWellbeing.Models.Agendamento

@{
    ViewData["Title"] = "Editar Agendamento";
}

<h1>Editar Agendamento</h1>
<hr />

<form asp-action="Edit">
    <input type="hidden" asp-for="AgendamentoId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="DataHoraInicio" class="form-label"></label>
        <input asp-for="DataHoraInicio" class="form-control" type="datetime-local" />
    </div>

    <div class="mb-3">
        <label asp-for="DataHoraFim" class="form-label"></label>
        <input asp-for="DataHoraFim" class="form-control" type="datetime-local" />
    </div>

    <div class="mb-3">
        <label class="form-label">Terapeuta</label>
        <select asp-for="TerapeutaId"
                class="form-select"
                asp-items="ViewBag.TerapeutaId">
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Estado</label>
        <select asp-for="Estado" class="form-select">
            <option value="Pendente">Pendente</option>
            <option value="Marcado">Marcado</option>
            <option value="Concluído">Concluído</option>
            <option value="Cancelado">Cancelado</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>