@using HealthWellbeingRoom.Models
@model HealthWellbeing.Models.LocationMedDevice

@{
    ViewData["Title"] = "Registar Localização do Dispositivo Médico";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">
            <i class="bi bi-geo-alt-fill me-2"></i> Nova Localização de Dispositivo Médico
        </h4>
    </div>

    <div class="card-body">
        <form asp-action="Create" method="post">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <input type="hidden" asp-for="MedicalDeviceID" />
            <input type="hidden" asp-for="InitialDate" />

            <div class="row">
                <div class="col-md-6">                    
                    <div class="mb-3">
                        <label asp-for="RoomId" class="form-label fw-bold"></label>
                        <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId">
                            <option value="">-- Selecione a sala --</option>
                        </select>
                        <span asp-validation-for="RoomId" class="text-danger small"></span>
                    </div>
                </div>               
            </div>

            <div class="mt-4 d-flex justify-content-end gap-2 border-top pt-3">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i> Submeter Registo
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar à Lista
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
