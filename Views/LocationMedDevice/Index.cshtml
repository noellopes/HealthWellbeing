@using HealthWellbeing.Models
@model HealthWellbeing.ViewModels.RPaginationInfo<LocationMedDevice>

@{
    ViewData["Title"] = "Localizações de Dispositivos Médicos";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (Model == null || !Model.Items.Any())
{
    <div class="alert alert-warning d-flex align-items-center border-2" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">Nenhuma Localização Encontrada</h4>
            <p>Não há localizações de dispositivos médicos registadas na base de dados.</p>
        </div>
    </div>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Registar Nova Localização
    </a>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
    </a>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4">Lista de Localizações</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Registar Nova
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Sala</th>
                    <th scope="col">Data inicial</th>
                    <th scope="col">Data final</th>
                    <th class="text-end" scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loc in Model.Items)
                {
                    <tr>
                        <td>@(loc.MedicalDevice?.Name ?? "N/A")</td>
                        <td>@(loc.Room?.Name ?? "N/A")</td>
                        <td>@loc.InitialDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (loc.EndDate.HasValue)
                            {
                                @loc.EndDate?.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted fst-italic">—</span>
                            }
                        </td>

                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@loc.LocationMedDeviceID" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <a asp-action="Details" asp-route-id="@loc.LocationMedDeviceID" class="btn btn-sm btn-info me-1">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>

                            <a asp-action="Delete" asp-route-id="@loc.LocationMedDeviceID" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @* --- Secção de Paginação --- *@
        <nav aria-label="Location Medical Device page" class="d-flex justify-content-between align-items-center">
            @* Model.Items.Count() mostra quantos itens estão na página atual *@
            <span>Mostrando @Model.Items.Count() dos @Model.TotalItems</span>

            <ul class="pagination mb-0">
                @if (Model.CurrentPage == 1)
                {
                    <li class="page-item disabled"><a class="page-link">Primeira</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index">Primeira</a></li>
                }

                @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                {
                    if (p == Model.CurrentPage)
                    {
                        <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@p">@p</a></li>
                    }
                }
                @if (Model.CurrentPage == Model.TotalPages)
                {
                    <li class="page-item disabled"><a class="page-link">Última</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages">Última</a></li>
                }
            </ul>
        </nav>

    </div>
}
