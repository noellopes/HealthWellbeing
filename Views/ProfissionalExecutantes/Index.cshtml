@using HealthWellbeing.ViewModels
@model PaginationInfo<HealthWellbeing.Models.ProfissionalExecutante>

@{
    ViewData["Title"] = "Lista de Profissionais";
    var successMessage = TempData["SuccessMessage"];
    var searchNome = ViewBag.SearchNome;
    var searchFuncao = ViewBag.SearchFuncao;

    // Lógica para verificar permissão
    bool isAdmin = User.IsInRole("Admin");
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@* --- BLOCO DE MENSAGENS --- *@
@if (successMessage != null)
{
    <div class="container py-4">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">Profissionais Executantes</h2>
    <div class="d-flex justify-content-end gap-2">
        <a class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#profissionalSearch" aria-expanded="false" aria-controls="profissionalSearch">
            <i class="bi bi-search me-1"></i> Pesquisar
        </a>

        @* ESCONDER BOTÃO CRIAR SE NÃO FOR ADMIN *@
        @if (isAdmin)
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Criar Novo
            </a>
        }
    </div>
</div>

@* --- DASHBOARD DE ESTATÍSTICAS --- *@
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card text-white bg-primary shadow-sm h-100">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="card-title mb-0">Total de Profissionais</h6>
                    <h2 class="my-1 fw-bold">@ViewBag.TotalProfissionais</h2>
                    <small class="text-white-50">Registos ativos</small>
                </div>
                <i class="bi bi-person-badge fs-1 text-white-50"></i>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card text-white bg-success shadow-sm h-100">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="card-title mb-0">Funções Registadas</h6>
                    <h2 class="my-1 fw-bold">@ViewBag.TotalFuncoes</h2>
                    <small class="text-white-50">Cargos disponíveis</small>
                </div>
                <i class="bi bi-tags fs-1 text-white-50"></i>
            </div>
        </div>
    </div>
</div>

@* --- BLOCO DE PESQUISA --- *@
<div class="collapse mt-2 mb-2" id="profissionalSearch">
    <div class="card card-body">
        <form asp-action="Index" method="get" class="row g-2 align-items-end">
            <div class="col-md-4">
                <label for="searchNome" class="form-label">Nome</label>
                <input id="searchNome" name="searchNome" value="@searchNome" class="form-control" placeholder="Pesquisar por nome" type="search" />
            </div>
            <div class="col-md-4">
                <label for="searchFuncao" class="form-label">Função</label>
                <input id="searchFuncao" name="searchFuncao" value="@searchFuncao" class="form-control" placeholder="Pesquisar por função" type="search" />
            </div>
            <div class="col-12 mt-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Pesquisar
                </button>
                <a asp-action="Index" class="btn btn-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>

@* --- TABELA --- *@
@if (!Model.Items.Any())
{
    <div class="alert alert-warning d-flex align-items-center border-2" role="alert">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem;"></i>
        <div class="ps-3">
            <h4 class="alert-heading">Nenhum Profissional Encontrado</h4>
            <p>Não há profissionais executantes correspondentes aos seus critérios.</p>
        </div>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>Função</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Funcao?.NomeFuncao</td>
                        <td>@item.Telefone</td>
                        <td>@item.Email</td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.ProfissionalExecutanteId" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-info-circle"></i> Detalhes
                                </a>

                                @* SÓ MOSTRA EDITAR E ELIMINAR SE FOR ADMIN *@
                                @if (isAdmin)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.ProfissionalExecutanteId" class="btn btn-sm btn-warning mx-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProfissionalExecutanteId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @* --- PAGINAÇÃO --- *@
        <div class="d-flex justify-content-between align-items-center mt-3">
            <small class="text-muted">Página @Model.CurrentPage de @Model.TotalPages</small>
            <nav>
                <ul class="pagination mb-0">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-searchNome="@searchNome" asp-route-searchFuncao="@searchFuncao">Primeira</a>
                    </li>
                    @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                    {
                        <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@p" asp-route-searchNome="@searchNome" asp-route-searchFuncao="@searchFuncao">@p</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages" asp-route-searchNome="@searchNome" asp-route-searchFuncao="@searchFuncao">Última</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var searchNome = document.getElementById('searchNome').value;
            var searchFuncao = document.getElementById('searchFuncao').value;
            var searchCollapse = document.getElementById('profissionalSearch');

            if (searchNome || searchFuncao) {
                new bootstrap.Collapse(searchCollapse, { toggle: true });
            }
        });
    </script>
}