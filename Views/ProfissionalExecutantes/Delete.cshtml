@model HealthWellbeing.Models.ProfissionalExecutante

@{
    ViewData["Title"] = "Apagar Profissional Executante";
}

<div class="container mt-4">

    <h2 class="text-center mb-4"><i class="bi bi-person-x-fill text-danger me-2"></i> @ViewData["Title"]</h2>

    <div class="alert alert-danger text-center shadow">
        <h5 class="mb-0">Tens a certeza que pretendes apagar este profissional? Esta ação não pode ser desfeita.</h5>
    </div>

    <div class="card shadow-sm p-4 mb-4">
        <dl class="row">
            <dt class="col-sm-3 fw-bold text-muted">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3 fw-bold text-muted">Função</dt>
            <dd class="col-sm-9">@Model.Funcao</dd>

            <dt class="col-sm-3 fw-bold text-muted">Telefone</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3 fw-bold text-muted">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProfissionalExecutanteId" />
        <div class="d-flex justify-content-between mt-4">

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle-fill me-1"></i> Cancelar
            </a>

            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill me-1"></i> Apagar
            </button>
        </div>
    </form>
</div>