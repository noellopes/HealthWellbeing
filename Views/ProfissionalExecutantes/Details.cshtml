@model HealthWellbeing.Models.ProfissionalExecutante

@{
    ViewData["Title"] = "Detalhes do Profissional";
}

<div class="container mt-4">

    <div class="card shadow-sm">

        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-person-badge-fill me-2"></i> @ViewData["Title"]
            </h4>
        </div>

        <div class="card-body">
            <dl class="row mb-0">

                <dt class="col-sm-3 fw-bold text-muted">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-3 fw-bold text-muted">
                    @Model.Funcao?.NomeFuncao
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Funcao)
                </dd>

                <dt class="col-sm-3 fw-bold text-muted">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>

                <dt class="col-sm-3 fw-bold text-muted">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-end gap-2">

        <a asp-action="Edit" asp-route-id="@Model.ProfissionalExecutanteId" class="btn btn-warning">
            <i class="bi bi-pencil-square me-1"></i> Edit
        </a>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle-fill me-1"></i> Back to List
        </a>
    </div>

</div>