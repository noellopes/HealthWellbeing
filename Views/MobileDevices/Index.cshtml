@using HealthWellbeingRoom.Models.FileMobileDevices;
@model IEnumerable<MobileDevices> ;

@{
    ViewData["Title"] = "Lista de Equipamentos Móveis Registados";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="CreateMobileDevices" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Registar Novo Dispositivo
    </a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th> 
            <th scope="col">Nome do dispositivo</th> 
            <th scope="col">Tipo do dispositivo</th>
            <th scope="col">Especificação do dispositivo</th>
            <th scope="col">Quantidade do dispositivo</th>
            <th scope="col">Data do registo</th>
        </tr>
    </thead>
    <tbody>
        @* Itera sobre cada dispositivo na lista (Model) *@
        @foreach (var dispositivo in Model)
        {
            <tr>
                @*(DisplayNameFor) -> Titulo de cada coluna da lista*@
                <td>@Html.DisplayFor(modelItem => dispositivo.DevicesID)</td>
                <td>@Html.DisplayFor(modelItem => dispositivo.NomeDisp)</td>
                <td>@Html.DisplayFor(modelItem => dispositivo.TipoDisp)</td>
                <td>@Html.DisplayFor(modelItem => dispositivo.EspecificacaoDisp)</td>
                <td>@Html.DisplayFor(modelItem => dispositivo.QuantidadeDisp)</td>
                <td>@Html.DisplayFor(modelItem => dispositivo.DataRegisto)</td>
            </tr>
        }
    </tbody>
</table>
