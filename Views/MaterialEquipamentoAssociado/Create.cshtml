@model HealthWellbeing.Models.MaterialEquipamentoAssociado

@{
    ViewData["Title"] = "Adicionar Material/Equipamento";
}

<div class="container mt-4">

    <h1 class="display-5 mb-3">Adicionar Material/Equipamento</h1>

    <hr />

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg p-3">
                <div class="card-body">
                    <form asp-action="Create">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="NomeEquipamento" class="form-label">Nome do Material/Equipamento</label>
                            <input asp-for="NomeEquipamento" class="form-control" placeholder="Ex: Seringa 5ml, Monitor de Sinais Vitais" />
                            <span asp-validation-for="NomeEquipamento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantidade" class="form-label"></label>
                            <input asp-for="Quantidade" class="form-control" type="number" placeholder="Ex: 500 (Apenas números inteiros)" />
                            <span asp-validation-for="Quantidade" class="text-danger"></span>
                        </div>


                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" value="Create" class="btn btn-success shadow-sm">
                                <i class="bi bi-save"></i> Salvar
                            </button>

                            <a asp-action="Index" class="btn btn-secondary shadow-sm">
                                <i class="bi bi-arrow-left-short"></i> Voltar
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}