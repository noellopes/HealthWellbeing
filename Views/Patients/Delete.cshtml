@model HealthWellbeing.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Warning Header -->
            <div class="alert alert-danger border-0 shadow-sm mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle fa-3x me-3"></i>
                    <div>
                        <h4 class="alert-heading mb-1">
                            <i class="fas fa-trash-alt me-2"></i>Delete Patient Confirmation
                        </h4>
                        <p class="mb-0">This action cannot be undone. Please review the patient information before proceeding.</p>
                    </div>
                </div>
            </div>

            <!-- Back Button -->
            <div class="mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>

            <!-- Patient Information Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user-times me-2"></i>Patient to be Deleted
                    </h4>
                </div>
                <div class="card-body p-4">
                    <!-- Patient Avatar and Name -->
                    <div class="text-center mb-4 pb-4 border-bottom">
                        <div class="patient-avatar-large mx-auto mb-3">
                            @Model.FirstName.Substring(0, 1)@Model.LastName.Substring(0, 1)
                        </div>
                        <h3 class="mb-2">@Model.FullName</h3>
                        @if (Model.IsActive)
                        {
                            <span class="badge status-badge-large status-active">
                                <i class="fas fa-check-circle me-2"></i>Active Patient
                            </span>
                        }
                        else
                        {
                            <span class="badge status-badge-large status-inactive">
                                <i class="fas fa-times-circle me-2"></i>Inactive Patient
                            </span>
                        }
                    </div>

                    <!-- Personal Information -->
                    <h5 class="text-danger mb-3 border-bottom pb-2">
                        <i class="fas fa-id-card me-2"></i>Personal Information
                    </h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-hashtag text-danger me-2"></i>Patient ID
                                </label>
                                <p class="detail-value">
                                    <span class="badge bg-secondary fs-6">#@Model.PatientId</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-calendar text-danger me-2"></i>Age
                                </label>
                                <p class="detail-value">
                                    <span class="badge bg-info fs-6">@Model.Age years old</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-birthday-cake text-danger me-2"></i>Date of Birth
                                </label>
                                <p class="detail-value">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <h5 class="text-danger mb-3 border-bottom pb-2 mt-4">
                        <i class="fas fa-address-book me-2"></i>Contact Information
                    </h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-envelope text-danger me-2"></i>Email
                                </label>
                                <p class="detail-value">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-phone text-danger me-2"></i>Phone
                                </label>
                                <p class="detail-value">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        @Model.Phone
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Emergency Contact -->
                    <h5 class="text-danger mb-3 border-bottom pb-2 mt-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>Emergency Contact
                    </h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-user-shield text-danger me-2"></i>Contact Name
                                </label>
                                <p class="detail-value">
                                    @(Model.EmergencyContact ?? "Not provided")
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">
                                    <i class="fas fa-phone-alt text-danger me-2"></i>Emergency Phone
                                </label>
                                <p class="detail-value">
                                    @if (!string.IsNullOrEmpty(Model.EmergencyPhone))
                                    {
                                        @Model.EmergencyPhone
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Registration Info -->
                    <h5 class="text-danger mb-3 border-bottom pb-2 mt-4">
                        <i class="fas fa-info-circle me-2"></i>Registration Information
                    </h5>

                    <div class="detail-item">
                        <label class="detail-label">
                            <i class="fas fa-calendar-plus text-danger me-2"></i>Registration Date
                        </label>
                        <p class="detail-value">@Model.RegistrationDate.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>

                <!-- Warning Footer -->
                <div class="card-footer bg-light py-3">
                    <div class="alert alert-warning mb-0" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Warning:</strong> Deleting this patient will permanently remove all associated records including therapy sessions, mood entries, goals, and crisis alerts.
                    </div>
                </div>
            </div>

            <!-- Delete Form -->
            <div class="card shadow-sm border-danger">
                <div class="card-body p-4">
                    <form asp-action="Delete" class="delete-form">
                        <input type="hidden" asp-for="PatientId" />

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="text-danger mb-2">
                                    <i class="fas fa-shield-alt me-2"></i>Confirm Deletion
                                </h5>
                                <p class="text-muted mb-0">
                                    Are you absolutely sure you want to delete this patient?
                                </p>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg delete-button">
                                    <i class="fas fa-trash-alt me-2"></i>Delete Patient
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Alternative Action -->
            <div class="text-center mt-4">
                <p class="text-muted">
                    <i class="fas fa-lightbulb me-2"></i>
                    Consider marking the patient as <strong>Inactive</strong> instead of deleting?
                </p>
                <a asp-action="Edit" asp-route-id="@Model.PatientId" class="btn btn-outline-primary">
                    <i class="fas fa-user-edit me-2"></i>Edit Patient Status
                </a>
            </div>
        </div>
    </div>
</div>