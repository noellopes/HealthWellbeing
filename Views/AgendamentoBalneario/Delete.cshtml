@model HealthWellbeing.Models.AgendamentoBalneario

@{
    ViewData["Title"] = "Eliminar Agendamento";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<h5 class="mb-3">
    Tem a certeza de que deseja eliminar este agendamento?
</h5>

<hr />


<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">
            <i class="bi bi-trash3-fill me-2"></i>Eliminar Agendamento
        </h4>
    </div>

    <div class="card-body">
        <dl class="row mb-0">

            <dt class="col-sm-4 fw-bold text-muted">Utente</dt>
            <dd class="col-sm-8">
                @(Model.UtenteBalneario != null ? Model.UtenteBalneario.NomeCompleto : "---")
            </dd>

            <dt class="col-sm-4 fw-bold text-muted">Terapeuta</dt>
            <dd class="col-sm-8">@Model.Terapeuta?.Email</dd>

            <dt class="col-sm-4 fw-bold text-muted">Serviço</dt>
            <dd class="col-sm-8">@Model.Servico?.Nome</dd>

            <dt class="col-sm-4 fw-bold text-muted">Tipo de Serviço</dt>
            <dd class="col-sm-8">@Model.TipoServico?.Nome</dd>

            <dt class="col-sm-4 fw-bold text-muted">Hora de Início</dt>
            <dd class="col-sm-8">
                @Model.HoraInicio.ToString("dd/MM/yyyy HH:mm")
            </dd>

            <dt class="col-sm-4 fw-bold text-muted">Duração (min)</dt>
            <dd class="col-sm-8">@Model.DuracaoMinutos</dd>

            <dt class="col-sm-4 fw-bold text-muted">Preço (€)</dt>
            <dd class="col-sm-8">@Model.Preco.ToString("0.00")</dd>

            <dt class="col-sm-4 fw-bold text-muted">Estado</dt>
            <dd class="col-sm-8">
                <span class="badge bg-secondary">@Model.Estado</span>
            </dd>

        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="AgendamentoId" />

            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i> Eliminar
                </button>

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
