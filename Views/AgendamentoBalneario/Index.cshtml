@model IEnumerable<HealthWellbeing.Models.AgendamentoBalneario>

@{
    ViewData["Title"] = "Agendamentos";
}

<h1 class="mb-4 fw-bold">Agendamento Balneário</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
        <i class="bi bi-plus-circle me-2"></i>Criar Novo Agendamento
    </a>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover table-striped align-middle mb-0">
        <thead class="table-dark text-white">
            <tr>
                <th class="py-3">Cliente</th>
                <th class="py-3">Terapeuta</th>
                <th class="py-3">Serviço</th>
                <th class="py-3">Tipo de Serviço</th>
                <th class="py-3">Hora de Início</th>
                <th class="py-3">Estado</th>
                <th class="py-3 text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-semibold">
                        @(item.UtenteBalneario != null ? item.UtenteBalneario.NomeCompleto : "---")
                    </td>

                    <td>
                        @(item.Terapeuta != null ? item.Terapeuta.Nome : "---")
                    </td>

                    <td>@item.Servico?.Nome</td>
                    <td>@item.TipoServico?.Nome</td>

                    <td class="text-nowrap">
                        @item.HoraInicio.ToString("dd/MM/yyyy HH:mm")
                    </td>

                    <td>
                        @{
                            var estadoClass = item.Estado.ToString() switch
                            {
                                "Confirmado" => "bg-success",
                                "Pendente" => "bg-warning text-dark",
                                "Cancelado" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @estadoClass">
                            @item.Estado
                        </span>
                    </td>

                    <td class="text-center text-nowrap">
                        <div class="btn-group btn-group-sm shadow-sm" role="group">
                            <a asp-action="Edit"
                               asp-route-id="@item.AgendamentoId"
                               class="btn btn-primary text-white"
                               title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-action="Details"
                               asp-route-id="@item.AgendamentoId"
                               class="btn btn-warning text-dark"
                               title="Detalhes">
                                <i class="bi bi-eye"></i>
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@item.AgendamentoId"
                               class="btn btn-danger text-white"
                               title="Apagar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4 shadow-sm" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        Não existem agendamentos registados.
    </div>
}
