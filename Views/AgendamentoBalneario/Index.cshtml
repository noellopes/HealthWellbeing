@model HealthWellbeing.ViewModel.AgendamentoBalnearioViewModel

@{
    ViewData["Title"] = "Agendamentos";

    string? successMessage = Context.Request.Query["successMessage"];

}

@if (!string.IsNullOrEmpty(successMessage))

{
    <div class="container py-4">

        <div class="alert alert-success alert-dismissible fade show mb-4 shadow-sm" role="alert">

            <i class="bi bi-check-circle-fill me-2"></i>@successMessage

            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

        </div>
    </div>

}


<h1 class="mb-4">@ViewData["Title"]</h1>

<!-- BOTÕES -->
<div class="d-flex align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success me-2">
        <i class="bi bi-plus-circle me-1"></i> Criar Novo Agendamento
    </a>

    <button type="button"
            class="btn btn-secondary me-2"
            data-bs-toggle="modal"
            data-bs-target="#searchModal">
        <i class="bi bi-search me-1"></i> Pesquisar
    </button>

    @if (!string.IsNullOrEmpty(Model.PesquisarNomeUtente))
    {
        <a asp-action="Index" class="btn btn-outline-danger">
            Limpar pesquisa
        </a>
    }
</div>

<!-- MODAL DE PESQUISA -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Pesquisar Agendamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form asp-action="Index" method="get">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Nome do Utente</label>
                        <input type="text"
                               name="pesquisarNomeUtente"
                               class="form-control"
                               value="@Model.PesquisarNomeUtente"
                               placeholder="Digite o nome..." />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </button>

                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i> Pesquisar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- TABELA -->
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered shadow-sm align-middle">

        <thead class="table-dark">
            <tr>
                <th>Utente</th>
                <th>Terapeuta</th>
                <th>Serviço</th>
                <th>Tipo de Serviço</th>
                <th>Hora de Início</th>
                <th>Estado</th>
                <th style="width:25%">Ações</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.ListaAgendamentos)
            {
                <tr>
                    <td>@(item.UtenteBalneario?.NomeCompleto ?? "---")</td>
                    <td>@(item.Terapeuta?.Nome ?? "---")</td>
                    <td>@item.Servico?.Nome</td>
                    <td>@item.TipoServico?.Nome</td>

                    <td class="text-nowrap">
                        @item.HoraInicio.ToString("dd/MM/yyyy HH:mm")
                    </td>

                    <td>
                        @{
                            var estadoClass = item.Estado switch
                            {
                                EstadoAgendamento.Confirmado => "badge bg-success",
                                EstadoAgendamento.Pendente => "badge bg-warning text-dark",
                                EstadoAgendamento.Cancelado => "badge bg-danger",
                                EstadoAgendamento.Realizado => "badge bg-primary", 
                                _ => "badge bg-secondary"
                            };
                        }
                        <span class="@estadoClass">@item.Estado</span>
                    </td>

                    <td>

                        <a asp-action="Edit" asp-route-id="@item.AgendamentoId"
                           class="btn btn-sm btn-primary me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>

                        <a asp-action="Details" asp-route-id="@item.AgendamentoId"
                           class="btn btn-sm btn-warning me-2">
                            <i class="bi bi-info-circle"></i> Details
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.AgendamentoId"
                           class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

<!-- ALERTA -->
@if (!Model.ListaAgendamentos.Any())
{
    <div class="alert alert-info mt-4 shadow-sm">
        <i class="bi bi-info-circle me-2"></i>
        Não existem agendamentos registados.
    </div>
}

<!-- PAGINAÇÃO -->
<nav class="mt-4">
    <ul class="pagination justify-content-start">

        <li class="page-item @(Model.paginacao.PaginaCorrente == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pagina="1"
               asp-route-pesquisarNomeUtente="@Model.PesquisarNomeUtente">
                Primeira
            </a>
        </li>

        @for (int p = Model.paginacao.PrimeiraPaginaVer; p <= Model.paginacao.UltimaPaginaVer; p++)
        {
            <li class="page-item @(p == Model.paginacao.PaginaCorrente ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pagina="@p"
                   asp-route-pesquisarNomeUtente="@Model.PesquisarNomeUtente">
                    @p
                </a>
            </li>
        }

        <li class="page-item @(Model.paginacao.PaginaCorrente == Model.paginacao.PaginaTotal ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pagina="@Model.paginacao.PaginaTotal"
               asp-route-pesquisarNomeUtente="@Model.PesquisarNomeUtente">
                Última
            </a>
        </li>

    </ul>
</nav>
