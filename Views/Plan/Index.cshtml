@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.Plan>

@{
    ViewData["Title"] = "Plans"; // Alterado de "Training Plans" para "Plans"

    // Variável de busca - apenas pelo nome do plano
    var searchPlan = ViewBag.SearchPlanName as string;
}

<h1 class="display-4 text-primary mb-4">Plans</h1> @* Alterado de "Training Plans" para "Plans" *@

@* Mensagens de Sucesso/Erro (Mantido do MemberPlan) *@
@if (TempData["Message"] != null)
{
    var message = TempData["Message"].ToString();
    var messageType = TempData["MessageType"]?.ToString() ?? "info";

    <div class="alert alert-@messageType alert-dismissible fade show shadow-sm" role="alert">
        @Html.Raw(message)
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Available Plans</h2>
    <div class="d-flex justify-content-end">

        @* Botão que abre/fecha o painel de busca *@
        <a class="btn btn-secondary me-2" data-bs-toggle="collapse" data-bs-target="#planSearch" aria-expanded="false" aria-controls="planSearch">
            <i class="bi bi-search me-1"></i> Search/Filter
        </a>

        @* Botão para criar um novo plano *@
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Plan
        </a>
    </div>
</div>

@* Formulário de Pesquisa e Filtro *@
@* A classe 'show' é adicionada se houver um termo de busca *@
<div class="collapse @(!string.IsNullOrWhiteSpace(searchPlan) ? "show" : "") mt-2 mb-2" id="planSearch">
    <div class="card card-body shadow-sm">
        <form asp-action="Index" method="get" class="row g-2">

            @* Pesquisa por Nome do Plano *@
            <div class="col-md-6">
                <label for="searchPlanName" class="form-label">Plan Name</label>
                <input id="searchPlanName" name="searchPlanName" value="@searchPlan" class="form-control" placeholder="Search by plan name..." type="search" />
            </div>

            @* Coluna vazia para alinhar *@
            <div class="col-md-6">
                @* Espaço Vazio *@
            </div>

            <div class="col-12 d-flex gap-2 mt-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

@* Tabela de Resultados *@
@if (Model == null || !Model.Items.Any())
{
    <div class="alert alert-warning mt-4" role="alert">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill"></i> No Plans Found</h4>
        <p>There are no training plans available.</p>
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Plan Name</th>
                    <th>Duration (Days)</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.DurationDays)</td>

                        @* Botões de Ação no estilo MemberPlan (tamanho 'sm') *@
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.PlanId" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.PlanId" class="btn btn-sm btn-info" title="Details">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PlanId" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Paginação (Mantido do MemberPlan) *@
    <nav aria-label="Plan pages" class="mt-3">
        <ul class="pagination justify-content-center">

            @* Botão "First" (Primeira Página) *@
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index"
                   asp-route-page="1"
                   asp-route-searchPlanName="@searchPlan">First</a>
            </li>

            @* Links para Páginas Numeradas *@
            @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
            {
                <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@p"
                       asp-route-searchPlanName="@searchPlan">@p</a>
                </li>
            }

            @* Botão "Last" (Última Página) *@
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@Model.TotalPages"
                   asp-route-searchPlanName="@searchPlan">Last</a>
            </li>
        </ul>
    </nav>
}