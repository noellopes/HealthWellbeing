@model HealthWellbeing.Models.Alergia

@{
    ViewData["Title"] = "Detalhes da Alergia";
}

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-@(TempData["AlertType"] ?? "info") alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Cabeçalho padronizado -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Detalhes da Alergia</h1>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>

<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Informações Gerais</h5>

                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descricao)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Descricao)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Gravidade)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Gravidade)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Sintomas)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Sintomas)</dd>
                </dl>

                <h5 class="card-title mt-4 mb-2">Alimentos Relacionados</h5>

                <div class="border rounded p-2">
                    @if (Model?.AlimentosAssociados?.Any() == true)
                    {
                        <ul class="mb-0">
                            @foreach (var aa in Model.AlimentosAssociados)
                            {
                                <li>@aa.Alimento?.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">Nenhum alimento associado.</span>
                    }
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.AlergiaId"
                       class="btn btn-warning me-2">Editar</a>

                    <a asp-action="Delete" asp-route-id="@Model?.AlergiaId"
                       class="btn btn-danger me-2">Apagar</a>

                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>
