@model HealthWellbeing.Models.UtenteGrupo7

@{
    ViewData["Title"] = "Eliminar Utente";
    int numDependencias = ViewBag.NumDependencias ?? 0;
}

<div class="container mt-4">

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h1 class="text-danger mb-4"><i class="bi bi-person-x-fill"></i> Eliminar Conta de Utente</h1>

    @if (numDependencias > 0)
    {
        <div class="alert alert-warning border-warning shadow-sm" role="alert">
            <h4 class="alert-heading fw-bold"><i class="bi bi-exclamation-triangle"></i> Atenção: Dados Associados!</h4>
            <p>
                Este utente possui <strong>@numDependencias</strong> registos associados (Sono, Planos de Treino, Medições, etc.).
            </p>
            <hr>
            <p class="mb-0 fw-bold text-danger">
                Se confirmar a eliminação, TODOS estes dados serão apagados automaticamente.
            </p>
        </div>
    }
    else
    {
        <div class="alert alert-info border-info shadow-sm">
            <i class="bi bi-info-circle-fill me-2"></i> Este utente não tem dados associados. Pode eliminar com segurança.
        </div>
    }

    <div class="card mb-4 shadow-sm border-danger">
        <div class="card-header bg-danger text-white fw-bold">
            <i class="bi bi-card-heading me-2"></i>Dados do Utente
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-secondary">Nome Completo</dt>
                <dd class="col-sm-9 fw-bold fs-5">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3 text-secondary">Objetivo</dt>
                <dd class="col-sm-9">@(Model.ObjetivoFisico?.NomeObjetivo ?? "Não definido")</dd>

                @if (ViewBag.EmailProfissional != null)
                {
                    <dt class="col-sm-3 text-secondary">Profissional</dt>
                    <dd class="col-sm-9 text-primary">@ViewBag.EmailProfissional</dd>
                }
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.UtenteGrupo7Id" />

        <div class="d-flex justify-content-end gap-2">
            <a asp-action="Index" class="btn btn-secondary px-4">
                <i class="bi bi-x-lg me-1"></i> Cancelar
            </a>

            <button type="submit" class="btn btn-danger px-4"
                <i class="bi bi-trash-fill me-1"></i> Eliminar Definitivamente
            </button>
        </div>
    </form>
</div>