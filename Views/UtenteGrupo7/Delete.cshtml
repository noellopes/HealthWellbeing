@model HealthWellbeing.Models.UtenteGrupo7

@{
    ViewData["Title"] = "Eliminar Utente";

    bool podeEliminar = ViewBag.PodeEliminar ?? true;
    int numDependencias = ViewBag.NumDependencias ?? 0;
}

<div class="container mt-4">
    <h2 class="text-danger mb-4"><i class="fas fa-trash-alt"></i> Eliminar Utente</h2>

    @if (!podeEliminar)
    {
        <div class="alert alert-warning shadow-sm border-warning" role="alert">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Não é possível eliminar!</h4>
            <p>
                O utente <strong>@Model.Nome</strong> possui <strong>@numDependencias</strong> registo(s) associado(s)
                (ex: registos de sono).
            </p>
            <hr>
            <p class="mb-0">Para manter a integridade dos dados, deve eliminar ou desassociar esses registos antes de apagar o utente.</p>
        </div>
    }
    else
    {
        <div class="alert alert-danger shadow-sm" role="alert">
            <h5 class="alert-heading"><i class="fas fa-exclamation-circle"></i> Atenção!</h5>
            <p class="mb-0">Tem a certeza que deseja eliminar este utente? Esta ação <strong>não pode ser desfeita</strong>.</p>
        </div>
    }

    <div class="card mb-4 shadow-sm border-danger">
        <div class="card-header bg-danger text-white fw-bold">
            Dados do Registo a Eliminar
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Nome do Utente</dt>
                <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.Nome)</dd>

                @if (User.IsInRole("Administrador"))
                {
                    <dt class="col-sm-3">Profissional Responsável</dt>
                    <dd class="col-sm-9 text-muted">
                        @(Model.ProfissionalSaudeId ?? "Nenhum atribuído")
                    </dd>
                }

                <dt class="col-sm-3">Objetivo</dt>
                <dd class="col-sm-9">
                    @(Model.ObjetivoFisico?.NomeObjetivo ?? "Sem objetivo")
                </dd>

                <dt class="col-sm-3">Dependências</dt>
                <dd class="col-sm-9">
                    @if (numDependencias > 0)
                    {
                        <span class="badge bg-warning text-dark">@numDependencias registos vinculados</span>
                    }
                    else
                    {
                        <span class="badge bg-success"><i class="fas fa-check"></i> 0 (Pronto para eliminar)</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UtenteGrupo7Id" />

        <div class="d-flex gap-2">
            @if (podeEliminar)
            {
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Confirmar Eliminação
                </button>
            }
            else
            {
                <button type="button" class="btn btn-secondary" disabled title="Existem registos associados">
                    <i class="fas fa-ban"></i> Eliminação Bloqueada
                </button>
            }

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancelar / Voltar
            </a>
        </div>
    </form>
</div>