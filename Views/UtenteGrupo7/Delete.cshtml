@model HealthWellbeing.Models.UtenteGrupo7

@{
    ViewData["Title"] = "Eliminar Utente";

    bool podeEliminar = ViewBag.PodeEliminar ?? true;
    int numDependencias = ViewBag.NumDependencias ?? 0;
}

<div class="container mt-4">

    @* --- MENSAGENS DE ERRO --- *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h1 class="text-danger mb-3"><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h1>

    @* --- LÓGICA DE BLOQUEIO --- *@
    @if (!podeEliminar)
    {
        <div class="alert alert-warning shadow-sm border-warning" role="alert">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Ação Bloqueada</h4>
            <p>
                O utente <strong>@Model.Nome</strong> não pode ser eliminado porque possui <strong>@numDependencias</strong> registo(s) de sono associado(s).
            </p>
            <hr>
            <p class="mb-0">Para manter a integridade dos dados, deve eliminar os registos de sono deste utente antes de o apagar.</p>
        </div>
    }
    else
    {
        <p class="lead">Tem a certeza que deseja eliminar este utente? Esta ação <strong>não pode ser desfeita</strong>.</p>
    }

    <div class="card mb-4 shadow-sm border-danger">
        <div class="card-header bg-danger text-white fw-bold">
            Dados do Utente a Eliminar
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Nome do Utente</dt>
                <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.Nome)</dd>

                @if (User.IsInRole("Administrador"))
                {
                    <dt class="col-sm-3">Profissional Responsável</dt>
                    <dd class="col-sm-9 text-primary font-monospace">
                        @* AQUI ESTÁ A MUDANÇA: *@
                        <i class="far fa-envelope me-1"></i> @ViewBag.EmailProfissional
                    </dd>
                }

                <dt class="col-sm-3">Objetivo Físico</dt>
                <dd class="col-sm-9">
                    @(Model.ObjetivoFisico?.NomeObjetivo ?? "Sem objetivo definido")
                </dd>

                <hr class="my-2" />

                <dt class="col-sm-3">Registos de Sono</dt>
                <dd class="col-sm-9">
                    @if (numDependencias > 0)
                    {
                        <span class="badge bg-warning text-dark">
                            <i class="fas fa-bed me-1"></i> @numDependencias registos
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-success">0 (Livre para eliminar)</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.UtenteGrupo7Id" />

        <div class="d-flex">
            @if (podeEliminar)
            {
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Confirmar Eliminação
                </button>
            }
            else
            {
                <button type="button" class="btn btn-secondary me-2" disabled title="Existem registos associados">
                    <i class="fas fa-ban"></i> Eliminação Bloqueada
                </button>
            }

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
        </div>
    </form>
</div>