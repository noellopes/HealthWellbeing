@model HealthWellbeing.Models.UtenteGrupo7

@{
    ViewData["Title"] = "Eliminar Utente";

    // Captura as variáveis da ViewBag (definidas no Controller)
    // Se não vier nada, assume que pode eliminar e que tem 0 dependências
    bool podeEliminar = ViewBag.PodeEliminar ?? true;

    // Como no controller deixámos genérico, aqui usamos uma variável genérica "NumDependencias"
    // Podes ajustar isto no futuro se o Utente tiver "Consultas", "Exames", etc.
    int numDependencias = ViewBag.NumDependencias ?? 0;
}

<div class="container mt-4">
    <h1 class="text-danger mb-3"><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h1>

    @if (!podeEliminar)
    {
        <div class="alert alert-warning shadow-sm border-warning" role="alert">
            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Atenção!</h4>
            <p>
                Não é possível eliminar o utente <strong>@Model.Nome</strong> porque ele possui
                <strong>@numDependencias</strong> registo(s) associado(s) (ex: consultas, tarefas, etc.).
            </p>
            <hr>
            <p class="mb-0">Tens de eliminar ou desassociar esses registos antes de poderes apagar este utente.</p>
        </div>
    }
    else
    {
        <p class="lead">Tem a certeza que deseja eliminar o seguinte utente? Esta ação <strong>não pode ser desfeita</strong>.</p>
    }

    <div class="card mb-4 shadow-sm border-danger">
        <div class="card-header bg-danger text-white fw-bold">
            Dados do Utente
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Nome do Utente</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">Estado / Dependências</dt>
                <dd class="col-sm-9">
                    @if (numDependencias > 0)
                    {
                        <span class="badge bg-warning text-dark">@numDependencias registos associados</span>
                    }
                    else
                    {
                        <span class="badge bg-success">0 (Livre para eliminar)</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UtenteGrupo7Id" />

        <div class="d-flex">
            @if (podeEliminar)
            {
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </button>
            }
            else
            {
                <button type="button" class="btn btn-secondary me-2" disabled title="Existem registos associados">
                    <i class="fas fa-trash-alt"></i> Eliminar (Bloqueado)
                </button>
            }

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
        </div>
    </form>
</div>