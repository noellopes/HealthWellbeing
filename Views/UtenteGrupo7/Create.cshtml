@model HealthWellbeing.Models.UtenteGrupo7

@{
    ViewData["Title"] = "Criar Novo Utente";
    var problemasSaude = ViewBag.ProblemasSaudeCheckboxes as List<SelectListItem>;
}

<div class="container mt-4">
    <h2 class="mb-4 text-success"><i class="fas fa-plus-circle"></i> Novo Utente</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger small"></div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Nome" class="form-label">Nome do Utente *</label>
                <input asp-for="Nome" class="form-control" placeholder="Insira o nome">
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="ObjetivoFisicoId" class="form-label">Objetivo Físico</label>
                <select asp-for="ObjetivoFisicoId" class="form-select" asp-items="ViewBag.ObjetivoFisicoId">
                    <option value="">-- Selecionar --</option>
                </select>
            </div>
        </div>

        @if (User.IsInRole("Administrador"))
        {
            <div class="mb-3 p-3 bg-light border rounded">
                <label asp-for="ProfissionalSaudeId" class="form-label fw-bold text-primary">Atribuir Profissional</label>
                <select asp-for="ProfissionalSaudeId" class="form-select" asp-items="ViewBag.ProfissionalSaudeId">
                    <option value="">-- Nenhum --</option>
                </select>
            </div>
        }

        <div class="form-group mb-3">
            <label class="control-label">Problemas de Saúde</label>
            <div class="border p-3 rounded mt-2 bg-light">
                @if (problemasSaude != null)
                {
                    <div class="row">
                    @foreach (var p in problemasSaude)
                    {
                        <div class="col-md-4">
                            <div class="form-check">
                                <input type="checkbox" name="selectedProblemas" value="@p.Value" class="form-check-input" id="create_@p.Value" />
                                <label class="form-check-label" for="create_@p.Value">@p.Text</label>
                            </div>
                        </div>
                    }
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-success">Criar</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}