@model HealthWellbeing.Models.UtenteGrupo7

@{
    ViewData["Title"] = "Criar Utente";
    // MUDANÇA: Cast explicito para List<SelectListItem>
    var problemasSaude = ViewBag.ProblemasSaudeCheckboxes as List<SelectListItem>;
}

<div class="container mt-4">
    <h2 class="mb-4 text-success"><i class="fas fa-plus-circle"></i> @ViewData["Title"]</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="text-danger small"></div>

        <div class="mb-3">
            <label asp-for="Nome" class="form-label fw-bold">Nome do Utente *</label>
            <input asp-for="Nome" class="form-control" placeholder="Ex: João Silva, Maria Santos, Ana Pereira" />
            <span asp-validation-for="Nome" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ObjetivoFisicoId" class="form-label fw-bold">Objetivo Físico</label>
            <select asp-for="ObjetivoFisicoId" class="form-select"
                    asp-items="@(ViewBag.ObjetivoFisicoId as SelectList)">
                <option value="">-- Selecionar Objetivo --</option>
            </select>
            <span asp-validation-for="ObjetivoFisicoId" class="text-danger small"></span>
        </div>

        <div class="mb-3 border p-3 rounded bg-light">
            <label class="form-label fw-bold d-block mb-2">Problemas de Saúde (Selecione um ou mais)</label>
            <div class="row">
                @if (problemasSaude != null && problemasSaude.Any())
                {
                    @foreach (var problema in problemasSaude)
                    {
                        <div class="col-md-4">
                            <div class="form-check">
                                <input type="checkbox"
                                       id="problema_@problema.Value"
                                       name="selectedProblemas"
                                       value="@problema.Value"
                                       class="form-check-input"
                                       @(problema.Selected ? "checked" : "") />
                                <label class="form-check-label" for="problema_@problema.Value">
                                    @problema.Text
                                </label>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-muted">
                        <i class="fas fa-info-circle"></i> Não há problemas de saúde registados na base de dados.
                    </div>
                }
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success me-2">
                <i class="fas fa-save"></i> Criar Utente
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}