@model HealthWellbeing.ViewModels.PaginationInfo<HealthWellbeing.Models.UtenteGrupo7>

@{
    ViewData["Title"] = "Utentes";
    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];
    var emails = ViewBag.ProfissionaisEmails as Dictionary<string, string>;

    bool isAdmin = User.IsInRole("Administrador");
    bool isProf = User.IsInRole("ProfissionalSaude");
    bool canDelete = isAdmin;
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary"><i class="bi bi-people-fill"></i> Utentes (Grupo 7)</h2>

    @if (isAdmin)
    {
        <p class="text-muted">Modo Administrador: Todos os utentes.</p>
    }
    else if (isProf)
    {

        <p class="text-muted">Os seus utentes atribuídos.</p>
    }

    @if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @successMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-end align-items-center mb-3">
        <div>
            <a class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#searchForm">
                <i class="bi bi-search me-1"></i> Pesquisa
            </a>

            @if (isAdmin || isProf)
            {
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Criar Novo
                </a>
            }

            <a href="/" class="btn btn-secondary">
                <i class="fas fa-home me-1"></i> Início
            </a>
        </div>
    </div>

    <div class="collapse mb-3" id="searchForm">
        <div class="card card-body">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">
                <div class="col-md-4">
                    <label for="searchNome" class="form-label">Nome do Utente</label>
                    <input id="searchNome" name="searchNome" value="@ViewBag.SearchNome" class="form-control" placeholder="Procurar por nome" />
                </div>
                <div class="col-12 mt-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Pesquisar</button>
                    <a asp-action="Index" class="btn btn-secondary">Limpar</a>
                </div>
            </form>
        </div>
    </div>

    @if (Model?.Items?.Any() == true)
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome do Utente</th>
                            <th>ID Profissional</th>
                        <th class="text-center" style="width: 220px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Nome</td>                         
                            <td class="small text-muted">
                                    @(emails != null && item.ProfissionalSaudeId != null && emails.ContainsKey(item.ProfissionalSaudeId)
                                                            ? emails[item.ProfissionalSaudeId]
                                                            : "N/A")
                            </td>
                            <td class="text-nowrap">
                                <a asp-action="Details" asp-route-id="@item.UtenteGrupo7Id" class="btn btn-primary btn-sm me-1" title="Ver Detalhes">
                                    <i class="fas fa-eye"></i>Ver Detalhes
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.UtenteGrupo7Id" class="btn btn-warning btn-sm me-1" title="Editar">
                                    <i class="fas fa-edit"></i>Editar
                                </a>
                                @if (canDelete)
                                {
                                    <a asp-action="Delete" asp-route-id="@item.UtenteGrupo7Id" class="btn btn-danger btn-sm me-1" title="Apagar">
                                        <i class="fas fa-trash-alt"></i>Apagar
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Utentes page">
                <ul class="pagination">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchNome="@ViewBag.SearchNome">Anterior</a></li>
                    }
                    <li class="page-item disabled"><a class="page-link">Pagina @Model.CurrentPage de @Model.TotalPages</a></li>
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchNome="@ViewBag.SearchNome">Próximo</a></li>
                    }
                </ul>
            </nav>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">Nenhum utente encontrado.</div>
    }
</div>