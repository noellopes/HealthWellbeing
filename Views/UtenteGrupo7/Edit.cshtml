@model HealthWellbeing.Models.UtenteGrupo7

@{
    ViewData["Title"] = "Editar Utente";
}

<div class="container mt-4">
    <h2 class="mb-4 text-warning"><i class="fas fa-edit"></i> Editar Utente</h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UtenteGrupo7Id" />

        <div asp-validation-summary="All" class="text-danger small"></div>

        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome do Utente *</label>
            <input asp-for="Nome" class="form-control" placeholder="Insira o nome do utente">
            <span asp-validation-for="Nome" class="text-danger small"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Guardar Alterações
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}