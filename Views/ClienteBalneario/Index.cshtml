@model IEnumerable<HealthWellbeing.Models.ClienteBalneario>

@{
    ViewData["Title"] = "Clientes do Balneário";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people"></i> Clientes do Balneário</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Novo Cliente
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Telemóvel</th>
                        <th>Pontos</th>
                        <th>Estado</th>
                        <th class="text-end"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.Nome</td>
                            <td>@cliente.Email</td>
                            <td>@cliente.Telemovel</td>

                            <td>
                                <span class="badge bg-info">
                                    @(cliente.HistoricoPontos?.Sum(p => p.Pontos) ?? 0)

                                </span>
                            </td>


                            <td>
                                <span class="badge @(cliente.Ativo ? "bg-success" : "bg-danger")">
                                    @(cliente.Ativo ? "Ativo" : "Inativo")
                                </span>
                            </td>

                            <td class="text-end">
                                <a asp-action="Details"
                                   asp-route-id="@cliente.ClienteBalnearioId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="Edit"
                                   asp-route-id="@cliente.ClienteBalnearioId"
                                   class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
