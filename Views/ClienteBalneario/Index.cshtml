@model IEnumerable<HealthWellbeing.Models.ClienteBalnearioModel>

<h2>Lista de Clientes do Balneário</h2>

<form method="get">
    <input type="text" name="search" placeholder="Pesquisar nome..." />
    <button type="submit" class="btn btn-primary">Pesquisar</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Novo Cliente</a>
</p>

@if (!Model.Any())
{
    <p class="text-muted">Nenhum cliente encontrado.</p>
}



<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telemóvel</th>
            <th>Tipo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Email</td>
                <td>@item.Telemovel</td>
                <td>
                    <span class="badge @(item.TipoCliente == "VIP" ? "bg-warning text-dark" : "bg-secondary")">
                        @item.TipoCliente
                    </span>
                </td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@item.ClienteBalnearioId"
                       class="btn btn-warning btn-sm">
                        Editar
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@item.ClienteBalnearioId"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Tem a certeza que deseja apagar este cliente?')">
                        Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

