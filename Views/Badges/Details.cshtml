@model HealthWellbeing.Models.Badge

@{
    ViewData["Title"] = "Badge Details";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-7">

            @* --- CARD CONTAINER --- *@
            <div class="card border-0 shadow-lg rounded-4 animate__animated animate__fadeInUp">

                @* --- HEADER --- *@
                <div class="card-header bg-primary text-white p-4 rounded-top-4">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-white bg-opacity-25 p-2 rounded-3">
                            <i class="bi bi-file-earmark-text-fill fs-4 text-white"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Badge Details</h5>
                            <p class="mb-0 small text-white opacity-75">View complete badge information</p>
                        </div>
                    </div>
                </div>

                @* --- BODY --- *@
                <div class="card-body p-4">

                    @* --- SECTION 1: GENERAL INFO --- *@
                    <h6 class="fw-bold text-uppercase text-muted small mb-3">General Information</h6>

                    <div class="row g-3 mb-4">
                        @* Name *@
                        <div class="col-md-8">
                            <label class="form-label fw-bold text-dark mb-1">Name</label>
                            <div class="p-2 border rounded-3 bg-light text-dark">
                                @Html.DisplayFor(model => model.BadgeName)
                            </div>
                        </div>

                        @* Type *@
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-dark mb-1">Type</label>
                            <div class="p-2 border rounded-3 bg-light text-dark">
                                @Html.DisplayFor(model => model.BadgeType.BadgeTypeName)
                            </div>
                        </div>
                    </div>

                    @* --- SECTION 2: CONFIGURATION --- *@
                    <div class="row g-3 mb-4">
                        @* Points *@
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-dark mb-1">Reward Points</label>
                            <div class="p-2 border rounded-3 bg-light text-dark d-flex align-items-center">
                                <span class="fw-bold me-1">@Model.RewardPoints</span>
                                <span class="small text-muted">pts</span>
                            </div>
                        </div>

                        @* Status *@
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-dark mb-1">Activity Status</label>
                            @if (Model.IsActive) {
                                <div class="p-2 border border-success border-opacity-25 bg-success bg-opacity-10 rounded-3 text-success fw-bold">
                                    Active
                                </div>
                            }
                            else {
                                <div class="p-2 border border-secondary border-opacity-25 bg-secondary bg-opacity-10 rounded-3 text-secondary fw-bold">
                                    Archived
                                </div>
                            }
                        </div>
                    </div>

                    @* --- SECTION 3: DESCRIPTION --- *@
                    <div class="mb-4">
                        <label class="form-label fw-bold text-dark mb-1">Description</label>
                        <div class="p-3 border rounded-3 bg-light text-secondary" style="min-height: 80px;">
                            @if (!string.IsNullOrEmpty(Model.BadgeDescription)) {
                                @Model.BadgeDescription
                            }
                            else {
                                <span class="fst-italic opacity-50">No description provided.</span>
                            }
                        </div>
                    </div>

                    <hr class="my-4 opacity-10" />

                    @* --- SECTION 4: SYSTEM DEPENDENCIES --- *@
                    <h6 class="fw-bold text-uppercase text-muted small mb-3">System Dependencies & Stats</h6>

                    <div class="row g-3 mb-4">
                        @* Requirements Count *@
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 border rounded-3">
                                <div class="p-2 bg-primary bg-opacity-10 text-primary rounded-circle me-3">
                                    <i class="bi bi-list-check fs-5"></i>
                                </div>
                                <div>
                                    <div class="small text-muted text-uppercase fw-bold">Requirements</div>
                                    <div class="fw-bold text-dark">
                                        @(Model.BadgeRequirements?.Count ?? 0) <span class="fw-normal small text-muted">defined</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @* Customers Count *@
                        <div class="col-md-6">
                            <div class="d-flex align-items-center p-3 border rounded-3">
                                <div class="p-2 bg-success bg-opacity-10 text-success rounded-circle me-3">
                                    <i class="bi bi-people-fill fs-5"></i>
                                </div>
                                <div>
                                    <div class="small text-muted text-uppercase fw-bold">Awarded To</div>
                                    <div class="fw-bold text-dark">
                                        @(Model.CustomerBadges?.Count ?? 0) <span class="fw-normal small text-muted">customers</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* --- ACTION BUTTONS --- *@
                    <div class="d-flex justify-content-end gap-2 pt-2">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                            Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.BadgeId" class="btn btn-warning px-4 shadow-sm">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.BadgeId" class="btn btn-danger px-4 shadow-sm">
                            Delete
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>