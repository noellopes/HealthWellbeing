@{
    ViewData["Title"] = "Invalid Badge";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthWellbeing</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="container py-5">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6">

            @* --- MAIN CONTAINER ---*@
            <div class="bg-white p-5 rounded-3 shadow-sm text-center border-top border-5 border-secondary">

                @* --- ICON --- *@
                <div class="mb-4">
                    <i class="bi bi-file-earmark-x text-secondary opacity-25 display-1"></i>
                </div>

                @* --- HEADLINE --- *@
                <h2 class="fw-bold text-dark mb-3">Invalid Badge</h2>

                @* --- BODY TEXT --- *@
                <p class="lead text-secondary mb-5 fs-6">
                    This badge no longer exists. <br />
                    It may have been removed or deleted.
                </p>

                @* --- ACTION --- *@
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary px-5 py-2 fw-medium rounded-pill shadow-sm">
                        Back to List
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>