@model HealthWellbeing.Models.Registo

@{
    ViewData["Title"] = "Delete Record";
}

<h2>Delete Record</h2>

<h4>Are you sure you want to delete this record?</h4>

<div class="mb-3">
    <p><strong>UserId:</strong> @Model.UserId</p>
    <p><strong>MealDateTime:</strong> @Model.MealDateTime</p>
    <p><strong>MealType:</strong> @Model.MealType</p>
    <p><strong>FoodName:</strong> @Model.FoodName</p>
    <p><strong>Quantity:</strong> @Model.Quantity</p>
    <p><strong>Notes:</strong> @Model.Notes</p>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RegistoID" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
