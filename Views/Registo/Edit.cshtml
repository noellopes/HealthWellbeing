@model HealthWellbeing.Models.Registo

@{
    ViewData["Title"] = "Edit Record";
}

<h2>Edit Record</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RegistoID" />
    <div class="form-group">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MealDateTime"></label>
        <input asp-for="MealDateTime" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MealType"></label>
        <input asp-for="MealType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FoodName"></label>
        <input asp-for="FoodName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
