@model HealthWellbeing.Models.Genero

@{
    ViewData["Title"] = "Eliminar Gênero";
}

<div class="container mt-4">
    <h1 class="text-danger mb-3"><i class="fas fa-trash-alt"></i> @ViewData["Title"]</h1>

    <p class="lead">Tem a certeza que deseja eliminar o seguinte gênero? Esta ação <strong>não pode ser desfeita</strong>.</p>

    <div class="card mb-4 shadow-sm border-danger">
        <div class="card-header bg-danger text-white fw-bold">
            Dados do Gênero
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Nome do Gênero</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NomeGenero)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="GeneroId" />

        <div class="d-flex">
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar à Lista
            </a>
        </div>
    </form>
</div>
