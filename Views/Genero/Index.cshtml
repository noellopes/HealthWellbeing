@model HealthWellbeing.ViewModels.PaginationInfoExercicios<HealthWellbeing.Models.Genero>

@{
    ViewData["Title"] = "Gêneros";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary"><i class="bi bi-person-badge"></i> Gêneros</h2>
    <p class="text-muted">Lista dos gêneros registados no sistema:</p>

    @if (Model?.Items?.Any() == true)
    {
        <div class="d-flex justify-content-end align-items-center mb-3">
            <div>
                <a class="btn btn-secondary" data-bs-toggle="collapse" data-bs-target="#searchForm" aria-expanded="false" aria-controls="searchForm">
                    <i class="bi bi-search me-1"></i> Pesquisa
                </a>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Criar Novo
                </a>
                <a href="/" class="btn btn-secondary">
                    <i class="fas fa-home me-1"></i> Início
                </a>
            </div>
        </div>

        <div class="collapse mb-3" id="searchForm">
            <div class="card card-body">
                <form asp-action="Index" method="get" class="row g-2 align-items-end">
                    <div class="col-md-4">
                        <label for="searchNomeGenero" class="form-label">Nome do Gênero</label>
                        <input id="searchNomeGenero" name="searchNomeGenero" value="@ViewBag.SearchNomeGenero" class="form-control" placeholder="Procurar por nome" />
                    </div>
                    <div class="col-12 mt-2 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Pesquisar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Limpar</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome do Gênero</th>
                        <th class="text-center" style="width: 220px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var genero in Model.Items)
                    {
                        <tr>
                            <td>@genero.NomeGenero</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@genero.GeneroId" class="btn btn-primary btn-sm me-1">
                                    <i class="fas fa-eye"></i> Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@genero.GeneroId" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@genero.GeneroId" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Tem a certeza que deseja apagar este gênero?');">
                                    <i class="fas fa-trash-alt"></i> Apagar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Paginação -->
            <nav aria-label="Gêneros page">
                <ul class="pagination">
                    @if (Model.CurrentPage == 1)
                    {
                        <li class="page-item disabled"><a class="page-link">Início</a></li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="1"
                               asp-route-searchNomeGenero="@ViewBag.SearchNomeGenero">Início</a>
                        </li>
                    }

                    @for (int p = Model.FirstPageShow; p <= Model.LastPageShow; p++)
                    {
                        if (p == Model.CurrentPage)
                        {
                            <li class="page-item active"><a class="page-link" href="#">@p</a></li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@p"
                                   asp-route-searchNomeGenero="@ViewBag.SearchNomeGenero">@p</a>
                            </li>
                        }
                    }

                    @if (Model.CurrentPage == Model.TotalPages)
                    {
                        <li class="page-item disabled"><a class="page-link">Fim</a></li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@Model.TotalPages"
                               asp-route-searchNomeGenero="@ViewBag.SearchNomeGenero">Fim</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">
            Nenhum gênero encontrado.
        </div>
    }
</div>
