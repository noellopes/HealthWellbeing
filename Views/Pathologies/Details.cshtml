@model HealthWellbeing.Models.Pathology

@{
    ViewData["Title"] = "Detalhes da Patologia";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-info text-white rounded-top-4 py-3">
            <h4 class="mb-0">
                <i class="bi bi-info-circle me-2"></i>Detalhes da Patologia
            </h4>
        </div>

        <div class="card-body p-4">

            <dl class="row mb-4">

                <dt class="col-sm-3 fw-semibold text-secondary">Nome</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Descrição</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">Gravidade</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-danger px-3 py-2 rounded-pill">
                        @Model.Severity
                    </span>
                </dd>

            </dl>

            <div class="d-flex justify-content-between mt-4">

                <a asp-action="Index" class="btn btn-outline-secondary rounded-3 px-4">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>

                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-3 px-4">
                    <i class="bi bi-pencil"></i> Editar
                </a>

            </div>

        </div>
    </div>

</div>
