@model HealthWellbeing.Models.Pathology

@{
    ViewData["Title"] = "Criar Patologia";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0 rounded-4">

        <div class="card-header bg-primary text-white rounded-top-4 py-3">
            <h4 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i>Nova Patologia
            </h4>
        </div>

        <div class="card-body p-4">

            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control rounded-3" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <input asp-for="Description" class="form-control rounded-3" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Severity" class="form-label fw-semibold"></label>
                    <select asp-for="Severity"
                            class="form-control"
                            asp-items="Html.GetEnumSelectList<Pathology.PathologySeverityLevel>()">
                    </select>
                    <span asp-validation-for="Severity" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">

                    <a asp-action="Index" class="btn btn-outline-secondary rounded-3 px-4">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>

                    <button type="submit" class="btn btn-primary rounded-3 px-4">
                        <i class="bi bi-check-lg"></i> Criar
                    </button>

                </div>

            </form>

        </div>

    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
