@model HealthWellbeing.Models.Pathology

@{
    ViewData["Title"] = "Editar Patologia";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4 py-3">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Patologia</h4>
        </div>

        <div class="card-body p-4">

            <form asp-action="Edit" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control rounded-3" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" rows="3" class="form-control rounded-3"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Severity" class="form-label fw-semibold"></label>
                    <input asp-for="Severity" class="form-control rounded-3" />
                    <span asp-validation-for="Severity" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-3 px-4">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>

                    <button type="submit" class="btn btn-success rounded-3 px-4">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
