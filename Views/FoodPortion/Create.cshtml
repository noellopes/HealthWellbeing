@model HealthWellbeing.Models.FoodPortion
@{
    ViewData["Title"] = "Create Food Portion";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}

<h1>@ViewData["Title"]</h1>

@if (success != null)
{
    <div class="alert alert-success">@success</div>
}
@if (error != null)
{
    <div class="alert alert-danger">@error</div>
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-warning"></div>

    <div class="mb-3">
        <label asp-for="FoodId" class="form-label"></label>
        <select asp-for="FoodId" asp-items="ViewBag.FoodId" class="form-select">
            <option value="">-- Select Food --</option>
        </select>
        <span asp-validation-for="FoodId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Label" class="form-label"></label>
        <input asp-for="Label" class="form-control" />
        <span asp-validation-for="Label" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AmountGramsMl" class="form-label"></label>
        <input asp-for="AmountGramsMl" class="form-control" />
        <span asp-validation-for="AmountGramsMl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
