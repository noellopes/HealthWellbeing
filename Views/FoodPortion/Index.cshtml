@model IEnumerable<HealthWellbeing.Models.FoodPortion>
@{
    ViewData["Title"] = "Food Portions";
}
<h1 class="mb-3">Food Portions</h1>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">@TempData["Msg"]</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Create new</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().FoodName)</th>
            <th>@Html.DisplayNameFor(m => m.First().Amount)</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FoodName</td>
                <td>@item.Amount</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.FoodPortionId">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.FoodPortionId">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.FoodPortionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
