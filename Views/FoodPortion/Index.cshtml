@model IEnumerable<HealthWellbeing.Models.FoodPortion>
@{
    ViewData["Title"] = "Food Portions";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(success))
{
    <div class="alert alert-success">@success</div>
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">
        
        Create 
        New</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No portions found.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Food</th>
                <th>Label</th>
                <th>Amount (g/ml)</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Food?.Name</td>
                    <td>@p.Label</td>
                    <td>@p.AmountGramsMl</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@p.FoodPortionId">Details</a>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@p.FoodPortionId">
                            
                            Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.FoodPortionId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
