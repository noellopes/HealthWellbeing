@model HealthWellbeing.Models.FoodPortion
@{
    ViewData["Title"] = "Delete Food Portion";
}
<h1 class="mb-3">Delete Food Portion</h1>
<hr />

<h5>Are you sure you want to delete this record?</h5>

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.FoodName)</dt>
    <dd class="col-sm-10">@Model.FoodName</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Amount)</dt>
    <dd class="col-sm-10">@Model.Amount</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="FoodPortionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
