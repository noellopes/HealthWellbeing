@model HealthWellbeing.Models.FoodPortion
@{
    ViewData["Title"] = "Food Portion Details";
}
<h1 class="mb-3">Food Portion Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.FoodName)</dt>
    <dd class="col-sm-10">@Model.FoodName</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Amount)</dt>
    <dd class="col-sm-10">@Model.Amount</dd>
</dl>

<p class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.FoodPortionId">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</p>
