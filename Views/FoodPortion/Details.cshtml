@model HealthWellbeing.Models.FoodPortion
@{
    ViewData["Title"] = "Food Portion Details";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-3">Food</dt>
    <dd class="col-sm-9">@Model.Food?.Name</dd>

    <dt class="col-sm-3">Label</dt>
    <dd class="col-sm-9">@Model.Label</dd>

    <dt class="col-sm-3">Amount</dt>
    <dd class="col-sm-9">@Model.AmountGramsMl g/ml</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.FoodPortionId">Edit</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>
