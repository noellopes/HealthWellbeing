@model HealthWellbeing.Models.UtenteBalneario

@{
    ViewData["Title"] = "Detalhes do Utente";
}

<div class="container mt-4">

    <h2 class="mb-3">Detalhes do Utente</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <!-- 👤 Dados Pessoais -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-bold">
            <i class="bi bi-person"></i> Dados Pessoais
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6"><strong>Nome:</strong> @Model.Nome</div>
                <div class="col-md-3"><strong>Género:</strong> @Model.Genero?.Nome</div>
                <div class="col-md-3"><strong>Nascimento:</strong> @Model.DataNascimento.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="row mt-2">
                <div class="col-md-4"><strong>NIF:</strong> @Model.NIF</div>
                <div class="col-md-4"><strong>Contacto:</strong> @Model.Contacto</div>
                <div class="col-md-4"><strong>Morada:</strong> @Model.Morada</div>
            </div>
        </div>
    </div>

    <!-- 🩺 Dados Médicos -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-bold">
            <i class="bi bi-heart-pulse"></i> Dados Médicos
        </div>
        <div class="card-body">
            <p><strong>Indicações Terapêuticas:</strong> @Model.IndicacoesTerapeuticas ?? <span class="text-muted">—</span></p>
            <p><strong>Contraindicações:</strong> @Model.ContraIndicacoes ?? <span class="text-muted">—</span></p>
            <p><strong>Terapeuta Responsável:</strong> @Model.TerapeutaResponsavel ?? <span class="text-muted">—</span></p>
        </div>
    </div>

    <!-- 📄 Dados Administrativos -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-bold">
            <i class="bi bi-clipboard"></i> Dados Administrativos
        </div>
        <div class="card-body">
            <p><strong>Data de Inscrição:</strong> @Model.DataInscricao.ToString("dd/MM/yyyy")</p>

            <p>
                <strong>Seguro de Saúde:</strong>
                @(Model.SeguroSaude != null ? Model.SeguroSaude.Nome : "Sem seguro")
            </p>

            <p>
                <strong>Estado:</strong>
                <span class="badge @(Model.Ativo ? "bg-success" : "bg-danger")">
                    @(Model.Ativo ? "Ativo" : "Inativo")
                </span>
            </p>
        </div>
    </div>

    <!-- 📚 Histórico Clínico -->
    <div class="card shadow-sm mb-4">
        <div class="card-header fw-bold">
            <i class="bi bi-journal-medical"></i> Histórico Clínico
        </div>
        <div class="card-body">
            @if (Model.HistoricosMedicos.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var h in Model.HistoricosMedicos.OrderByDescending(h => h.DataRegisto))
                    {
                        <li class="list-group-item">
                            <strong>@h.DataRegisto.ToString("dd/MM/yyyy")</strong><br />
                            @h.Descricao
                        </li>
                    }
                </ul>
            }
            else
            {
                <span class="text-muted">Sem registos clínicos.</span>
            }
        </div>
    </div>

    <!-- Botões -->
    <form asp-action="ToggleAtivo" method="post" class="d-inline">
        <input type="hidden" name="id" value="@Model.UtenteBalnearioId" />
        <button type="submit"
                class="btn @(Model.Ativo ? "btn-danger" : "btn-success")"
                onclick="return confirm('Tem a certeza?');">
            @(Model.Ativo ? "Desativar" : "Ativar")
        </button>
    </form>

    <a asp-action="Edit"
       asp-route-id="@Model.UtenteBalnearioId"
       class="btn btn-warning ms-2">
        Editar
    </a>

    <a asp-action="Index" class="btn btn-secondary ms-2">
        Voltar
    </a>

</div>
