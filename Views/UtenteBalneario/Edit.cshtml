@model HealthWellbeing.Models.UtenteBalneario

@{
    ViewData["Title"] = "Editar Utente";
}

<h2>Editar Utente</h2>
<hr />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UtenteBalnearioId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-2">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" class="form-control" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="GeneroId">Género</label>
        <select asp-for="GeneroId"
                asp-items="ViewBag.Generos"
                class="form-control">
            <option value="">-- Selecione o género --</option>
        </select>
        <span asp-validation-for="GeneroId" class="text-danger"></span>
    </div>


    <div class="form-group mb-2">
        <label asp-for="NIF"></label>
        <input asp-for="NIF" class="form-control" />
        <span asp-validation-for="NIF" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Contacto"></label>
        <input asp-for="Contacto" class="form-control" />
        <span asp-validation-for="Contacto" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Morada"></label>
        <input asp-for="Morada" class="form-control" />
    </div>

    <hr />
    <h5>Dados Médicos</h5>

    <hr />
    <h4>Dados Médicos</h4>

    <div class="form-group mb-2">
        <label asp-for="HistoricoClinico"></label>
        <textarea asp-for="HistoricoClinico" class="form-control"></textarea>
    </div>

    <div class="form-group mb-2">
        <label asp-for="IndicacoesTerapeuticas"></label>
        <textarea asp-for="IndicacoesTerapeuticas" class="form-control"></textarea>
    </div>

    <div class="form-group mb-2">
        <label asp-for="ContraIndicacoes"></label>
        <textarea asp-for="ContraIndicacoes" class="form-control"></textarea>
    </div>

    <div class="form-group mb-2">
        <label asp-for="TerapeutaResponsavel"></label>
        <input asp-for="TerapeutaResponsavel" class="form-control" />
    </div>

    <hr />
    <h4>Dados Administrativos</h4>

    <div class="form-group mb-2">
        <label asp-for="SeguroSaude"></label>
        <input asp-for="SeguroSaude" class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary">Guardar Alterações</button>
    <a asp-action="Details" asp-route-id="@Model.UtenteBalnearioId" class="btn btn-secondary">
        Cancelar
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
