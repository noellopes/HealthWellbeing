@model IEnumerable<HealthWellbeing.Models.UtenteBalneario>

@{
    ViewData["Title"] = "Utentes do Balneário";
}

<h2 class="mb-3">Utentes do Balneário</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    Criar Utente
</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<!-- Pesquisa + Filtros -->
<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">

    <!-- Pesquisa -->
    <form method="get" class="flex-grow-1 me-3">
        <div class="input-group">
            <input type="text"
                   name="search"
                   value="@ViewBag.Search"
                   class="form-control"
                   placeholder="Pesquisar por nome..." />

            <input type="hidden" name="ativos" value="@ViewBag.Ativos" />

            <button class="btn btn-outline-primary" type="submit">
                Pesquisar
            </button>
        </div>
    </form>

    <!-- Filtros -->
    <div class="btn-group">
        <a asp-action="Index"
           asp-route-search="@ViewBag.Search"
           class="btn @(ViewBag.Ativos == null ? "btn-secondary" : "btn-outline-secondary")">
            Todos
        </a>

        <a asp-action="Index"
           asp-route-search="@ViewBag.Search"
           asp-route-ativos="true"
           class="btn @(ViewBag.Ativos == true ? "btn-success" : "btn-outline-success")">
            Ativos
        </a>

        <a asp-action="Index"
           asp-route-search="@ViewBag.Search"
           asp-route-ativos="false"
           class="btn @(ViewBag.Ativos == false ? "btn-danger" : "btn-outline-danger")">
            Inativos
        </a>
    </div>
</div>

<!-- Tabela -->
<table class="table table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>Nome</th>
            <th>Género</th>
            <th>Contacto</th>
            <th>Data de Inscrição</th>
            <th>Estado</th>
            <th class="text-end"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Genero?.Nome</td>
                <td>@item.Contacto</td>
                <td>@item.DataInscricao.ToString("dd/MM/yyyy")</td>
                <td>
                    <span class="badge @(item.Ativo ? "bg-success" : "bg-danger")">
                        @(item.Ativo ? "Ativo" : "Inativo")
                    </span>
                </td>
                <td class="text-end">
                    <a asp-action="Details"
                       asp-route-id="@item.UtenteBalnearioId"
                       class="btn btn-sm btn-outline-primary">
                        Detalhes
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginação -->
@if (ViewBag.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-search="@ViewBag.Search"
                       asp-route-ativos="@ViewBag.Ativos">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}
