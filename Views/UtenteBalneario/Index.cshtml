@model IEnumerable<HealthWellbeing.Models.UtenteBalneario>

@{
    ViewData["Title"] = "Utentes do Balneário";
}

<div class="container mt-4">

    <!-- Cabeçalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Utentes do Balneário</h2>
        <a asp-action="Create" class="btn btn-primary">+ Criar Utente</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <!-- Pesquisa + Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-center">
                <div class="col-md-6">
                    <input type="text" name="search" value="@ViewBag.Search"
                           class="form-control" placeholder="Pesquisar por nome..." />
                </div>

                <div class="col-md-2">
                    <button class="btn btn-outline-primary w-100">Pesquisar</button>
                </div>

                <div class="col-md-4 text-end">
                    <div class="btn-group">
                        <a asp-action="Index" class="btn btn-outline-secondary">Todos</a>
                        <a asp-action="Index" asp-route-ativos="true" class="btn btn-outline-success">Ativos</a>
                        <a asp-action="Index" asp-route-ativos="false" class="btn btn-outline-danger">Inativos</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabela -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Género</th>
                        <th>Contacto</th>
                        <th>Data de Inscrição</th>
                        <th>Estado</th>
                        <th class="text-end"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.Ativo ? "" : "table-secondary")">
                            <td>@item.Nome</td>
                            <td>@item.Genero?.Nome</td>
                            <td>@item.Contacto</td>
                            <td>@item.DataInscricao.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge @(item.Ativo ? "bg-success" : "bg-danger")">
                                    @(item.Ativo ? "Ativo" : "Inativo")
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Details"
                                   asp-route-id="@item.UtenteBalnearioId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
