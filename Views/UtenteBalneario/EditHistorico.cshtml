@model HealthWellbeing.Models.HistoricoMedico

@{
    ViewData["Title"] = "Editar Registo Clínico";
}

<div class="container mt-4">
    <h2>Editar Registo Clínico</h2>

    <form asp-action="EditHistorico" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="HistoricoMedicoId" />
        <input type="hidden" asp-for="UtenteBalnearioId" />

        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <textarea asp-for="Descricao"
                      class="form-control"
                      rows="5"
                      required></textarea>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Guardar
            </button>

            <a asp-action="Details"
               asp-route-id="@Model.UtenteBalnearioId"
               class="btn btn-secondary">
                Cancelar
            </a>
        </div>
    </form>
</div>
