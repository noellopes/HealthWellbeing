@model HealthWellbeing.Models.UtenteBalneario

@{
    ViewData["Title"] = "Criar Utente do Balneário";
}

<h1 style="color:red">CREATE CORRETO</h1>


<h2>Criar Utente do Balneário</h2>

<hr />

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group mb-2">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="DataNascimento"></label>
        <input asp-for="DataNascimento" class="form-control" type="date" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="GeneroId">Género</label>
        <select asp-for="GeneroId"
                asp-items="ViewBag.Generos"
                class="form-control">
            <option value="">-- Selecione o género --</option>
        </select>
        <span asp-validation-for="GeneroId" class="text-danger"></span>
    </div>



    <div class="form-group mb-2">
        <label asp-for="NIF"></label>
        <input asp-for="NIF" class="form-control" />
        <span asp-validation-for="NIF" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Contacto"></label>
        <input asp-for="Contacto" class="form-control" />
        <span asp-validation-for="Contacto" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Morada"></label>
        <input asp-for="Morada" class="form-control" />
        <span asp-validation-for="Morada" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
