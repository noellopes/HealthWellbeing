@model HealthWellbeing.Models.MetaCorporal

@{
    ViewData["Title"] = "Detalhes da Meta Corporal";
}

<h1>Detalhes da Meta Corporal</h1>

<div class="card">
    <div class="card-header">
        <h4>@Model.Client?.Name</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5 class="text-muted mb-3">Objetivos Corporais</h5>
                
                <dl class="row">
                    <dt class="col-sm-6">Peso Objetivo:</dt>
                    <dd class="col-sm-6">@(Model.PesoObjetivo?.ToString("F1") ?? "-") kg</dd>

                    <dt class="col-sm-6">Gordura Corporal Objetivo:</dt>
                    <dd class="col-sm-6">@(Model.GorduraCorporalObjetivo?.ToString("F1") ?? "-") %</dd>

                    <dt class="col-sm-6">IMC Objetivo:</dt>
                    <dd class="col-sm-6">@(Model.IMCObjetivo?.ToString("F1") ?? "-")</dd>

                    <dt class="col-sm-6">Colesterol Objetivo:</dt>
                    <dd class="col-sm-6">@(Model.ColesterolObjetivo?.ToString("F0") ?? "-") mg/dL</dd>

                    <dt class="col-sm-6">Massa Muscular Objetivo:</dt>
                    <dd class="col-sm-6">@(Model.MassaMuscularObjetivo?.ToString("F1") ?? "-") kg</dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h5 class="text-muted mb-3">Informações Adicionais</h5>
                
                <dl class="row">
                    <dt class="col-sm-6">Data de Início:</dt>
                    <dd class="col-sm-6">@Model.DataInicio.ToShortDateString()</dd>

                    <dt class="col-sm-6">Data Objetivo:</dt>
                    <dd class="col-sm-6">@(Model.DataObjetivo?.ToShortDateString() ?? "-")</dd>

                    <dt class="col-sm-6">Status:</dt>
                    <dd class="col-sm-6">
                        @if (Model.Ativo)
                        {
                            <span class="badge bg-success">Ativa</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativa</span>
                        }
                    </dd>

                    <dt class="col-sm-6">Criado em:</dt>
                    <dd class="col-sm-6">@Model.CriadoEm.ToString("dd/MM/yyyy HH:mm")</dd>

                    @if (Model.AtualizadoEm.HasValue)
                    {
                        <dt class="col-sm-6">Atualizado em:</dt>
                        <dd class="col-sm-6">@Model.AtualizadoEm.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                    }
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Notas))
        {
            <hr />
            <div class="mt-3">
                <h5 class="text-muted">Notas</h5>
                <p class="border rounded p-3 bg-light">@Model.Notas</p>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    @if (User.IsInRole("Nutricionista"))
    {
        <a asp-action="Edit" asp-route-id="@Model.MetaCorporalId" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
    }
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Voltar à Lista
    </a>
</div>
