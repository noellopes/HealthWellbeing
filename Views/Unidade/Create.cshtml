@model Unidade
@{
    ViewData["Title"] = "Nova Porção";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="NomeComida" class="form-label"></label>
        <input asp-for="NomeComida" class="form-control" placeholder="ex.: Arroz cozido" />
        <span asp-validation-for="NomeComida" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantidade" class="form-label"></label>
        <input asp-for="Quantidade" class="form-control" placeholder="ex.: 250 g | 1 L | 2 un | 1 fatia (30 g)" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
