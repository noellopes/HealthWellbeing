@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar Senha";
}

<style>
    /* Cartão com o azul da barra superior */
    .custom-forgot-card {
        background-color: #1a75ff; /* Cor azul oficial da barra */
        border-radius: 80px 20px 20px 20px; /* Design assimétrico */
        padding: 50px 40px;
        width: 100%;
        max-width: 500px;
        color: white;
        border: none;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        margin: 50px auto; /* Centraliza na página */
    }

    /* Título estilizado */
    .forgot-title {
        font-size: 2.5rem;
        font-weight: 300;
        text-align: center;
        margin-bottom: 20px;
        letter-spacing: -1px;
    }

    /* Inputs arredondados com contorno branco */
    .custom-input {
        background: transparent !important;
        border: 2px solid white !important;
        border-radius: 30px !important;
        color: white !important;
        padding: 12px 20px !important;
        margin-bottom: 5px;
    }

        .custom-input::placeholder {
            color: rgba(255, 255, 255, 0.8);
        }

    /* Botão preto com texto azul */
    .reset-btn {
        background-color: #1a1a1a;
        color: #1a75ff; /* Texto azul para contraste */
        font-weight: bold;
        border-radius: 40px;
        padding: 12px;
        font-size: 1.3rem;
        border: none;
        width: 100%;
        margin-top: 20px;
        transition: 0.3s;
    }

        .reset-btn:hover {
            background-color: #000;
            transform: scale(1.02);
        }

    .link-light {
        color: white;
        text-decoration: none;
        font-weight: bold;
    }
</style>

<div class="container">
    <div class="custom-forgot-card shadow-lg">
        <h1 class="forgot-title">Recuperar</h1>
        <p class="text-center mb-4">Insira o seu e-mail para receber um link de redefinição.</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small" role="alert"></div>

            <div class="mb-3">
                <input asp-for="Input.Email" class="form-control custom-input" autocomplete="username" aria-required="true" placeholder="E-mail" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="reset-btn">REDEFINIR SENHA</button>

            <div class="text-center mt-4 small">
                <a asp-page="./Login" class="link-light">Voltar ao Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}